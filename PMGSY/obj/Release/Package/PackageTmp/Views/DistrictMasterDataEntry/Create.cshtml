@model PMGSY.Models.MasterDataEntry.MASTER_DISTRICT

@{
    ViewBag.Title = "Create";
   
}

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/MasterDataEntry/Master_CreateDistrict.js")"> </script>

<h2>Add New District</h2>

@using (Html.BeginForm("Create", "DistrictMasterDataEntry", FormMethod.Post, new { id="frmCreateDistrict"} ))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>District Details</legend>

      
        <table style="width:100%">

                 <tr>
                <td >
                    @Html.LabelFor(model => model.MAST_STATE_CODE)
                </td>
                <td>
                   <label style="color:red;"> *</label>
                </td>
                <td>
                     @Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.States, new {@id="ddlStates", @title = "State", @tabindex = 1 })
                   
                     @Html.ValidationMessageFor(model => model.MAST_STATE_CODE)
                     
                  
                </td>
            </tr>

            <tr>
                <td style="text-align:left;width:10%;">
                      @Html.LabelFor(model => model.MAST_DISTRICT_NAME)
                </td>
                <td style="width:1%;">
                   <label style="color:red;"> *</label>
                </td>
                <td>
                     @Html.TextBoxFor(model => model.MAST_DISTRICT_NAME, new { maxlength = 50, @title = "District Name", @tabindex = 2 })
                   
                     @Html.ValidationMessageFor(model => model.MAST_DISTRICT_NAME)

                </td>
            </tr>
            
              <tr>
                <td >
                    @Html.LabelFor(model => model.MAST_PMGSY_INCLUDED)
                </td>
                <td>
                   <label style="color:red;"> *</label>
                </td>
                <td>
                    
                    @Html.RadioButtonFor(model => model.IsPMGSYIncluded, true, new { id="rdoIsPMGSYIncludedYes",@tabindex = 3 }) <label> Yes</label> &nbsp;&nbsp;
                    
                    @Html.RadioButtonFor(model => model.IsPMGSYIncluded, false, new { id="rdoIsPMGSYIncludedNo"}) <label>No</label>

                </td>
            </tr>
             
            <tr>
                <td >
                    @Html.LabelFor(model => model.MAST_IAP_DISTRICT)
                </td>
                <td>
                   <label style="color:red;"> *</label>
                </td>
                <td>
                    
                    @Html.RadioButtonFor(model => model.IsIAPDistrict, true,new { id="rdoIsIAPDistrictYes",@tabindex = 4 }) Yes &nbsp;&nbsp;
                    
                    @Html.RadioButtonFor(model => model.IsIAPDistrict, false,new { id="rdoIsIAPDistrictNo"}) No

                </td>
            </tr>

      
            <tr>
                <td></td>
                <td></td>
                <td>
                   <input type="button" id="btnSave" name="btnSave" value="Save" class= "ui-button ui-button-text-only ui-state-default normalButton" title="Save District Details" tabindex="5"  /> &nbsp;&nbsp;&nbsp;
                    <input type="button" id="btnReset" name="btnReset" value="Reset" class= "ui-button ui-button-text-only ui-state-default normalButton" title="Reset" tabindex="6"  />
                </td>

            </tr>


        </table>

      

    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
