@model PMGSY.Models.FortyPointCheckList.TenderCostInformationViewModel

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Scripts/FortyPointChecklist/AddEditTenderCostDetails.js"></script>
 <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px; text-align: left">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="message"></span>
 </div>

<div id="dvhdAddEdit" class="ui-corner-top ui-widget-header panelheader" style="text-align: left;height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Add / Edit Tender Cost Details</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-close" style="float: right" title="Click here to close"></span>
</div>

<div id="dvSearchParameter" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">

    <form id="frmTenderCostDetails">

        <center>@Html.ValidationSummary(true) </center>
        @Html.HiddenFor(m=>m.EncryptedTenderPriceId)
        <table style="width: 100%;">
            <tr>
                <td style="width: 01%"></td>
                <td style="width: 16%; font-weight:bold">                    
                    @Html.LabelFor(m=>m.TEND_WORKS_COSTING_FROM) <span style="color:red"> *</span>
                </td>
                <td style="text-align: left; width: 15%;">   
                    @if(Model.EncryptedTenderPriceId==null)
                    {       
                        @Html.TextBoxFor(model=>model.TEND_WORKS_COSTING_FROM,new {@title="For Works Costing In Rs. (From)",@tabindex="1",@Value=""})
                    }
                    else
                    {
                        @Html.TextBoxFor(model=>model.TEND_WORKS_COSTING_FROM,new {@title="For Works Costing In Rs. (From)",@tabindex="1"})
                    }
                </td>

                <td style="width: 15%;font-weight:bold">
                     @Html.LabelFor(m=>m.TEND_WORKS_COSTING_TO) <span style="color:red"> *</span>
                </td>
                <td style="text-align:left;width:15%">       
                    @if(Model.EncryptedTenderPriceId==null)
                    {       
                        @Html.TextBoxFor(model=>model.TEND_WORKS_COSTING_TO,new {@title="For Works Costing In Rs. (To)",@tabindex="2",@Value=""})
                    }
                    else
                    {
                        @Html.TextBoxFor(model=>model.TEND_WORKS_COSTING_TO,new {@title="For Works Costing In Rs. (To)",@tabindex="2"})
                    }          
                </td>

                <td style="width: 12%;font-weight:bold">
                     @Html.LabelFor(m=>m.TEND_SALE_PRICE) <span style="color:red"> *</span>
                </td>
                <td style="text-align:left;width:15%">       
                        @Html.TextBoxFor(model=>model.TEND_SALE_PRICE,new {@title="Sale Price Of Tender Schedule In Rs.",@tabindex="3"})
                </td>                
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td>@Html.ValidationMessageFor(model => model.TEND_WORKS_COSTING_FROM)</td>
                <td></td>
                <td>@Html.ValidationMessageFor(model=>model.TEND_WORKS_COSTING_TO)</td>
                <td></td>
                <td>@Html.ValidationMessageFor(model=>model.TEND_SALE_PRICE)</td>
            </tr>
            <tr>
                <td style="text-align: center;" colspan="7">
                    @if(Model.EncryptedTenderPriceId==null)
                    {                    
                        <input type="button" id="btnAddTenderCostDetails" name="btnAddTenderCostDetails" value="Save" class="jqueryButton" title="Click here to save details" tabindex="4" />
                        <input type="reset" id="btnResetTenderCostDetails" name="btnResetTenderCostDetails" value="Reset" class="jqueryButton" title="Click here to reset details" tabindex="5"/>
                    }
                    else
                    {
                        <input type="button" id="btnUpdateTenderCostDetails" name="btnUpdateTenderCostDetails" value="Update" class="jqueryButton" title="Click here to update details" tabindex="4"/>
                        <input type="reset" id="btnCancelTenderCostDetails" name="btnCancelTenderCostDetails" value="Cancel" class="jqueryButton" title="Click here to cancel details" tabindex="5"/>
                    }
                </td>
            </tr>
        </table>
    </form>
</div>
