@model PMGSY.Models.Master.AdminDepartmentViewModel

@{
    ViewBag.Title = "AddEditAdminDepartment";
}

<script src="~/Scripts/custom/Generic.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.ui.datepicker.js" type="text/javascript"></script>
<script src="~/Scripts/Master/AddEditAdminDepartment.js" type="text/javascript"></script>

<div id="dvhdAddNewAdminDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;@if (Model.MAST_ND_TYPE == "S")
                                                            {@Html.Label("SRRDA Details")}
                                                            else
                                                            {@Html.Label("DPIU Details")}</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>

<div id="dvAddNewAdminDetails" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8; text-align: left">
    <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px;">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="message"></span>
    </div>
    <form id="frmAddAdmin">
        @Html.AntiForgeryToken()
        <table style="width: 100%; margin-top: 10px;" class="rowstyle">
            <tr style="display: none">
                <td colspan="5">
                    @Html.HiddenFor(model => model.EncryptedAdminCode)
                    @Html.HiddenFor(model => model.MAST_ND_TYPE)
                    @Html.HiddenFor(model => model.MAST_PARENT_ND_CODE)
                </td>

            </tr>
            <tr>
                <td style="width: 5%;"></td>
                <td style="text-align: left; width: 15%;">
                    @Html.LabelFor(model => model.MAST_STATE_CODE)
                </td>
                <td style="width: 30%;">
                  
                    @Html.DisplayFor(model => model.STATE_NAME)
                </td>
                <td style="width: 18%">
                    @Html.LabelFor(model => model.MAST_AGENCY_CODE)
                    
                </td>
                <td>
                   

                    @Html.DisplayFor(model => model.Agency_Name)
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    @if (Model.MAST_ND_TYPE == "S")
                    {
                        @Html.Label("SRRDA Name") 
                    }
                    else
                    {
                        @Html.Label("DPIU Name")
                    }
                </td>
                <td>
                  
                    @Html.DisplayFor(model => model.ADMIN_ND_NAME)
                </td>
                @if (Model.MAST_ND_TYPE == "S")
                {
                    <td>
                        @Html.LabelFor(model => model.ADMIN_SBD_DATE)
                    </td>
                    <td>
                     
                        @Html.DisplayFor(model => model.ADMIN_SBD_DATE)
                    </td>
                }
                @if (Model.MAST_ND_TYPE == "D")
                {
                    <td>
                        @Html.LabelFor(model => model.ADMIN_ND_TAN_NO)
                    </td>
                    <td>
                       
                        @Html.DisplayFor(model => model.ADMIN_ND_TAN_NO)
                    </td>
                }
            </tr>
            <tr>
                <td></td>
                <td>
                    @Html.LabelFor(model => model.ADMIN_ND_ADDRESS1)
                </td>
                <td>
                  
                    @Html.DisplayFor(model => model.ADMIN_ND_ADDRESS1)
                </td>
                <td>
                    @Html.LabelFor(model => model.MAST_DISTRICT_CODE)
                </td>
                <td>
                 
                    @Html.DisplayFor(model => model.District_Name)
                </td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td>
                  
                    @Html.DisplayFor(model => model.ADMIN_ND_ADDRESS2)
                </td>
                <td>
                    @Html.LabelFor(model => model.ADMIN_ND_PIN)
                </td>

                <td>
                   
                    @Html.DisplayFor(model => model.ADMIN_ND_PIN)


                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    @Html.LabelFor(model => model.ADMIN_ND_STD1)
                </td>
                <td>
                   

                    @Html.DisplayFor(model => model.ADMIN_ND_STD1)<label> - </label>
                    @Html.DisplayFor(model => model.ADMIN_ND_PHONE1)
                </td>
                <td>
                    @Html.LabelFor(model => model.ADMIN_ND_STD2)
                </td>
                <td>
                  

                    @Html.DisplayFor(model => model.ADMIN_ND_STD2)<label> - </label>
                    @Html.DisplayFor(model => model.ADMIN_ND_PHONE2)

                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    @Html.LabelFor(model => model.ADMIN_ND_STD_FAX)
                </td>
                <td>
                   
                    @Html.DisplayFor(model => model.ADMIN_ND_STD_FAX)<label> - </label>
                    @Html.DisplayFor(model => model.ADMIN_ND_FAX)

                </td>
                <td>
                    @Html.LabelFor(model => model.ADMIN_ND_MOBILE_NO)
                </td>
                <td>
                   
                    @Html.DisplayFor(model => model.ADMIN_ND_MOBILE_NO)
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    @Html.LabelFor(model => model.ADMIN_ND_EMAIL)
                </td>
                <td>
                 
                    @Html.DisplayFor(model => model.ADMIN_ND_EMAIL)

                </td>
                <td>
                    @Html.LabelFor(model => model.ADMIN_ND_REMARKS)
                </td>
                <td>
                   
                    @Html.DisplayFor(model => model.ADMIN_ND_REMARKS)

                </td>
            </tr>
            @if (Model.MAST_ND_TYPE == "D")
            {               
                <tr>
                    <td></td>
                    <td>
                        @Html.Label("Is Bank Authentication Enabled")
                    </td>
                    <td id="tdBankAuthEnabled" colspan="3">
                       

                      
                        @if (Model.ADMIN_BANK_AUTH_ENABLED == "Y")
                        {
                            <label>Yes</label>
                        }
                        else
                        {
                            <label>No</label>
                        }
                    </td>

                    <td id="tdlblBank" style="display: none;">
                        @Html.LabelFor(model => model.ADMIN_BA_ENABLE_DATE, new { @id = "lblBank" })
                       
                    </td>
                    <td id="dataBank" style="display: none;">
                      
                        @Html.DisplayFor(model => model.ADMIN_BA_ENABLE_DATE)
                    </td>

                </tr>
            
                <tr>
                    <td></td>
                    <td>
                        @Html.Label("Is Remittance Enabled")
                    </td>
                    <td id="tdERemittanceEnabled" colspan="3">
                       
                        @if (Model.ADMIN_EREMITTANCE_ENABLED == "Y")
                        {
                            <label>Yes</label>
                        }
                        else
                        {
                            <label>No</label>
                        }
                    </td>


                    <td id="tdlblRemit" style="display: none;">
                        @Html.LabelFor(model => model.ADMIN_EREMIT_ENABLED_DATE, new { @id = "lblRemit" })
                        <label style="color: red;">*</label>
                    </td>
                    <td id="dataRemit" style="display: none;">
                     
                        @Html.DisplayFor(model => model.ADMIN_EREMIT_ENABLED_DATE)
                    </td>

                </tr>
                  
                <tr>
                    <td></td>
                    <td>
                        @Html.Label("Is E-Payment Enabled")
                    </td>
                    <td id="tdEPayEnabled" colspan="3">
                     
                        @if (Model.ADMIN_EPAY_MAIL == "Y")
                        {
                            <label>Yes</label>
                        }
                        else
                        {
                            <label>No</label>
                        }
                    </td>

                    <td id="tdlblEpay" style="display: none;">
                        @Html.LabelFor(model => model.ADMIN_EPAY_ENABLE_DATE, new { @id = "lblEpay" })
                        <label style="color: red;">*</label>
                    </td>
                    <td id="dataEpay" style="display: none;">
                           @Html.DisplayFor(model=>model.ADMIN_EPAY_ENABLE_DATE)
                    </td>
                </tr>
                
                <tr id="rowEpay" style="display: none;">
                    <td></td>

                    <td>
                        @Html.LabelFor(model => model.ADMIN_EMAIL_CC, new { @id = "lblEmail" })
                    </td>
                    <td>
                           @Html.DisplayFor(model=>model.ADMIN_EMAIL_CC)
                    </td>

                    <td>
                        @Html.LabelFor(model => model.ADMIN_PDF_KEY, new { @id = "lblPdf" })
                    </td>
                    <td>
                          @Html.DisplayFor(model=>model.ADMIN_PDF_KEY)
                    </td>
                </tr>       
            }
            <tr>
             
                <td colspan="5"><center><input type="button" id="btnCancel" name="btnCancel" value="Back" class="jqueryButton" title="Back" tabindex="1" /></center> </td>
               
            </tr>
         
        </table>

    </form>
</div>
