@model PMGSY.Models.CoreNetwork.FinalizeMRLPMGSY3ViewModel
@using PMGSY.Extensions

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Scripts/CoreNetwork/DefinalizeMRLPMGSY3Layout.js"></script>

<div id="dvhdFinalizeMRLDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:0px;margin-right:0px;margin-top:0px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;De-Finalize TR/MRL PMGSY3</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvFinalizeMRL" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmFinalizeMRLLayout">
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        @Html.Hidden("Roleode" , PMGSYSession.Current.RoleCode)

        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 5%;"></td>

                <td style="width: 10%;">
                    @Html.Label("State")
                </td>
                <td style="width: 25%;">
                    @Html.DropDownListFor(model => model.statecode, new SelectList(Model.statelist, "Value", "Text"), new { @id = "ddlState", style = "width:170px;", title = "Select State" })
                    <br />
                    @Html.ValidationMessageFor(m => m.statecode)
                </td>


                <td style="width: 10%;">
                    @Html.Label("District")
                </td>
                <td style="width: 25%;">
                    @Html.DropDownListFor(model => model.districtCode, new SelectList(Model.lstDistricts, "Value", "Text"), new { @id = "ddlDistrict", style = "width:170px;", title = "District" })
                    <br />
                    @Html.ValidationMessageFor(m => m.districtCode)
                </td>
                <td style="text-align: left;" style="width: 5%;">
                    <input type="button" id="btnView" value="View" class="jqueryButton" />
                </td>
                <td style="width: 5%;"></td>
            </tr>
        </table>
    </form>
</div>

 <div id="BlockDetails" style="text-align: left; width: 100%">
            <table id="tbBlockList" style="width: 95%"></table>
            <div id="dvBlockListPager"></div>
        </div>
