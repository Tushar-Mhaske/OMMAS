@model PMGSY.Models.QualityMonitoring.QMJIFilterModel
@{ Layout = null; }

<!DOCTYPE html>

<html>
<head>
    <script src="~/Scripts/QualityMonitoring/QMJILayout.js"></script>
    <script src="~/Scripts/jquery.ui.accordion.js"></script>
</head>
<body>

    <div id="dvhdQMJointInspections" class="ui-corner-top ui-widget-header panelheader" style="text-align: center; height: 20px;">
        <span class="ui-jqgrid-title" style="float: left">&nbsp;Joint Inspections</span>
        <span id="spCollapseIconQMJILayout" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
    </div>

    <div id="divQMJIFilter">
        <div style="width: 100%; border: none; margin-top:-10px;" class="ui-state-default">
            <div id="divQMJIFilterForm">
                <center>
                <form id="frmQMJIFilterForm">     
                    
                    <table style="margin-top:10px; margin-bottom:5px; width:90%">
                        <tr>
                            <td style="width:10%;font-weight:bold;">
                                @Html.LabelFor(model => model.BlockCode) : 
                            </td>
                            <td style="width:20%;padding-left:25px;">
                                @Html.DropDownListFor(model => model.BlockCode, new SelectList(Model.BlockList, "Value", "Text")) 
                            </td>
                            <td style="width:10%">
                               @Html.LabelFor(model => model.ProposalType):
                            </td> 
                            <td style="width:15%;padding-left:25px;">
                                 @Html.DropDownListFor(model => model.ProposalType, new SelectList(Model.ProposalTypeList, "Value", "Text")) 
                            </td>
                            <td style="width:15%;padding-left:25px;">
                                 @Html.LabelFor(model => model.InspectionStatus):
                            </td>
                            <td style="width:20%">
                                 @Html.DropDownListFor(model => model.InspectionStatus, new SelectList(Model.InspectionStatusList, "Value", "Text")) 
                            </td>
                            <td style="width:10%">
                                    <input type="button" class="jqueryButton" value="View" id="btnViewWorks" name ="btnViewWorks"/>
                            </td>
                            </tr>
                    </table>
                </form>  
            </center>
            </div>
        </div>
        <div style="margin-top: 10px; width: 98%; margin-right: 5px;">
            <table id="tbQMJointInspectionsList"></table>
            <div id="dvQMJointInspectionsPager"></div>
        </div>
    </div>
    <div id="fillJIDetailsAccordion" style="display: none; width: 98%; margin-top: 10px;">
        <h3 style="text-align: left"><a id="" href="#" style="font-size: .9em;">Action Taken for Joint Inspection</a>
            <a href="#" style="float: right;">
                <img style="border: none" src="" class="ui-icon ui-icon-closethick" onclick="CloseJIDetails();" /></a>
        </h3>
        <div id="divJIDetailsForm" style="display: none;">
        </div>
    </div>


