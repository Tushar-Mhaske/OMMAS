    <td style="width:15%">
        
        @Html.DropDownListFor(m => m.EAUTH_MONTH, new SelectList(Model.EAUTH_MONTH_LIST, "Value", "Text"), new { @id = "ddlMonth", @title = "Month" })
    </td>
    <td style="text-align:right; width:5%">@Html.LabelFor(m => m.EAUTH_YEAR)@*<span style="color:red"> *</span>*@</td>
    <td style="width:15%">
        
        @Html.DropDownListFor(m => m.EAUTH_YEAR, new SelectList(Model.EAUTH_YEAR_LIST, "Value", "Text"), new { @id = "ddlYear", @title = "Year" })
