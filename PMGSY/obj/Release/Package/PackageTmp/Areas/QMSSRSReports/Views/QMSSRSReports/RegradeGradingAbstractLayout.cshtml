<script src="~/Scripts/custom/Generic.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#btnView').click(function () {
            if ($('#frmRegradeAbstractLayout').valid()) {
                $.ajax({
                    url: "/QMSSRSReports/QMSSRSReports/RegradeGradingAbstractReport/",
                    cache: false,
                    type: "POST",
                    async: false,
                    data: $("#frmRegradeAbstractLayout").serialize(),
                    success: function (data) {
                        $("#loadRegradeAbstract").html('');
                        $("#loadRegradeAbstract").html(data);
                    },
                    error: function () {
                        alert("error");
                    }
                })
            }
        });

        $('#btnView').trigger('click');
    });
</script>

