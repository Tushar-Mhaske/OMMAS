                    {
                        @Html.DisplayFor(model => model.DistName)
                        @Html.Hidden("DistrictCode", Model.Mast_District_Code)     
                    }
                </td>
                <td style="text-align: left; width: 2%;">
                    @*@Html.LabelFor(model => model.BlockCode)*@
