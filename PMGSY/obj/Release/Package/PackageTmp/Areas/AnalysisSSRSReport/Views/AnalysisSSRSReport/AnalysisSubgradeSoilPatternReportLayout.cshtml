@model PMGSY.Areas.AnalysisSSRSReport.Models.AnalysisSubgradeSoilModel

@if( ViewBag.ReportType!=null)
{

    Layout = "~/Views/Shared/_ExternalLinkLayout.cshtml";

}
<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Areas/AnalysisSSRSReport/Scripts/AnalysisSubgradSoilPattern.js"></script>

<div id="dvhdCreateNewReportDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:0px;margin-right:0px;margin-top:0px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Subgrade Soil Bearing Strength Pattern</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvSearchParameter" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmAnaSubGrdSoil">
        @Html.ValidationSummary(true)
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Mast_State_Code)
        @Html.HiddenFor(model => model.Mast_District_Code)
        @Html.HiddenFor(model => model.Mast_Block_Code)
        @Html.HiddenFor(model => model.StateName)
        @Html.HiddenFor(model => model.DistName)
        @Html.HiddenFor(model => model.BlockName)
        @Html.HiddenFor(model => model.StatusName)
        @Html.HiddenFor(model => model.CBRName)
        @Html.HiddenFor(model => model.FundingAgencyName)
        @Html.HiddenFor(model => model.BatchName)
        @Html.HiddenFor(model => model.CBR)
         @Html.HiddenFor(model => model.RoadWise)
        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 2%;"></td>
                <td style="text-align: left; width: 5%;">
                    @Html.LabelFor(model => model.StateCode)
                </td>

                <td style="width: 16%;">
                    @if (Model.Mast_State_Code == 0)
                    {
                        @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.StateList, "Value", "Text"), new { @title = "State", @tabindex = 1, @id = "StateList_AnaSubGrdSoilDetail", @style = "width:120px" })
                      <br />
                            @Html.ValidationMessageFor(m => m.StateCode)
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.StateName) 
                        @Html.Hidden("StateCode", Model.Mast_State_Code)                            
                    }
                </td>
                <td style="text-align: left; width: 6%;">
                    @Html.LabelFor(model => model.DistrictCode)
                </td>
                <td style="width: 16%;">
                    @if (Model.Mast_District_Code == 0)
                    {
                        @Html.DropDownListFor(model => model.DistrictCode, new SelectList(Model.DistrictList, "Value", "Text"), new { @title = "District", @id = "DistrictList_AnaSubGrdSoilDetail", @tabindex = 2, @style = "width:120px" })
                     <br />
                           @Html.ValidationMessageFor(m => m.DistrictCode)

                    }
                    else
                    {
                        @Html.DisplayFor(model => model.DistName)
                        @Html.Hidden("DistrictCode", Model.Mast_District_Code)     
                              
                    }
                </td>
                <td style="text-align: left; width: 6%;">
                    @Html.LabelFor(model => model.BlockCode)
                </td>

                <td style="width: 16%;">
                    @if (Model.Mast_Block_Code == 0)
                    {
                        @Html.DropDownListFor(model => model.BlockCode, new SelectList(Model.BlockList, "Value", "Text"), new { @title = "Block", @id = "BlockList_AnaSubGrdSoilDetail", @tabindex = 3, @style = "width:120px" })
                        <br />
                          @Html.ValidationMessageFor(m => m.BlockCode)
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.BlockName)
                        @Html.Hidden("BlockCode", Model.Mast_Block_Code)  
                    }
                </td>
                  <td style="text-align: left; width: 6%;">
                    @Html.LabelFor(model => model.Batch)
                </td>
                <td style="width: 40%;">

                    @Html.DropDownListFor(model => model.Batch, new SelectList(Model.BatchList, "Value", "Text"), new { @title = "Batch", @id = "BatchList_AnaSubGrdSoilDetail", @tabindex = 4, @style = "width:120px" })
                    <br />
                      @Html.ValidationMessageFor(m => m.Batch)

                </td>
               
            </tr>
            <tr>
                <td style="width: 2%;"></td>
                 <td style="text-align: left; width: 5%;">
                    @Html.LabelFor(model => model.FundingAgency)
                </td>

                <td style="width: 16%;">
                    @Html.DropDownListFor(model => model.FundingAgency, new SelectList(Model.FundingAgencyList, "Value", "Text"), new { @title = "Collaboration", @id = "FundingAgencyList_AnaSubGrdSoilDetail", @tabindex = 5, @style = "width:120px" })
                    <br />
                      @Html.ValidationMessageFor(m => m.FundingAgency)

                </td>
                  <td style="text-align: left; width: 6%;">
                    @Html.LabelFor(model => model.Status)
                </td>
                <td style="width: 16%;">
                    @Html.DropDownListFor(model => model.Status, new SelectList(Model.StatusList, "Value", "Text"), new { @title = "Status", @tabindex = 6, @id = "StatusList_AnaSubGrdSoilDetail", @style = "width:120px" })
             </td>
                 <td style="text-align: left; width: 6%;">
                    @Html.LabelFor(model => model.FromYear)
                </td>
                <td style="width: 16%;">
                    @Html.DropDownListFor(model => model.FromYear, new SelectList(Model.FromYearList, "Value", "Text"), new { @title = "From Year", @tabindex = 7, @id = "FromYearList_AnaSubGrdSoilDetail", @style = "width:120px" })
                    <br />
                      @Html.ValidationMessageFor(m => m.FromYear)
                </td>
                  <td style="text-align: left; width: 6%;">
                    @Html.LabelFor(model => model.ToYear)
                </td>
                <td style="width: 40%;">
                    @Html.DropDownListFor(model => model.ToYear, new SelectList(Model.ToYearList, "Value", "Text"), new { @title = "To Year", @tabindex = 8, @id = "ToYearList_AnaSubGrdSoilDetail", @style = "width:120px" })
                    &nbsp;&nbsp;
                     <input type="button" id="btnViewAnaSubGrdSoilDetail" value="View" class="jqueryButton" title="View Detail" tabindex="9" /> 
                       <br />
                     @Html.ValidationMessageFor(m => m.ToYear)                   
                </td>              
            </tr>          
        </table>
    </form>

</div>
<div id="divCommonReport" class="modal" style="margin-top: 12px; float: right; margin-left: 915px">
    <span id="spnCommonReport" class="close">X</span>
    <span>Click on State/District/Block to view details</span>
</div>
<div id="loadAnaSubGrdSoil" class="divLoadReport"></div>


