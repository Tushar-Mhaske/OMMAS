@model PMGSY.Models.MasterDataEntry.PanchayatMaster


<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/MasterDataEntry/Master_CreatePanchayat.js")"> </script>

<div id="dvhdCreateNewPanchayatDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align:left;  height:20px;"> @*margin-left:10px;margin-right:10px;margin-top:10px;*@ 
     <span class="ui-jqgrid-title" style="float:left">&nbsp;Panchayat Details</span>
     
      <span  id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float:right"></span>
      </div>

<div id="dvCreateNewPanchayatDetails" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8; "> @*margin-left: 10px; margin-right: 10px; *@
    <div id="dvErrorMessage"class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em ; display:none; margin:5px 5px 5px 5px; text-align:left">
    <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
    <strong>Alert:</strong> <span id="message"> </span>
</div>

    <form id="frmCreatePanchayat">

         <center>
             @Html.ValidationSummary(true)
             @Html.AntiForgeryToken()

        </center>

         <table style="width:100%;margin-top:10px;" class="rowstyle">

             <tr style="display: none">
                 <td colspan="5">
                     @Html.HiddenFor(model => model.EncryptedPanchayatCode)
                 </td>

             </tr>
                 
             <tr>
                   <td style="width:8%;">

                 </td>
                <td style="text-align:left;width:15%;">
                    @Html.LabelFor(model => model.MAST_STATE_CODE) <label style="color:red;"> *</label>
                </td>
               
                <td style="width:30%;">
                     @if(Model.EncryptedPanchayatCode==null){    
                         
                     @Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.States, new {@id="ddlStates", @title = "State", @tabindex = 1 })
                   
                     @Html.ValidationMessageFor(model => model.MAST_STATE_CODE)
                     }
                     else{
                           @Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.States, new {@id="ddlStates", @title = "State", @tabindex = 1,@disabled="disabled" })
                     }
                     
                  
                </td>

                  <td style="width:15%;" >
                    @Html.LabelFor(model => model.MAST_DISTRICT_CODE) <label style="color:red;"> *</label>
                </td>
               
                <td>
                      @if(Model.EncryptedPanchayatCode==null){  
                     @Html.DropDownListFor(model => model.MAST_DISTRICT_CODE, Model.Districts, new {@id="ddlDistricts", @title = "District", @tabindex = 2 })
                   
                     @Html.ValidationMessageFor(model => model.MAST_DISTRICT_CODE)
                      }
                    else                    
                    {
                            @Html.DropDownListFor(model => model.MAST_DISTRICT_CODE, Model.Districts, new {@id="ddlDistricts", @title = "District", @tabindex = 2,@disabled="disabled"  })
                          
                      }
                    
                </td>

            </tr>

                


              <tr>
                  <td></td>
                <td >
                    @Html.LabelFor(model => model.MAST_BLOCK_CODE) <label style="color:red;"> *</label>
                </td>
               
                <td>
                     @if(Model.EncryptedPanchayatCode==null){  
                     @Html.DropDownListFor(model => model.MAST_BLOCK_CODE, Model.Blocks, new {@id="ddlBlocks", @title = "Block", @tabindex = 3 })
                   
                     @Html.ValidationMessageFor(model => model.MAST_BLOCK_CODE)
                     }
                    else
                    {
                         @Html.DropDownListFor(model => model.MAST_BLOCK_CODE, Model.Blocks, new {@id="ddlBlocks", @title = "Block", @tabindex = 3,@disabled="disabled" })
                     }
                    
                </td>
                   <td >
                      @Html.LabelFor(model => model.MAST_PANCHAYAT_NAME) <label style="color:red;"> *</label>
                </td>
               
                <td>
                     @Html.TextBoxFor(model => model.MAST_PANCHAYAT_NAME, new { maxlength = 50, @title = "Panchayat Name", @tabindex = 4 ,placeholder="Enter Panchayat Name..." })
                   
                     @Html.ValidationMessageFor(model => model.MAST_PANCHAYAT_NAME)

                </td>
            </tr>


           

 
            <tr>
                <td></td>
                <td></td>
                
                     @if(Model.EncryptedPanchayatCode==null){  
                           <td  style="text-align:right;">
                   <input type="button" id="btnSave" name="btnSave" value="Save" class= "jqueryButton" title="Save Panchayat Details" tabindex="5"  />   </td>
                    <td colspan="2">   <input type="reset" id="btnReset" name="btnReset" value="Reset" class= "jqueryButton" title="Reset" tabindex="6"  />  </td>
                     }
                    else
                    {  <td  style="text-align:right;">
                         <input type="button" id="btnUpdate" name="btnUpdate" value="Update" class= "jqueryButton" title="Update Panchayat Details" tabindex="5"  />  </td>
                      <td colspan="2"> <input type="button" id="btnCancel" name="btnCancel" value="Cancel" class= "jqueryButton" title="Cancel" tabindex="6"  />  </td>
                     }
              

            </tr>

                <tr >
                <td colspan="5">
                      <label style="border:none">[ Note: Fields marked with<label style="color: red;"> * </label>are mandatory.]</label>
                </td>

            </tr>
        </table>

        </form>

    </div>