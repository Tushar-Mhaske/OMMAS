@model PMGSY.Models.Master.MasterChecklistPointsViewModel
<script src="~/Scripts/custom/Generic.js" type="text/javascript"></script>
<script src="~/Scripts/Master/Master_CreateChecklistPoints.js" type="text/javascript"></script>
<div id="dvhdCreateNewChecklistDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Checklist Point Details</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-close" style="float: right"></span>
</div>
<div id="dvCreateNewChecklistDetails" style="display: block; border: 1px solid #B5B8C8;">
    <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px; text-align: left">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong>
        <span id="message"></span>
    </div>
    <form id="frmMasterChecklist">
        @Html.AntiForgeryToken()

        <center>@Html.ValidationSummary(true)</center>
        <table style="width: 100%; margin-top: 10px;" class="rowstyle">
            <tr style="display: none">
                <td colspan="3">
                    @Html.HiddenFor(model => model.EncryptedChecklistCode)
                </td>
            </tr>
            <tr>
                <td style="text-align: left; width: 5%;"> </td>
                <td style="text-align: left; width: 5%;">
                    @Html.LabelFor(model => model.MAST_CHECKLIST_ISSUES)
                    <label style="color: red;">*</label>
                </td>
                <td style="width: 30%;">
                    @Html.TextAreaFor(model => model.MAST_CHECKLIST_ISSUES, new { maxlength = 4000, @style = "width:70%", @title = "Checklist Point", @tabindex = 1, @placeholder = "Enter Checklist Point...", })
                    @Html.ValidationMessageFor(model => model.MAST_CHECKLIST_ISSUES)
                </td>
            </tr>

            <tr>


                <td colspan="3">
                    <center>
                    @if (Model.EncryptedChecklistCode == null)
                    {
                        <input type="button" id="btnSave" name="btnSave" value="Save" class="jqueryButton" title="Save Checklist Point Details" tabindex="2" /> 
                        <input type="reset" id="btnReset" name="btnReset" value="Reset" class="jqueryButton" title="Reset" tabindex="3" />
                    }

                    else
                    {  
                        <input type="button" id="btnUpdate" name="btnUpdate" value="Update" class="jqueryButton" title="Update Checklist Point Details" tabindex="2" /> 
                        <input type="button" id="btnCancel" name="btnCancel" value="Cancel" class="jqueryButton" title="Cancel" tabindex="3" />
                    }
                    </center>
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <label style="border: none">
                        [ Note: Fields marked with<label style="color: red;"> * </label>
                        are mandatory.]</label>
                </td>
            </tr>
        </table>
    </form>
</div>
