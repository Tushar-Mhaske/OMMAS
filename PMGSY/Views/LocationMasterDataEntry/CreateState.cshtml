@model PMGSY.Models.MasterDataEntry.MASTER_STATE


<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/MasterDataEntry/Master_CreateState.js")"> </script>


<div id="dvhdCreateNewStateDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:0px;margin-right:0px;margin-top:0px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;State Details</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>


<div id="dvCreateNewStateDetails" style="display: block; border: 1px solid #B5B8C8;">@*margin-left: 0px; margin-right: 0px;*@

    <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px; text-align: left">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="message"></span>
    </div>

    <form id="frmCreateState">
        @Html.AntiForgeryToken()
        <center>@Html.ValidationSummary(true)</center>


        @* <fieldset>*@
        @*      <legend >State Details</legend>*@


        <table style="width: 100%; margin-top: 10px;" class="rowstyle">
            @* <tr>
               <td colspan="4">&nbsp;</td>
           </tr>*@

            <tr style="display: none">
                <td colspan="5">
                    @Html.HiddenFor(model => model.EncryptedStateCode)
                </td>

            </tr>



            <tr>
                <td style="width: 8%;"></td>
                <td style="text-align: left; width: 15%;">
                    @Html.LabelFor(model => model.StateUTID)
                    <label style="color: red;">*</label>
                </td>

                <td style="width: 30%;">
                    @*@Html.TextBoxFor(model => model.MAST_STATE_UT, new { maxlength = 1, @title = "State UT", @tabindex = 2 })*@
                    @* @Html.EditorFor(model => model.MAST_STATE_TYPE)*@


                    @Html.DropDownListFor(model => model.StateUTID, Model.StateUTs, new { @id = "ddlStateUTs", @title = "State/UT", @tabindex = 1 })

                    @Html.ValidationMessageFor(model => model.StateUTID)

                </td>

                <td style="width: 15%;">
                    @Html.LabelFor(model => model.StateTypeID)
                    <label style="color: red;">*</label>
                </td>

                <td>
                    @* @Html.TextBoxFor(model => model.MAST_STATE_TYPE, new { maxlength = 1, @title = "State Type", @tabindex = 3 })                   
                     @Html.ValidationMessageFor(model => model.MAST_STATE_TYPE)*@

                    @Html.DropDownListFor(model => model.StateTypeID, Model.StateTypes, new { @id = "ddlStateTypes", @title = "State Type", @tabindex = 2 })


                    @Html.ValidationMessageFor(model => model.StateTypeID)

                </td>
            </tr>

            <tr>
                <td></td>
                <td>
                    @Html.LabelFor(model => model.MAST_STATE_NAME)
                    <label style="color: red;">*</label>
                </td>
                @*<td style="width:1%;">
                   <label style="color:red;"> *</label>
                </td>*@
                <td>
                    @Html.TextBoxFor(model => model.MAST_STATE_NAME, new { maxlength = 50, @title = "State Name", @tabindex = 3, placeholder = "Enter State Name..." })
                    @*@Html.EditorFor(model => model.MAST_STATE_NAME)*@
                    @Html.ValidationMessageFor(model => model.MAST_STATE_NAME)

                </td>

                <td>
                    @Html.LabelFor(model => model.MAST_NIC_STATE_CODE)
                    <label style="color: red;">*</label>
                </td>

                <td>
                    @Html.TextBoxFor(model => model.MAST_NIC_STATE_CODE, new { @title = "Census Code", @tabindex = 4, placeholder = "Enter Census Code..." })
                    @*@Html.EditorFor(model => model.MAST_NIC_STATE_CODE)*@
                    @Html.ValidationMessageFor(model => model.MAST_NIC_STATE_CODE)

                </td>


            </tr>
            <tr>
                <td></td>
                <td>
                    @Html.LabelFor(model => model.MAST_STATE_SHORT_NAME)
                    <label style="color: red;">*</label>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.MAST_STATE_SHORT_NAME, new { maxlength = 2, @title = "Short Name", @tabindex = 3, placeholder = "Enter Short Name..." })
                    @Html.ValidationMessageFor(model => model.MAST_STATE_SHORT_NAME)

                </td>
                <td></td>

                <td></td>


            </tr>
            @*              <tr>
                   <td >

                 </td>
                <td >
                    @Html.LabelFor(model => model.DUMMY_STATE_CODE)
                </td>
                <td>
                   <label style="color:red;"> *</label>
                </td>
                <td>
                     @Html.TextBoxFor(model => model.DUMMY_STATE_CODE, new { maxlength = 2, @title = "Dummy State Code", @tabindex = 5 })
                     @Html.EditorFor(model => model.MAST_STATE_TYPE)
                     @Html.ValidationMessageFor(model => model.DUMMY_STATE_CODE)

                </td>
            </tr>*@

            <tr>
                @*<td >

                 </td>*@
                <td></td>
                <td></td>

                @if (Model.EncryptedStateCode == null)
                {
                    <td style="text-align: right;">
                        <input type="button" id="btnSave" name="btnSave" value="Save" class="jqueryButton" title="Save State Details" tabindex="5" />
                    </td>
                    <td colspan="2">
                        <input type="reset" id="btnReset" name="btnReset" value="Reset" class="jqueryButton" title="Reset" tabindex="6" />
                    </td>
                }
                else
                {
                    <td style="text-align: right;">
                        <input type="button" id="btnUpdate" name="btnUpdate" value="Update" class="jqueryButton" title="Update State Details" tabindex="5" />
                    </td>
                    <td colspan="2">
                        <input type="button" id="btnCancel" name="btnCancel" value="Cancel" class="jqueryButton" title="Cancel" tabindex="6" />
                    </td>
                }

                <td colspan="5">
                    <label style="border: none">[ Note: Fields marked with<label style="color: red;"> * </label>
                        are mandatory.]</label>
                </td>

            </tr>

        </table>








        @*  </fieldset>*@


    </form>

</div>
