@{
    ViewBag.Title = "RWCNDetails";
}

@model PMGSY.Models.CoreNetworkReports.CoreNetworkReportViewModel

<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.ui.dialog.js")"> </script>
<script src="~/Scripts/CoreNetworkReports/RWCNDetails.js" type="text/javascript"></script>
<script src="~/Scripts/custom/Generic.js"></script>

<form id="frmCN1StateLevelReport">
    @Html.Hidden("hdnLevelId", PMGSY.Extensions.PMGSYSession.Current.LevelId.ToString())

    @if (PMGSY.Extensions.PMGSYSession.Current.StateCode != 0)
    {           
        @Html.Hidden("STATE_NAME", PMGSY.Extensions.PMGSYSession.Current.StateName.ToString())
    }

    @if (PMGSY.Extensions.PMGSYSession.Current.DistrictCode != 0)
    {
        @Html.Hidden("DISTRICT_NAME", PMGSY.Extensions.PMGSYSession.Current.DistrictName.ToString())  
                    
    }

    @Html.HiddenFor(model => model.BLOCK_NAME)
    <div style="width: 100%">
        <table class="ui-state-default ui-corner-all" style="width: 100%;">
            <tr>
                <td style="width: 2%;"></td>
                @* <td style="text-align: left; width: 4%;">
                    @Html.Label("Road Type") &nbsp;
                </td>
                <td style="width: 2%;">
                    @Html.DropDownList("RoadCategory_RWCNDetails", ViewData["RoadCategory"] as IEnumerable<SelectListItem>,new { @title = "Road Type",@tabindex = 1 })
                </td>*@
                <td style="text-align: left; width: 5%;">
                    @Html.Label("Route") &nbsp;
                </td>
                <td style="width: 15%;">
                    @Html.DropDownList("Route_RWCNDetails", ViewData["Route"] as IEnumerable<SelectListItem>, new { @title = "Route", @tabindex = 1 })
                </td>
                <td style="width: 20%; margin-left: 5px;">
                    <input type="button" value="View" class="jqueryButton" id="btRWCNDetails" title="View Details" tabindex="2" />
                </td>
                <td style="width: 50%;"></td>
            </tr>
        </table>
    </div>
    <br />
    @if (PMGSY.Extensions.PMGSYSession.Current.LevelId == 6)     //Mord
    {
       
        
        <div id="RWCNStateReport">
            <table id="RWCNStateReportTable"></table>
        </div>
        <div id="RWCNStateReportPager"></div>
        <br />

        <div id="RWCNDistrictReport">
            <table id="RWCNDistrictReportTable"></table>
        </div>
        <div id="RWCNDistrictReportPager"></div>

        <br />
        <div id="RWCNBlockReport">
            <table id="RWCNBlockReportTable"></table>
        </div>
        <div id="RWCNBlockReportPager"></div>

        <br />
        <div id="RWCNFinalReport">
            <table id="RWCNFinalReportTable"></table>
        </div>
        <div id="RWCNFinalReportPager"></div>

               
    }

    else if (PMGSY.Extensions.PMGSYSession.Current.LevelId == 4)     //State
    {
        @Html.HiddenFor(model => model.MAST_STATE_CODE)
        <div id="RWCNDistrictReport">
            <table id="RWCNDistrictReportTable"></table>
        </div>
        <div id="RWCNDistrictReportPager"></div>

        <br />
        <div id="RWCNBlockReport">
            <table id="RWCNBlockReportTable"></table>
        </div>
        <div id="RWCNBlockReportPager"></div>

        <br />
        <div id="RWCNFinalReport">
            <table id="RWCNFinalReportTable"></table>
        </div>
        <div id="RWCNFinalReportPager"></div>

    }
    else if (PMGSY.Extensions.PMGSYSession.Current.LevelId == 5)     //District
    {
        @Html.HiddenFor(model => model.MAST_STATE_CODE)
        @Html.HiddenFor(model => model.MAST_DISTRICT_CODE)
        <div id="RWCNBlockReport">
            <table id="RWCNBlockReportTable"></table>
        </div>
        <div id="RWCNBlockReportPager"></div>

        <br />
        <div id="RWCNFinalReport">
            <table id="RWCNFinalReportTable"></table>
        </div>
        <div id="RWCNFinalReportPager"></div>
    }
</form>


