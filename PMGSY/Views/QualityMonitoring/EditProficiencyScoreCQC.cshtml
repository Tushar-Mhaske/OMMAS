@model PMGSY.Models.QualityMonitoring.ProficiencyTestScoreModel

<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/QualityMonitoring/MonitorProficiencyTestScoreDetailsCQC.js"></script>

<center>
    <form id="formAddScoreCQC">
        @Html.AntiForgeryToken()
        <center>@Html.ValidationSummary(true)</center>
        @Html.HiddenFor(model => model.ID)
        <div id="divAddScore" class="ui-corner-top ui-widget-header panelheader" style="text-align: center; margin-top: 20px; height: 20px; width: 100%">
            <span class="ui-jqgrid-title" id="inspOperation" style="float: left">&nbsp;&nbsp;Upload Proficiency Test Score</span>
            <span id="spCollapseIconCNCQC" class="ui-icon ui-icon-circle-close" style="float: right"></span>
        </div>
        <table class="rowstyle" style="width: 100%; margin-top: 0px; border: 1px solid grey; border-radius:0.5rem; padding: 0.5%">

            <tr>
                <td style="padding:0.5rem">
                    @Html.LabelFor(model => model.MONITOR_NAME)
                </td>
                <td>
                    @Html.Raw(Model.MONITOR_NAME)
                </td>

                <td>
                    @Html.LabelFor(model => model.DATE_OF_EXAM)
                </td>
                <td>
                    @Html.Raw(Model.DATE_OF_EXAM.ToShortDateString())
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.PERCENTAGE)<label style="color: red">*</label>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.PERCENTAGE, new { @id = "percentage", style = "color: black" })
                    @Html.ValidationMessageFor(model => model.PERCENTAGE)
                </td>

                <td>
                    @Html.LabelFor(model => model.CQC_REMARK)
                </td>

                <td>
                    @Html.TextAreaFor(model => model.CQC_REMARK, new { @id = "txtUploadRemark", @tabindex = 1 })
                </td>
            </tr>

            <tr>
                <td colspan="5">
                    <label style="border: none">
                        [ Note: Fields marked with<label style="color: red;"> * </label>
                        are mandatory.]
                    </label>
                </td>
            </tr>

            <tr>
                <td></td>
                <td style="text-align: right;">
                    <input type="button" id="btnSaveScoreCQC" name="btnSave" value="Save" class="jqueryButton" title="Save Proficiency Score" tabindex="5" />
                </td>
                @*<td style="text-align: left" colspan="2">
                        <input type="button" id="btnBack" name="back" value="Back" class="jqueryButton" title="Back" tabindex="6" />
                    </td>*@

                <td></td>
            </tr>

        </table>

    </form>
</center>

