@model PMGSY.Areas.ProposalSSRSReports.Models.ProposalsWithoutUploads

<script src="~/Areas/ProposalSSRSReports/Scripts/ProposalsWithoutUploadsReportLayout.js"></script>


<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>

<div id="dvhdCreateNewReportDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Works Without Uploads</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvSearchParameter" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    @*<div id="loadFilters">*@
    <form id="frmProposalsWithoutUploads">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.StateName)
        @Html.Hidden("hdnRoleCode", PMGSY.Extensions.PMGSYSession.Current.RoleCode.ToString())
        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 2%;"></td>

                <td style="text-align: left; width: 5%;">
                    @Html.LabelFor(model => model.State)
                </td>
                <td style="width: 15%;">
                    @if (Model.StateName == null)
                    {
                        @Html.DropDownListFor(model => model.State, new SelectList(Model.lstStates, "Value", "Text"), new { @title = "State", @tabindex = 1, @id = "ddlState", @style = "width:150px" })
                        <br />
                        @Html.ValidationMessageFor(m => m.State)
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.StateName)    
                    }
                </td>
                <td style="text-align: left; width: 5%;">
                    @Html.LabelFor(model => model.District)
                </td>
                <td style="width: 15%;">
                    @if (Model.DistrictName == null)
                    {
                        @Html.DropDownListFor(model => model.District, new SelectList(Model.lstDistrict, "Value", "Text"), new { @title = "District", @tabindex = 2, @id = "ddlDistrict", @style = "width:150px" })
                        <br />
                        @Html.ValidationMessageFor(m => m.District)
                    }
                    else
                    {
                        @Html.DisplayFor(x => x.DistrictName)
                    }
                </td>
                <td style="text-align: left; width: 5%;">
                    @Html.LabelFor(model => model.Year)
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.Year, new SelectList(Model.YearList, "Value", "Text"), new { @title = "Year", @tabindex = 3, @id = "ddlYear", @style = "width:150px" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Year)
                </td>
                <td style="text-align: left; width: 5%;">
                    @Html.LabelFor(model => model.Batch)
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.Batch, new SelectList(Model.BatchList, "Value", "Text"), new { @title = "Batch", @tabindex = 4, @id = "ddlBatch", @style = "width:150px" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Batch)
                </td>
                <td style="text-align: left; width: 5%;">
                    @Html.LabelFor(model => model.Type)
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.Type, new SelectList(Model.TypeList, "Value", "Text"), new { @title = "Type", @tabindex = 5, @id = "ddlType", @style = "width:150px" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Type)
                </td>
            </tr>
            <tr>
                <td colspan="11" style="text-align: center;">
                    <input type="button" id="btnView" value="View" class="jqueryButton" title="View Details" tabindex="4" />
                </td>
            </tr>
        </table>
    </form>
</div>
<div id="loadReport" class="divLoadReport"></div>
