@model PMGSY.Models.Master.GrowthScoreViewModel

<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/Master/AddEditMasterGrowthScoreType.js"></script>

<div id="dvhdCreateNewScoreDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Item Details</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>

<div id="dvCreateNewScoreDetails" style="display: block; border: 1px solid #B5B8C8;">

    <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px; text-align: left">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="message"></span>
    </div>
    <form id="frmMasterGrowthScoreType">
        @Html.AntiForgeryToken()
        <center>@Html.ValidationSummary(true)</center>

        <table style="width: 100%; margin-top: 10px;" class="rowstyle">

            <tr style="display: none">
                <td colspan="3">
                    @Html.HiddenFor(model => model.EncryptedScoreCode)
                </td>
            </tr>
            <tr>
                <td style="width: 30%;"></td>
                <td style="text-align: left; width: 15%;">
                    @Html.LabelFor(model => model.ScoreName)
                    <label style="color: red;">*</label>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.ScoreName, new { maxlength = 100, @title = "Item Description", @tabindex = 1, placeholder = "Enter Item Description..." })
                    @Html.ValidationMessageFor(model => model.ScoreName)
                </td>
            </tr>

            <tr>
                <td style="width: 30%;"></td>
                <td style="text-align: left; width: 20%;">
                    @Html.LabelFor(model => model.ScoreValue)
                    <label style="color: red;">*</label>
                </td>
                <td>
                    @if (Model.ScoreValue == 0)
                    {
                        @Html.TextBoxFor(m => m.ScoreValue, new { @tabindex = 2, @id = "txtScoreVal", @maxlength = "9", @Value = "" })
                    }
                    else
                    {
                        @Html.TextBoxFor(m => m.ScoreValue, new { @tabindex = 2, @id = "txtScoreVal", @maxlength = "9" })
                    }
                    <br />
                    @Html.ValidationMessageFor(m => m.ScoreValue)
                </td>
            </tr>

            <tr>
                <td style="width: 30%;"></td>
                <td style="text-align: left; width: 20%;">
                    @Html.LabelFor(model => model.ScoreType)
                    <label style="color: red;">*</label>
                </td>
                <td>
                    @Html.DropDownListFor(model => model.ScoreType, new[] { new SelectListItem() { Text = "Highest", Value = "H" }, new SelectListItem() { Text = "Cumulative", Value = "C" } }, new { @id = "ddlScoreType", @tabindex = 3, @title = "Score Type" })
                </td>
            </tr>

            <tr>
                <td></td>
                <td></td>
                <td>
                    @if (Model.EncryptedScoreCode == null)
                    {                  
                        <input type="button" id="btnSave" name="btnSave" value="Save" class="jqueryButton" title="Save" tabindex="4" />
                        <input type="reset" id="btnReset" name="btnReset" value="Reset" class="jqueryButton" title="Reset" tabindex="5" />
                    }
                    else
                    {
                        <input type="button" id="btnUpdate" name="btnUpdate" value="Update" class="jqueryButton" title="Update Score Details" tabindex="4" /> 
                        
                    }
                    <input type="button" id="btnCancel" name="btnCancel" value="Cancel" class="jqueryButton" title="Cancel" tabindex="6" />
                </td>
            </tr>

            <tr>
                <td colspan="5">
                    <label @*class="ui-state-default" *@style="border:none">
                        [ Note: Fields marked with<label style="color: red;"> * </label>
                        are mandatory.]</label>
                </td>
            </tr>
        </table>
    </form>


</div>
