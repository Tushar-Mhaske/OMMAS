@model PMGSY.Models.MasterDataEntry.BlockMaster


<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/MasterDataEntry/Master_CreateBlock.js")"> </script>

<div id="dvhdCreateNewBlockDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:10px;margin-right:10px;margin-top:10px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Block Details</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>

<div id="dvCreateNewBlockDetails" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    @*margin-left: 10px; margin-right: 10px;*@

    <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px; text-align: left">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="message"></span>
    </div>

    @using (Html.BeginForm("Create", "BlockMasterDataEntry", FormMethod.Post, new { id = "frmCreateBlock" }))
    { 
        <center>
             @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
          
        </center>
        
        <table style="width: 100%; margin-top: 10px;" class="rowstyle">

            <tr style="display: none">
                <td colspan="5">
                    @Html.HiddenFor(model => model.EncryptedBlockCode)
                </td>

            </tr>

            <tr>
                <td style="width: 8%;"></td>
                <td style="text-align: left; width: 15%;">
                    @Html.LabelFor(model => model.MAST_STATE_CODE)
                    <label style="color: red;">*</label>
                </td>
                <td style="width: 30%;">
                    @if (Model.EncryptedBlockCode == null)
                    {    
                        @Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.States, new { @id = "ddlStates", @title = "State", @tabindex = 1 })
                   
                        @Html.ValidationMessageFor(model => model.MAST_STATE_CODE)
                    }

                    else
                    {
                        @Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.States, new { @id = "ddlStates", @title = "State", @tabindex = 1, disabled = "disabled" })
                          
                    }

                </td>

                <td style="width: 15%;">
                    @Html.LabelFor(model => model.MAST_DISTRICT_CODE)
                    <label style="color: red;">*</label>
                </td>

                <td>
                    @if (Model.EncryptedBlockCode == null)
                    {    
                        @Html.DropDownListFor(model => model.MAST_DISTRICT_CODE, Model.Districts, new { @id = "ddlDistricts", @title = "District", @tabindex = 2 })
                   
                        @Html.ValidationMessageFor(model => model.MAST_DISTRICT_CODE)
                    }
                    else
                    {
                        @Html.DropDownListFor(model => model.MAST_DISTRICT_CODE, Model.Districts, new { @id = "ddlDistricts", @title = "District", @tabindex = 2, disabled = "disabled" })
                    }

                </td>


            </tr>




            <tr>
                <td></td>
                <td>
                    @Html.LabelFor(model => model.MAST_BLOCK_NAME)
                    <label style="color: red;">*</label>
                </td>

                <td colspan="3">
                    @Html.TextBoxFor(model => model.MAST_BLOCK_NAME, new { maxlength = 50, @title = "Block Name", @tabindex = 3, placeholder = "Enter Block Name..." })

                    @Html.ValidationMessageFor(model => model.MAST_BLOCK_NAME)

                </td>
            </tr>


            <tr>
                <td></td>
                <td>
                    @Html.LabelFor(model => model.MAST_IS_DESERT)<label style="color: red;"> *</label>
                </td>

                <td>

                    @Html.RadioButtonFor(model => model.IsDESERT, true, new { @title = "Yes", id = "rdoIsDESERTYes", @tabindex = 4 }) Yes &nbsp;&nbsp;
                    
                    @Html.RadioButtonFor(model => model.IsDESERT, false, new { @title = "No", id = "rdoIsDESERTNo", @tabindex = 5 }) No

                      @Html.ValidationMessageFor(model => model.IsDESERT)
                </td>

                <td>
                    @Html.LabelFor(model => model.MAST_IS_TRIBAL)<label style="color: red;"> *</label>
                </td>

                <td>

                    @Html.RadioButtonFor(model => model.IsTRIBAL, true, new { @title = "Yes", id = "rdoIsTRIBALYes", @tabindex = 6 }) Yes &nbsp;&nbsp;
                    
                    @Html.RadioButtonFor(model => model.IsTRIBAL, false, new { @title = "No", id = "rdoIsTRIBALNo", @tabindex = 7 }) No

                    @Html.ValidationMessageFor(model => model.IsTRIBAL)

                </td>

            </tr>


            <tr>
                <td></td>
                <td>
                    @Html.LabelFor(model => model.MAST_PMGSY_INCLUDED)<label style="color: red;"> *</label>
                </td>

                <td>

                    @Html.RadioButtonFor(model => model.IsPMGSYIncluded, true, new { @title = "Yes", id = "rdoIsPMGSYIncludedYes", @tabindex = 8 })
                    <label>Yes</label>
                    &nbsp;&nbsp;
                    
                    @Html.RadioButtonFor(model => model.IsPMGSYIncluded, false, new { @title = "No", id = "rdoIsPMGSYIncludedNo", @tabindex = 9 })
                    <label>No</label>

                    @Html.ValidationMessageFor(model => model.IsPMGSYIncluded)

                </td>

                <td>
                    @Html.LabelFor(model => model.MAST_SCHEDULE5)<label style="color: red;"> *</label>
                </td>

                <td>

                    @Html.RadioButtonFor(model => model.IsSchedule5, true, new { @title = "Yes", id = "rdoIsSchedule5Yes", @tabindex = 10 })
                    <label>Yes</label>
                    &nbsp;&nbsp;
                    
                    @Html.RadioButtonFor(model => model.IsSchedule5, false, new { @title = "No", id = "rdoIsIsSchedule5No", @tabindex = 11 })
                    <label>No</label>

                    @Html.ValidationMessageFor(model => model.IsSchedule5)

                </td>


            </tr>
            <tr>
                <td></td>
                <td>@Html.LabelFor(model => model.MAST_IS_IAP)<label style="color: red;"> *</label></td>
                <td>
                    @Html.RadioButtonFor(model => model.IsIAP, true, new { @title = "Yes", id = "rdoIsIAPYes", @tabindex = 12 })
                    <label>Yes</label>
                    &nbsp;&nbsp;                    
                    @Html.RadioButtonFor(model => model.IsIAP, false, new { @title = "No", id = "rdoIsIAPNo", @tabindex = 13 })
                    <label>No</label>
                    @Html.ValidationMessageFor(model => model.IsPMGSYIncluded)
                </td>
                @if (Model.EncryptedBlockCode != null)
                {
                    <td>@Html.LabelFor(model => model.IsActive)<label style="color: red;"> *</label></td>
                    <td>@Html.RadioButtonFor(model => model.IsActive, true, new { @title = "Yes", id = "rdoIsActiveYes", @tabindex = 14 })
                        <label>Yes</label>
                        &nbsp;&nbsp;                    
                            @Html.RadioButtonFor(model => model.IsActive, false, new { @title = "No", id = "rdoIsActiveNo", @tabindex = 15 })
                        <label>No</label>
                        @Html.ValidationMessageFor(model => model.IsActive)
                    </td>
                }
                else
                {
                    <td>
                        @Html.LabelFor(model => model.MAST_IS_BADB)<label style="color: red;"> *</label>
                    </td>

                    <td>

                        @Html.RadioButtonFor(model => model.IsBADB, true, new { @title = "Yes", id = "rdoIsBADBYes", @tabindex = 15 }) Yes &nbsp;&nbsp;
                    
                    @Html.RadioButtonFor(model => model.IsBADB, false, new { @title = "No", id = "rdoIsBADBNo", @tabindex = 15 }) No

                    @Html.ValidationMessageFor(model => model.IsBADB)

                    </td>
                }
            </tr>

            @if (Model.EncryptedBlockCode != null)
            {
                <tr>
                    <td style="width: 6%;"></td>
                    <td style="text-align: left; width: 17%;">
                        @Html.LabelFor(model => model.Max_Mast_Block_Id)
                        <label style="color: red;">*</label>
                    </td>

                    <td style="width: 30%;">
                        @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 23)
                        {
                            @Html.TextBoxFor(model => model.Max_Mast_Block_Id, new { maxlength = 10, @title = "District Id", @tabindex = 14, placeholder = "Enter District Name..." })
                            @Html.ValidationMessageFor(model => model.Max_Mast_Block_Id)
                        }
                        else
                        {
                            @Html.DisplayFor(model => model.Max_Mast_Block_Id)
                            @Html.HiddenFor(model => model.Max_Mast_Block_Id)
                        }

                    </td>

                    <td>
                        @Html.LabelFor(model => model.MAST_IS_BADB)<label style="color: red;"> *</label>
                    </td>

                    <td>

                        @Html.RadioButtonFor(model => model.IsBADB, true, new { @title = "Yes", id = "rdoIsBADBYes", @tabindex = 15 }) Yes &nbsp;&nbsp;
                    
                    @Html.RadioButtonFor(model => model.IsBADB, false, new { @title = "No", id = "rdoIsBADBNo", @tabindex = 15 }) No

                    @Html.ValidationMessageFor(model => model.IsBADB)

                    </td>
                </tr>
            }



            <tr>
                <td></td>
                <td></td>

                @if (Model.EncryptedBlockCode == null)
                {  
                    <td style="text-align: right;">
                        <input type="button" id="btnSave" name="btnSave" value="Save" class="jqueryButton" title="Save Block Details" tabindex="15" />
                    </td>
                    <td colspan="2">
                        <input type="reset" id="btnReset" name="btnReset" value="Reset" class="jqueryButton" title="Reset" tabindex="16" />
                    </td>
                }
                else
                {
                    <td style="text-align: right;">
                        <input type="button" id="btnUpdate" name="btnUpdate" value="Update" class="jqueryButton" title="Update Block Details" tabindex="15" />
                    </td>
                         
                    <td colspan="2">
                        <input type="button" id="btnCancel" name="btnCancel" value="Cancel" class="jqueryButton" title="Cancel" tabindex="16" />
                    </td>
                }


            </tr>

            <tr>
                <td colspan="5">
                    <label style="border: none">
                        [ Note: Fields marked with<label style="color: red;"> * </label>
                        are mandatory.]</label>
                </td>

            </tr>
        </table>
        
        
        
    }
</div>
