@model PMGSY.Models.Execution.SuperstructureViewModel
@using PMGSY.Extensions

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Scripts/Execution/SuperstructureLayout.js"></script>

<div style="text-align: left; height: 20px;">
    <b>Note :</b> <span class="ui-jqgrid-title" style="color:#865a24;">&nbsp;  Please enter Superstructure details in sequence as 1] Columns Casting. 2]Beam & Slab Casting. 3] Brick Work. 4] Plastering. 5] Flooring.</span>
</div>
<div id="dvhdSuperstructureDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Superstructure Details</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvPfmsPayment" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmSuperstructure">
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.EncrProposalCode)
        @Html.HiddenFor(model => model.EncrProgressCode)
        <table style="width: 100%;" class="rowstyle">
            @*<tr>
                <td colspan="11">
                    <b>Note :</b> Please enter Superstructure details in sequence as 1] Columns Casting. 2]Beam & Slab Casting. 3] Brick Work. 4] Plastering. 5] Flooring.
                </td>
            </tr>*@
            <tr>
                <td style="width: 2%;"></td>

                <td style="width: 5%;">
                    @Html.Label("Month")
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.Month, new SelectList(Model.lstMonth, "Value", "Text"), new { @id = "ddlMonth", style = "width:170px;", title = "Month" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Month)
                </td>
                <td style="width: 5%;">
                    @Html.Label("Year")
                </td>
                <td style="width: 10%;">
                    @Html.DropDownListFor(model => model.Year, new SelectList(Model.lstYear, "Value", "Text"), new { @id = "ddlYear", style = "width:170px;", title = "Year" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Year)
                </td>
                <td style="width: 5%;">
                    @Html.Label("Sub Component")
                </td>
                <td style="width: 10%;">
                    @Html.DropDownListFor(model => model.SubComponent, new SelectList(Model.lstSubComponent, "Value", "Text"), new { @id = "ddlSubComponent", style = "width:170px;", title = "SubComponent" })
                    <br />
                    @Html.ValidationMessageFor(m => m.SubComponent)
                </td>
                <td style="width: 5%;">
                    @*@Html.Label("Floor")*@
                </td>
                <td style="width: 10%;">
                    @*@Html.DropDownListFor(model => model.Floor, new SelectList(Model.lstFloor, "Value", "Text"), new { @id = "ddlFloor", style = "width:170px;", title = "Floor" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Floor)*@
                </td>
                <td style="width: 2%;"></td>
            </tr>
            <tr id="ncourtyard">
                <td style="width: 2%;"></td>
                <td style="width: 5%;">
                    @Html.Label("Ground Floor")
                </td>
                <td style="width: 10%;">
                    @Html.DropDownListFor(model => model.groundFloor, new SelectList(Model.lstGroundFloor, "Value", "Text"), new { @id = "ddlGroundFloor", style = "width:170px;", title = "Ground Floor" })
                    <br />
                    @Html.ValidationMessageFor(m => m.groundFloor)
                </td>
                <td style="width: 5%;">
                    @Html.Label("First Floor")
                </td>
                <td style="width: 10%;">
                    @Html.DropDownListFor(model => model.firstFloor, new SelectList(Model.lstfirstFloor, "Value", "Text"), new { @id = "ddlFirstFloor", style = "width:170px;", title = "First Floor" })
                    <br />
                    @Html.ValidationMessageFor(m => m.firstFloor)
                </td>
                <td style="width: 5%;">
                    @Html.Label("Second Floor")
                </td>
                <td style="width: 10%;">
                    @Html.DropDownListFor(model => model.secondFloor, new SelectList(Model.lstSecondFloor, "Value", "Text"), new { @id = "ddlSecondFloor", style = "width:170px;", title = "Second Floor" })
                    <br />
                    @Html.ValidationMessageFor(m => m.secondFloor)
                </td>
                <td style="width: 5%;">
                    @Html.Label("Third Floor")
                </td>
                <td style="width: 10%;">
                    @Html.DropDownListFor(model => model.thirdFloor, new SelectList(Model.lstThirdFloor, "Value", "Text"), new { @id = "ddlThirdFloor", style = "width:170px;", title = "Third Floor" })
                    <br />
                    @Html.ValidationMessageFor(m => m.thirdFloor)
                </td>
                <td style="width: 2%;"></td>
            </tr>
            <tr id="courtyard">
                <td style="width: 2%;"></td>
                <td style="width: 5%;"></td>
                <td style="width: 10%;"></td>
                <td style="width: 5%;">
                    @Html.Label("Covered Parking")
                </td>
                <td style="width: 10%;">
                    @Html.DropDownListFor(model => model.coveredParking, new SelectList(Model.lstCoveredParking, "Value", "Text"), new { @id = "ddlCoveredParking", style = "width:170px;", title = "Covered Parking" })
                    <br />
                    @Html.ValidationMessageFor(m => m.coveredParking)
                </td>
                <td style="width: 5%;">
                    @Html.Label("Approach Road")
                </td>
                <td style="width: 10%;">
                    @Html.DropDownListFor(model => model.approachRoad, new SelectList(Model.lstApproachRoad, "Value", "Text"), new { @id = "ddlApproachRoad", style = "width:170px;", title = "Approach Road" })
                    <br />
                    @Html.ValidationMessageFor(m => m.approachRoad)
                </td>
                <td style="width: 5%;"></td>
                <td style="width: 10%;"></td>
                <td style="width: 2%;"></td>
            </tr>
            <tr>
                <td style="text-align: center;" colspan="10">
                    @if (Model.EncrProgressCode != null)
                    {
                        <input type="button" id="btnUpdate" value="Update" class="jqueryButton" />
                    }
                    else
                    {
                        <input type="button" id="btnSave" value="Save" class="jqueryButton" />
                    }
                    <input type="button" id="btnCancel" value="Cancel" class="jqueryButton" />
                </td>
            </tr>
        </table>
    </form>
</div>

