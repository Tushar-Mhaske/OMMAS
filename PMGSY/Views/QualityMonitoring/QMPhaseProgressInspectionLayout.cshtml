@model PMGSY.Models.QualityMonitoring.QMPahseInspectionProgressViewModel
<script src="~/Scripts/QualityMonitoring/QMPahseInspectionProgress.js"></script>
<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<div id="dvSearchParameter" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmQMPahseInsp">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.StateName)
        @Html.Hidden("hdnRoleCode",PMGSY.Extensions.PMGSYSession.Current.RoleCode.ToString())
       <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 2%;"></td>
                
                <td style="text-align: left; width: 5%;">
                 @Html.LabelFor(model => model.StateCode)
                </td>
                <td style="width: 15%;">
                    
                        @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.lstStates, "Value", "Text"), new { @title ="State", @tabindex = 1, @id = "ddlQMPahse", @style = "width:150px" })
                        @Html.ValidationMessageFor(m => m.StateCode)                    
                </td>
                 <td style="text-align: left; width: 5%;" id="yearLabelId">
                 @Html.LabelFor(model => model.YearCode)
                </td>
                 <td style="width: 15%;" id="yearId">
                    
                        @Html.DropDownListFor(model => model.YearCode, new SelectList(Model.lstYears, "Value", "Text"), new { @title ="Year", @tabindex = 2, @id = "ddlYear", @style = "width:150px" })
                        @Html.ValidationMessageFor(m => m.YearCode)                    
                </td>
                <td>                   
                   <input type="radio" name="rdReportPart"  value="1" checked = "checked"/>
                    <label>Part1</label>

                     <input type="radio" name="rdReportPart"  value="2"/>
                    <label>Part2</label>
                </td>
                <td>                   
                  
                </td>
                 @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode != 8)
                 { 
                    <td>
                        <input type="button" id="btnQMPahseInsp" value="View"  Class="jqueryButton"  Title="View Details"tabindex="4" />
                    </td>
                 }
                 else
                 {
                     <td></td>
                 }
            </tr>
        </table>
    </form>
</div>

<div id="loadReport" class="divLoadReport"></div>
