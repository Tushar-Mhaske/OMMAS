        @Html.HiddenFor(model => model.BatchCode)*@


        @Html.HiddenFor(model => model.DistName)
        @Html.HiddenFor(model => model.BlockName)
        @Html.HiddenFor(model => model.StatusName)
        @Html.HiddenFor(model => model.CollabName)
        @Html.HiddenFor(model => model.BatchName)
        @Html.HiddenFor(model => model.AgencyName)
        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 2%;"></td>
                <td style="width: 5%;">
                    @Html.LabelFor(model => model.StateCode)
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.StateList, "Value", "Text"), new { @id = "ddlECState", style = "width:170px;", title = "State" })
                    <br />
                    @Html.ValidationMessageFor(m => m.StateCode)
                </td>
                <td style="width: 7%;">
                    @Html.LabelFor(model => model.DistrictCode)
                </td>
                <td style="width: 14%;">
                    @Html.DropDownListFor(model => model.DistrictCode, new SelectList(Model.DistrictList, "Value", "Text"), new { @id = "ddlECDistrict", style = "width:170px;" })
                    <br />
                    @Html.ValidationMessageFor(m => m.DistrictCode)
                </td>

                <td style="width: 7%;">
                    @Html.LabelFor(model => model.CollaborationCode)
                </td>
                <td style="width: 14%;">
                    @Html.DropDownListFor(model => model.CollaborationCode, new SelectList(Model.CollaborationList, "Value", "Text"), new { @id = "ddlECCollaboration", style = "width:170px;" })
                    <br />
                    @Html.ValidationMessageFor(m => m.CollaborationCode)
                </td>


                <td style="width: 8%;">
                    @Html.LabelFor(model => model.AgencyCode)
                </td>
                <td style="width: 12%;">
                    @Html.DropDownListFor(model => model.AgencyCode, new SelectList(Model.AgencyList, "Value", "Text"), new { @id = "ddlECAgency", style = "width:170px;" })
                    <br />
                    @Html.ValidationMessageFor(m => m.AgencyCode)
                </td>
                <td style="width: 7%;">
                    <input type="button" id="btnViewEC" value="View" class="jqueryButton" />
                </td>
            </tr>
        </table>
    </form>
</div>

