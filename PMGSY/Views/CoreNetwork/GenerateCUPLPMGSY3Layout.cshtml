@model PMGSY.Models.CoreNetwork.CUPLPMGSY3ViewModel
@using PMGSY.Extensions

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Scripts/jquery.ui.datepicker.js"></script>
<script src="~/Scripts/CoreNetwork/GenerateCUPLPMGSY3Layout.js"></script>

<div id="dvhdCUPLDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:0px;margin-right:0px;margin-top:0px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Finalize CUPL PMGSY3</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvFinalizeMRL" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmGenerateCUPLLayout">
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m=>m.stateCode)
        @Html.HiddenFor(m=>m.districtCode)
        @Html.HiddenFor(m=>m.blockCode)
        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 5%;"></td>
                <td style="width: 10%;">
                    @Html.Label("Generation Date")
                </td>
                <td style="width: 25%;">
                    @Html.TextBoxFor(model => model.generationDate, new { @id="txtGenerationDate",@title = "Enter Date", @maxlength = 10, @tabindex = 4, @placeholder = "Enter Date...", @readonly="readonly" })
                    <br />
                    @Html.ValidationMessageFor(m => m.generationDate)
                </td>
                <td style="width: 10%;">
                    @Html.Label("Financial Year")
                </td>
                <td style="width: 25%;">
                    @Html.DropDownListFor(model => model.Year, new SelectList(Model.lstYears, "Value", "Text"), new { @id = "ddlYear", style = "width:170px;", title = "Year" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Year)
                </td>
                <td style="width: 10%;">
                    @Html.Label("Batch")
                </td>
                <td style="width: 25%;">
                    @Html.DropDownListFor(model => model.Batch, new SelectList(Model.lstBatch, "Value", "Text"), new { @id = "ddlBatch", style = "width:170px;", title = "Batch" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Batch)
                </td>
                <td style="text-align: left;" style="width: 5%;">
                    <input type="button" id="btnSubmit" value="Submit" class="jqueryButton" />
                </td>
                <td style="width: 5%;"></td>
            </tr>
        </table>
    </form>
</div>


