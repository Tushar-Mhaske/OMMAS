<form id="frmLoadScheduleItems">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(m => m.ItemCode)
    @Html.HiddenFor(m => m.ItemTypeCode)
    <div id="dvLoadScheduleItems" style="width: 100%; border: none; margin-bottom: 10px;">
        <table class="rowstyle" style="width: 100%; margin-bottom: 5px; border: 1px solid #B5B8C8;">
            <tr>
                <td style="width: 10%"></td>
                <td style="width: 5%;">
                    <label>Chapter</label>
                </td>
                <td style="width: 30%">
                    @Html.DisplayFor(m => m.chapterName)
                </td>
                @*<td style="width: 5%;">
                    <label>Item</label>
                </td>
                <td colspan="3">
                    @Html.DisplayFor(m => m.itemName)
                </td>*@
                <td style="width: 5%;">
                    @Html.Label("Item")<label style="color: red;"> *</label>
                </td>
                <td colspan="3">
                    @Html.DropDownListFor(model => model.Item, new SelectList(Model.ItemList, "Value", "Text"), new { @title = "Chapter", @id = "ddlItem", @style = "width:300px;", @tabindex = 6 })
                    <br />
                    @Html.ValidationMessageFor(m => m.Item)
                </td>
            </tr>
            <tr>
                <td style="width: 10%"></td>
                <td style="width: 10%;">
                    @Html.Label("Major Items")<label style="color: red;"> *</label>
                </td>
                <td style="width: 30%">
                    @Html.DropDownListFor(model => model.MajorItem, new SelectList(Model.MajorItemList, "Value", "Text"), new { @title = "Major Item", @id = "ddlMajorItem", @style = "width:300px;", @tabindex = 1 })
                    <br />
                    @Html.ValidationMessageFor(m => m.MajorItem)
                </td>
                <td style="width: 10%;">
                    @Html.Label("Minor Items")<label style="color: red;"> *</label>
                </td>
                <td style="width: 30%">
                    @Html.DropDownListFor(model => model.MinorItem, new SelectList(Model.MinorItemList, "Value", "Text"), new { @title = "Minor Item", @id = "ddlMinorItem", @style = "width:300px;", @tabindex = 2 })
                    <br />
                    @Html.ValidationMessageFor(m => m.MinorItem)
                </td>
                <td colspan="2"></td>
            </tr>
            @* <tr>
                <td style="width: 10%"></td>
                <td style="width: 10%;">
                    @Html.Label("Minor Items")<label style="color: red;"> *</label>
                </td>
                <td style="width: 30%">
                    @Html.DropDownListFor(model => model.MinorItem, new SelectList(Model.MinorItemList, "Value", "Text"), new { @title = "Minor Item", @id = "ddlMinorItem", @style = "width:300px;", @tabindex = 2 })
                    <br />
                    @Html.ValidationMessageFor(m => m.MinorItem)
                </td>
                <td colspan="4"></td>
            </tr>*@
        </table>
    </div>
</form>

