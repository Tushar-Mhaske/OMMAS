<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/MasterDataEntry/Master_SearchVillage.js")"> </script>

<div id="dvhdSearch" class="ui-corner-top ui-widget-header panelheader" style="text-align:left; height:20px;"> @*margin-left:10px;margin-right:10px;margin-top:10px;*@ 
     <span class="ui-jqgrid-title" style="float:left">&nbsp;Search</span>
      <span  id="spCollapseIconS" class="ui-icon ui-icon-circle-triangle-n" style="float:right"></span>
      </div>

@using PMGSY.Extensions

<div id="dvSearchParameter" class="ui-corner-bottom" style=" display: block; border: 1px solid #B5B8C8; "> @*margin-left: 10px; margin-right: 10px;*@
    
   <form id="frmSearchVillage">

      @{
          if(PMGSYSession.Current.RoleCode==22)//PIU
          {          
            @Html.Hidden("SearchDistCode",PMGSYSession.Current.DistrictCode)
            @Html.Hidden("RoleCode",PMGSYSession.Current.RoleCode)          
          }          
      }


         <table style="width:100%;" class="rowstyle"  >
                  <tr>
               
                <td style="text-align:left;width:8%;"  >
                    @Html.Label("State")
                </td>
            
                
                <td style="width:20%;">
                   @if(PMGSY.Extensions.PMGSYSession.Current.RoleCode == 36)
                    {
                     @Html.DropDownList("ddlSearchStates", ViewData["StateList"] as IEnumerable<SelectListItem>, new {@id="ddlSearchStates", @title = "State", @tabindex = 1,@disabled = "disabled" })
                    }
                    else
                    {
                        @Html.DropDownList("ddlSearchStates", ViewData["StateList"] as IEnumerable<SelectListItem>, new {@id="ddlSearchStates", @title = "State", @tabindex = 1 })
                    }
                    
                                     
                </td>
                       <td style="text-align:left;width:8%;" >
                    @Html.Label("District")
                </td>
            
                <td style="width:20%;">
                                          
                     @Html.DropDownList("ddlSearchDistrict", ViewData["DistrictList"] as IEnumerable<SelectListItem>, new {@id="ddlSearchDistrict", @title = "District", @tabindex = 2 })
                                     
                </td>
                      <td style="text-align:left;width:8%;">
                    @Html.Label("Block")
                </td>
                 
                <td style="width:20%;" >
                                          
                     @Html.DropDownList("ddlSearchBlocks", ViewData["BlockList"] as IEnumerable<SelectListItem>, new {@id="ddlSearchBlocks", @title = "Block", @tabindex = 3 })
                                     
                </td>
                      <td>
                         
                           <input type="button" id="btnSearch" name="btnSearch" value="Search" class= "jqueryButton" title="Search Village " tabindex="4"  /> 

                      </td>

                   </tr>
         
         </table>

   </form>
    </div>
