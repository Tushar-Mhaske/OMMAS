@model PMGSY.Models.Master.MasterMLAMembersViewModel
@{
    ViewBag.Title = "AddEditMLAMembers";
}

<script src="~/Scripts/custom/Generic.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.ui.datepicker.js" type="text/javascript"></script>
<script src="~/Scripts/Master/AddEditMLAMembers.js" type="text/javascript"></script>


<div id="dvhdAddNewMLADetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;MLA Member Details</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>

<div id="dvAddNewMLADetails" style="display: block; border: 1px solid #B5B8C8; text-align: left">
    <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px;">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="message"></span>
    </div>

    <form id="frmAddMembers">
        @Html.AntiForgeryToken()
        <center>@Html.ValidationSummary(true)</center>

        <table style="width: 100%; margin-top: 10px;" class="rowstyle">
            <tr style="display: none">
                <td colspan="5">
                    @Html.HiddenFor(m => m.EncryptedMembersCode)
                </td>
            </tr>
            <tr>
                <td style="width: 8%;"></td>
                <td style="text-align: left; width: 15%;">
                    @Html.LabelFor(model => model.MAST_STATE_CODE)
                    <label style="color: red;">*</label>
                </td>

                <td style="width: 30%;">
                    @if (Model.EncryptedMembersCode == null)
                    {                                    
                        @Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.States, new { maxlength = 50, @title = "State Name", @tabindex = 1 })
                        @Html.ValidationMessageFor(model => model.MAST_STATE_CODE)
                    }
                    else
                    {
                        @Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.States, new { maxlength = 50, @title = "State Name", @tabindex = 1, @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.MAST_STATE_CODE)
                    }
                </td>

                <td style="width: 15%;">
                    @Html.LabelFor(model => model.MAST_MLA_CONST_CODE)<label style="color: red;"> *</label>
                </td>

                <td>
                    @if (Model.EncryptedMembersCode == null)
                    {       
                        @Html.DropDownListFor(model => model.MAST_MLA_CONST_CODE, Model.Constituency, new { maxlength = 50, @title = "MLA Constituency Name", @tabindex = 1 })
                        @Html.ValidationMessageFor(model => model.MAST_MLA_CONST_CODE)
                    }
                    else
                    {
                        @Html.DropDownListFor(model => model.MAST_MLA_CONST_CODE, Model.Constituency, new { maxlength = 50, @title = "MLA Constituency Name", @tabindex = 1, @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.MAST_MLA_CONST_CODE)
                    }
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    @Html.LabelFor(model => model.MAST_VS_TERM)<label style="color: red;"> *</label>
                </td>
                <td>
                    @if (Model.EncryptedMembersCode == null)
                    {
                        @Html.DropDownListFor(model => model.MAST_VS_TERM, Model.VidhanSabhaTerm, new { @title = "Vidhan Sabha Term", @tabindex = 1 })
                        @Html.ValidationMessageFor(model => model.MAST_VS_TERM)
                    }
                    else
                    {
                        @Html.DropDownListFor(model => model.MAST_VS_TERM, Model.VidhanSabhaTerm, new { @title = "Vidhan Sabha Term", @tabindex = 1, @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.MAST_VS_TERM)
                    }
                </td>
                <td colspan="2"></td>

            </tr>
            <tr>
                <td></td>
                <td>
                    @Html.LabelFor(model => model.MAST_MEMBER)
                    <label style="color: red;">*</label>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.MAST_MEMBER, new { maxlength = 50, @title = "Member Name", @tabindex = 1, @placeholder = "Enter Member Name..." })
                    @Html.ValidationMessageFor(model => model.MAST_MEMBER)
                </td>
                <td>
                    @Html.LabelFor(model => model.MAST_MEMBER_PARTY)
                    <label style="color: red;">*</label>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.MAST_MEMBER_PARTY, new { maxlength = 50, @title = "Party Name", @tabindex = 1, @placeholder = "Enter Party Name..." })
                    @Html.ValidationMessageFor(model => model.MAST_MEMBER_PARTY)
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    @Html.LabelFor(model => model.MAST_MEMBER_START_DATE)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.MAST_MEMBER_START_DATE, new { maxlength = 50, @title = "Start Date", @tabindex = 1, @placeholder = "dd/mm/yyyy...", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.MAST_MEMBER_START_DATE)
                </td>
                <td>
                    @Html.LabelFor(model => model.MAST_MEMBER_END_DATE)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.MAST_MEMBER_END_DATE, new { maxlength = 50, @title = "End Date", @tabindex = 1, @placeholder = "dd/mm/yyyy...", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.MAST_MEMBER_END_DATE)
                </td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                
                @if (Model.EncryptedMembersCode == null)
                {
                    <td style="text-align: right">
                        <input type="button" id="btnSave" name="btnSave" value="Save" class="jqueryButton" title="Save MLA Member Details" tabindex="5" />
                    </td>
                   
                     
                    <td colspan="2" style="text-align: left">
                        <input type="reset" id="btnReset" name="btnReset" value="Reset" class="jqueryButton" title="Reset" tabindex="6" />

                    </td>
                        
                }
                else
                {
                    <td style="text-align: right">
                        <input type="button" id="btnUpdate" name="btnUpdate" value="Update" class="jqueryButton" title="Update MLA Member Details" tabindex="5" />
                    </td>
                    <td colspan="2" style="text-align: left">
                        <input type="button" id="btnCancel" name="btnCancel" value="Cancel" class="jqueryButton" title="Cancel" tabindex="6" /></td>
                } 
            </tr>
            <tr>

                <td colspan="5">
                    <label @*class="ui-state-default"*@ style="border:none">[ Note: Fields marked with<label style="color: red;"> * </label>are mandatory.]</label>
                </td>
            </tr>

        </table>



    </form>
</div>



