<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/Master/ListInformationDetails.js"></script>
<center>
<div style="width:100%">
<div id="dvAddInfoDetails" style="display:none"></div>
     @{
        String type = ViewBag.Type;        
    }
    @Html.Hidden("InfoType", type)
</div>
     @if(type=="T")
     {
        <div id="dvSearchInfoDetails" >  
        
    </div>   
     }
    <br />
<div style="margin-top:0px">
   

    <table id="tblAddNewButton" style="width: 100%;">
        <tr>
            <td style="text-align: left">
                <div class="ui-state-default ui-corner-all jqueryButton" id="btnCreateNew" title="Add Details">
                    <span style="float: left" class="ui-icon ui-icon-circle-plus"></span>
                    <span style="float: left; margin-right: 5px">
                        
                        @if (type == "A")
                        {   
                            <span>Add Accounts Trainers</span>
                        }
                        else if (type == "M")
                        {   
                            <span>Add MRD</span>                    
                        }
                        else if (type == "N")
                        {   
                            <span>Add NRRDA</span>                  
                        }
                        else if (type == "T")
                        {   
                            <span>Add Trainers</span>               
                        }

                    </span>
                </div>
            </td>

         </tr>
        @if(type=="T")
        {
        <tr id="trSearchDetails" style="display:none">
            <td style="text-align: left">
                <div class="ui-state-default ui-corner-all jqueryButton" id="btnSearchInfo" title="Search Details">
                    <span style="float: left" class="ui-icon ui-icon-search"></span>
                    <span style="float: left; margin-right: 5px">Search Trainers</span>
                </div>
            </td>
         </tr>
        }
    </table> 
    <table id="tblInfoDetails"></table>
    <div id="dvPagerInfoDetails" ></div>
</div>
</center>
