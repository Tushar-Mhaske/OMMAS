<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script type="text/javascript">

    $(document).ready(function () {

        $("#btnSearchCon").click(function () {

            if ($("#txtPanSearch").val() == '')
            {
                alert('Please Enter Pan No.');
                return false;
            }

            FillInCascadeDropdown({ userType: $("#ddlState").find(":selected").val() },
               "#ddlContractors", "/Master/GetContractorsByPan?stateCode=" + "0$" + $("#txtPanSearch").val());

            $("#divPanSearch").dialog('close');

        });

    });

</script>


<form id="frmSplitCount">
    @Html.AntiForgeryToken()
    <table width="100%" class="rowstyle ui-corner-all" style="border: 1px solid #B5B8C8;">
        <tr>
            <td style="text-align: left; width: 25%;">@Html.Label("Pan Number")
                <label style="color: red;">*</label></td>
            <td>@Html.TextBox("txtPanSearch", "", new { @title = "Search Contractor by Pan Search", @tabindex = 1, @placeholder = "Enter Pan Number to search..." })</td>
        </tr>
        <tr>
            <td></td>
            <td style="text-align: left">
                <input type="button" id="btnSearchCon" name="btnSearchCon" value="Search" class="jqueryButton" title="Search Contractor" tabindex="2" />
            </td>
        </tr>
    </table>
</form>
