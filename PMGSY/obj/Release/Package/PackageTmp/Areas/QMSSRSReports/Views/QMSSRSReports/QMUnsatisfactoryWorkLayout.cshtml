@model PMGSY.Areas.QMSSRSReports.Models.QualityReportsViewModel

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}
@*<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.ui.dialog.js")"> </script>*@
<script src="~/Areas/QMSSRSReports/Scripts/QMUnsatisfactoryWorksLayout.js"></script>
<script src="~/Scripts/custom/Generic.js"></script>

<div id="dvhdQMUnsatisfactoryWorksLayout" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Unsatisfactory Works</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvQMUnsatisfactoryWorksLayout" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmQMUnsatisfactoryWorkLayout">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.Hidden("hdnRole", PMGSY.Extensions.PMGSYSession.Current.RoleCode.ToString())
        
        <table class="rowstyle" style="margin-top: 0px; text-align: center; width: 100%;">
            <tr>
                <td style="width: 5%;"></td>
                <td style="width: 7%; font-weight: bold;">
                    @Html.Label("Monitor Type")
                </td>
                <td style="width: 15%">
                    @*@Html.DropDownListFor(model => model.QM_TYPE, new SelectList(Model.QM_TYPE_LIST, "value", "text"), new { @id = "ddlQMTypeUnsatisfactoryWork" })*@
                    @Html.DropDownListFor(model => model.qmType, new SelectList(Model.qmTypeList, "Value", "Text"), new { @id = "ddlQMTypeUnsatisfactoryWork", @title = "Monitor Type", @tabindex = 1 })
                    <br />
                    @Html.ValidationMessageFor(m => m.qmType)
                </td>
                <td style="width: 5%; font-weight: bold;">
                    @Html.Label("State")
                </td>
                <td style="width: 15%">
                    @*@Html.DropDownListFor(model => model.STATE, new SelectList(Model.STATE_LIST, "value", "text"), new { @id = "ddlStateUnsatisfactoryWork" })*@
                    @Html.DropDownListFor(model => model.State, new SelectList(Model.StateList, "Value", "Text"), new { @id = "ddlStateUnsatisfactoryWork", @title = "State", @tabindex = 2 })
                    <br />
                    @Html.ValidationMessageFor(m => m.State)
                </td>
                <td style="text-align: left; width: 30%">
                    <input type="button" id="btnViewUnsatisfactoryWorks" value="View Details" class="jquerybutton" style="margin-left: 20px;" />
                </td>
                <td colspan="2" style="width: 15%;"></td>
            </tr>
        </table>
    </form>
</div>

<div id="dvLoadQMUnsatisfactoryWorksReport"></div>

