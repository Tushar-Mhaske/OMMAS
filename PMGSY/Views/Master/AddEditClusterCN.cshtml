                    else
                    {
                        @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.StateList, "Value", "Text"), new { @title = "State", @tabindex = 1, @id = "StateList_ClusterAddDetails", @style = "width:150px", @disabled = "disabled" })
                                                 
                    }
