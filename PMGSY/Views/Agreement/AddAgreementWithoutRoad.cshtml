</div>

<form id="frmAddAgreementDetails">

    <center>
             @Html.ValidationSummary(true)

        </center>




    <table id="tblNewAgreement" style="width: 100%; border: 1px solid #808080; margin-top: 10px;" class="rowstyle ui-corner-all">

        <tr style="display: none">
            <td colspan="2">
                @Html.HiddenFor(model => model.EncryptedAgreementType_Add)
            </td>
            <td colspan="2">
                @Html.HiddenFor(model => model.EncryptedTendAgreementCode)
                @Html.HiddenFor(model => model.Mast_Con_Sup_Flag)
            </td>

        </tr>


        <tr>


            <td>
                @if (Model.Mast_Con_Sup_Flag.Equals("S"))
                {
                    @Html.Label("Supplier")
                         }
                else
                {
                    @Html.LabelFor(model => model.MAST_CON_ID) 
                         }<label style="color: red;"> *</label>
            </td>

            <td colspan="3">
                <table>
                    <tr>
                        <td>
                            @if (Model.EncryptedTendAgreementCode == null)
                            {    
                                @Html.DropDownListFor(model => model.MAST_CON_ID, Model.Contractors, new { @id = "ddlContractors", @title = "Contractor", @tabindex = 100, @style = "width:250px;" }) 
                                
                            }
                            else
                            {
                                @Html.DropDownListFor(model => model.MAST_CON_ID, Model.Contractors, new { @id = "ddlContractors", @title = "Contractor", @tabindex = 100, @disabled = "disabled", @style = "width:250px;" }) 
                       }
                        </td>
                        <td>
                            @if (Model.Mast_Con_Sup_Flag == "D" && Model.EncryptedTendAgreementCode == null)
                            {
                                <a href="#" class="ui-icon ui-icon-search" id="searchContractor">Search</a>
                                }
                        </td>
                    </tr>
                </table>
                @Html.ValidationMessageFor(model => model.MAST_CON_ID)
            </td>

        </tr>
        <tr>
            <td style="text-align: left; width: 20%;">
                @Html.LabelFor(model => model.TEND_AGREEMENT_NUMBER)
                <label style="color: red;">*</label>
            </td>

            <td style="text-align: left; width: 30%;">

                @Html.TextBoxFor(model => model.TEND_AGREEMENT_NUMBER, new { @title = "Agreement Number", @maxlength = 100, @tabindex = 101, @placeholder = "Enter Agreement Number..." })
                @Html.ValidationMessageFor(model => model.TEND_AGREEMENT_NUMBER)


            </td>

            <td style="text-align: left; width: 20%;">
                @Html.LabelFor(model => model.TEND_DATE_OF_AGREEMENT)
