
@model PMGSY.Areas.Feedback.Models.HabitationClusterModel
@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>


<script src="~/Areas/Feedback/Scripts/HabCovNew.js"></script>


<div id="dvhdCreateNewReportDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:0px;margin-right:0px;margin-top:0px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Habitation Coverage Details</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvSearchParameter" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmHabitationClusterReport">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Mast_State_Code)
        @Html.HiddenFor(model => model.Mast_District_Code)
     
        @Html.HiddenFor(model => model.StateName)
        @Html.HiddenFor(model => model.DistName)
       

        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 2%;"></td>
                <td style="text-align: left; width: 4%;">
                    @Html.LabelFor(model => model.StateCode)
                </td>

                <td style="width: 15%;">
                    @if (Model.Mast_State_Code == 0)
                    {
                        @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.StateList, "Value", "Text"), new { @title = "State", @tabindex = 1, @id = "StateList_HabitationClusterDetails", @style = "width:150px" })
                        <br />
                        @Html.ValidationMessageFor(m => m.StateCode)
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.StateName) 
                        <br />
                        @Html.Hidden("StateCode", Model.Mast_State_Code)                            
                    }
                </td>
                <td style="text-align: left; width: 4%;">
                    @Html.LabelFor(model => model.DistrictCode)
                </td>
                <td style="width: 15%;">
                    @if (Model.Mast_District_Code == 0)
                    {
                        @Html.DropDownListFor(model => model.DistrictCode, new SelectList(Model.DistrictList, "Value", "Text"), new { @title = "District", @id = "DistrictList_HabitationClusterDetails", @tabindex = 2, @style = "width:150px" })
                        <br />
                        @Html.ValidationMessageFor(m => m.DistrictCode)

                    }
                    else
                    {
                        @Html.DisplayFor(model => model.DistName)
                        <br />
                        @Html.Hidden("DistrictCode", Model.Mast_District_Code)     
                              
                    }
                </td>
                <td style="text-align: left; width: 4%;">
                    @Html.LabelFor(model => model.Year)
                </td>

                <td style="width: 15%;">
                  @Html.DropDownListFor(model => model.Year, new SelectList(Model.YearList, "Value", "Text"), new { @title ="Year", @tabindex = 2, @id = "YearList_FinancialDetails", @style = "width:150px" })
                    @Html.ValidationMessageFor(model => model.Year)
                </td>


                <td style="text-align: left; width: 4%;">
                      @Html.LabelFor(model => model.Month)
                </td>

                <td style="width: 15%;">
                  @Html.DropDownListFor(model => model.Month, new SelectList(Model.MonthList, "Value", "Text"), new { @title = "Month", @tabindex = 3, @id = "MonthList_FinancialDetails", @style = "width:150px" })
                    @Html.ValidationMessageFor(model => model.Month)
                </td>

                <td style="text-align: left; width: 10%;">
                    @Html.Label("Blockwise Report")
                      @Html.CheckBoxFor(m=>m.Roadwise, new { @title = "Blockwise Report" , @id = "ckBlockWiseCheck", @tabindex = 4 })
                </td>
               
                <td style="width: 5%;"><input type="button" id="btnViewHabitationClusterDetails" value="View" class="jqueryButton" title="View Detail" tabindex="5" />                      </td>
            </tr>

        </table>
    </form>

</div>

<div id="loadHabitationClusterReport" class="divLoadReport"></div>
