@model PMGSY.Areas.QMSSRSReports.Models.QualityReportsViewModel

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}
<script src="~/Scripts/jquery.ui.datepicker.js"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.ui.dialog.js")"> </script>
<script src="~/Areas/QMSSRSReports/Scripts/CompletedWorksLayout.js"></script>
<script src="~/Scripts/custom/Generic.js"></script>

<div id="dvhdCompletedWorksLayout" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Completed Works</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvCompletedWorksLayout" class="ui-corner-bottom" style="display: block;">
    <form id="frmCompletedWorksLayout">
        <table id="tblCompletedWorksFilters" class="rowstyle" style="margin-top: 0px; text-align: center; width: 100%; border: 1px solid #B5B8C8;">
            <tr>
                <td style="width: 15%; font-weight: bold;">
                    @Html.Label("From Date")
                </td>
                <td style="width: 15%">
                    @Html.EditorFor(m => m.FROM_DATE, String.Format("{0:dd/MM/yyyy}", Model.FROM_DATE))
                </td>
                <td style="width: 15%; font-weight: bold;">
                    @Html.Label("To Date")
                </td>
                <td style="width: 15%">
                    @Html.EditorFor(m => m.TO_DATE, String.Format("{0:dd/MM/yyyy}", Model.TO_DATE))
                </td>
                <td colspan="2" style="text-align: left;">
                    <input type="button" id="btnViewCompletedWorks" value="View Details" class="jquerybutton" style="margin-left: 20px;" />
                </td>
            </tr>
        </table>
    </form>
</div>

<div id="dvLoadCompletedWorksReport"></div>

