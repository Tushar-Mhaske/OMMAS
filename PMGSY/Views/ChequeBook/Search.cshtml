@*@using (Html.BeginForm()) { *@
<form id="frmChequeBookDetails">
    @Html.ValidationSummary(true)
    <div id="divError" class="ui-state-error ui-corner-all" style="padding: 0.2em; text-align:left; display:none; width:80%">
    <span class="ui-icon ui-icon-alert" style="float: left;"></span>
    <span></span>
    </div>
    <center>    
        <table class="ui-corner-all" style="width:80%; border:1px solid gray">
        <tr>
            <td class="ui-state-highlight ui-corner-all"  style="text-align:left; border:none" colspan="3">
                <span class="ui-icon ui-icon-info" style="float: left;"></span>
                <span style="float: left; font-weight:bold">Bank Details</span>
            </td>
        </tr>
            @{
                if (ViewBag.Name != null)
                {
                
        <tr class="ui-state-hover">
                    <td style="width:30%; height:19px"></td>
