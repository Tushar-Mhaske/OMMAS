@model PMGSY.Models.FortyPointCheckList.EmploymentInformationViewModel

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Scripts/FortyPointChecklist/AddEmploymentDetails.js"></script>


 <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px; text-align: left">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="message"></span>
 </div>

<div id="dvhdSearch" class="ui-corner-top ui-widget-header panelheader" style="text-align: left;height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Add / Edit Employment Information Details</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-close" style="float: right" title="Click here to close"></span>
</div>

<div id="dvSearchParameter" class="ui-corner-bottom" style="/*margin-left: 10px; margin-right: 10px*/ display: block; border: 1px solid #B5B8C8;">

    <form id="frmEmploymentDetails">

        <center>@Html.ValidationSummary(true) </center>
        @Html.HiddenFor(m=>m.EncryptedEmploymentId)
        <table style="width: 100%;">
            <tr>
                <td style="width: 10%"></td>
                <td style="width: 12%;font-weight:bold">
                    @Html.Label("Education Qualification  ")<span style="color:red">*</span>
                </td>
                <td style="text-align: left; width: 20%;">                       
                    @Html.DropDownListFor(model => model.TEND_QUALIFICATION_ID, Model.Qualifications, new { id="ddlQualification",@title="Qualification",@tabindex=1})                                                 
                </td>
                <td style="width: 10%;font-weight:bold">
                     @Html.Label("Number Of Holders  ")<span style="color:red">*</span>
                </td>
                <td style="text-align:left;width:20%">       
                          @if(Model.EncryptedEmploymentId==null)
                            {       
                                @Html.TextBoxFor(model=>model.TEND_EMPLOYMENT_NUMBER,new {@title="Number Of Holders",@tabindex="2",@Value=""})
                            }
                            else
                            {
                                @Html.TextBoxFor(model=>model.TEND_EMPLOYMENT_NUMBER,new {@title="Number Of Holders",@tabindex="2"})
                            }
                </td>
                
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td>@Html.ValidationMessageFor(model => model.TEND_QUALIFICATION_ID)</td>
                <td></td>
                <td>@Html.ValidationMessageFor(model=>model.TEND_EMPLOYMENT_NUMBER)</td>
            </tr>
            <tr>
                <td style="text-align: center;" colspan="5">
                    @if(Model.EncryptedEmploymentId==null)
                    {                    
                        <input type="button" id="btnAddEmploymentDetails" name="btnAddEmploymentDetails" value="Save" class="jqueryButton" title="Click here to save details" tabindex="3" />
                        <input type="reset" id="btnResetEmploymentDetails" name="btnResetEmploymentDetails" value="Reset" class="jqueryButton" title="Click here to reset details" tabindex="4"/>
                    }
                    else
                    {
                        <input type="button" id="btnUpdateEmploymentDetails" name="btnUpdateEmploymentDetails" value="Update" class="jqueryButton" title="Click here to update details" tabindex="3"/>
                        <input type="reset" id="btnCancelEmploymentDetails" name="btnCancelEmploymentDetails" value="Cancel" class="jqueryButton" title="Click here to cancel details" tabindex="4"/>
                    }
                </td>
            </tr>

        </table>
    </form>
</div>
