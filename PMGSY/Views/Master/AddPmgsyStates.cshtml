@model PMGSY.Models.Master.PMGSYStatesViewModel
<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>

<script src="~/Scripts/Master/PmgsyStates.js"></script>
<style>
    .DropDownCss {
        font-family: Trebuchet MS,Tahoma,Verdana,Arial,sans-serif;
        font-size: 12px;
        width: 400px;
        border: 1pt solid gray;
        vertical-align: middle;
        height:120px;
    }
</style>


<div id="dvhdSearch" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@* margin-left:10px;margin-right:10px;margin-top:10px;*@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Add PMGSY States</span>

    <span id="spCollapseIconS" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>

<div id="dvSearchParameter" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    @*margin-left: 10px; margin-right: 10px;*@

    <form id="frmSearchSQC">

        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 20%;"></td>
                <td style="text-align: left; width: 8%;">
                    @Html.Label("States")
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.statecodes, Model.stateslist, new { @id = "ddlPmgsyStates", @multiple = "multiple" , @class = "DropDownCss" })
                </td>

                <td style="text-align: center">
                    <input type="button" id="btnAddPmgsyStates" name="btnSearch" value="Save" class="jqueryButton" title="Save State Details" tabindex="3" />

                </td>
            </tr>
            <tr>
                <td colspan="4">
                    <span style="font-weight:bold">Note : Multiple States can be selected at a time using Ctrl Key.</span>
                </td>
            </tr>

        </table>

    </form>
</div>


