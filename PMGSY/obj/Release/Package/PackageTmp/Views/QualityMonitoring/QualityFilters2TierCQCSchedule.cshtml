@model PMGSY.Models.QualityMonitoring.QMFilterViewModel
@{ Layout = null; }

<!DOCTYPE html>

<html>
<head>

<script src="~/Scripts/QualityMonitoring/QualityFilters2TierCQCSchedule.js"></script>

</head>
<body>
    <div style="width:99%; height:20px;border:none; margin-top:5px; margin-bottom:-15px; " class="ui-state-default">
            <span style="float:right;margin-right:2Px; margin-top:2px" id="id3TierFilterDiv" class="ui-icon ui-icon-circle-triangle-n"></span>     
    </div>

     <div style="width: 99%; border:none; margin-top:-15px; margin-bottom:10px;" class="ui-state-default">      
                <div id="div2TierScheduleFilterForm">
                    <center>
                        <form id="2TierScheduleFilterForm">     
                            <table style="margin-top:10px; margin-bottom:5px; width:75%">
                                <tr>
                                    <td style="width:10%;padding-left:25px;">
                                        @Html.LabelFor(model => model.MAST_STATE_CODE)
                                    </td>
                                    <td style="width:10%">
                                         @Html.DropDownListFor(model => model.MAST_STATE_CODE, new SelectList(Model.STATES, "Value", "Text"), new { @Id = "ddlState2TierCQCSchedule" })
                                    </td> 
                                    <td style="width:20%;padding-left:25px;">
                                       Schedule Month 
                                    </td>
                                    <td style="width:10%">
                                        @Html.DropDownListFor(model => model.FROM_MONTH, new SelectList(Model.FROM_MONTHS_LIST, "Value", "Text"), new { @Id = "ddlMonth2TierCQCSchedule" })
                                    </td>
                                    <td style="width:20%;padding-left:25px;">
                                        Schedule Year 
                                    </td>
                                    <td style="width:10%">
                                        @Html.DropDownListFor(model => model.FROM_YEAR, new SelectList(Model.FROM_YEARS_LIST, "Value", "Text"), new { @Id = "ddlYear2TierCQCSchedule" })
                                    </td>
                                    <td style="text-align:center;width:10%;">
                                        <input type="button" class="jqueryButton" value="List Details" id="btn2TierScheduleListDetails" name ="btn2TierScheduleListDetails"/>
                                    </td>
                                 </tr>
                            </table>
                        </form>  
                    </center>
            </div>
        </div>
</body>
</html>