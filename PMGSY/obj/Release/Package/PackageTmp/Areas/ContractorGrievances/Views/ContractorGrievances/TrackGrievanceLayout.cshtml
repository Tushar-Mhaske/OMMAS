@{
    ViewBag.Title = "TrackGrievanceLayout";
}

@model PMGSY.Areas.ContractorGrievances.Models.RegisterGrievanceViewModel

<style>
    .preview img {
        max-width: 450px;
    }

    .img {
        border-width: 0;
    }
</style>

<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/jquery.ui.datepicker.js"></script>
<script src="~/Scripts/jquery.ui.accordion.js"></script>
<script src="~/Scripts/jquery.ui.tabs.js"></script>
<script src="~/Scripts/Bootstrap/bootstrap.min.js"></script>
<script src="~/Areas/ContractorGrievances/Scripts/TrackGrievance.js"></script>

<center>    
    @{
        <div style="width:100%; height:20px;border:none; margin-top:5px; margin-bottom:-15px; " class="ui-state-default">
            <span style="float:right;margin-right:2Px; margin-top:2px" id="idFilterDiv" class="ui-icon ui-icon-circle-triangle-n"></span>     
        </div>
        
        <div style="width: 100%; border:none; margin-top:-15px; margin-bottom:10px;" class="ui-state-default">      
        <div id="divFilterForm">
            <form id="FilterForm">                     
                <center>
                    <table style="margin-top:10px; margin-bottom:5px">
                        <tr>
                           
                             <td style="text-align:left;width:5%">
                            
                                 <td style="text-align:right;width:5%">
                                    @Html.Label("State")<label style="color: red;"> *</label> 
                                 </td>
                                 <td style="text-align:center;width:15%">
                                     @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.StateList, "Value", "Text"), new { @id = "ddlState", @title = "State",@style = "width:200px;", @tabindex = 1 })                 
                                        <br />
                                     @Html.ValidationMessageFor(m => m.StateCode)                 
                                 </td>
                                 <td style="text-align:right;width:5%">
                                     @Html.Label("District")<label style="color: red;"> *</label> 
                                 </td>
                                 <td style="text-align:center;width:15%">
                                        @Html.DropDownListFor(model => model.DistrictCode, new SelectList(Model.DistrictList, "Value", "Text"), new { @id = "ddlDistrict", @title = "District",@style = "width:200px;", @tabindex = 2 })                 
                                        <br />
                                     @Html.ValidationMessageFor(m => m.DistrictCode)                            
                                 </td>
                                 <td style="text-align:right;width:7%">
                                     @Html.Label("Package  Year")
                                 </td>
                                 <td style="text-align:center;width:15%">
                                        @Html.DropDownListFor(model => model.Agreement_Year, new SelectList(Model.Agreement_Year_List, "Value", "Text"), new { @id = "ddlYear", @title = "Year",@style = "width:150px;", @tabindex = 4 })                 
                                        <br />
                                     @Html.ValidationMessageFor(m => m.Agreement_Year)                            
                                 </td>
                        </tr>                        
                        <tr>
                            <td colspan="12" style ="flex-align:center;">
                                <center>     
                                      @if (PMGSY.Extensions.PMGSYSession.Current.DistrictCode > 0) {                          
                                        <input type="button" class="jqueryButton" value="View Grievance List Forwarded By SRRDA"  title="Click here to view grievance" id="btnGrievanceListForPiu" name ="btnList"/>                              
                                      }
                                      else{
                                            <input type="button" class="jqueryButton" value="View Grievance List"  title="Click here to view grievance" id="btnGrievanceListForSrrda" name ="btnList"/>        
                                      }
                                </center>
                            </td>              
                        </tr>              
                    </table>                           
                </center>
            </form>  
        </div>  
        </div>
    <div id="dvTrackGrievanceForStateDist" style="margin-top:20px; width:96%">
        <table id="tbTrackGrievanceList"></table>
        <div id="dvTrackGrievanceListPager"></div>
    </div>

    <div id="accordion" style="display:none;width:98%;margin-top:10px;">           
               <h3 style="text-align:left"><a id="" href="#" style=" font-size:1.2em;" >Forward Grievance To PIU</a>
             <a href="#"  style="float: right;">
                   <img style="border:none" src="" class="ui-icon ui-icon-closethick" onclick="CloseForwardGrievenceForm();" /></a>
            </h3>
            <div id="divForwardGrievanceForm" style="display:none;">
            </div>                     
</div>

     <div id="accordion2" style="display:none;width:98%;margin-top:10px;">           
               <h3 style="text-align:left"><a id="" href="#" style=" font-size:1.2em;" >Piu Action On Grievance</a>
             <a href="#"  style="float: right;">
                   <img style="border:none" src="" class="ui-icon ui-icon-closethick" onclick="CloseForwardGrievenceForm();" /></a>
            </h3>
            <div id="divPiuActionOnGrievanceForm" style="display:none;">
            </div>                     
    </div>
     <div id="dvDownloadGrievanceFile" style="margin-top:20px; width:96%">
        <table id="tbDownloadGrievanceFileList"></table>
        <div id="dvDownloadGrievanceFileListPager"></div>
    </div>
               
       }
</center>


