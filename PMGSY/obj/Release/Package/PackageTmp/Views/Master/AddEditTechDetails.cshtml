@model PMGSY.Models.Master.MasterTechnologyViewModel

<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/Master/AddTechnologyDetails.js"></script>
<div id="dvheaderTechnologyDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Technology Details</span>
    <span id="iconClose" class="ui-icon ui-icon-circle-close" style="float: right"></span>
</div>
<div id="dvAddTechnologyDetails" style="display: block; border: 1px solid #B5B8C8;">
    <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px; text-align: left;">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="message"></span>
    </div>
    <form id="frmTechnologyDetails">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.EncryptedTechCode)

        <center>@Html.ValidationSummary(true)</center>
        <table style="width: 100%; margin-top: 10px;" class="rowstyle">
            <tr>
                <td style="width: 5%"></td>
                <td style="width: 05%">@Html.LabelFor(model => model.MAST_TECH_NAME) <span style="color: red">*</span></td>
                <td style="width: 15%">
                    @Html.TextBoxFor(model => model.MAST_TECH_NAME, new { @placeholder = "Enter Name...", @tabindex = 1, @title = "Enter Name", @maxlength = 100 })
                    <br />
                    @Html.ValidationMessageFor(model => model.MAST_TECH_NAME)
                </td>
                <td style="width: 5%; text-align: left; height: 25px;">Type <span style="color: red;">*</span></td>
                <td style="width: 25%; text-align: left;">
                    @Html.DropDownListFor(model => model.TechType, Model.lstTechTypes, new { @id="ddlTechType",@title="Please select Technology Type" , @tabindex = 4 , @style="width:200px"})
