@model PMGSY.Models.QualityMonitoring.QMATRRegradeModel

<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/QualityMonitoring/QMATRRegrade.js"></script>

<form id="frmQMATRRegrade">
    <div id="divATRError" class="ui-state-error ui-corner-all" style="text-align: left; display: none; width: 35%">
        <span class="ui-icon ui-icon-alert" style="float: left;"></span>
        <span></span>
    </div>
    @Html.HiddenFor(model => model.QM_OBSERVATION_ID)
    @Html.HiddenFor(model => model.IMS_PR_ROAD_CODE)
    @Html.Hidden("roleCode", PMGSY.Extensions.PMGSYSession.Current.RoleCode)
    <div id="divNote" class="ui-state-default ui-corner-top" style="text-align: left; width: 65%; height:20px; padding-top:3px;">
        <strong>&nbsp;&nbsp;Note : Select 'Yes' if ATR has been recieved.</strong>
    </div>
    <table class="rowstyle" id="tblATRRegrade" style="margin-top: 0px; text-align: left; border: ridge 0.1em #ccc; width: auto; padding: 5px 5px 5px 5px;width:100%" ">
        <tr>

        <tr> <strong>State Name:</strong> @Html.DisplayFor(StateName => Model.StateName, "StateName") </tr> &nbsp;&nbsp;

        <tr> <strong>District Name:</strong> @Html.DisplayFor(DistrictName => Model.DistrictName, "DistrictName") </tr>&nbsp;&nbsp;
        <tr> <strong>Block Name:</strong> @Html.DisplayFor(BlockName => Model.BlockName, "StateName") </tr>&nbsp;&nbsp;



        <tr><strong>Package No.:</strong> @Html.DisplayFor(PACKAGE_ID => Model.PACKAGE_ID, "packageID") </tr>&nbsp;&nbsp;

        <tr><strong>Road Name:</strong> @Html.DisplayFor(ROAD_NAME => Model.ROAD_NAME, "roadName")</tr>
        </tr>
        <br>
        <br
        <br>
        <br>

        <tr>
            <td>Regrade Reasons : </td>
            <td>

                @Html.DropDownListFor(model => model.reasonCode, new SelectList(Model.lstReasons, "Value", "Text"), new { @id = "ddlreason", @tabindex = 1, style = "width: 600px;" })

            </td>


        </tr>
        <tr>
            <td style="width:8%;"></td>

            <td style="width:85%;">
                @Html.RadioButtonFor(model => model.ATR_REGRADE_STATUS, "A", new { @id = "rdoAcceptATR", @checked = true, name = "ATR_REGRADE_STATUS" }) Accept
                &nbsp;&nbsp;&nbsp;
                @Html.RadioButtonFor(model => model.ATR_REGRADE_STATUS, "R", new { @id = "rdoRejectATR", name = "ATR_REGRADE_STATUS" }) Reject
                &nbsp;&nbsp;&nbsp;
                @Html.RadioButtonFor(model => model.ATR_REGRADE_STATUS, "V", new { @id = "rdoVerifyATR", name = "ATR_REGRADE_STATUS" }) Verification
                &nbsp;&nbsp;&nbsp;
                @Html.RadioButtonFor(model => model.ATR_REGRADE_STATUS, "C", new { @id = "rdoCommiteeATR", name = "ATR_REGRADE_STATUS" }) To Be sent to committee
                &nbsp;&nbsp;&nbsp;
                @Html.RadioButtonFor(model => model.ATR_REGRADE_STATUS, "D", new { @id = "rdoDefectATR", name = "ATR_REGRADE_STATUS" }) Non Rectifiable Defect
            </td>

            @*<td style="width:45%;"></td> *@
        </tr>
        <tr id="trATRRemarks">
            <td style="width:8%;"><b>Remarks:</b> <span style="color:red">*</span></td>
            <td style="text-align:left;">
                @Html.TextAreaFor(model => model.ATR_REGRADE_REMARKS, new { @style = "width: 100%;height:130px", @maxlength = "500", @id = "ATR_REGRADE_REMARKS1" })
                @Html.ValidationMessageFor(model => model.ATR_REGRADE_REMARKS)
            </td>
        </tr>
        <tr>
            <td></td>
            <td style="text-align: left; font-size: 12px"><b>Note:Please enter remarks upto 500 characters. Not allowed special characters are <label style="text-align: left; font-size: 14px">^`<~>|"\{} </label></b></td>

        </tr>
        <tr>
            <td colspan="2" style="text-align:center;">
                <input type="button" value="Save" class="jqueryButton" id="btnSaveATRRegrade" />
                <input type="button" value="Cancel" class="jqueryButton" id="btnCancelATRRegrade" />
            </td>
        </tr>
    </table>

</form>


                           
