@model PMGSY.Areas.OtherReports.Models.BenefittedHabsFacilityViewModel

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}

<script src="~/Areas/OtherReports/Scripts/BenefittedHabsFacilityLayout.js"></script>
<script src="~/Scripts/custom/Generic.js"></script>

<div id="dvhdBenefittedHabsFacilityLayout" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">Benefitted Habitations Facility Report</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvBenefittedHabsFacilityLayout" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmBenefittedHabsFacilityLayout">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.stateName)

        <table class="rowstyle" style="width: 100%;">
            <tr>
                <td style="width: 2%;"></td>
                <td style="text-align: left; width: 5%;">
                    @Html.Label("State")
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.stateCode, new SelectList(Model.lstState, "Value", "Text"), new { @id = "ddlState", @title = "State", @tabindex = 2 })
                    <br />
                    @Html.ValidationMessageFor(m => m.stateCode)
                </td>
                <td style="text-align: left; width: 5%;">
                    @Html.Label("Year")
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.Year, new SelectList(Model.lstYear, "Value", "Text"), new { @id = "ddlYear", @title = "Year", @tabindex = 3 })
                    <br />
                    @Html.ValidationMessageFor(m => m.Year)
                </td>
                <td style="text-align: left; width: 5%;">
                    @Html.Label("Batch")
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.batchCode, new SelectList(Model.lstBatch, "Value", "Text"), new { @id = "ddlBatch", @title = "batch", @tabindex = 3 })
                    <br />
                    @Html.ValidationMessageFor(m => m.batchCode)
                </td>
                <td style="text-align: center; width: 5%; margin-left: 5px;">
                    <input type="button" id="btnView" value="View" class="jqueryButton" title="Download Excel" tabindex="4" />
                </td>
                <td style="width: 20%;"></td>
            </tr>

        </table>
    </form>
</div>

<div id="dvSystemCodesExcelReport">
</div>


