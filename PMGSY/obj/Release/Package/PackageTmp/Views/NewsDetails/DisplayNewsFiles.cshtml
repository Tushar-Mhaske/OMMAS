@model PMGSY.Models.NewsDetails.DisplayNewsFiles
@{
    ViewBag.Title = "DisplayNewsFiles";
}

@*<script src="~/Scripts/jquery-1.9.1.min.js"></script>*@
<script src="~/Scripts/jquery.cycle.all.js"></script>
<script src="~/Scripts/NewsDetails/DisplayNewsFiles.js"></script>

<style type="text/css">
    * {
        margin: 0px;
        padding: 0px;
        border: 0px;
    }

    body {
        background: url() repeat-x;
    }

    h1 {
        text-indent: -9999px;
        background: url() no-repeat;
        width: 340px;
        height: 92px;
        margin: 0 auto;
    }

    #slideshowContainer {
        width: 632px;
        margin: 10px auto 0 auto;
        position: relative;
    }

    .slideshow {
        /*height: 600px;*/
        height: auto;
    }

        .slideshow img {
            padding: 15px;
            border: 1px solid #ccc;
            background-color: #eee;
        }

        .slideshow iframe {
            padding: 15px;
            border: 1px solid #ccc;
            background-color: #eee;
        }

    #nav {
        list-style-type: none;
        z-index: 150;
    }

        #nav li a {
            display: block;
            width: 58px;
            height: 102px;
            text-indent: -9999px;
            outline: none;
        }

    #prev a {
        background: url(/Content/images/left.png);
        width: 58px;
        height: 102px;
        position: absolute;
        top: 120px;
        left: -70px;
    }

    #next a {
        background: url(/Content/images/right.png);
        width: 58px;
        height: 102px;
        position: absolute;
        top: 120px;
        right: -70px;
    }

        #next a:hover {
            background: url(/Content/images/right_over.png);
        }

    #prev a:hover {
        background: url(/Content/images/left_over.png);
    }
</style>

<form id="frmNewsFilesDisplay">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @if (Model.path != null)
    {
        <table class="rowstyle" style="margin-top: 10px; margin-bottom: 5px; margin-left: 250px; width: 500px">
            <tr>
                <td colspan="2">
                    <div id="dv" class="ui-state-default ui-corner-all " style="margin-bottom: 05px; height: 20px"><span style="float: left; cursor: pointer" id="spn">@Html.DisplayFor(m => m.IssuedBy)</span>  <span style="float: right; margin-right: 2Px; margin-top: 2px; cursor: pointer" id="spn2">@Html.DisplayFor(m => m.IssuedDate)</span> </div>
                </td>
            </tr>
            <tr>
                <td style="width: 15%">
                    <b>@Html.Label("Title")</b>
                </td>
                <td>
                    @Html.DisplayFor(m => m.Title)
                </td>
            </tr>
            <tr>
                <td style="width: 15%">
                    <b>
                        @Html.Label("Description")</b>
                </td>
                <td>
                    @Html.DisplayFor(m => m.Description)
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <div id="slideshowContainer">

                        @*<h1>News Files</h1>*@
                        <div class="slideshow">

                            @*<div id="dv4" class="ui-state-default ui-corner-all " style="margin-bottom: 05px; height: 20px"><span style="float: right; margin-right: 2Px; margin-top: 2px;cursor:pointer" id="spn5" >@Html.DisplayFor(m=>m.IssuedBy)</span>  </div>*@

                            @foreach (var a in Model.path)
                            {
                                if (a.Value == "I")
                                {
                                <a href="#">
                                    <img src="@Url.Content((a.Text.Trim()))" width="600" height="300" /></a>
                                }
                                else
                                {
                                <a href="#">
                                    <iframe src="@Url.Content((a.Text.Trim()))" width="600" height="300"></iframe>
                                </a>
                                }
                            }

                        </div>
                        <ul id="nav">
                            <li id="prev"><a href="#">Previous</a></li>
                            <li id="next"><a href="#">Next</a></li>
                        </ul>

                    </div>
                </td>
            </tr>
        </table>
    }
    else
    {
        <table>
            <tr>
                <td colspan="2"></td>
                @Html.Label("Thank You for Viewing, No Files Uploaded for this News")
            </tr>
        </table>
    }
</form>

