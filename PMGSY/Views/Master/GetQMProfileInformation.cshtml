
@model PMGSY.Models.Master.MasterAdminQualityMonitorViewModel
@using PMGSY.Extensions

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@* Newly Added by Hrishikesh to provide Quality Monitor Profile Information to NQM / SQM as Present in CQC / SQC *@

<style>

    html * {
        font-family: Helvetica,Arial,sans-serif;
        font-size: 1em;
    }
</style>

<script src="~/Scripts/custom/Generic.js" type="text/javascript"></script>
<script src="~/Scripts/Master/GetQMProfileInformation.js" type="text/javascript"></script>

<div id="dvhdCreateNewQualityMonitorDetailsN" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Quality Monitor Profile Details</span>
    <span id="closeGridId" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>


<div id="dvCreateNewQualityMonitorDetailsN" style="display: block; border: 1px solid #B5B8C8;">
    @*    <div id="dvErrorMessageN" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px; text-align: left">
            <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
            <strong>Alert:</strong> <span id="messageN"></span>
        </div>*@


    @if (Model != null)
    {

        <center>
            <table style="width: 100%; margin-top: 10px;" class="rowstyle">

                <tr style="display: none">
                    <td colspan="5">
                        <p hidden>@Model.ADMIN_QM_CODE</p>
                    </td>
                </tr>

                <tr>
                    <td style="width: 8%;"></td>
                    <td style="text-align: left; width: 15%;">
                        @Html.Label("Registered As")
                    </td>
                    <td style="text-align: left; width: 30%;">
                        @if (Model.ADMIN_QM_TYPE.Contains("I"))
                        {
                            <p>NQM</p>
                        }
                        else if (Model.ADMIN_QM_TYPE.Contains("S"))
                        {
                            <p>SQM</p>
                        }
                        else
                        {
                            <p></p>
                        }
                    </td>
                    <td style="text-align: left; width: 15%;"></td>
                    <td></td>
                </tr>

                <tr>
                    <td></td>
                    @if (Model.ADMIN_QM_TYPE == "I")
                    {
                        <td>
                            @Html.Label("NQM Service Type")
                        </td>
                        <td> @Model.Service_Type</td>
                    }
                    else
                    {
                        <td>
                            <div id="divlblCadreState">
                                @Html.Label("Cadre State")
                            </div>
                        </td>
                        <td>
                            <div>
                                @Model.Cadre_State
                                @*@Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.States, new { @disabled = "disabled" })*@
                            </div>
                        </td>
                    }

                    @if (Model.ADMIN_QM_TYPE == "I")
                    {
                        <td>
                            <div id="divlblCadreState">
                                @Html.Label("Cadre State")
                            </div>
                        </td>

                        <td>
                            <div>
                                @*@Html.ListBoxFor(model => model.MAST_CADRE_STATE_CODE, Model.CadreStates)
                                    <input type="hidden" id="cadreStatesMapp" value="@ViewBag.cadreStatesMapp" />*@
                            </div>
                            <div>
                                @Model.Cadre_State
                                @*@Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.States, new { @disabled = "disabled" })*@
                            </div>
                        </td>
                    }
                    else
                    {
                        <td></td>
                        <td></td>
                    }
                </tr>

                <tr>
                    <td></td>
                    <td style="text-align: left; width: 15%;">
                        @Html.Label("Home State")
                    </td>

                    <td>
                        @Model.Home_State
                        @*@Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.States, new { @disabled = "disabled" })*@
                    </td>

                    <td>
                        @Html.Label("Home District")
                    </td>

                    <td>
                        @Model.District_Name
                        @*@Html.DropDownListFor(model => model.MAST_DISTRICT_CODE, Model.Districts, new { @disabled = "disabled" })*@
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td>
                        @Html.Label("First Name")
                    </td>

                    <td>
                        @Model.ADMIN_QM_FNAME
                    </td>

                    <td>
                        @Html.Label("Middle Name")
                    </td>
                    <td>
                        @Model.ADMIN_QM_MNAME
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td>
                        @Html.Label("Last Name")
                    </td>

                    <td>
                        @Model.ADMIN_QM_LNAME
                    </td>
                    <td>
                        @Html.Label("Designation")
                    </td>
                    <td>
                        @Model.Designation
                        @*@Html.DropDownListFor(model => model.ADMIN_QM_DESG, Model.QmDesignations, new { @disabled = "disabled" })*@
                    </td>

                </tr>

                <tr>
                    <td></td>
                    <td>
                        @Html.Label("Address")
                    </td>
                    <td>
                        @Model.ADMIN_QM_ADDRESS1
                    </td>

                    <td>
                        @Html.Label("PIN Code")
                    </td>

                    <td>
                        @Model.ADMIN_QM_PIN
                    </td>
                </tr>

                <tr>
                    <td></td>

                    <td></td>
                    <td>
                        @Model.ADMIN_QM_ADDRESS2
                    </td>
                    <td>
                        @Html.Label("Birth Date")
                    </td>
                    <td>
                        @Model.ADMIN_QM_BIRTH_DATE
                    </td>

                </tr>
                <tr>
                    <td></td>

                    <td>
                        @Html.Label("Phone1")
                    </td>
                    <td>
                        @Model.ADMIN_QM_STD1
                        &nbsp;&nbsp;
                        @Model.ADMIN_QM_PHONE1
                    </td>
                    <td>
                        @Html.Label("Phone2")
                    </td>
                    <td>
                        @Model.ADMIN_QM_STD2
                        &nbsp;&nbsp;
                        @Model.ADMIN_QM_PHONE2
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td>
                        @Html.Label("Mobile1")

                    </td>
                    <td>
                        @Model.ADMIN_QM_MOBILE1
                    </td>
                    <td>
                        @Html.Label("Mobile2")
                    </td>
                    <td>
                        @Model.ADMIN_QM_MOBILE2
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td>
                        @Html.Label("Fax")
                    </td>
                    <td>
                        @Model.ADMIN_QM_STD_FAX
                        &nbsp;&nbsp;
                        @Model.ADMIN_QM_FAX
                    </td>
                    <td>
                        @Html.Label("Email")
                    </td>
                    <td>
                        @Model.ADMIN_QM_EMAIL
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td>
                        @Html.Label("PAN")
                    </td>
                    <td>
                        @Model.ADMIN_QM_PAN
                    </td>
                    <td>
                        @Html.Label("Aadhaar Card No")
                    </td>
                    <td>
                        @Model.ADMIN_QM_AADHAR_NO
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td>
                        @Html.Label("Empanelled")
                    </td>
                    <td>
                        @if (Model.ADMIN_QM_EMPANELLED.Contains("Y"))
                        {
                            @Html.RadioButtonFor(model => model.ADMIN_QM_EMPANELLED, "Y", new { @checked = "checked", @disabled = "disabled" })<lable>Yes</lable>
                            @Html.RadioButtonFor(model => model.ADMIN_QM_EMPANELLED, "N", new { @disabled = "disabled" })<lable>No</lable>
                        }
                        else
                        {
                            @Html.RadioButtonFor(model => model.ADMIN_QM_EMPANELLED, "Y", new { @disabled = "disabled" })<lable>Yes</lable>
                            @Html.RadioButtonFor(model => model.ADMIN_QM_EMPANELLED, "N", new { @checked = "checked", @disabled = "disabled" })<lable>No</lable>
                        }
                    </td>
                    <td></td>
                    <td></td>

                </tr>

                @if (Model.ADMIN_QM_EMPANELLED.Contains("Y"))
                {
                    <tr>
                        <td></td>
                        <td>
                            @Html.Label("Empanelled Month")
                        </td>
                        <td>
                            @Model.Empanelled_Month
                            @*@Html.DropDownListFor(model => model.ADMIN_QM_EMPANELLED_MONTH, Model.MonthList, new { @disabled = "disabled" })*@
                        </td>
                        <td>
                            @Html.Label("Empanelled Year")
                        </td>
                        <td>
                            @Model.ADMIN_QM_EMPANELLED_YEAR
                        </td>

                    </tr>
                }

                <tr>
                    <td></td>
                    <td>
                        @*@Html.Label("Remark")*@
                    </td>
                    <td colspan="1">
                        @*@Model.ADMIN_QM_REMARKS*@
                    </td>
                    <td></td>
                    <td></td>
                </tr>

            </table>
        </center>
    }
    else
    {
        <h2 style="color:red;font-display;">Quality Monitor details not exist.</h2>
    }


</div>
