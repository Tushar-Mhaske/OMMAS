    @Html.HiddenFor(model => model.MAST_STATE_CODE)
    @Html.HiddenFor(model => model.MAST_DISTRICT_CODE)

    @Html.HiddenFor(model => model.STATE_NAME)   
    @Html.HiddenFor(model => model.DISTRICT_NAME)   

    @if(PMGSY.Extensions.PMGSYSession.Current.LevelId == 6)     //Mord
    {
         <table id="tbForm4StateLevelReport"></table>
         <div id="dvForm4StateLevelReportPager"></div>

         <br />
         <table id="tbForm4DistrictLevelReport"></table>
         <div id="dvForm4DistrictLevelReportPager"></div> 

         <br />
         <table id="tbForm4BlockLevelReport"></table>
         <div id="dvForm4BlockLevelReportPager"></div> 
         <br />
         <table id="tbForm4FinalLevelReport"></table>
         <div id="dvForm4FinalLevelReportPager"></div> 
    }
    else if(PMGSY.Extensions.PMGSYSession.Current.LevelId == 4)     //State
