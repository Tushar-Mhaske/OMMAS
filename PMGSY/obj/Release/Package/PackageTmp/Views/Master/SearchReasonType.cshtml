                    @Html.DropDownList("ReasonType", null, "All Reasons", new { @title = "Reason Type" })
                </td>
                <td>
                    <input type="button" id="btnSearch" name="btnSearch" value="Search" class="jqueryButton" title="Search Reason" />
                </td>
            </tr>
        </table>
