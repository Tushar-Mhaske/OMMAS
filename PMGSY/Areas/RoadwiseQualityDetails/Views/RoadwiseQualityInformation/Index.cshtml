@model PMGSY.Areas.RoadwiseQualityDetails.Models.FilterDetailsViewModel

@{
    ViewBag.Title = "Roadwise Quality Details";
}

<script src="~/Scripts/custom/Generic.js"></script>
@*<script src="~/Scripts/jquery-ui.js"></script>*@

<script src="~/Areas/RoadwiseQualityDetails/Scripts/ViewRoadwiseDetails.js"></script>

@if (Model.ErrorMessage != null)
{
    <div class="ui-corner-all center-align" style="display: block; border: 1px solid #B5B8C8; margin-top: 10px;">
        <lable style="color:red"> * @Model.ErrorMessage </lable>
    </div>
}
else
{

    <div id="dvearchFbMain" class="ui-corner-all" style="display: block; border: 1px solid #B5B8C8; margin-top: 10px;">
        <div class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
            <b>
                <span id="spnHeaderSummarysrchFB1" class="ui-jqgrid-title" style="float: left;margin:5px"> Roadwise Quality Details </span>
                <span id="spnHeaderSummarysrchFB2" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
            </b>
            <div class="box-tools pull-right">
            </div>
        </div>
        <!-- /.box-header -->
        <form id="frmsearchRoadwiseQualityDetails">
            <table id="tblDataEntry" style="width: 100%" class="rowstyle">


                <tr>
                    <td style="width:20%"></td>
                    <td style="text-align: left; padding-top: 3px; padding-bottom: 3px;">
                        <b> State <label style="color: red;">*</label></b>
                    </td>
                    <td style="text-align: left; padding-top: 3px; padding-bottom: 3px; width: 20%">
                        @Html.DropDownListFor(m => m.State, Model.StateList, new { @id = "ddlStates", @title = "State", @tabindex = 3, style = "width:200px;" })
                        @Html.ValidationMessageFor(model => model.State)
                    </td>
                    <td style="text-align: left; padding-top: 3px; padding-bottom: 3px;">
                        <b> District <label style="color: red;">*</label> </b>
                    </td>
                    <td style="text-align: left; padding-top: 3px; padding-bottom: 3px;">
                        @Html.DropDownListFor(m => m.District, Model.DistrictList, new { @id = "ddlDistricts", @title = "District", @tabindex = 4, @style = "width:200px" })
                        @Html.ValidationMessageFor(m => m.District)
                    </td>
                </tr>

                <tr>
                    <td style="width:20%"></td>
                    <td style="text-align: left; padding-top: 3px; padding-bottom: 3px;">
                        <b> Block <label style="color: red;">*</label>  </b>
                    </td>
                    <td style="text-align: left; padding-top: 3px; padding-bottom: 3px; width: 20%">
                        @Html.DropDownListFor(m => m.Block, Model.BlockList, new { @id = "ddlSearchBlocks", @title = "Block", @tabindex = "5", @style = "width:200px" })
                        @Html.ValidationMessageFor(m => m.Block)
                    </td>
                    <td class="road" style="padding-top: 3px; padding-bottom: 3px;">
                        <b> Road <label style="color: red;">*</label>  </b>
                    </td>
                    <td class="road" style="padding-top: 3px; padding-bottom: 3px;">
                        @Html.DropDownListFor(model => model.RoadCode, Model.RoadList, new { @id = "ddlSearchRoad", @title = "Road", @tabindex = "6", @style = "width:200px" })
                        @Html.ValidationMessageFor(model => model.RoadCode)
                    </td>
                </tr>
                <tr>
                    <td colspan="7" style="text-align: center; padding-top: 3px; padding-bottom: 3px;">
                        <input type="button" id="btnGetDetails" name="btnDetails" value="Get Details" class="button" title="Get Details" tabindex="7" style="width: 100px" />
                       @*<input type="reset" id="btnResetDetails" name="btnDetails" value="Reset" />*@
                    </td>                    
                </tr>
            </table>
        </form>
    </div>



    <div id="dvProposalDetail" style="margin-top: 20px; margin-bottom: 20px; width: 99%; display: none"> </div>

    <div id="dvQualityDetail" class="ui-align-center" style="margin-top: 20px; margin-bottom: 20px; width: 80%; display: none"> </div>

    <div id="dvInspectionDetail" class="ui-align-center" style="margin-top: 20px; margin-bottom: 20px; width: 80%; display: none"> </div>
}