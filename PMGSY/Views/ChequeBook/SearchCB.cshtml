@model PMGSY.Models.ChequeBook.ChequeBookDetailsViewModel
<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Scripts/ChequeBook/CB_List.js"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.ui.autocomplete.js")"> </script>

<div id="dvhdSearch" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Search </span>
    <span id="spCollapseIconS" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>


<div id="dvSearchParameter" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmSearchItemtype">
        <center>@Html.ValidationSummary(true) </center>

        <table style="width: 100%;" class="rowstyle">

            @if (PMGSY.Extensions.PMGSYSession.Current.LevelId == 4 && PMGSY.Extensions.PMGSYSession.Current.FundType == "A")
            {
                <tr>
                    <td style="width: 30%"></td>
                    <td style="text-align: center; width: 10%;">
                    </td>
                    <td style="width: 20%;">
                        @Html.RadioButtonFor(m => m.IsSRRDADpiu, "D", new { @id = "rdoSearchDPIU", @title = "DPIU", @Checked = "checked", @tabindex = "1" }) @Html.Label("DPIU")
                        @Html.RadioButtonFor(m => m.IsSRRDADpiu, "S", new { @id = "rdoSearchSRRDA", @title = "SRRDA", @tabindex = "1" }) @Html.Label("SRRDA")

                    </td>
                    <td>
                    </td>
                </tr>
            }

            @if (PMGSY.Extensions.PMGSYSession.Current.LevelId == 4)
            {
                <tr id="trSearchDPIU">
                    <td style="width: 30%"></td>
                    <td style="text-align: left; width: 10%;">
                        @Html.Label("DPIU : ")
                    </td>
                    <td style="width: 20%;">
                        @Html.DropDownListFor(m => m.ADMIN_ND_CODE, Model.PopulateDPIU, new { @id = "ddlSearchDPIU", @title = "DPIU", @tabindex = "2" })
                    </td>
                    <td>
                    </td>
                </tr>

                <tr>
                    <td style="width: 30%"></td>
                    <td style="text-align: left; width: 10%;">
                        @Html.Label("Account Type : ")
                    </td>
                    <td style="width: 20%;">
                        @Html.DropDownListFor(m => m.BANK_ACC_TYPE, Model.lstBankAccType, new { @id = "lstAccType", @title = "DPIU", @tabindex = "2" })
                    </td>
                    <td>
                    </td>
                </tr>
            }

            <tr>
                <td style="width: 30%"></td>
                <td style="text-align: left; width: 10%;">
                    @Html.Label("Month : ")
                </td>
                <td style="width: 20%;">
                    @Html.DropDownList("ddlMonth", null, new { @title = "Month", @tabindex = "3" })
                </td>
                <td>
                </td>
            </tr>


            <tr>
                <td style="width: 30%"></td>
                <td style="text-align: left; width: 10%;">
                    @Html.Label("Year : ")
                </td>
                <td style="width: 20%;">
                    @Html.DropDownList("ddlYear", null, new { @title = "Year", @tabindex = "4" })
                </td>
                <td>
                </td>
            </tr>

            <tr>
                <td style="width: 30%"></td>
                <td style="text-align: left; width: 10%;">
                    @Html.Label("Cheque Number : ")
                </td>
                <td style="width: 20%;">
                    @Html.TextBox("txtChequeNo", null, new { @title = "Cheque Number", @tabindex = "5" })
                </td>
                <td>
                </td>
            </tr>


            <tr>
                <td style="width: 30%"></td>
                <td style="text-align: right; width: 10%;">
                    <input type="button" id="btnSearch" name="btnSearch" value="Search" class="jqueryButton" title="Search Cheque Book Details" />
                </td>
                <td style="width: 20%;">
                    <input type="button" id="btnCancel" name="btnCancel" value="Cancel" class="jqueryButton" title="Cancel" />
                </td>
                <td>
                </td>
            </tr>

        </table>
    </form>
</div>
