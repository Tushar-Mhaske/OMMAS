@model PMGSY.Areas.LocationSSRSReports.Models.LocationMasterReports

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}

<script src="~/Areas/LocationSSRSReports/Scripts/MPBlockLayout.js"></script>
<script src="~/Scripts/custom/Generic.js"></script>

<div id="dvhdMPBlockLayout" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">MP Block</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvMPBlockLayout" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmMPBlockLayout">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.StateName)
        @Html.HiddenFor(model => model.ActiveFlagName)
        @Html.HiddenFor(model => model.MPConstituencyName)
        @Html.HiddenFor(model => model.Mast_State_Code)
        @Html.HiddenFor(model => model.Mast_District_Code)

        <table class="rowstyle" style="width: 100%;">
            <tr>
                <td style="width: 2%;"></td>
                <td style="text-align: left; width: 5%;">
                    @Html.Label("State")
                </td>
                <td style="width: 15%;">
                    @*@Html.DropDownList("StateList_MPBlockDetails", ViewData["STATE"] as IEnumerable<SelectListItem>, new { @title = "State", @tabindex = 1 })*@
                    @Html.DropDownListFor(model => model.State, new SelectList(Model.StateList, "Value", "Text"), new { @id = "StateList_MPBlockDetails", @title = "State", @tabindex = 1 })
                    <br />
                    @Html.ValidationMessageFor(m => m.State)
                </td>
                <td style="text-align: left; width: 5%;">
                    @Html.Label("Constituency")
                </td>
                <td style="width: 15%;">
                    @*@Html.DropDownList("MPConstituencyList_MPBlockDetails", ViewData["MP_CONSTITUENCY"] as IEnumerable<SelectListItem>, new { @title = "Constituency", @tabindex = 2 })*@
                    @Html.DropDownListFor(model => model.MPConstituency, new SelectList(Model.MPConstituencyList, "Value", "Text"), new { @id = "MPConstituencyList_MPBlockDetails", @title = "Constituency", @tabindex = 2 })
                    <br />
                    @Html.ValidationMessageFor(m => m.MPConstituency)
                </td>
                <td style="text-align: left; width: 5%;">
                    @Html.Label("Active")
                </td>
                <td style="width: 15%;">
                    @*@Html.DropDownList("ActiveType_MPBlockDetails", ViewData["Active_TYPE"] as IEnumerable<SelectListItem>, new { @title = "Active", @tabindex = 3 })*@
                    @Html.DropDownListFor(model => model.ActiveFlag, new SelectList(Model.ActiveFlagList, "Value", "Text"), new { @id = "ActiveType_MPBlockDetails", @title = "Active", @tabindex = 3 })
                    <br />
                    @Html.ValidationMessageFor(m => m.ActiveFlag)
                </td>
                <td style="text-align: center; width: 15%; margin-left: 5px;">
                    <input type="button" id="MPBlockDetailsButton" value="View" class="jqueryButton" title="View Details" tabindex="4" />
                </td>
                <td style="width: 20%;"></td>
            </tr>
        </table>
    </form>
</div>

<div id="dvLoadMPBlockReport"></div>
