@model PMGSY.Models.Master.GrowthScoreSubItemViewModel
<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>

<div id="dvGrowthScoreSubItemInfoDetails">
    
    <table style="width: 100%;" class="ui-corner-all ui-state-highlight">
        <tr>
            <td style="width: 5%"></td>
            @*, @style="font-weight: bold;" *@
            <td style="text-align: left; width: 12%;">
                @Html.Label("Item Description :", new { @id = "lblDesc"})
            </td>

            <td style="width: 20%;">
                @Html.DisplayFor(m => m.Description)
            </td>

            <td style="text-align: left; width: 10%;">
                @Html.Label("Max Score :", new { @id = "lblValue"})
            </td>

            <td style="width: 20%;">
                @Html.DisplayFor(m => m.Value)
            </td>
            <td style="text-align: left; width: 10%;">
                @Html.Label("Score Type :", new { @id = "lblType"})
            </td>

            <td style="width: 20%;">
                @Html.DisplayFor(m => m.Type)
            </td>
        </tr>
    </table>
</div>
