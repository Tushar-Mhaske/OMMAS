    @{
        <div id="spanDiv" style="width:100%; height:20px;border:none; margin-top:5px; margin-bottom:-15px; " class="ui-corner-top ui-widget-header panelheader">
            <span style="float:right;margin-right:2Px; margin-top:2px" id="idFilterDiv" class="ui-icon ui-icon-circle-triangle-n"></span>
        </div>
        <div id="divSearchExecution">
            <div style="width: 98%; border:none; margin-top:20px; margin-bottom:10px;" class="ui-state-default">
                <center>

                    <form id="frmErrorLogIndex">
                        @Html.ValidationSummary(true)
                        @Html.Hidden("RoleCode", PMGSY.Extensions.PMGSYSession.Current.RoleCode)

                        <div style="width: 98%; border:none; margin-top:10px; margin-bottom:10px;" class="ui-state-default">

                            <table style="margin-top: 0px; margin-bottom: 0px; width: 100%;" class="rowstyle">
                                <tr>
                                    <td style="width: 1.5%"></td>
                                    <td style="text-align:right">
                                        @Html.Label("Module Name: ") <span style="color: red">*</span>
                                    </td>
                                    <td>
                                        @Html.DropDownListFor(model => model.ModuleID, new SelectList(Model.lstModule, "Value", "Text"), new { @id = "ddlmoduleID", @tabindex = 1 })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.ModuleID)
                                    </td>

                                    <td style="width: 1.5%"></td>

                                    <td style="text-align:right">
                                        @Html.Label("Date of Log: ") <span style="color: red">*</span>
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.LogDate, "{0:d}", new { @readonly = "readonly", @title = "Log Date", @class = "EPD", @id = "logDate", @align = "center" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.LogDate)
                                    </td>

                                    <td style="width: 1.5%"></td>
                                    <td>
                                        <input type="button" class="jqueryButton" value="Get Log Detail" title="Get Log Detail" id="btnGetLogDetail" name="btnGetLogDetailName" tabindex="3" />
                                    </td>

                                    <td style="width: 1.5%"></td>
                                </tr>
                            </table>
                        </div>
                    </form>
                </center>
            </div>
        </div>


        <pre id="logDiv" class="overflow-auto" style="min-height:500px;max-height:500px;"></pre>


