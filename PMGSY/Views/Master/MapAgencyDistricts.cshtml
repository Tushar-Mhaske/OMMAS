
@model System.DateTime?

<script src="~/Scripts/jquery.ui.datepicker.js" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="@Url.Content("~/Scripts/Master/Master_MapAgencyDistricts.js")" type="text/javascript" ></script>


<div id="dvhdSearch_Map_District" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; margin-left: 0px; margin-right: 0px; margin-top: 10px; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Map District </span>

    <span id="spCollapseIconS_Map" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>

<div id="dvSearchParameter_Map_District" class="ui-corner-bottom" style="margin-left: 0px; margin-right: 0px; display: block; border: 1px solid #B5B8C8;">

    <form id="frmSearchMapAgencyDistrict">

        <table style="width: 100%;" class="rowstyle">
            <tr style="display: none;">
                <td colspan="4">
                    @Html.Hidden("EncryptedDistrictCodes")
                </td>

            </tr>
            <tr style="display: none;"></tr>
            <tr>

                <td style="width: 25%;"></td>
                <td style="width: 20%;">
                    @Html.Label("Agency Name")

                </td>
                <td colspan="2">
                    @if (!(string.IsNullOrEmpty(ViewBag.AgencyName)))
                    {
                        <b>@Html.Label("AgencyName", ViewBag.AgencyName as String)   </b>
                    }
                    else
                    {
                        <b>@Html.Label("AgencyName", "NA")   </b>
                    }

                </td>
            </tr>
            <tr>
                <td>
                    @if (!(string.IsNullOrEmpty(ViewBag.EncryptedAgencyCode)))
                    {
                        @Html.Hidden("EncryptedAgencyCode", ViewBag.EncryptedAgencyCode as String)     
                    }


                </td>
                <td>
                    @Html.Label("State")
                </td>
                <td style="width: 20%;">

                    @Html.DropDownList("ddlSearchState", ViewData["StateList"] as IEnumerable<SelectListItem>, new { @id = "ddlSearchState", @title = "State", @tabindex = 1 })

                </td>
                <td>
                    <input type="button" id="btnSearch_Map" name="btnSearch_Map" value="Search" class="jqueryButton" title="Search District" tabindex="2" />

                </td>
            </tr>

        </table>

    </form>

    <br />
    <div style="width: 95%;">
        <table id="tbMapAgencyDistrictList">
        </table>

        <div id="dvMapAgencyDistrictListPager"></div>

    </div>

    <br />
