                <td >
                       @Html.TextBoxFor(model => model.TEND_TENDER_AMOUNT, new { @title = "Tender Amount", @tabindex = 101 ,@placeholder="Enter Tender Amount..."})
                      @Html.ValidationMessageFor(model => model.TEND_TENDER_AMOUNT)
                     
                </td>*@

        </tr>


