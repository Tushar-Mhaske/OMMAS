<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.ui.autocomplete.js")"> </script>
<script src="~/Scripts/Master/SearchTestDetails.js" type="text/javascript"></script>
<div id="dvhdSearch" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; /*margin-left: 10px; margin-right: 10px; margin-top: 10px; */ height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Search Test Item</span>
    <span id="spCollapseIconS" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvSearchTestParameter" class="ui-corner-bottom" style="/*margin-left: 10px; margin-right: 10px; */ display: block; border: 1px solid #B5B8C8;">
    <form id="frmSearchTest">
        <center>@Html.ValidationSummary(true) </center>
        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 30%"></td>
                <td style="text-align: left; width: 15%;">
                    @Html.Label("Status")
                </td>
                <td style="text-align: left; width: 20%;">
                    @Html.DropDownList("ddlTestStatus", ViewData["Status"] as IEnumerable<SelectListItem>, new { @id = "ddlTestStatus", @title = "Status", @tabindex = 1 })
                </td>
                <td style="text-align: left;">
                    <input type="button" id="btnTestSearch" name="btnTestSearch" value="Search" class="jqueryButton" title="Search Test Item" tabindex="2" />
                </td>
            </tr>

        </table>

    </form>
</div>


