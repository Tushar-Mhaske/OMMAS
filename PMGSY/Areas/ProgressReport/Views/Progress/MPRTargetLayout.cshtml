@model PMGSY.Areas.ProgressReport.Models.MPRTargetModel

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Areas/ProgressReport/Scripts/MPRTargetLayout.js"></script>

<div id="dvhdMPRNewIAPReportDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;MPR Outcome Target & Achievement</span>
</div>
<div id="loadFilters" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmMPRTarget">
        @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.Mast_State_Code)
        @Html.HiddenFor(model => model.StateName)
        @Html.HiddenFor(model => model.localizedValue)
        
        @Html.HiddenFor(model => model.DistName)
        @Html.HiddenFor(model => model.BlockName)
        @Html.HiddenFor(model => model.CollabName)

        @Html.HiddenFor(model => model.YearName)

        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 2%; vertical-align: top"></td>
                <td style="text-align: left; width: 5%; vertical-align: top">
                    @Html.LabelFor(model => model.StateCode)
                </td>
                <td style="width: 15%; vertical-align: top">
                    @if (Model.Mast_State_Code == 0)
                    {
                        @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.StateList, "Value", "Text"), new { @title = "State", @tabindex = 1, @id = "ddlState", @style = "width:150px" })
                        <br />
                        @Html.ValidationMessageFor(m => m.StateCode)
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.StateName) 
                        @Html.Hidden("StateCode", Model.Mast_State_Code)                            
                    }
                </td>
                 <td style="text-align: left; width: 5%; vertical-align: top">
                    @Html.LabelFor(model => model.DistrictCode)
                </td>
                <td style="width: 15%; vertical-align: top">
                    @if (Model.Mast_District_Code == 0)
                    {
                        @Html.DropDownListFor(model => model.DistrictCode, new SelectList(Model.DistrictList, "Value", "Text"), new { @title = "District", @tabindex = 2, @id = "ddlDistrict", @style = "width:150px" })
                        <br />
                        @Html.ValidationMessageFor(m => m.DistrictCode)
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.DistName) 
                        @Html.Hidden("DistrictCode", Model.Mast_District_Code)                            
                    }
                </td>
                 <td style="text-align: left; width: 5%; vertical-align: top">
                    @Html.LabelFor(model => model.BlockCode)
                </td>
                <td style="width: 15%; vertical-align: top">
                    @if (Model.Mast_Block_Code == 0)
                    {
                        @Html.DropDownListFor(model => model.BlockCode, new SelectList(Model.BlockList, "Value", "Text"), new { @title = "Block", @tabindex = 3, @id = "ddlBlock", @style = "width:150px" })
                        <br />
                        @Html.ValidationMessageFor(m => m.BlockCode)
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.BlockName) 
                        @Html.Hidden("BlockCode", Model.Mast_Block_Code)                            
                    }
                </td>
              
                <td style="width: 2%; vertical-align: top"></td>
            </tr>
            <tr>
                <td style="width: 5%; vertical-align: top"></td>
                  <td style="text-align: left; width: 5%; vertical-align: top">
                    @Html.HiddenFor(m => m.localizedValue)
                    @Html.LabelFor(model => model.Year)
                </td>
                <td style="width: 15%; vertical-align: top">
                    @Html.DropDownListFor(model => model.Year, new SelectList(Model.YearList, "Value", "Text"), new { @title = "Year", @id = "ddlYearMPR1", @style = "width:150px" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Year)
                </td>
                <td style="text-align: left; width: 5%; vertical-align: top">
                    @Html.LabelFor(model => model.Month)
                </td>
                <td style="width: 15%; vertical-align: top">
                    @Html.DropDownListFor(model => model.Month, new SelectList(Model.MonthList, "Value", "Text"), new { @title = "Month", @id = "ddlMonthMPR1", @style = "width:150px" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Month)
                </td>
                <td style="width: 5%; vertical-align: top">
                    @Html.LabelFor(model => model.CollabCode)
                </td>
                <td style="width: 15%; vertical-align: top">
                    @Html.DropDownListFor(model => model.CollabCode, new SelectList(Model.CollabList, "Value", "Text"), new { @title = "Collaboration", @id = "ddlCollab", @style = "width:150px" })
                    <br />
                    @Html.ValidationMessageFor(m => m.CollabCode)
                </td>

               @* <td style="width: 5%; vertical-align: top"></td>
                <td style="width: 15%; vertical-align: top"></td>*@
                <td style="width: 5%; text-align: center; vertical-align: top">
                    <input type="button" class="button" value="View" id="btnViewMPRTargetReport" title="View" />
                </td>
                <td style="width: 5%; vertical-align: top"></td>
            </tr>
        </table>
    </form>
</div>
<div id="loadReport" class="divLoadReport"></div>
