@model PMGSY.Areas.ProposalSSRSReports.Models.FundAllocationModel

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Areas/ProposalSSRSReports/Scripts/FundAllocationReport.js"></script>
<div id="dvhdCreateNewReportDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:0px;margin-right:0px;margin-top:0px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Fund Allocation </span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvSearchParameter" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmFundAllocation">
        @Html.ValidationSummary(true)
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Mast_State_Code)
        @Html.HiddenFor(model => model.Mast_District_Code)
        @Html.HiddenFor(model => model.Mast_Block_Code)
        @Html.HiddenFor(model => model.StateName)
        @Html.HiddenFor(model => model.DistName)
        @Html.HiddenFor(model => model.BlockName)
        @Html.HiddenFor(model => model.YearName)
        @Html.HiddenFor(model => model.FundingAgencyName)
        @Html.HiddenFor(model => model.RoadWise)
        @Html.HiddenFor(model => model.FundTypeName)       
        @Html.HiddenFor(model => model.AgencyName)

        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 2%;"></td>
                <td style="text-align: left; width: 4%;">
                    @Html.LabelFor(model => model.StateCode)
                </td>

                <td style="width: 28%;">
                    @if (Model.Mast_State_Code == 0)
                    {
                        @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.StateList, "Value", "Text"), new { @title = "State", @tabindex = 1, @id = "StateList_FundAllocationDetail", @style = "width:150px" })
                        @Html.ValidationMessageFor(m => m.StateCode)
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.StateName) 
                        @Html.Hidden("StateCode", Model.Mast_State_Code)                            
                    }
                </td>
                <td style="text-align: left; width: 4%;">
                    @Html.LabelFor(model => model.PhaseYear)
                </td>
                <td style="width: 23%;">
                    @Html.DropDownListFor(model => model.PhaseYear, new SelectList(Model.PhaseYearList, "Value", "Text"), new { @title = "Year", @tabindex = 2, @id = "PhaseYearList_FundAllocationDetail", @style = "width:150px" })
                    @Html.ValidationMessageFor(m => m.PhaseYear)
                </td>
                <td style="text-align: left; width: 4%;">
                    @Html.LabelFor(model => model.FundingAgency)
                </td>

                <td style="width: 23%;">
                    @Html.DropDownListFor(model => model.FundingAgency, new SelectList(Model.FundingAgencyList, "Value", "Text"), new { @title = "Collaboration", @id = "FundingAgencyList_FundAllocationDetail", @tabindex = 4, @style = "width:150px" })
                    @Html.ValidationMessageFor(m => m.FundingAgency)
                </td>
            </tr>
            <tr>
                <td style="width: 2%;"></td>

                <td style="text-align: left; width: 7%;">
                    @Html.LabelFor(model => model.Agency)
                </td>
                <td style="width: 25%;">
                    @Html.DropDownListFor(model => model.Agency, new SelectList(Model.AgencyList, "Value", "Text"), new { @title = "Agency", @tabindex = 5, @id = "AgencyList_FundAllocationDetail", @style = "width:150px" })
                    @Html.ValidationMessageFor(m => m.Agency)
                </td>

                <td style="text-align: left; width: 7%;">
                    @Html.LabelFor(model => model.FundType)
                </td>
                <td style="width: 25%;">
                    @Html.DropDownListFor(model => model.FundType, new SelectList(Model.FundTypeList, "Value", "Text"), new { @title = "Fund Type", @tabindex = 6, @id = "FundTypeList_FundAllocationDetail", @style = "width:150px" })
                    @Html.ValidationMessageFor(m => m.FundType)
                </td>
                <td>
                    <input type="button" id="btnViewFundAllocationDetail" value="View" class="jqueryButton" title="View Detail" tabindex="7" />
                </td>
                <td></td>

            </tr>

        </table>
    </form>

</div>
<div id="divCommonReport" class="modal" style="margin-top: 12px; float: right; margin-left: 915px">
    <span id="spnCommonReport" class="close">X</span>
    <span>Click on State/District/Block to view details</span>
</div>
<div id="loadFundAllocation" class="divLoadReport"></div>




