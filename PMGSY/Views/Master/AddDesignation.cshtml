@model PMGSY.Models.Master.MasterDesignationViewModel

@{
    ViewBag.Title = "AddDesignation";
}
<script src="~/Scripts/custom/Generic.js" type="text/javascript"></script>
<script src="~/Scripts/Master/AddEditDesignation.js" type="text/javascript"></script>

<div id="dvhdAddNewDesigDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Designation Details</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>

<div id="dvAddNewDesigDetails" style="display: block; border: 1px solid #B5B8C8; text-align: left">
    <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px;">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="message" style="text-align: left"></span>
    </div>

    <form id="frmAddDesignation">
        @Html.AntiForgeryToken()
        <center>@Html.ValidationSummary(true)
    <table class="rowstyle" style="width:100%;margin-top:10px;" >
        <tr style="display:none">
            <td colspan="3">@Html.HiddenFor(m => m.EncryptedDesignationCode)</td>
        </tr>
        <tr>
            <td style="width:30%"></td>
            <td style="width:15%;">
                @Html.LabelFor(m => m.MAST_DESIG_TYPE)<label style="color:red;"> *</label>
            </td>
            <td style="width:50%">
                @if (Model.EncryptedDesignationCode == null)
                {
                @Html.DropDownListFor(model => model.MAST_DESIG_TYPE, Model.DesigType, "--Select--", new { @title = "Designation Type", id = "ddlDesigType", @tabindex = 1 })
                }
                else
                {
                    @Html.DropDownListFor(model => model.MAST_DESIG_TYPE, Model.DesigType, new { @title = "Designation Type", id = "ddlDesigType", @disabled = "disabled", @tabindex = 1 })
                    @Html.HiddenFor(model => model.MAST_DESIG_TYPE)
                }
                @Html.ValidationMessageFor(model => model.MAST_DESIG_TYPE)
            </td>
            <td >                
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                  @Html.LabelFor(model => model.MAST_DESIG_NAME) <label style="color:red;"> *</label>
            </td>
            <td colspan="2">
                  @Html.TextBoxFor(model => model.MAST_DESIG_NAME, new { maxlength = 50, @title = "Designation Name", @tabindex = 2, @placeholder = "Enter Designation Name..." })
                  @Html.ValidationMessageFor(model => model.MAST_DESIG_NAME)
            </td>
            
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td style="text-align:left;margin-left:20px">
                @if (Model.EncryptedDesignationCode == null)
                {
                    <input type="button" id="btnSave" name="btnSave" value="Save" class= "jqueryButton" title="Save Designation Details" tabindex="3"/> 
                    <input type="reset" id="btnReset" name="btnReset" value="Reset" class= "jqueryButton" title="Reset" tabindex="4"  />
                }
                else
                {
                      <input type="button" id="btnUpdate" name="btnUpdate" value="Update" class= "jqueryButton" title="Update Designation Details" tabindex="3"  /> 
                      <input type="button" id="btnCancel" name="btnCancel" value="Cancel" class= "jqueryButton" title="Cancel" tabindex="4"  />
                }    
                </td>
            <td></td>
        </tr>
        <tr>
            <td colspan="4">
                <label style="border:none">[ Note: Fields marked with<label style="color: red;"> * </label>are mandatory.]</label>
            </td>
        </tr>
    </table>
    </center>
    </form>
