@model PMGSY.Models.Facility.FinalizeFacilityPMGSY3ViewModel
@using PMGSY.Extensions

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Scripts/Facility/FinalizeFacilityPMGSY3Layout.js"></script>

<div id="dvhdFinalizeFacilityDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:0px;margin-right:0px;margin-top:0px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Finalize / Definalize Facility PMGSY3</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvFinalizeFacility" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmFinalizeFacilityLayout">
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        @*@Html.HiddenFor(model => model.AdminName)*@
        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 5%;"></td>
                   @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 25)
                   {
                    <td>
                    @Html.Label("State")<span style="color: red">*</span>
                    </td>
                     <td>
                    @Html.DropDownListFor(model => model.stateCode, new SelectList(Model.lstState, "Value", "Text"), new { @id = "ddlState", @tabindex = 1 })
                    <br />
                    @Html.ValidationMessageFor(model => model.stateCode)
                </td>
                   }
                
                <td style="width: 10%;">
                    @Html.Label("District")<span style="color: red">*</span>
                </td>
                <td style="width: 25%;">
                    @Html.DropDownListFor(model => model.districtCode, new SelectList(Model.lstDistricts, "Value", "Text"), new { @id = "ddlDistrict", style = "width:170px;", title = "District" })
                    <br />
                    @Html.ValidationMessageFor(m => m.districtCode)
                </td>
                @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 25)
                {
                    <td style="text-align: left;" style="width: 5%;">
                    <input type="button" id="btnViewForMoRD" value="View" class="jqueryButton" />
                </td>
                }
                else{
                <td style="text-align: left;" style="width: 5%;">
                    <input type="button" id="btnView" value="View" class="jqueryButton" />
                </td>
                }
                <td style="width: 5%;"></td>
            </tr>
        </table>
    </form>
</div>

 <div id="BlockDetails" style="text-align: left; width: 100%">
            <table id="tbBlockList" style="width: 95%"></table>
            <div id="dvBlockListPager"></div>
        </div>
