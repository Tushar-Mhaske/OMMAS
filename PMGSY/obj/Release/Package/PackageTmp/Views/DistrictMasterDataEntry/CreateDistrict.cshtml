@model PMGSY.Models.MasterDataEntry.MASTER_DISTRICT


<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/MasterDataEntry/Master_CreateDistrict.js")"> </script>

<div id="dvhdCreateNewDistrictDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align:left; margin-left:10px;margin-right:10px;margin-top:10px; height:20px;"> 
     <span class="ui-jqgrid-title" style="float:left">&nbsp;District Details</span>
     
      <span  id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float:right"></span>
      </div>

<div id="dvCreateNewDistrictDetails" class="ui-corner-bottom" style="margin-left: 10px; margin-right: 10px; display: block; border: 1px solid #B5B8C8; ">
    
   
<div id="dvErrorMessage"class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em ; display:none; margin:5px 5px 5px 5px;  ">
    <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
    <strong>Alert:</strong> <span id="message"> </span>
</div>


    <form id="frmCreateDistrict">

   
   
    <center>@Html.ValidationSummary(true)
            
    </center>
        
        <table style="width:100%;margin-top:10px;" class="rowstyle"  >

              <tr style="display:none">
                <td colspan="5">
                      @Html.HiddenFor(model => model.EncryptedDistrictCode)                
                </td>

            </tr>
                 
            <tr>
                <td style="width:12%;">

                 </td>
                <td style="text-align:left;width:15%;" >
                    @Html.LabelFor(model => model.MAST_STATE_CODE) <label style="color:red;"> *</label>
                </td>
                            
                <td style="width:27%;">
                     @if(Model.EncryptedDistrictCode==null){                          
                     @Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.States, new {@id="ddlStates", @title = "State", @tabindex = 1 })
                     @Html.ValidationMessageFor(model => model.MAST_STATE_CODE)

                     }
                    else
                    {
                          @Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.States, new {@id="ddlStates", @title = "State", @tabindex = 1,disabled = "disabled" })
                     }
                   
                    
                    
                </td>

                  <td style="width:15%;">
                      @Html.LabelFor(model => model.MAST_DISTRICT_NAME) <label style="color:red;"> *</label>
                </td>
               
                <td>
                     @Html.TextBoxFor(model => model.MAST_DISTRICT_NAME, new { maxlength = 50, @title = "District Name", @tabindex = 2 })
                   
                     @Html.ValidationMessageFor(model => model.MAST_DISTRICT_NAME)

                </td>

            </tr>

          
            
              <tr>
                   <td >

                 </td>
                <td >
                    @Html.LabelFor(model => model.MAST_PMGSY_INCLUDED) <label style="color:red;"> *</label>
                </td>
              
                <td>
                    
                    @Html.RadioButtonFor(model => model.IsPMGSYIncluded, true, new { id="rdoIsPMGSYIncludedYes",@tabindex = 3 }) <label> Yes</label> &nbsp;&nbsp;
                    
                    @Html.RadioButtonFor(model => model.IsPMGSYIncluded, false, new { id="rdoIsPMGSYIncludedNo"}) <label>No</label>

                </td>

                   <td >
                    @Html.LabelFor(model => model.MAST_IAP_DISTRICT) <label style="color:red;"> *</label>
                </td>
               
                <td>
                    
                    @Html.RadioButtonFor(model => model.IsIAPDistrict, true,new { id="rdoIsIAPDistrictYes",@tabindex = 4 }) Yes &nbsp;&nbsp;
                    
                    @Html.RadioButtonFor(model => model.IsIAPDistrict, false,new { id="rdoIsIAPDistrictNo"}) No

                </td>
            </tr>
             
         
      
            <tr>
               @* <td></td>*@
                <td></td>
                <td></td>
              
                     @if(Model.EncryptedDistrictCode==null){
                         <td  style="text-align:right;">
                         <input type="button" id="btnSave" name="btnSave" value="Save" class= "jqueryButton" title="Save District Details" tabindex="5"  /> 
                             </td>
                          <td colspan="2"> 
                         <input type="button" id="btnReset" name="btnReset" value="Reset" class= "jqueryButton" title="Reset" tabindex="6"  />
                              </td>
                     }
                    else
                    {
                          <td  style="text-align:right;">
                         <input type="button" id="btnUpdate" name="btnUpdate" value="Update" class= "jqueryButton" title="Update District Details" tabindex="5"  />
                              </td>
                          <td colspan="2"> 
                          <input type="button" id="btnCancel" name="btnCancel" value="Cancel" class= "jqueryButton" title="Cancel" tabindex="6"  />
                              </td>
                     }
                     

                    
                </td>

            </tr>


        </table>
         
    </form>
   
</div>