@model PMGSY.Models.QualityMonitoring.QMCompletedInspDetailsViewModel
<script src="~/Scripts/QualityMonitoring/QMCompletedInpectionDetails.js"></script>
<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<div id="dvSearchParameter" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
@*<div id="loadFilters">*@
    <form id="frmQMCompletedInspDetails">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.StateName)
        @Html.Hidden("hdnRoleCode",PMGSY.Extensions.PMGSYSession.Current.RoleCode.ToString())
       <table style="width: 100%;">
            <tr>
                <td style="width: 2%;"></td>
                
                <td style="text-align: left; width: 5%;">
                 @Html.LabelFor(model => model.StateCode)
                </td>
                <td style="width: 15%;">
                    
                        @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.lstStates, "Value", "Text"), new { @title ="State", @tabindex = 1, @id = "ddlStateCompleted", @style = "width:150px" })
                        @Html.ValidationMessageFor(m => m.StateCode)                    
                </td>
                 @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode != 8)
                 { 
                    <td>
                        <input type="button" id="btnCompletedView" value="View"  Class="jqueryButton"  Title="View Details"tabindex="4" />
                    </td>
                 }
                 else
                 {
                     <td></td>
                 }
                
            </tr>
        </table>
    </form>
</div>

<div id="loadReport2" class="divLoadReport"></div>
