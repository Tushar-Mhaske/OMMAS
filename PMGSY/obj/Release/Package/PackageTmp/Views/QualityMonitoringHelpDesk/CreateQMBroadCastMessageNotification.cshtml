@{
    ViewBag.Title = "CreateQMBroadCastMessageNotification";
}

@model PMGSY.Models.QualityMonitoringHelpDesk.QualityMonitoringBroadCastNotificationModel


<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/QualityMonitoringHelpDesk/CreateQMBroadCastMessageNotification.js")"> </script>
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.ui.dialog.js")"> </script>
<div id="dvCreateNewNotification" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    @*margin-left: 10px; margin-right: 10px;*@
    <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px; text-align: left">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="spnErrMessage"></span>
    </div>
    <form id="frmCreateBroadCastNotification">

        <center>
             @Html.ValidationSummary(true)
             @Html.AntiForgeryToken()
       @Html.HiddenFor(m => m.QM_Type)
        @Html.HiddenFor(m => m.Message_Id)
       @Html.HiddenFor(m => m.BroadCast_Id)
        </center>

        <table style="width: 100%; margin-top: 10px;" class="rowstyle">

            @* <tr style="display: none">
                 <td colspan="5">
                     @Html.HiddenFor(model => model.EncryptedPanchayatCode)
                 </td>

             </tr>*@

            <tr>
                <td style="width: 8%;"></td>                

                @if (Model.QM_Type != "I")
                {
                    <td style="width: 15%;">
                        @Html.LabelFor(model => model.MAST_STATE_CODE)
                        <label style="color: red;">*</label>
                    </td>
               
                    <td>
                        @Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.State_LIST, new { @id = "ddlStateB", @title = "State", @tabindex = 1 })

                        @Html.ValidationMessageFor(model => model.MAST_STATE_CODE)
                    </td>
                    
                }

                <td></td>
                <td></td>
            </tr>

            <tr>
                <td></td>
               
                <td >
                    @Html.LabelFor(model => model.MESSAGE_TEXT)
                    <label style="color: red;">*</label>
                </td>

                <td colspan="3" style="width: 70%;">
                    @Html.TextAreaFor(model => model.MESSAGE_TEXT, new { @id = "txtMessageDescB", maxlength = 1000, @title = "Message Description", @tabindex = 2, placeholder = "Enter Message Description..", @style = "width:400px;height:100px" })

                    @Html.ValidationMessageFor(model => model.MESSAGE_TEXT)

                </td>
            </tr>





            <tr>
                <td></td>


                <td colspan="4">
                    @if (Model.BroadCast_Id == 0)
                    {
                        <center>
                     <input type="button" id="btnBSave" name="btnBSave" value="Save" class="jqueryButton" title="Save BroadCast Notification Details" tabindex="3" />
                   &nbsp;&nbsp;&nbsp; <input type="reset" id="btnBReset" name="btnBReset" value="Reset" class="jqueryButton" title="Reset" tabindex="4" />
                </center>
                    }
                    else
                    {             
                        <center>
                         <input type="button" id="btnBUpdate" name="btnBUpdate" value="Update" class="jqueryButton" title="Update BroadCast Notification Details" tabindex="5" /> 
                        <input type="button" id="btnBCancel" name="btnBCancel" value="Cancel" class="jqueryButton" title="Cancel" tabindex="6" /> 
                         </center>                  
                    }


                </td>



            </tr>

            <tr>
                <td colspan="5">
                    <label style="border: none">
                        [ Note: Fields marked with<label style="color: red;"> * </label>
                        are mandatory.]</label>
                </td>

            </tr>
        </table>

    </form>

