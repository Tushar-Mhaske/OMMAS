@model PMGSY.Models.Master.MasterVidhanSabhaTermViewModel

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="~/Scripts/jquery.ui.datepicker.js" type="text/javascript"></script>
<script src="~/Scripts/custom/Generic.js" type="text/javascript"></script>
<script src="~/Scripts/Master/Master_CreateVidhanSabhaTerm.js" type="text/javascript"></script>


<div id="dvhdCreateNewVidhanSabhaDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Vidhan Sabha Term Details</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>

<div id="dvCreateNewVidhanSabhaDetails" style="display: block; border: 1px solid #B5B8C8;">

    <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px; text-align: left">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="message"></span>
    </div>
    @using PMGSY.Extensions;

    <form id="frmVidhanSabha">
        @Html.AntiForgeryToken()
        <center>@Html.ValidationSummary(true)</center>

        <table style="width: 100%; margin-top: 10px;" class="rowstyle">

            <tr style="display: none">
                <td colspan="3">
                    @Html.HiddenFor(model => model.EncryptedVSTermCode)
                </td>
            </tr>


            <tr>
                <td style="width: 30%;"></td>
                <td style="text-align: left; width: 15%;">
                    @Html.LabelFor(model => model.MAST_STATE_CODE)
                    <label style="color: red;">*</label>
                </td>
                <td>
                    @if (Model.EncryptedVSTermCode == null)
                    {
                        @Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.States, "--Select--", new { @id = "ddlStateNames", @title = "State", @tabindex = 1 })

                        @Html.ValidationMessageFor(model => model.MAST_STATE_CODE)
                    }
                    else
                    {
                        @Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.States, "--Select--", new { @id = "ddlStateNames", @title = "State", @tabindex = 1, @disabled = "disabled" })                   
                    
                    }
                </td>
            </tr>


            <tr id="trVidhanSabhaTerm" style="display: none">
                <td></td>
                <td>
                    <label>Vidhan Sabha Term</label>
                </td>
                <td>@Html.Label("lblVidhanSabhaTerm", new { id = "lblVidhanSabhaTerm" })
                </td>
            </tr>
            <tr id="trBlankVidhanSabhaTerm" style="display: none">
                <td colspan="3"></td>
            </tr>

            <tr>
                <td></td>
                <td>
                    @Html.LabelFor(model => model.MAST_VS_START_DATE)
                    <label style="color: red;">*</label>
                </td>
                <td>@Html.TextBoxFor(model => model.MAST_VS_START_DATE, new { @title = "Start date", @tabindex = 2, maxlength = 10, placeholder = "dd/mm/yyyy" })
                    @Html.ValidationMessageFor(model => model.MAST_VS_START_DATE, null, new { @id="spnStartDate"})
                </td>
            </tr>

            <tr>
                <td></td>
                <td>
                    @Html.LabelFor(model => model.MAST_VS_END_DATE)
                </td>
                <td>@Html.TextBoxFor(model => model.MAST_VS_END_DATE, new { @title = "End date", @tabindex = 3, maxlength = 10, placeholder = "dd/mm/yyyy" })
                    @Html.ValidationMessageFor(model => model.MAST_VS_END_DATE)
                </td>
            </tr>

            <tr>
                <td></td>
                <td></td>
                <td>
                    @if (Model.EncryptedVSTermCode == null)
                    {
                        <input type="button" id="btnSave" name="btnSave" value="Save" class="jqueryButton" title="Save Vidhan Sabha Term Details" tabindex="4" /> 
                        <input type="reset" id="btnReset" name="btnReset" value="Reset" class="jqueryButton" title="Reset" tabindex="5" />
                    }
                    else
                    {
                        <input type="button" id="btnUpdate" name="btnUpdate" value="Update" class="jqueryButton" title="Update Vidhan Sabha Term Details" tabindex="4" /> 
                        <input type="button" id="btnCancel" name="btnCancel" value="Cancel" class="jqueryButton" title="Cancel" tabindex="5" />
                    }

                </td>
            </tr>

            <tr>
                <td colspan="3">
                    <label style="border: none">[ Note: Fields marked with<label style="color: red;"> * </label>are mandatory.]</label>
                </td>
            </tr>
        </table>
    </form>

</div>
