        <td>
            @Html.DisplayFor(model=>model.MAST_CON_PIN)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model=>model.MAST_DISTRICT_CODE_ADDR)
        </td>
        <td>
            @Html.DisplayFor(model=>model.DistrictName)
        </td>
        <td>
            @Html.LabelFor(model=>model.MAST_STATE_CODE_ADDR)
        </td>
        <td>
            @Html.DisplayFor(model=>model.StateName)
        </td>
    </tr>
    <tr>
        <td>
            <label>Phone No.</label>
        </td>
        <td>
            @Html.DisplayFor(model=>model.MAST_CON_STD1)<label>-</label> @Html.DisplayFor(model=>model.MAST_CON_PHONE1)
        </td>
        <td>
            <label>Fax No.</label>
        </td>
        <td>
            @Html.DisplayFor(model=>model.MAST_CON_STD_FAX)<label>-</label> @Html.DisplayFor(model=>model.MAST_CON_FAX)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model=>model.MAST_CON_MOBILE)
        </td>
        <td>
            @Html.DisplayFor(model=>model.MAST_CON_MOBILE)
        </td>
        <td>
            @Html.LabelFor(model=>model.MAST_CON_EMAIL)
        </td>
        <td>
            @Html.DisplayFor(model=>model.MAST_CON_EMAIL)
        </td>
    </tr>
    <tr>
        <td>
            @Html.Label("Legal Heir Name")
        </td>
        <td>
            @Html.DisplayFor(model=>model.MAST_CON_LEGAL_HEIR_FNAME) <label> </label>@Html.DisplayFor(model=>model.MAST_CON_LEGAL_HEIR_MNAME)<label> </label>@Html.DisplayFor(model=>model.MAST_CON_LEGAL_HEIR_LNAME)
