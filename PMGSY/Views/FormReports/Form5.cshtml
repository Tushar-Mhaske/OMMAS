@model PMGSY.Models.FormReports.FormReportsViewModel


<script src="~/Scripts/FormReports/Form5.js"></script>
<script src="~/Scripts/custom/Generic.js"></script>
<form id="frmForm5StateLevelReport">
    @Html.Hidden("hdnLevelId", PMGSY.Extensions.PMGSYSession.Current.LevelId.ToString())

    <div style="width: 98.5%">
        <table class="ui-state-default ui-corner-all" style="width: 100%;">
            <tr>
                <td style="width: 2%;"></td>
                <td style="text-align: left; width: 1%;">
                    @Html.Label("Year")

                </td>
                <td style="width: 1%;">
                    @Html.DropDownListFor(model => model.MAST_YEAR, new SelectList(Model.YEARS, "Value", "Text"), new { @id = "ddlMAST_YearForm5", @title = "Year",@tabindex = 1 })
                </td>
                <td style="text-align: left; width: 2%;">
                    @Html.Label("Constituency Type")

                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.MAST_CONSTITUENCY_TYPE, new SelectList(Model.CONSTITUENCY_TYPES, "Value", "Text"), new { @id = "ddMAST_CONSTITUENCY_TYPEForm5", @title = "Constituency Type",@tabindex = 2 })
                </td>
            </tr>
        </table>
    </div>
    <br />

    @Html.HiddenFor(model => model.STATE_NAME)
    @Html.HiddenFor(model => model.CONST_NAME)

    @if (PMGSY.Extensions.PMGSYSession.Current.LevelId == 6)     //Mord
    {
        @Html.HiddenFor(model => model.MAST_STATE_CODE)
        <table id="tbForm5StateLevelReport"></table>
        <div id="dvForm5StateLevelReportPager"></div>
 
        <br />
        <table id="tbForm5DistrictLevelReport"></table>
        <div id="dvForm5DistrictLevelReportPager"></div>

        <br />
        <table id="tbForm5ConstituencyLevelReport"></table>
        <div id="dvForm5ConstituencyLevelReportPager"></div>
        <br />
        <table id="tbForm5FinalLevelReport"></table>
        <div id="dvForm5FinalLevelReportPager"></div>
    }
    else if (PMGSY.Extensions.PMGSYSession.Current.LevelId == 4)     //State
    {
        @Html.HiddenFor(model => model.MAST_STATE_CODE)
        <table id="tbForm5DistrictLevelReport"></table>
        <div id="dvForm5DistrictLevelReportPager"></div>

        <br />
        <table id="tbForm5ConstituencyLevelReport"></table>
        <div id="dvForm5ConstituencyLevelReportPager"></div>
        <br />
        <table id="tbForm5FinalLevelReport"></table>
        <div id="dvForm5FinalLevelReportPager"></div>
    }
    else if (PMGSY.Extensions.PMGSYSession.Current.LevelId == 5)     //District
    {
        @Html.HiddenFor(model => model.MAST_STATE_CODE)
        <table id="tbForm5ConstituencyLevelReport"></table>
        <div id="dvForm5ConstituencyLevelReportPager"></div>
        <br />
        <table id="tbForm5FinalLevelReport"></table>
        <div id="dvForm5FinalLevelReportPager"></div>
    }

</form>
