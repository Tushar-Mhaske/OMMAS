@model PMGSY.Models.NQMTourClaimModels.NQM_TOUR_DISTRICT_DETAILS_MODEL

@{
    ViewBag.Title = "ViewDistrictDetails";
}

<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/TourClaim/TourDetails.js"></script>
<script src="~/Scripts/TourClaim/AddBankAndTourDetails.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<center>

    <div id="viewDetailsofDistrict" style="width:100%;">

        @*<div id="spanDiv" style="width: 100%; height: 20px; border: none; margin-top: 5px; margin-bottom: -15px; " class="ui-corner-top ui-widget-header panelheader">
                <span class="ui-jqgrid-title" style="float: left">&nbsp;</span> Add District Details  <span style="float:right;margin-right:2Px; margin-top:2px" id="idCollapseSpanView" class="ui-icon ui-icon-circle-triangle-n"></span>
            </div>*@

        <form id="formDistrictDetails">
            @Html.AntiForgeryToken()
            <center>@Html.ValidationSummary(true)</center>
            @Html.HiddenFor(model => model.TOUR_CLAIM_ID, new { @id = "tourClaimIdDistrict" })
            @Html.HiddenFor(model => model.ADMIN_SCHEDULE_CODE, new { @id = "scheduleCodeDistrict" })
            <div style="width: 98%; border:none; margin-top:10px; margin-bottom:10px;" class="ui-state-default">

                @if (Model.ADD_EDIT == 1)
                {
                    <table style="margin-top:15px; margin-bottom:5px;">

                        <tr style="width: 9%; padding: 0.3rem">
                            <td style="padding:0.5rem">
                                @Html.LabelFor(model => model.DISTRICT_CODE)<label style="color: red">*</label>
                            </td>
                            <td>
                                @*@Html.DropDownListFor(model => model.DISTRICT_CODE, new SelectList(Model.lstDistricts, "Value", "Text"), new { @id = "ddlDistrict" })*@

                                @Html.DropDownListFor(model => model.DISTRICT_CODE, new SelectList(Model.lstDistricts, "Value", "Text", Model.DISTRICT_CODE), new { @id = "ddlDistrict"/*, @class = "dropdown" */})
                                @Html.ValidationMessageFor(model => model.DISTRICT_CODE)
                            </td>

                            <td style="padding: 0.5rem">
                                @Html.LabelFor(model => model.DATE_FROM)<label style="color: red">*</label>
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.DATE_FROM, new { style = "margin-bottom:0.6rem; margin-left:0.6", Value = "", @id = "dateFrom", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.DATE_FROM)
                            </td>

                            <td style="padding: 0.5rem">
                                @Html.LabelFor(model => model.DATE_TO)<label style="color: red">*</label>
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.DATE_TO, new { style = "margin-bottom:0.6rem; margin-left:0.6", Value = "", @id = "dateTo", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.DATE_TO)
                            </td>

                            <td style="padding: 0.5rem">
                                <input style="padding: 0.5rem; display: none; margin-bottom:0.6rem" type="reset" id="btnDistrictDetailsReset" name="btnReset" value="Reset" class="jqueryButton" title="Reset District Details" tabindex="6" />
                                <input style="padding: 0.5rem; margin-bottom:0.6rem" type="button" class="jqueryButton" value="Add District" id="btnAddDistrictDetails" name="btnAddDistrictDetails" title="Click here to select District" />
                            </td>
                        </tr>

                    </table>
                }
                else
                {
                    @Html.HiddenFor(model => model.DISTRICT_DETAILS_ID, new { @id = "districtId" })

                    <table style="margin-top:15px; margin-bottom:5px;">

                        <tr style="width: 9%; padding: 0.3rem">
                            <td style="padding:0.5rem">
                                @Html.LabelFor(model => model.DISTRICT_CODE)<label style="color: red">*</label>
                            </td>
                            <td>
                                @*@Html.DropDownListFor(model => model.DISTRICT_CODE, new SelectList(Model.lstDistricts, "Value", "Text"), new { @id = "ddlDistrict" })*@

                                @Html.DropDownListFor(model => model.DISTRICT_CODE, new SelectList(Model.lstDistricts, "Value", "Text", Model.DISTRICT_CODE), new { @id = "ddlDistrict"/*, @class = "dropdown" */})
                                @Html.ValidationMessageFor(model => model.DISTRICT_CODE)
                            </td>

                            <td style="padding: 0.5rem">
                                @Html.LabelFor(model => model.DATE_FROM)<label style="color: red">*</label>
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.DATE_FROM, new { style = "margin-bottom:0.2rem; margin-left:0.6", Value = Model.DATE_FROM.ToShortDateString(), @id = "dateFrom", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.DATE_FROM)
                            </td>

                            <td style="padding: 0.5rem">
                                @Html.LabelFor(model => model.DATE_TO)<label style="color: red">*</label>
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.DATE_TO, new { style = "margin-bottom:0.2rem; margin-left:0.6", Value = Model.DATE_TO.ToShortDateString(), @id = "dateTo", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.DATE_TO)
                            </td>

                            <td style="padding: 0.5rem">
                                <input style="padding: 0.5rem; margin-bottom:0.6rem" type="button" class="jqueryButton" value="Update" id="btnEditDistrictDetails" name="btnEditDistrictDetails" title="Click here to edit District" />
                                <input style="padding: 0.5rem; margin-bottom:0.6rem" type="button" class="jqueryButton" value="Back" id="btnBackDistrictDetails" name="btnBackDistrictDetails" title="Click here to go back to District Details" />
                            </td>
                        </tr>

                    </table>


                }

            </div>
        </form>

    </div>

</center>




