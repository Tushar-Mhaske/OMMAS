@model PMGSY.Areas.RCTRC.Models.RCTRCSubdetailsPerMaster

@{
    ViewBag.Title = "RCTRCSubdetailsPerMaster";
}
<script src="~/Scripts/custom/Generic.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.ui.datepicker.js"></script>
<script src="~/Areas/RCTRC/Scripts/RCTRCSubdetailsPerMaster.js"></script>
<div id="dvhdAddNewCdWorksDetails1" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Key Areas of Work (Subdetails)</span>
    <span id="spCollapseIconCN1" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>

<div id="dvAddNewCdWorksDetails1" style="display: block; border: 1px solid #B5B8C8; text-align: left">
    <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px;">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="message"></span>
    </div>

    <form id="frmAddCdWorks1">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model=>model.masterWorkAreaCode)
        <center>@Html.ValidationSummary(true)</center>
        <table class="rowstyle" style="width: 100%; margin-top: 10px">
            <tr style="display: none">
                <td>@Html.HiddenFor(m => m.EncryptedSubdetailsPerMasterCode)</td>
            </tr>

            <tr>
                <td style="width: 20%;"></td>
                <td style="text-align: left; width: 30%;">
                    @Html.LabelFor(model => model.ContactPersonID)
                    <label style="color: red;">*</label>
                </td>
                <td>
                    @Html.DropDownListFor(model => model.ContactPersonID, new SelectList(Model.ContactPerson_List, "Value", "Text"), new { @title = "Contact Person", @id = "ddlContactPerson", @tabindex = 1, @style = "width:150px" })
                    @Html.ValidationMessageFor(m => m.ContactPersonID)
                </td>

            </tr>


            <tr>
                <td style="width: 20%;"></td>
                <td style="text-align: left; width: 30%; color: forestgreen">
                    <h3>@Html.Label("Elements of ") @Html.DisplayFor(model=>model.masterAreaName)</h3>

                </td>
                <td style="color: forestgreen">
                    <b>@Html.Label("Awareness") </b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <b>@Html.Label("Basic Knowledge") </b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <b>@Html.Label("Exposure") </b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <b>@Html.Label("Ability to Work") </b>
                </td>

            </tr>

            @{ int i = 0; }
            @while (i < Model.KeyAreaList.Count)
            {
                <tr>
                    <td style="width: 20%;"></td>
                    <td style="text-align: left; width: 30%;">
                        @Model.KeyAreaList[i].RCTRC_KEY_AREA_NAME
                        <label style="color: red;">*</label>
                    </td>
                    <td>
                        @Html.RadioButton("item" + Model.KeyAreaList[i].RCTRC_KEY_AREA_ID, "A", new { @title = "Awareness", @id = "item" + Model.KeyAreaList[i].RCTRC_KEY_AREA_ID })&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        @Html.RadioButton("item" + Model.KeyAreaList[i].RCTRC_KEY_AREA_ID, "B", new { @title = "Basic Knowledge", @id = "item" + Model.KeyAreaList[i].RCTRC_KEY_AREA_ID }) &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        @Html.RadioButton("item" + Model.KeyAreaList[i].RCTRC_KEY_AREA_ID, "E", new { @title = "Exposure", @id = "item" + Model.KeyAreaList[i].RCTRC_KEY_AREA_ID, @checked="checked" }) &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        @Html.CheckBoxFor(model => model.isAbilityToWork, new { @title = "Ability to Work", Name = "Checkbox" + Model.KeyAreaList[i].RCTRC_KEY_AREA_ID, @id = "Checkbox" + Model.KeyAreaList[i].RCTRC_KEY_AREA_ID })
                    </td>
                </tr>
                i++;
            }

            <tr>
                <td></td>
                <td></td>
                <td>
                    @if (Model.EncryptedSubdetailsPerMasterCode == null)
                    {
                  
                        <input type="button" id="btnSave1" name="btnSave" value="Save" class="jqueryButton" title="Save Details" tabindex="15" /> 
                        <input type="reset" id="btnReset1" name="btnReset" value="Reset" class="jqueryButton" title="Reset" tabindex="16" />
                    }
                    else
                    {
                        <input type="button" id="btnUpdate1" name="btnUpdate" value="Update" class="jqueryButton" title="Update Details" tabindex="17" /> 
                        <input type="button" id="btnCancel1" name="btnCancel" value="Cancel" class="jqueryButton" title="Cancel" tabindex="18" />
                    }
                </td>
            </tr>
            <tr>
                <td colspan="4">
                    <label style="border: none">
                        [ Note: Fields marked with<label style="color: red;"> * </label>
                        are mandatory.]</label>
                </td>
            </tr>
        </table>

    </form>
</div>


