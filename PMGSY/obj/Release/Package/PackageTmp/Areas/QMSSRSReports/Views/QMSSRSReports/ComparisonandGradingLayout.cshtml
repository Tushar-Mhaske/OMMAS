@model PMGSY.Areas.QMSSRSReports.Models.QualityReportsViewModel

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.ui.dialog.js")"> </script>
<script src="~/Areas/QMSSRSReports/Scripts/ComparisonandGradingLayout.js"></script>
<script src="~/Scripts/custom/Generic.js"></script>

<div id="dvhdQMATRLayout" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Comparison of Grading by NQM and SQM</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvQMComparisonandGradingLayout" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmComparisonandGradingLayout">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.Hidden("hdnRole", PMGSY.Extensions.PMGSYSession.Current.RoleCode.ToString())
        @Html.HiddenFor(m => m.StateName)
        @Html.HiddenFor(m => m.DistName)

        <table id="tblGradingComparisionReport" class="rowstyle" style="margin-top: 0px; text-align: center; width: 100%;">
            <tr>
                <td style="width: 5%; font-weight: bold;">
                    @Html.LabelFor(model => model.State)
                </td>
                <td style="width: 10%">
                    @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 8)
                    {                          
@*@Html.DropDownListFor(model => model.STATE, new SelectList(Model.STATE_LIST, "value", "text"), new { @id = "ddlStateGradingComparision", @disabled = "disabled" })*@
                        @Html.DropDownListFor(model => model.State, new SelectList(Model.StateList, "Value", "Text"), new { @id = "ddlStateGradingComparision", @title = "State", @tabindex = 1, @disabled = "disabled" })
                        <br />
                        @Html.ValidationMessageFor(m => m.State)
                    }
                    else
                    {
@*@Html.DropDownListFor(model => model.STATE, new SelectList(Model.STATE_LIST, "value", "text"), new { @id = "ddlStateGradingComparision" })*@
                        @Html.DropDownListFor(model => model.State, new SelectList(Model.StateList, "Value", "Text"), new { @id = "ddlStateGradingComparision", @title = "State", @tabindex = 1 })
                        <br />
                        @Html.ValidationMessageFor(m => m.State)
                    }
                </td>
                <td style="width: 5%; font-weight: bold;">
                    @Html.LabelFor(model => model.District)
                </td>
                <td style="width: 10%">
                    @*@Html.DropDownListFor(model => model.DISTRICT, new SelectList(Model.DISTRICT_LIST, "value", "text"), new { @id = "ddlDistrictGradingComparision" })*@
                    @Html.DropDownListFor(model => model.District, new SelectList(Model.DistrictList, "Value", "Text"), new { @id = "ddlDistrictGradingComparision", @title = "District", @tabindex = 2 })
                    <br />
                    @Html.ValidationMessageFor(m => m.District)
                </td>
                @*<td></td>
            </tr>
            <tr>*@
                <td style="width: 5%; font-weight: bold;">
                    @Html.LabelFor(model => model.Year)
                </td>
                <td style="width: 10%">
                    @*@Html.DropDownListFor(model => model.YEAR, new SelectList(Model.YEAR_LIST, "value", "text"), new { @id = "ddlYearGradingComparision" })*@
                    @Html.DropDownListFor(model => model.Year, new SelectList(Model.YearList, "Value", "Text"), new { @id = "ddlYearGradingComparision", @title = "Year", @tabindex = 3 })
                    <br />
                    @Html.ValidationMessageFor(m => m.Year)
                </td>
                <td style="width: 5%; font-weight: bold;">
                    @Html.LabelFor(model => model.Month)
                </td>
                <td style="width: 10%">
                    @*@Html.DropDownListFor(model => model.MONTH, new SelectList(Model.MONTH_LIST, "value", "text"), new { @id = "ddlMonthGradingComparision" })*@
                    @Html.DropDownListFor(model => model.Month, new SelectList(Model.MonthList, "Value", "Text"), new { @id = "ddlMonthGradingComparision", @title = "Month", @tabindex = 4 })
                    <br />
                    @Html.ValidationMessageFor(m => m.Month)
                </td>
                <td style="text-align: left; width: 10%;">
                    <input type="button" id="btnViewGradingComparision" value="View Details" class="jquerybutton" style="margin-left: 20px;" />
                </td>
            </tr>

        </table>
    </form>
</div>
<div id="dvLoadComparisonandGradingReport"></div>
