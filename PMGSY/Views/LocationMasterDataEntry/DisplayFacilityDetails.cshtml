@model PMGSY.Models.MasterDataEntry.CreateFacility


@{
    var imagepath = @Model.FileName;
}
@*<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>*@
<script type="text/javascript" src="@Url.Content("~/Scripts/MasterDataEntry/DisplayFacilityDetails.js")"> </script>

<div id="dvhdCreateNewPanchayatDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align:left;  height:20px;"> @*margin-left:10px;margin-right:10px;margin-top:10px;*@ 
     <span class="ui-jqgrid-title" style="float:left">&nbsp;Facility Details</span>
     
     <span  id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float:right"></span>
      </div>

<div id="dvCreateNewPanchayatDetails" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;"> 
    <div id="dvErrorMessage"class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em ; display:none; margin:5px 5px 5px 5px; text-align:left">
    <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
    <strong>Alert:</strong> <span id="message"> </span>
</div>
        @Html.Hidden("Latitude", Model.Latitude)
        @Html.Hidden("Longitude", Model.Longitude)
        @Html.Hidden("UploadDate", Model.UploadDate)
        @Html.Hidden("FileName", Model.FileName)

        @Html.Hidden("FacilityId",Model.FacilityID)
        @Html.Hidden("IsFinalized",Model.IsFinalized)
        @Html.Hidden("EncryptedCode",Model.EncryptedCode)
    
         <table style="width:100%;margin-top:0px;" class="rowstyle">
          <tr class="ui-state-hover">
               <td style="width :16% ;text-align:left">
                    @Html.LabelFor(model => model.DistrictName) <label> :</label>
                </td>
               
                <td style="text-align:left; width:15%">
                     @Html.DisplayFor(m => m.DistrictName)
                     
                    <br />
                </td>

              <td style="width:16%; text-align:left">
                   @Html.LabelFor(model => model.blockName) <label > :</label>
              </td>  
              <td style = "text-align:left">
                   @Html.DisplayFor(m => m.blockName)
                  <br />
                   @Html.ValidationMessageFor(model => model.FacilityName)
              </td> 

                <td style="text-align:left;width:13%">
                    @Html.LabelFor(model => model.habName) <label> :</label>
                </td>
                <td style="width:18%;text-align:left">
                      @Html.DisplayFor(m => m.habName)
                     <br />
                     @Html.ValidationMessageFor(model => model.FacilityDescription)
               </td>

               
              </tr>
             
             <tr class="ui-state-hover">

                  <td style="width :16% ;text-align:left">
                    @Html.LabelFor(model => model.FacilityParentCategory) <label> :</label>
                </td>
                     
                 <td style="text-align:left">
                       @Html.DisplayFor(m => m.FacilityParentCategory)
                     <br />
                      @Html.ValidationMessageFor(model => model.address)
                      
                 </td>
                 <td style="width:13%; text-align:left">
                    @Html.LabelFor(model => model.FacilityCategory) <label> :</label>
                </td>
                     
                 <td style="text-align:left">
                      @Html.DisplayFor(m => m.FacilityCategory)
                     <br />
                     @Html.ValidationMessageFor(model => model.pincode)
                 </td>


                <td style="width :16% ;text-align:left" >
                    @Html.LabelFor(model => model.DisplayAddress) <label> :</label>
                </td>
               
                <td style="width:12%;text-align:left"">
                        
                        @Html.DisplayFor(m => m.DisplayAddress)
                        &nbsp;<span> ,</span>
                        @Html.DisplayFor(m => m.DisplayPIN)
                   <br />
                     
               </td>
           </tr>
                      
           <tr class="ui-state-hover" > 

                 <td style="width:13%; text-align:left">
                    @Html.LabelFor(model => model.FacilityDesc) <label > :</label>
                </td>
                     
                 <td style="text-align:left" colspan="6">
                      @Html.DisplayFor(m => m.FacilityDesc)
                     <br />
                 </td>
                
             

               </tr>


             
                <tr class="ui-state-hover">
               <td style="width :16% ;text-align:left">
                    @Html.Label("IS FINALIZED") <label> :</label>
                </td>
               
                <td style="text-align:left; width:15%">
                     @Html.DisplayFor(m => m.IsFinalized)
                     
                    <br />
                </td>

              <td style="width:16%; text-align:left">
                   @Html.Label("FINALIZED DATE") <label > :</label>
              </td>  
              <td style = "text-align:left">
                   @Html.DisplayFor(m => m.FinalizedDate)
                  <br />
                
              </td> 

                <td style="text-align:left;width:13%">
                 
                </td>
                <td style="width:18%;text-align:left">
                     
               </td>

               
              </tr>

              <tr class="ui-state-hover">
                  <td colspan="6" style="text-align:center;">   
                          <input type="button" id="btnCancel" name="btnSave" value="Cancel" class= "jqueryButton" title="Cancel" tabindex="9"  />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                      
                       
                      @if(Model.FileName !=null && Model.Latitude != 0.0 && Model.Longitude != 0.0 && ! Model.IsFinalized.Equals("Yes"))
                      {
                       <input type="button" id="btnFinalize" name="btnFinalize" value="Finalize" class= "jqueryButton" title="Finalize" tabindex="9"  />
                      }
                  </td>
             </tr>
        </table>

    </div>
