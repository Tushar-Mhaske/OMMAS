@{
    ViewBag.Title = "List Authorized Signatory Details";
}
<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/AuthorizedSignatoryDetails.js"></script>
    
<style>

.ui-jqgrid-bdiv
{
overflow-x : hidden !important;
}

</style>
<br />
<div class="ui-widget-header innerDivHeader">
    
    @HttpContext.GetLocalResourceObject(@"~\Views\Shared\authorizedSignatory", "lblPageHeader", System.Globalization.CultureInfo.CurrentUICulture)

</div>

 <div id="divError" style="margin-left: 10px; margin-right: 15px; margin-top: 5px; margin-bottom: 5px; display: none" class="ui-state-error ui-corner-all">
   <span class="ui-icon ui-icon-alert " style="float: left"></span>
   <span id="errorSpan"></span>
 </div>


   @Html.Hidden("FundType",PMGSY.Extensions.PMGSYSession.Current.FundType)
    
    <table style="margin-right: 15px;margin-top: 10px;margin-bottom: 10px">
        <tbody>
            <tr>
                <td>
                    
                    <div style="padding: 0pt 0.7em; cursor: pointer;" class="jqueryButton" id="Search">

                        <span class="ui-icon ui-icon-search" style="float: left; margin-right: 0.3em;"></span><strong>
                           Search
                        </strong>
                    </div>

                </td>
              
            </tr>
        </tbody>
    </table>
    
    
