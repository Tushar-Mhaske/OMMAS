@model PMGSY.Models.CoreNetwork.PCIFinalizationViewModel
@using PMGSY.Extensions


<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Scripts/CoreNetwork/FinalizePCIPMGSY3Layout.js"></script>

<div id="dvhdFinalizeFacilityDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:0px;margin-right:0px;margin-top:0px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Finalize PCI Entry PMGSY3</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvFinalizeFacility" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmFinalizeFacilityLayout">
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 5%;"></td>
                <td style="width: 5%;">
                    @Html.Label("District")
                </td>
                <td style="width: 10%;">
                    @Html.DropDownListFor(model => model.districtCode, new SelectList(Model.lstDistricts, "Value", "Text"), new { @id = "ddlDistrict", style = "width:170px;", title = "District" })
                    <br />
                    @Html.ValidationMessageFor(m => m.districtCode)
                </td>
                <td style="text-align: left; width: 5%;">
                    <input type="button" id="btnView" value="View" class="jqueryButton" />
                </td>
                <td style="width: 5%;"></td>
            </tr>
        </table>
    </form>
</div>

 <div id="BlockDetails" style="text-align: left; width: 100%">
            <table id="tbBlockList" style="width: 95%"></table>
            <div id="dvBlockListPager"></div>
        </div>
