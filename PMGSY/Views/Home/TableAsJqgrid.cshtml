<script type="text/javascript">

    $(document).ready(function () {
        $("#tableMain").addClass("ui-jqgrid ui-widget ui-widget-content ui-corner-all");
        $("#tableTitle").addClass("ui-jqgrid-titlebar ui-widget-header ui-corner-top ui-helper-clearfix");
        $("#tableTitleName").addClass("ui-jqgrid-title");
        $("#tableHeader").addClass("ui-state-default ui-jqgrid-hdiv");
        $("#tableHeaderName").addClass("ui-jqgrid-htable");
        $("#tableHeaderName").attr("cellspacing", "0");
        $("#tableHeaderName").attr("cellpadding", "0");
        $("#tableHeaderName").attr("border", "0");
        $("#tableHeaderName").css("width", "958px");
        $("#tableHeaderName tr").addClass("ui-jqgrid-labels");
        $("#tableHeaderName th").addClass("ui-state-default jqgrow ui-row-ltr");
        $("#tableHeaderName th").css("border-bottom", "1px");
        $("#tableHeaderName th").css("border-left", "1px");
        $("#tableContent").addClass("ui-jqgrid-bdiv");
        $("#tableContentName").addClass("ui-jqgrid-btable");
        $("#tableContentName").attr("cellspacing", "0");
        $("#tableContentName").attr("cellpadding", "0");
        $("#tableContentName").attr("border", "0");
        $("#tableContentName").css("width", "958px");
        $("#tableContentName tr").addClass("ui-widget-content jqgrow ui-row-ltr");
      //  $("#tableContentName tr:even").css("background", "#fdf5ce url(../images/ui-bg_glass_100_fdf5ce_1x400.png) 50% 50% repeat-x");
        $("#tableContentName td").css("text-align", "center");
        $("input:checkbox").click(function () {
            alert($(this).attr('id'));
        });

    });

</script>


