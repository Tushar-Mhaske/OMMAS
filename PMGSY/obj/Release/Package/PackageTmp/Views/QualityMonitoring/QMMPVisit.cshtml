@model PMGSY.Models.QualityMonitoring.QMMPVisitModel
@{ Layout = null; }

<!DOCTYPE html>

<html>
<head>
<script src="~/Scripts/QualityMonitoring/QMMPVisit.js"></script>
    <script src="~/Scripts/jquery.ui.accordion.js"></script>
</head>
<body>
<div style="width: 99%; border:none;" class="ui-state-default">      
        <div id="divMPVisitFilterForm">
            <center>
                <form id="mpVisitFilterForm">     
                    <table style="margin-top:10px; margin-bottom:5px; width:90%">
                        <tr>
                            <td style="width:10%;font-weight:bold;">
                                MP Visit Details >> 
                            </td>
                            <td style="width:5%;padding-left:25px;">
                                @Html.LabelFor(model => model.StateCode) : 
                            </td>
                            <td style="width:10%">
                                @Html.HiddenFor(model => model.StateCode)
                                @Html.DisplayFor(model => model.StateName)
                            </td> 
                            <td style="width:6%;padding-left:25px;">
                                @Html.LabelFor(model => model.DistrictCode) : 
                            </td>
                            <td style="width:10%">
@if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 2 || PMGSY.Extensions.PMGSYSession.Current.RoleCode == 37 || PMGSY.Extensions.PMGSYSession.Current.RoleCode == 36)
                                {
                                    @Html.DropDownListFor(model => model.DistrictCode, new SelectList(Model.DistrictList, "Value", "Text"))
                                        
                                }
else if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 22 || PMGSY.Extensions.PMGSYSession.Current.RoleCode == 38 || PMGSY.Extensions.PMGSYSession.Current.RoleCode == 54)
                                {
                                    @Html.HiddenFor(model => model.DistrictCode)
                                    @Html.DisplayFor(model => model.DistrictName)
                                }
                            </td>
                            <td style="width:5%;padding-left:25px;">
                                @Html.LabelFor(model => model.BlockCode) : 
                            </td>
                            <td style="width:10%">
                                    @Html.DropDownListFor(model => model.BlockCode, new SelectList(Model.BlockList, "Value", "Text"))
                            </td>
                            <td style="width:10%">
                                    <input type="button" class="jqueryButton" value="List Details" id="btnViewWorks" name ="btnViewWorks"/>
                            </td>
                            </tr>
                    </table>
                </form>  
            </center>
    </div>
</div>

<div id="divMPVisitRoadList" style="width:100%; margin-top:5px;">
    <table id="tbMPVisitRoadList"></table>
    <div id="dvMPVisitRoadListPager"></div>
</div>

<div id="divFillMPVisitDetails" style="width:100%; margin-top:5px;">
</div>

<div id="fillMPVisitDetailsAccordion" style="display:none;width:98%;margin-top:10px;">            
    <h3 style="text-align:left"><a id="" href="#" style=" font-size:.9em;" >MP Visit Details</a>
        <a href="#"  style="float: right;">
            <img style="border:none" src="" class="ui-icon ui-icon-closethick" onclick="CloseMPVisitDetails();" /></a>
    </h3>
    <div id="divfillMPVisitDetailsForm" style="display:none;">
    </div>                     
</div>
<div id="divList" style="width:100%; margin-top:5px;">
    <table id="tbList"></table>
    <div id="dvPager"></div>
</div>

</body>
</html>