                    @Html.DropDownListFor(m => m.Designation,  ViewData["Designation"] as IEnumerable<SelectListItem>, new {@id="ddlDesignation", @title="Name",@tabindex=1,@disabled="disabled" })
                    @Html.ValidationMessageFor(m=>m.Designation) 
