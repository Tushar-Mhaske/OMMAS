                    @Html.Label("Non Accredited Technology")*@
                    <br />
                    @Html.ValidationMessageFor(m => m.TechType)
                </td>
            </tr>
            <tr>
                <td></td>
                <td style="width: 10%">@Html.LabelFor(model => model.MAST_TECH_DESC) <span style="color: red">*</span></td>
                <td style="width: 20%" colspan="3">
                    @Html.TextAreaFor(model => model.MAST_TECH_DESC, new { @placeholder = "Enter Description...", @tabindex = 3, @title = "Enter Description", @maxlength = 255, @Value = String.Empty })
                    <br />
                    @Html.ValidationMessageFor(model => model.MAST_TECH_DESC)
                </td>
            </tr>
