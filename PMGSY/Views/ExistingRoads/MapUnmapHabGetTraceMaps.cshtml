@model PMGSY.Models.ExistingRoads.TraceMapsModel

<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.ui.dialog.js")"> </script>
<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Scripts/ExistingRoads/MapUnmapHabTraceMaps.js" type="text/javascript"></script>
<form id="frmTraceMaps">
    <div id="dvhdSearchFacilityDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
        <span class="ui-jqgrid-title" style="float: left">&nbsp; Map Unmap Habitations</span>
        <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
    </div>

    <center>
                 @Html.ValidationSummary(true)

                 @Html.Hidden("RoleCode", PMGSY.Extensions.PMGSYSession.Current.RoleCode)
    </center>
    <div id="tbldiv">
        <table style="width: 100%; margin-top: 0px;" class="rowstyle">
            <tr class="ui-state-hover">

                @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 25)
                {
                    <td style="width: 10%; text-align: right">
                        @Html.LabelFor(model => model.StateCode)
                        <label style="color: red;">*</label>
                    </td>

                    <td style="text-align: center; width: 30%;">
                        @Html.DropDownListFor(m => m.StateCode, Model.StateList, new { @id = "ddlStateSearch", @title = "Select State", @tabindex = 1 })
                        <br>
                        @Html.ValidationMessageFor(m => m.StateCode)
                    </td> 
                }

                <td style="width: 20%; text-align: right">
                    @Html.LabelFor(model => model.DistrictCode)
                    <label style="color: red;">*</label>
                </td>

                <td style="text-align: center; width: 30%;">
                    @Html.DropDownListFor(m => m.DistrictCode, Model.DistrictList, new { @id = "ddlDistrictSearch", @title = "Select District", @tabindex = 1 })
                    <br>
                    @Html.ValidationMessageFor(m => m.DistrictCode)
                </td>
                <td colspan="6" style="text-align: left;">
                    <input type="button" id="btnSearch" name="btnSearch" value="View" class="jqueryButton" title="Serach" tabindex="9" />
                </td>
            </tr>

        </table>
    </div>
</form>

<br />
<br />
<div id="accordionMonitorsInspection" style="display: none; width: 98%; margin-top: 10px;">
    <h3 style="text-align: left" class="ui-accordion-header ui-helper-reset ui-state-default ui-accordion-header-active ui-state-active ui-corner-top"><a id="" href="#" style="font-size: .9em;">Inspection Details</a>
        <a href="#" style="float: right;">
            <img style="border: none" class="ui-icon ui-icon-closethick" onclick="closeMonitorsInspectionDetails();" /></a>
    </h3>
    <div id="divFileTraceMapsUpload" style="display: none; text-align: center" class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom ui-accordion-content-active">
    </div>
</div>

<br />
<br />

<table id="tblTraceMapList">
</table>
<div id="dvTraceMapsListPager"></div>
