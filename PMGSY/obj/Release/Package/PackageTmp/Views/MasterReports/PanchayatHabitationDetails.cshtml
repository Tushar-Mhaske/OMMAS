@{
    ViewBag.Title = "_PanchayatHabitationDetails";
}

@model PMGSY.Models.MasterReports.MasterReportsModel

@Html.Hidden("hdnLevelId", PMGSY.Extensions.PMGSYSession.Current.LevelId.ToString())

@if (PMGSY.Extensions.PMGSYSession.Current.StateCode != 0)
{           
    @Html.Hidden("STATE_NAME", PMGSY.Extensions.PMGSYSession.Current.StateName.ToString())
}

@if (PMGSY.Extensions.PMGSYSession.Current.DistrictCode != 0)
{
    @Html.Hidden("DISTRICT_NAME", PMGSY.Extensions.PMGSYSession.Current.DistrictName.ToString())   
}
    
  
@Html.HiddenFor(model => model.BLOCK_NAME)
@Html.HiddenFor(model => model.MAST_STATE_CODE)
@Html.HiddenFor(model => model.MAST_DISTRICT_CODE)
<div style="width: 100%">
    <table class="ui-state-default ui-corner-all" style="width: 100%;">
        <tr>
            <td style="width: 2%;"></td>
            <td style="text-align: left; width: 5%;">
                @Html.Label("State")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("StateList_PanchayatHabitationDetails", ViewData["STATE"] as IEnumerable<SelectListItem>, new { @title = "State", @tabindex = 1 })
            </td>
            <td style="text-align: left; width: 5%;">
                @Html.Label("District")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("DistrictList_PanchayatHabitationDetails", ViewData["DISTRICT"] as IEnumerable<SelectListItem>, new { @title = "District", @tabindex = 2 })
            </td>
            <td style="text-align: left; width: 5%;">
                @Html.Label("Block")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("BlockList_PanchayatHabitationDetails", ViewData["BLOCK"] as IEnumerable<SelectListItem>, new { @title = "Block", @tabindex = 3 })
            </td>
            <td style="text-align: left; width: 5%;">
                @Html.Label("Panchayat")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("PanchayatList_PanchayatHabitationDetails", ViewData["PANCHAYAT"] as IEnumerable<SelectListItem>, new { @title = "Panchayat", @tabindex = 4 })
            </td>
              <td style="text-align: left; width: 4%;">
                @Html.Label("Active")
            </td>
            <td style="width: 10%;">
                @Html.DropDownList("ActiveType_PanchayatHabitationDetails", ViewData["Active_TYPE"] as IEnumerable<SelectListItem>, new { @title = "Active", @tabindex = 5 })
            </td>
            <td style="text-align: center; width: 5%; margin-left: 5px;">
                <input type="button" id="PanchayatHabitationDetailsButton" value="View" class="jqueryButton" title="View Details" tabindex="6" />
            </td>
           
        </tr>

    </table>
</div>
<br />

<div id="PanchayatHabitationDetails">
    <table id="PanchayatHabitationDetailsTable"></table>
</div>
<div id="PanchayatHabitationDetailsPager"></div>

<script src="~/Scripts/MasterReports/PanchayatHabitationDetails.js" type="text/javascript"></script>
<script src="~/Scripts/custom/Generic.js"></script>