      <style type="text/css">
    #map-canvas
    {
        height: 500px;
    }
</style>
 
        <script src="~/Scripts/custom/Generic.js"></script>
        <script src="~/Areas/QMSSRSReports/Scripts/BlockGoogleMap.js"></script>
     

