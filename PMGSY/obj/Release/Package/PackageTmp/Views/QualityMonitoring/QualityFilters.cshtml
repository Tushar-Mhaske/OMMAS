@model PMGSY.Models.QualityMonitoring.QMFilterViewModel
@{ Layout = null; }

<!DOCTYPE html>

<html>
<head>

<script src="~/Scripts/QualityMonitoring/QualityFilters.js"></script>

</head>
<body>



    <div style="width:99%; height:20px;border:none; margin-top:5px; margin-bottom:-15px; " class="ui-state-default">
            <span style="float:right;margin-right:2Px; margin-top:2px" id="id3TierFilterDiv" class="ui-icon ui-icon-circle-triangle-n"></span>     
     </div>

     <div style="width: 99%; border:none; margin-top:-15px; margin-bottom:10px;" class="ui-state-default">      
                <div id="div3TierFilterForm">
                    <center>
                        <form id="3TierFilterForm">     
                            <table style="margin-top:10px; margin-bottom:5px; width:75%">
                                <tr>
                                    
                                    <td style="width:10%;padding-left:25px;">
                                        @Html.LabelFor(model => model.MAST_STATE_CODE)
                                    </td>
                                    <td style="width:10%">
                                        @*@if(PMGSY.Extensions.PMGSYSession.Current.RoleCode == 5)*@
                                        @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 9 || PMGSY.Extensions.PMGSYSession.Current.RoleCode == 5)
                                        {
                                            @Html.DropDownListFor(model => model.MAST_STATE_CODE, new SelectList(Model.STATES, "Value", "Text"))
                                        
                                        }
                                        else if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 8 || PMGSY.Extensions.PMGSYSession.Current.RoleCode == 22 || PMGSY.Extensions.PMGSYSession.Current.RoleCode == 38 || PMGSY.Extensions.PMGSYSession.Current.RoleCode == 69 || PMGSY.Extensions.PMGSYSession.Current.RoleCode == 54 || PMGSY.Extensions.PMGSYSession.Current.RoleCode == 48)
                                        {
                                            @Html.HiddenFor(model => model.MAST_STATE_CODE)
                                            @PMGSY.Extensions.PMGSYSession.Current.StateName
                                        }
                                    </td> 
                                     
                                    <td style="text-align:right;width:15%;padding-right:20px;">
                                        Schedule From : 
                                    </td>
                                    <td style="width:10%;padding-left:25px;">
                                        @Html.LabelFor(model => model.FROM_MONTH)
                                    </td>
                                    <td style="width:10%">
                                        @Html.DropDownListFor(model => model.FROM_MONTH, new SelectList(Model.FROM_MONTHS_LIST, "Value", "Text"))
                                    </td>
                                    <td style="width:10%;padding-left:25px;">
                                        @Html.LabelFor(model => model.FROM_YEAR)
                                    </td>
                                    <td style="width:10%">
                                        @Html.DropDownListFor(model => model.FROM_YEAR, new SelectList(Model.FROM_YEARS_LIST, "Value", "Text"))
                                    </td>
                                      @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 9 )
                                        {
                                     <td style="text-align:left;width:10%;">
                                                @Html.LabelFor(model => model.ROAD_STATUS)
                                        </td>
                                        <td style="width:10%;padding-left:0px;">
                                                @Html.DropDownListFor(model => model.ROAD_STATUS, new SelectList(Model.ROAD_STATUS_LIST, "Value", "Text"))
                                                @Html.ValidationMessageFor(model => model.ROAD_STATUS)
                                        </td>
                                      }
                                 </tr>
                                 <tr>
                                       <td style="width:10%;padding-left:25px;">
                                            @Html.LabelFor(model => model.ADMIN_QM_CODE)
                                       </td>
                                       <td style="width:20%">
                                            <div class="ui-widget">
                                                @*@Html.TextBoxFor(model => model.ADMIN_QM_CODE)*@
                                                @Html.DropDownListFor(model => model.ADMIN_QM_CODE, new SelectList(Model.MONITORS, "Value", "Text"))
                                                @Html.ValidationMessageFor(model => model.ADMIN_QM_CODE)
                                            </div>
                                       </td>
                                        <td style="text-align:right;width:15%;padding-right:20px;">
                                        Schedule To : 
                                        </td>
                                        <td style="width:10%;padding-left:25px;">
                                            @Html.LabelFor(model => model.TO_MONTH)
                                        </td>
                                        <td style="width:10%">
                                            @Html.DropDownListFor(model => model.TO_MONTH, new SelectList(Model.TO_MONTHS_LIST, "Value", "Text"))
                                        </td>
                                        <td style="width:10%;padding-left:25px;">
                                            @Html.LabelFor(model => model.TO_YEAR)
                                        </td>
                                        <td style="width:10%">
                                            @Html.DropDownListFor(model => model.TO_YEAR, new SelectList(Model.TO_YEARS_LIST, "Value", "Text"))
                                        </td>
                                     @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 9 )
                                        {
                                       <td style="width:10%;padding-left:25px;">  @Html.Label("Scheme") </td>
                                        <td style="width:10%">
                                            @Html.DropDownListFor(model => model.schemeType, new SelectList(Model.schemeList, "Value", "Text"))
                                            <br />
                                             @Html.ValidationMessageFor(m => m.schemeType)
                                        </td>
                                     }

                                 </tr>
                                  <tr>
                                    <td colspan="8" style="text-align:center;">
                                        <input type="button" class="jqueryButton" value="List Details" id="btn3TierListInspectionDetails" name ="btn3TierListDetails"/>
                                    </td>
                                 </tr>                            
                            </table>
                        </form>  
                    </center>
            </div>
        </div>


</body>
</html>