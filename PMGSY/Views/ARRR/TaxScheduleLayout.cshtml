@model PMGSY.Models.ARRR.TaxScheduleViewModel

<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/jquery.ui.datepicker.js" type="text/javascript"></script>
<script src="~/Scripts/ARRR/TaxScheduleLayout.js"></script>

<div id="dvTaxSchedule">
    <div id="dvhdTaxSchedule" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
        Add Tax<span style="float: right; margin-right: 2Px; margin-top: 2px" id="idFilterDivTax" class="ui-icon ui-icon-circle-triangle-n"></span>
    </div>
    <form id="frmTaxSchedule">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m => m.User_Action)
        @Html.HiddenFor(m => m.Rate)
        @Html.HiddenFor(m => m.itemCode)
        <table class="rowstyle" style="width: 100%; margin-bottom: 5px; border: 1px solid #B5B8C8;">
            <tr>
                <td style="width: 2%;"></td>
                <td style="text-align: left; width: 5%;">
                    <label>Taxes</label>
                </td>
                <td style="width: 5%;">
                    @Html.DropDownListFor(model => model.tax, new SelectList(Model.taxList, "Value", "Text"), new { @title = "Tax", @id = "ddlTax", @style = "width:200px;", @tabindex = 1 })
                    <br />
                    @Html.ValidationMessageFor(model => model.tax)
                </td>
                <td colspan="2"></td>
            </tr>
            <tr>
                <td style="width: 2%;"></td>
                <td style="width: 5%;">
                    <label>Type</label><label style="color: red;"> *</label></td>
               <td style="width: 5%;">
                    @Html.RadioButtonFor(model => model.taxType, "P", new { @id = "rdbPer", @name = "rdbPer", @checked = "checked", @tabindex = 2 })
                    <label>Percentage</label>
                    <br />
                    @Html.ValidationMessageFor(m => m.taxType)
                </td>
                <td style="width: 5%;">
                    @Html.RadioButtonFor(model => model.taxType, "L", new { @id = "rdbLmsm", @name = "rdbLmsm", @tabindex = 2 })
                    <label>Lumsum</label>
                    <br />
                    @Html.ValidationMessageFor(m => m.taxType)
                </td>
                <td style="width: 5%"></td>
            </tr>
            <tr class="per">
                <td style="width: 2%;"></td>
                <td style="width: 5%;">
                    <label>Rate</label><label style="color: red;"> *</label></td>
                <td style="width: 5%;">
                    @Html.TextBoxFor(m => m.RatePer, new { @id = "txtRatePer", @maxlength = "5", placeholder = "Please enter Rate", @tabindex = 3 })
                    <br />
                    @Html.ValidationMessageFor(m => m.RatePer)
                </td>
                <td colspan="2"></td>
            </tr>
             <tr class="lmsm">
                <td style="width: 2%;"></td>
                <td style="width: 5%;">
                    <label>Rate</label><label style="color: red;"> *</label></td>
                <td style="width: 5%;">
                    @Html.TextBoxFor(m => m.Ratelmsm, new { @id = "txtRatelmsm", @maxlength = "6", placeholder = "Please enter Rate", @tabindex = 3 })
                    <br />
                    @Html.ValidationMessageFor(m => m.Ratelmsm)
                </td>
                <td colspan="2"></td>
            </tr>
            <tr style="text-align: center;">
                <td colspan="5">
                    <input type="button" id="btnSaveTax" name="Save" value="Save" class="jqueryButton" title="Save" tabindex="4" />
                    <input type="reset" id="btnResetTax" name="Reset" value="Reset" class="jqueryButton" title="Reset" tabindex="5" />
                </td>
            </tr>
        </table>
    </form>
</div>

