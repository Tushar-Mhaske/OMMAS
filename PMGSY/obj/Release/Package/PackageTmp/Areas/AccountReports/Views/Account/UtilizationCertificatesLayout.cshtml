

@model PMGSY.Areas.AccountReports.Models.UtilizationCertificate
<script src="~/Areas/AccountReports/Scripts/UC.js"></script>
<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>

<div id="dvSearchParameter" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
@*<div id="loadFilters">*@
    <form id="frmUC">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.StateName)
       
        <table style="width: 100%;">
            <tr>
                <td style="width: 2%;"></td>
                
                <td style="text-align: left; width: 5%;">
               <b>  @Html.LabelFor(model => model.StateCode)</b>
                </td>
                 <td style="width: 15%;">

                     @if (PMGSY.Extensions.PMGSYSession.Current.LevelId == 4)
                     { 
                      @Html.Label(PMGSY.Extensions.PMGSYSession.Current.StateName)                                             
                      @Html.Hidden("StateCode",PMGSY.Extensions.PMGSYSession.Current.StateCode)                                             
                         
                     }
                     else
                     {
 @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.lstStates, "Value", "Text"), new { @title ="State", @tabindex = 1, @id = "ddlState", @style = "width:150px" })
                     }
             @Html.ValidationMessageFor(m => m.StateCode)                    
                </td>



                  <td style="text-align: left; width: 5%;">
                <b> @Html.LabelFor(model => model.AgencyCode)</b>
                </td>
                 <td style="width: 15%;">
                     @if (PMGSY.Extensions.PMGSYSession.Current.LevelId == 4)
                     { 
                      @Html.Label(PMGSY.Extensions.PMGSYSession.Current.DepartmentName)                                             
                      @Html.Hidden("AgencyCode",PMGSY.Extensions.PMGSYSession.Current.AdminNdCode)                                             
                         
                     }
                     else
                     {
 @Html.DropDownListFor(model => model.AgencyCode, new SelectList(Model.lstAgency, "Value", "Text"), new { @title ="Agency", @tabindex = 1, @id = "ddlAgency", @style = "width:150px" })}
             @Html.ValidationMessageFor(m => m.StateCode)                    
                </td>



                 <td style="text-align: left; width: 5%;">
                 <b>@Html.LabelFor(model => model.YearCode)</b>
                </td>
                 <td style="width: 15%;">
 @Html.DropDownListFor(model => model.YearCode, new SelectList(Model.lstYear, "Value", "Text"), new { @title ="Year", @tabindex = 1, @id = "ddlYear", @style = "width:150px" })
             @Html.ValidationMessageFor(m => m.YearCode)                    
                </td>


                
                    <td>
                        <input type="button" id="btnView" value="View"  Class="jqueryButton"  Title="View Details"tabindex="4" />
                    </td>
              
            </tr>
        </table>
    </form>
</div>
<div id="loadReport" class="divLoadReport"></div>
