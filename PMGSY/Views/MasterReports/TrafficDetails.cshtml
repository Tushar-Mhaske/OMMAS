@{
    ViewBag.Title = "Traffic Details";
}

<div style="width: 100%">
    <table class="ui-state-default ui-corner-all" style="width: 100%;">
        <tr>
            <td style="width: 6%;"></td>
            <td style="text-align: left; width: 10%;">
                @Html.Label("Traffic Status")
            </td>
             <td style="width: 15%;">
                @Html.DropDownList("MAST_TRAFFIC_STATUS", ViewData["MAST_TRAFFIC_STATUS"] as IEnumerable<SelectListItem>, new { @title = "Traffic Status", @tabindex = 1 })
            </td>
           <td style="text-align: center; width: 5%; margin-left: 5px;">
                <input type="button" id="TrafficDetailsButton" value="View" class="jqueryButton" title="View Details" tabindex="2" />
            </td>
            <td style="width: 60%;"></td>
        </tr>
        
    </table>
</div>
<br />

<div id="TrafficDetails">
    <table id="TrafficDetailsTable"></table>
</div> 
<div id="TrafficDetailsPager"></div>

<script src="~/Scripts/MasterReports/TrafficDetails.js" type="text/javascript"></script>
<script src="~/Scripts/custom/Generic.js"></script>