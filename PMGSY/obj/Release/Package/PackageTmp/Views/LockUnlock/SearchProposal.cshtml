@model PMGSY.Models.LockUnlock.ProposalFilterViewModel
@{
    ViewBag.Title = "SearchProposal";
}

@using PMGSY.Extensions


<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/LockUnlock/SearchProposal.js"></script>

<form id="searchProposal">
<table style="width:100%; margin-top:2px; margin-bottom:0px; text-align:left; border:ridge 0.1em #ccc;">
    <tr>
     @Html.HiddenFor(model=>model.ModuleCode)
     @Html.HiddenFor(model=>model.SubModuleCode)
     
     <td style="width:70%;text-align:left;border:ridge 0.1em #ccc;">
                    <div style="width: 96%; border:none; margin-top:0px; margin-bottom:10px;" class="ui-state-default">
                        @*<table id="Table1"  cellpadding="3px" class="rowstyle" style="margin-top:10px; text-align:left; border:ridge 0.1em #ccc; width:100%; padding-top:5px 5px 5px 5px;">*@
                        <center>
                       
                        <table style="margin-top:10px; margin-bottom:5px";>
                            <tr>
                                <td></td>
                                <td><label id="lblYear">Year</label></td>
                                <td>
                                    
                                    @Html.DropDownListFor(model=>model.Year, ViewData["Year"] as IEnumerable<SelectListItem>,new {@id="ddlYearSearch",title="Please Select Year",@tabindex=1 })
                                </td>
                                <td>
                                    <label id="lblState">State</label>
                                </td>
                                <td>
                                    @if(PMGSYSession.Current.RoleCode == 25)
                                    {
                                        @Html.DropDownListFor(model=>model.State, ViewData["State"] as IEnumerable<SelectListItem>,new {@id="ddlStateSearch",title="Please Select State",@tabindex=2 })
                                    }
                                    else
                                    {
                                         @Html.DropDownListFor(model=>model.State, ViewData["State"] as IEnumerable<SelectListItem>,new {@id="ddlStateSearch",title="Please Select State",@tabindex=2,@disabled="disabled" })
                                    }
                                </td>
                                <td>
                                    <label id="lblDistrict">District</label>
                                </td>
                                <td>
                                    @if (PMGSYSession.Current.RoleCode == 22)
                                    {
                                         @Html.DropDownListFor(model=>model.District, ViewData["District"] as IEnumerable<SelectListItem>, new {@id="ddlDistrictSearch",title="Please Select District",@tabindex=2,@disabled="disabled" })
                                    }
                                    else
                                    {
                                        @Html.DropDownListFor(model=>model.District, ViewData["District"] as IEnumerable<SelectListItem>, new {@id="ddlDistrictSearch",title="Please Select District",@tabindex=2 })
                                    }
                                    
                                </td>
                                <td>
                                    <label id="lblPackage">Package</label>
                                    <label id="lblBatch">Batch</label>
                                </td>
                                <td>
                                    @Html.DropDownListFor(model=>model.Package, ViewData["Package"] as IEnumerable<SelectListItem>, new {@id="ddlPackageSearch",title="Please Select Package",@tabindex=2 })
                                    @Html.DropDownListFor(model=>model.Batch, ViewData["Batch"] as IEnumerable<SelectListItem>, "--All Batches--",new {@id="ddlBatchSearch",title="Please Select Batch",@tabindex=2 })
                                </td>
                            </tr>
                            <tr>
                                <td colspan="9">
                                    <center>
                                        <table>
                                            <td>
                                                <input type="button" style="display:none;" class="jqueryButton" value="List Proposal Details" id="btnListProposal" name ="btnListProposal" title="Click here to list Proposal Details"/>
                                            </td>
                                        </table>
                                    </center>
                                </td>
                            </tr>
                        </table>
                        </center>
            </div>
      </td>
       </tr>
</table>
                </form>

