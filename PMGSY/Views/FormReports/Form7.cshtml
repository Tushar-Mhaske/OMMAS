@model PMGSY.Models.FormReports.FormReportsViewModel

<script src="~/Scripts/FormReports/Form7.js"></script>
<script src="~/Scripts/custom/Generic.js"></script>
<form id="frmForm7Report">
     @Html.Hidden("hdnLevelId", PMGSY.Extensions.PMGSYSession.Current.LevelId.ToString())
     @Html.HiddenFor(model => model.STATE_NAME)   
     @Html.HiddenFor(model => model.DISTRICT_NAME)   
     @Html.HiddenFor(model => model.MAST_STATE_CODE)
     @Html.HiddenFor(model => model.MAST_DISTRICT_CODE)
   <div style="width: 99.5%">
    <table class="ui-state-default ui-corner-all" style="width: 100%;">
        <tr>
                 <td style="width: 6%;"></td>
              <td style="text-align: left; width: 5%;">
                    @Html.LabelFor(model => model.IMS_BATCH)
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.IMS_BATCH, new SelectList(Model.BATCHS, "Value", "Text"),new { @id = "ddlIMS_BATCHSearchForm7",@title="Batch",@tabindex = 1 })
                </td>
                <td style="text-align: left; width: 5%;">
                    @Html.LabelFor(model => model.MAST_YEAR)
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.MAST_YEAR, new SelectList(Model.YEARS, "Value", "Text"),new { @id = "ddlMAST_YEARSearchForm7",@title="Year",@tabindex = 2 })
                </td>
                <td style="text-align: left; width: 9%;">
                    @Html.LabelFor(model => model.IMS_COLLABORATION)
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.IMS_COLLABORATION, new SelectList(Model.COLLABORATIONS, "Value", "Text"),new { @id = "ddlIMS_COLLABORATIONSearchForm7",@title="Funding Agency",@tabindex = 3 })
                </td>
                <td style="text-align: left; width: 9%;">
                    @Html.LabelFor(model => model.MAST_PROPOSAL_TYPE)
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.MAST_PROPOSAL_TYPE, new SelectList(Model.PROPOSAL_TYPES, "Value", "Text"),new { @id = "ddlMAST_PROPOSAL_TYPESearchForm7",@title="Proposal Type" ,@tabindex = 4})
                </td>
                <td style="width: 15%;"> 
                    <input type="button" class="jqueryButton" title="View Details"  value="View" id="btnViewForm7Details"  name="btnViewForm7Details" tabindex="5"/> 
                </td>
            </tr>
        </table> 
       
    </div>
        <br />
    @if(PMGSY.Extensions.PMGSYSession.Current.LevelId == 6)     //Mord
    {
         <table id="tbForm7StateLevelReport"></table>
         <div id="dvForm7StateLevelReportPager"></div>
 
         <br />
         <table id="tbForm7DistrictLevelReport"></table>
         <div id="dvForm7DistrictLevelReportPager"></div> 

         <br />
         <table id="tbForm7BlockLevelReport"></table>
         <div id="dvForm7BlockLevelReportPager"></div> 
         <br />
         <table id="tbForm7FinalLevelReport"></table>
         <div id="dvForm7FinalLevelReportPager"></div> 

    }
    else if(PMGSY.Extensions.PMGSYSession.Current.LevelId == 4)     //State
    {
         <table id="tbForm7DistrictLevelReport"></table>
         <div id="dvForm7DistrictLevelReportPager"></div> 

         <br />
         <table id="tbForm7BlockLevelReport"></table>
         <div id="dvForm7BlockLevelReportPager"></div> 
         <br />
         <table id="tbForm7FinalLevelReport"></table>
         <div id="dvForm7FinalLevelReportPager"></div> 
        
     
    }
    else if(PMGSY.Extensions.PMGSYSession.Current.LevelId == 5)     //District
    {
        <table id="tbForm7BlockLevelReport"></table>
        <div id="dvForm7BlockLevelReportPager"></div> 
         <br />
         <table id="tbForm7FinalLevelReport"></table>
         <div id="dvForm7FinalLevelReportPager"></div> 
    }

 </form>