@model PMGSY.Models.MasterDataEntry.MPConstituency


<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/MasterDataEntry/Master_CreateMPConstituency.js")"> </script>

<div id="dvhdCreateNewMPConstituencyDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align:left; height:20px;"> @*margin-left:10px;margin-right:10px;margin-top:10px; *@
     <span class="ui-jqgrid-title" style="float:left">&nbsp;MP Constituency Details</span>
     
      <span  id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float:right"></span>
      </div>

<div id="dvCreateNewMPConstituencyDetails" class="ui-corner-bottom" style=" display: block; border: 1px solid #B5B8C8; "> @*margin-left: 10px; margin-right: 10px;*@
    
   
<div id="dvErrorMessage"class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em ; display:none; margin:5px 5px 5px 5px; text-align:left ">
    <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
    <strong>Alert:</strong> <span id="message"> </span>
</div>


    <form id="frmCreateMPConstituency">

   @Html.AntiForgeryToken()
   
    <center>@Html.ValidationSummary(true)
            
    </center>
        
        <table style="width:100%;margin-top:10px;" class="rowstyle"  >

              <tr style="display:none">
                <td colspan="3">
                      @Html.HiddenFor(model => model.EncryptedMpConstituencyCode)                
                </td>

            </tr>
                 
            <tr>
                <td style="width:28%;">

                 </td>
                <td style="text-align:left;width:20%;" >
                    @Html.LabelFor(model => model.MAST_STATE_CODE) <label style="color:red;"> *</label>
                </td>
                            
                <td>
                     @if (Model.EncryptedMpConstituencyCode == null)
                     {                          
                     @Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.States, new {@id="ddlStates", @title = "State", @tabindex = 1 })
                     @Html.ValidationMessageFor(model => model.MAST_STATE_CODE)

                     }
                    else
                    {
                          @Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.States, new {@id="ddlStates", @title = "State", @tabindex = 1,disabled = "disabled" })
                     }
                   
                    
                    
                </td>

                 

            </tr>
            <tr>
                <td></td>
                 <td >
                      @Html.LabelFor(model => model.MAST_MP_CONST_NAME) <label style="color:red;"> *</label>
                </td>
               
                <td>
                     @Html.TextBoxFor(model => model.MAST_MP_CONST_NAME, new { maxlength = 50, @title = "MP Constituency Name", @tabindex = 2, placeholder="Enter MP Constituency Name..." })
                   
                     @Html.ValidationMessageFor(model => model.MAST_MP_CONST_NAME)

                </td>

            </tr>
          
            
           
         
      
            <tr>
              
                <td></td>
                <td></td>
                <td >
              
                     @if (Model.EncryptedMpConstituencyCode == null)
                     {
                       
                         <input type="button" id="btnSave" name="btnSave" value="Save" class= "jqueryButton" title="Save MP Constituency Details" tabindex="3"  /> 
                           
                         
                         <input type="reset" id="btnReset" name="btnReset" value="Reset" class= "jqueryButton" title="Reset" tabindex="4"  />
                              
                     }
                    else
                    {
                        
                         <input type="button" id="btnUpdate" name="btnUpdate" value="Update" class= "jqueryButton" title="Update MP Constituency Details" tabindex="3"  />
                            
                        
                          <input type="button" id="btnCancel" name="btnCancel" value="Cancel" class= "jqueryButton" title="Cancel" tabindex="4"  />
                            
                     }
                     

                    
                </td>
                

            </tr>

               <tr >
                <td colspan="3">
                      <label style="border:none">[ Note: Fields marked with<label style="color: red;"> * </label>are mandatory.]</label>
                </td>

            </tr>
        </table>
         
    </form>
   
</div>



