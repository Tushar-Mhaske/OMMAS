<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>

<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.ui.autocomplete.js")"> </script>
<script src="~/Scripts/Master/Master_SearchMpMembers.js"></script>

<div id="dvhdSearch" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    @*margin-left:10px;margin-right:10px;margin-top:10px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Search</span>

    <span id="spCollapseIconS" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvSearchParameter" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">@*margin-left: 10px; margin-right: 10px; *@
    <form id="frmSearchMpMembers">
        @Html.Hidden("RoleCode",PMGSY.Extensions.PMGSYSession.Current.RoleCode)
        @Html.Hidden("StateCode",PMGSY.Extensions.PMGSYSession.Current.StateCode)
        <center>@Html.ValidationSummary(true) </center>
        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="text-align: left; width: 12%;">
                    @Html.Label("Lok Sabha Term")
                </td>
                <td style="width: 20%;">
                    @Html.DropDownList("ddlSearchTerm", ViewData["Term"] as IEnumerable<SelectListItem>, "All Terms", new { @id = "ddlSearchTerm", @title = "Lok Sabha Term", @tabindex = 1 })
                </td>
                <td style="text-align: left; width: 10%;">
                    @Html.Label("State")
                </td>
                <td style="text-align: left; width: 20%">
                    @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 36)
                    { 
                        @Html.DropDownList("ddlSearchState", ViewData["State"] as IEnumerable<SelectListItem>,  new { @id = "ddlSearchState", @title = "State", @tabindex = 2 ,@disabled="disabled"})                    
                    }else{
                        @Html.DropDownList("ddlSearchState", ViewData["State"] as IEnumerable<SelectListItem>,  new { @id = "ddlSearchState", @title = "State", @tabindex = 2 })
                    }
                </td>
            </tr>
            <tr>
                <td style="text-align: left; width: 15%;">
                    @Html.Label("MP Constituency")
                </td>
                <td style="width: 20%;">
                    @*        @Html.DropDownList("ddlSearchConstituency", ViewData["ConstituencyNames"] as IEnumerable<SelectListItem>, "All Constituency", new { @id = "ddlSearchConstituency", @title = "MP Constituency", @tabindex = 3 })
          *@
                    @Html.DropDownList("ddlSearchConstituency", ViewData["ConstituencyNames"] as IEnumerable<SelectListItem>, new { @id = "ddlSearchConstituency", @title = "MP Constituency" })
                </td>
                <td style="text-align: left; width: 12%;">
                    @Html.Label("Member Name")
                </td>
                <td style="width: 20%;">
                    @Html.TextBox("txtSearchMember", string.Empty, new { @id = "txtSearchMember", @title = "Member Name", @tabindex = 4, autocomplet = "on", @placeholder = "Enter Member Name..." })
                </td>

            </tr>
            <tr>
                <td colspan="4">
                    <center>
                    <input type="button" id="btnSearch" name="btnSearch" value="Search" class="jqueryButton" title="Search MP Member" tabindex="5" />
                    </center>
                </td>

            </tr>
        </table>
    </form>
</div>

