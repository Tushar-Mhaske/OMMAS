            <tr>
                <td colspan="5">
                    @if (Model.EncryptedTechCode == null)
                    {
                        <center>
                    <input type="button" value="Save" name="btnSaveTechnologyDetails" id="btnSaveTechnologyDetails" class="jqueryButton" tabindex="4" title="Save Details"/>
                    <input type="reset" value="Reset" name="btnResetTechnologyDetails" id="btnResetTechnologyDetails" class="jqueryButton" tabindex="5" title="Reset"/>
            </center>
                    }
                    else
                    {
                        <center>
                <input type="button" value="Update" name="btnUpdateTechnologyDetails" id="btnUpdateTechnologyDetails" class="jqueryButton" tabindex="4" title="Update Details"/>
