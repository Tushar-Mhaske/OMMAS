@model PMGSY.Models.Master.MasterContractorViewModel

@{
    ViewBag.Title = "ViewContractorDetails";
}

<script src="~/Scripts/custom/Generic.js"></script>

<table id="Table1"  cellspacing="0" cellpadding="5px" class="rowstyle" style="margin-top:10px; text-align:left; border:ridge 0.1em #ccc; width:100%; padding-top:5px 5px 5px 5px;">
    <tr>
    </tr>
    <tr>
        <td>
            @Html.Label("Type")
        </td>
        <td colspan="3">
            @if (Model.MAST_CON_SUP_FLAG == "S")
            {
                <label>Supplier</label> 
            }
            else if (Model.MAST_CON_SUP_FLAG == "C")
            {
                <label>Contractor</label> 
            }
        </td>
    </tr>
    <tr>
        <td>
            @if (Model.MAST_CON_SUP_FLAG == "S")
            {
                <label>Supplier Name</label> 
            }
            else if (Model.MAST_CON_SUP_FLAG == "C")
            {
                <label>Contractor Name</label> 
            }
        </td>
        <td>
            @Html.DisplayFor(model=>model.MAST_CON_FNAME) <label> </label>@Html.DisplayFor(model=>model.MAST_CON_MNAME)<label> </label>@Html.DisplayFor(model=>model.MAST_CON_LNAME)
        </td>
        <td>
            @Html.LabelFor(model=>model.MAST_CON_COMPANY_NAME)
        </td>
        <td>
            @Html.DisplayFor(model=>model.MAST_CON_COMPANY_NAME)
        </td>
    </tr>
    <tr>
        <td>
            <label>PAN/TAN No.</label>
        </td>
        <td>
            @Html.DisplayFor(model=>model.MAST_CON_PAN)
        </td>
        <td>
            @Html.Label("Is Active")
        </td>
        <td>
            @if (Model.MAST_CON_STATUS == "A")
            {
                <label>Yes</label> 
            }
            else
            {
                <label>No</label> 
            }
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model=>model.MAST_CON_ADDR1)
        </td>
        <td>
            @Html.DisplayFor(model=>model.MAST_CON_ADDR1)<label> </label>@Html.DisplayFor(model=>model.MAST_CON_ADDR2)
