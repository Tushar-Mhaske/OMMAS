@model PMGSY.Models.Execution.EarthWorkExcavationViewModel
@using PMGSY.Extensions

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Scripts/Execution/EarthWorkExcavationLayout.js"></script>

<div id="dvhdEarthworkExcavationDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;EarthWork Excavation Details</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvPfmsPayment" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmEarthworkExcavation">
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.EncrProposalCode)
        @Html.HiddenFor(model => model.EncrProgressCode)

        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 5%;"></td>

                <td style="width: 10%;">
                    @Html.Label("Month")
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.Month, new SelectList(Model.lstMonth, "Value", "Text"), new { @id = "ddlMonth", style = "width:170px;", title = "Month" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Month)
                </td>
                <td style="width: 10%;">
                    @Html.Label("Year")
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.Year, new SelectList(Model.lstYear, "Value", "Text"), new { @id = "ddlYear", style = "width:170px;", title = "Year" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Year)
                </td>
                <td style="width: 10%;">
                    @Html.Label("Earthwork Excavation and PCC")
                </td>
                <td style="width: 20%;">
                    @if (!string.IsNullOrEmpty(Model.EarthWorkExcavationPCC))
                    {
                        
                        @Html.DropDownListFor(model => model.EarthWorkExcavationPCC, Model.lstEarthWorkExcavationPCC, new { @id = "ddlEarthwork", style = "width:170px;", title = "Earthwork" })
                        <br />
                        @Html.ValidationMessageFor(m => m.EarthWorkExcavationPCC)
                    }
                    else
                    {
                        @*@Html.DropDownListFor(model => model.EarthWorkExcavationPCC, new SelectList(Model.lstEarthWorkExcavationPCC, "Value", "Text"), new { @id = "ddlEarthwork", style = "width:170px;", title = "Earthwork" })*@
                        @Html.DropDownListFor(model => model.EarthWorkExcavationPCC, Model.lstEarthWorkExcavationPCC, new { @id = "ddlEarthwork", style = "width:170px;", title = "Earthwork" })                        
                        <br />
                        @Html.ValidationMessageFor(m => m.EarthWorkExcavationPCC)
                    }
                </td>
                <td style="text-align: left;" style="width: 10%;">
                    @if (Model.EncrProgressCode != null)
                    {
                        <input type="button" id="btnUpdate" value="Update" class="jqueryButton" />
                    }
                    else
                    {
                        <input type="button" id="btnSave" value="Save" class="jqueryButton" />
                    }
                    <input type="button" id="btnCancel" value="Cancel" class="jqueryButton" />
                </td>
                <td style="width: 5%;"></td>
            </tr>
        </table>
    </form>
</div>

