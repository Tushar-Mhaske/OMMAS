<style>
    .row {
        margin-bottom: 10px;
    }

    .label {
        font-weight: bold;
        width: 120px;
        text-align: right;
        margin-right: 10px;
        background-color: transparent !important;
        color: black !important;
        display: unset !important;
        font-size: 12.8px;
    }

    .span2 {
        margin-right: 10px;
    }

    .btn-group button {
        border-radius: 3px;
