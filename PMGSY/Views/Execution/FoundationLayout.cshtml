@model PMGSY.Models.Execution.FoundationViewModel
@using PMGSY.Extensions

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Scripts/Execution/FoundationLayout.js"></script>

<div style="text-align: left; height: 20px;">
    <b>Note :</b> <span class="ui-jqgrid-title" style="color: #865a24;">&nbsp;  Please enter Foundation details in sequence as 1] Below Plinth Level 2] At Plinth Level.</span>
</div>
<div id="dvhdFoundationDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Foundation Details</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvPfmsPayment" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmFoundation">
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.EncrProposalCode)
        @Html.HiddenFor(model => model.EncrProgressCode)
        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 2%;"></td>

                <td style="width: 5%;">
                    @Html.Label("Month")
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.Month, new SelectList(Model.lstMonth, "Value", "Text"), new { @id = "ddlMonth", style = "width:170px;", title = "Month" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Month)
                </td>
                <td style="width: 5%;">
                    @Html.Label("Year")
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.Year, new SelectList(Model.lstYear, "Value", "Text"), new { @id = "ddlYear", style = "width:170px;", title = "Year" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Year)
                </td>
                <td style="width: 7%;">
                    @Html.Label("Sub Component")
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.SubComponent, new SelectList(Model.lstSubComponent, "Value", "Text"), new { @id = "ddlSubComponent", style = "width:170px;", title = "SubComponent" })
                    <br />
                    @Html.ValidationMessageFor(m => m.SubComponent)
                </td>
                <td style="width: 7%;">
                    @Html.Label("Foundation")
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.Foundation, new SelectList(Model.lstFoundation, "Value", "Text"), new { @id = "ddlFoundation", style = "width:170px;", title = "Foundation" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Foundation)
                </td>
                <td style="text-align: left;" style="width: 20%;">
                    @if (Model.EncrProgressCode != null)
                    {
                        <input type="button" id="btnUpdate" value="Update" class="jqueryButton" />
                    }
                    else
                    {
                        <input type="button" id="btnSave" value="Save" class="jqueryButton" />
                    }
                    <input type="button" id="btnCancel" value="Cancel" class="jqueryButton" />
                </td>
                <td style="width: 2%;"></td>
            </tr>
        </table>
    </form>
</div>

