@model PMGSY.Models.CoreNetwork.CUPLPMGSY3ViewModel
@using PMGSY.Extensions

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Scripts/CoreNetwork/CUPLPMGSY3Layout.js"></script>

<div id="dvhdCUPLDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:0px;margin-right:0px;margin-top:0px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;CUPL PMGSY3</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvFinalizeMRL" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmCUPLLayout">
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        
        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 5%;"></td>
                <td style="width: 10%;">
                    @Html.Label("District")
                </td>
                <td style="width: 25%;">
                    @Html.DropDownListFor(model => model.districtCode, new SelectList(Model.lstDistricts, "Value", "Text"), new { @id = "ddlDistrict", style = "width:170px;", title = "District" })
                    <br />
                    @Html.ValidationMessageFor(m => m.districtCode)
                </td>
                <td style="width: 10%;">
                    @Html.Label("Year")
                </td>
                <td style="width: 25%;">
                    @Html.DropDownListFor(model => model.Year, new SelectList(Model.lstYears, "Value", "Text"), new { @id = "ddlYear", style = "width:170px;", title = "Year" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Year)
                </td>
                <td style="width: 10%;">
                    @Html.Label("Batch")
                </td>
                <td style="width: 25%;">
                    @Html.DropDownListFor(model => model.Batch, new SelectList(Model.lstBatch, "Value", "Text"), new { @id = "ddlBatch", style = "width:170px;", title = "Batch" })
                    <br />
                    @Html.ValidationMessageFor(m => m.districtCode)
                </td>
                <td style="text-align: left;" style="width: 5%;">
                    <input type="button" id="btnView" value="View" class="jqueryButton" />
                </td>
                <td style="width: 5%;"></td>
            </tr>
        </table>
    </form>
</div>

 <div id="BlockDetails" style="text-align: left; width: 100%">
            <table id="tbBlockList" style="width: 95%"></table>
            <div id="dvBlockListPager"></div>
        </div>

<div id="loadReport" style="text-align: left; width: 100%; margin-top:10px;"></div>

<div id="dvModal" style="text-align: left; width: 100%; margin-top:10px;"></div>

<div id="CUPLkDetails" style="text-align: left; width: 100%">
    <table id="tbCUPLList" style="width: 95%"></table>
    <div id="dvCUPLListPager"></div>
</div>