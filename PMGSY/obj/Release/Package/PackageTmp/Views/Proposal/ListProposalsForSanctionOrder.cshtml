<div id="dvGenerateSanctionOrder" class="ui-state-default ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmFilterProposal">
        <div style="margin-left: 100px">

            @Html.ValidationSummary(true)
        </div>
        <div id="divError" class="ui-state-error ui-corner-all" style="text-align: left; display: none; width: 100%">
