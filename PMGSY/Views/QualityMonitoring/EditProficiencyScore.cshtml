@model PMGSY.Models.QualityMonitoring.ProficiencyTestScoreModel

<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/QualityMonitoring/MonitorProficiencyTestScore.js"></script>

<center>
    <form id="formEditScore">
        @Html.AntiForgeryToken()
        <center>@Html.ValidationSummary(true)</center>
        @Html.HiddenFor(model => model.ID)
        <div id="divAddScore" class="ui-corner-top ui-widget-header panelheader" style="text-align: center; margin-top: 20px; height: 20px; width: 100%">
            <span class="ui-jqgrid-title" id="inspOperation" style="float: left">&nbsp;&nbsp;Edit Proficiency Test Score</span>
            <span id="iconEditClose" class="ui-icon ui-icon-circle-close" style="float: right"></span>
        </div>
        <table class="rowstyle" style="width: 100%; margin-top: 0px; border: 1px solid grey; border-radius:0.5rem; padding: 0.5%">

            <tr>
                <td style="padding:0.5rem">
                    @Html.LabelFor(model => model.DATE_OF_EXAM)
                </td>
                <td>
                    @Html.Raw(Model.DATE_OF_EXAM.ToShortDateString())
                </td>

                <td>
                    @Html.LabelFor(model => model.INSTITUTION)
                </td>
                <td>
                    @Html.Raw(Model.INSTITUTION)
                </td>

                <td>
                    @Html.LabelFor(model => model.NQM_SQM)
                </td>
                <td>
                    @Html.Raw(Model.NQM_SQM)
                </td>
            </tr>

            <tr>
                <td style="padding:0.5rem">
                    @Html.LabelFor(model => model.MONITOR_NAME)
                </td>
                <td>
                    @Html.Raw(Model.MONITOR_NAME)
                </td>

                <td>
                    @Html.LabelFor(model => model.MONITOR_STATUS)
                </td>
                <td>
                    @*@Html.Raw(Model.MONITOR_STATUS)*@
                    @Html.DropDownListFor(model => model.MONITOR_STATUS, new SelectList(Model.EXAM_STATUS_LIST, "Value", "Text", Model.MONITOR_STATUS), new { @id = "monitorStatusEdit" })
                </td>

                @if (Model.MONITOR_STATUS == "P")
                {
                    <td>
                        @Html.LabelFor(model => model.PERCENTAGE, new { @class = "marks" })
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.PERCENTAGE, new { @id = "percentage", @class = "marks", style = "color: black" })
                    </td>
                }

                @if (Model.MONITOR_STATUS == "AB" || Model.MONITOR_STATUS == "NRT" || Model.MONITOR_STATUS == "NA")
                {
                    <td>
                        @Html.LabelFor(model => model.PERCENTAGE, new { @class = "marks", style = "display: none;" })
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.PERCENTAGE, new { @id = "percentage", @class = "marks", style = "color: black; display: none;" })
                    </td>
                }

            </tr>




            <tr>
                <td colspan="6">
                    <label style="border: none">
                        [ Note: Fields marked with<label style="color: red;"> * </label>
                        are mandatory.]
                    </label>
                </td>
            </tr>

            <tr>
                <td></td>
                <td style="text-align: right;" colspan="2">
                    <input type="button" id="btnEditScore" name="btnEdit" value="Save" class="jqueryButton" title="Edit Proficiency Score" tabindex="5" />
                </td>
                @*<td style="text-align: left" colspan="2">
                        <input type="button" id="btnBackEdit" name="back" value="Back" class="jqueryButton" title="Back" tabindex="6" />
                    </td>*@

                <td></td>
            </tr>

        </table>

    </form>
</center>

