@model PMGSY.Models.Execution.ExecutingOfficerViewModel

<script src="~/Scripts/custom/Generic.js"></script>

<script src="~/Scripts/Execution/AddExecutingOfficerDetails.js"></script>

<div id="divAddExecutingOfficer" style="margin-top:0px">
<form id="frmAddExecutingOfficer">
<center>
@Html.HiddenFor(model=>model.IMS_PR_ROAD_CODE)
@Html.HiddenFor(model=>model.EXEC_OFFICER_ID)
@Html.HiddenFor(model=>model.ExecutingOfficerId)
@Html.HiddenFor(model=>model.AgreementDate)
@Html.HiddenFor(model=>model.AgreementMonth)
@Html.HiddenFor(model=>model.AgreementYear)


<div style="margin-left: 100px">
    @Html.ValidationSummary(true)             
</div>            

<div id="divError" class="ui-state-error ui-corner-all" style="text-align: left; display: none; width: 100%">
        <span class="ui-icon ui-icon-alert" style="float: left;"></span>                   
        <span></span>
</div>
<div style="height:20px; width: 100%; text-align:left; padding-top: 0.6em;" class="ui-state-default ui-corner-all" > 
            &nbsp;<strong> Note :</strong>  Fields marked with * are mandatory.
            
            @*<h3 style="text-align:left"><a id="" href="#" style=" font-size:.9em;"><strong> Note :</strong>  Fields marked with * are mandatory.</a>
                <a href="#"  style="float: right;">
                    <img src="" class="ui-icon ui-icon-closethick" onclick="CloseExecutionDetails();" /></a>
            </h3>*@
     <a href="#"  style="float: right; margin-right:5px;">
                    <img class="ui-icon ui-icon-closethick" onclick="CloseExecutingOfficerForm();" /></a>

</div>
<table id="tbAddExecutingOfficerDetails"  cellpadding="3px" class="rowstyle" style="margin-top:0px; text-align:left; border:ridge 0.1em #ccc; width:100%; padding-top:5px 5px 5px 5px;">
    <tr>
        <td style="width:2%">
        </td>
        <td style="width:4%">
            @Html.LabelFor(model=>model.EXEC_MONTH)<label style="color:red">*</label>
        </td>
        <td style="width:18%">            
                @Html.DropDownListFor(model => model.EXEC_MONTH, ViewData["Month"] as IEnumerable<SelectListItem>, new { @id="ddlMonth",@title="Select Month",@tabindex = 1})
                
        </td>
        <td style="width:4%">
            @Html.LabelFor(model=>model.EXEC_YEAR)<label style="color:red">*</label>
        </td>
        <td style="width:18%">
                @Html.DropDownListFor(model=>model.EXEC_YEAR,ViewData["Year"] as IEnumerable<SelectListItem>,new {@title="Select Year",@id="ddlYear",@tabindex = 2})
        </td>
         <td style="width:7%">
            @Html.LabelFor(model=>model.MAST_DESIG_CODE)<label style="color:red">*</label>
        </td>
         <td style="width:18%">
             @Html.DropDownListFor(model=>model.MAST_DESIG_CODE,ViewData["Designation"] as IEnumerable<SelectListItem>,new {@title="Select Designation",@id="ddlDesignation",@tabindex = 3})
             
        </td>
        <td style="width:9%">
            @Html.LabelFor(model=>model.MAST_OFFICER_CODE)<label style="color:red">*</label>
        </td>
         <td style="width:20%">
             @Html.DropDownListFor(model=>model.MAST_OFFICER_CODE,ViewData["ExecutingOfficer"] as IEnumerable<SelectListItem>,new {@title="Select Designation",@id="ddlExecutingOfficer",@tabindex = 4})
        </td>
    </tr>

    <tr>
        <td></td>
        <td></td>
        <td>@Html.ValidationMessageFor(model=>model.EXEC_MONTH)</td>
        <td></td>
        <td>@Html.ValidationMessageFor(model=>model.EXEC_YEAR)</td>
        <td></td>
        <td>@Html.ValidationMessageFor(model=>model.MAST_DESIG_CODE)</td>
        <td></td>
        <td> @Html.ValidationMessageFor(model=>model.MAST_OFFICER_CODE)</td>
    </tr>

    <tr>
        <td colspan="9">
            @if(Model.Operation == "A")
            {
            <center>
            <table>
                <tr>
                <td>
                    <input type="button" value="Save" name="btnAddExecutingOfficerDetails" id="btnAddExecutingOfficerDetails" class="jqueryButton" />
                    @*<input type="reset" value="Cancel" name="btnCancelExecutingOfficerDetails" id="btnAddCancelExecutingOfficerDetails" class="jqueryButton" />*@
                    <input type="reset" value="Reset" name="btnReset" id="btnReset" class="jqueryButton" />
                </td>
               </tr>
            </table>
            </center>
            }
            else
            {
            <center>
            <table>
                 <tr>
                <td>
                <input type="button" value="Update" name="btnUpdateExecutingOfficerDetails" id="btnUpdateExecutingOfficerDetails" class="jqueryButton" />
                <input type="reset" value="Cancel" name="btnCancelExecutingOfficerDetails" id="btnEditCancelExecutingOfficerDetails" class="jqueryButton" />
                </td>
                </tr>
            </table>
            </center>
            }
        </td>
    </tr>
</center>
</form>
</div>
