@model PMGSY.Areas.PackageAgreementSanctionList.Models.GepnicBidModel

<script src="~/Scripts/custom/Generic.js" type="text/javascript"></script>


<script src="~/Areas/PackageAgreementSanctionList/Scripts/GepnicBidDetails.js"></script>

<div id="dvhdSLRLayout" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Gepnic Bid Details</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>

<div id="loadFilters" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8; text-align: left">

    <form id="frmStateListRoadLayout">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Mast_State_Code)
        @Html.HiddenFor(model => model.StateName)
      @*    @Html.HiddenFor(model => model.Year)*@
      @*   @Html.HiddenFor(model => model.Batch)*@
 
 

        @{
            System.Globalization.CultureInfo CultureInfo = null;
            CultureInfo = new System.Globalization.CultureInfo(Request.Cookies["language"] == null ? "en" : Request.Cookies["language"].Value.ToString());
        }


        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 2%;"></td>
                <td style="text-align: left; width: 8%;">
                    @Html.LabelFor(model => model.StateCode)
                </td>

                <td style="width: 15%;">
                    @if (Model.Mast_State_Code == 0)
                    {
                        @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.StateList, "Value", "Text"), new { @title = "State", @tabindex = 1, @id = "StateList_StateListRoadDetails", @style = "width:150px" })
                        @Html.ValidationMessageFor(m => m.StateCode)
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.StateName) 
                        @Html.Hidden("StateCode", Model.Mast_State_Code)                            
                    }
                </td>

                <td style="text-align: left; width: 5%;">
                       @Html.LabelFor(model => model.Year)
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.Year, new SelectList(Model.YearList, "Value", "Text"), new { @title = "Year", @id = "YearList_StateListRoadDetails", @tabindex = 4, @style = "width:150px" })
                    @Html.ValidationMessageFor(model => model.Year)
                </td>

                <td style="text-align: left; width: 5%;">
                  
                   @Html.LabelFor(model => model.Batch)

                </td>

                <td style="width: 15%;">
                      @Html.DropDownListFor(model => model.Batch, new SelectList(Model.BatchList, "Value", "Text"), new { @title = "PMGSY BATCH", @id = "ddlPMGSYBATCH", @style = "width:150px" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Batch)
                </td>
                 <td style="text-align: left; width: 5%;">
                    @Html.Label("Scheme")
                </td>

                <td style="width: 15%;">
                     @Html.DropDownListFor(model => model.SchemeCode, new SelectList(Model.SchemeList, "Value", "Text"), new { @title = "Scheme ", @id = "SchemeList", @tabindex = 3, @style = "width:150px" })
                        @Html.ValidationMessageFor(m => m.SchemeCode)
                  
                </td>
                <td style="text-align: left; width: 8%; display:none;">
                
                </td>
                <td style="width: 25%; display:none;">
                   
                </td>
            </tr>
            <tr>
                <td style="width: 2%;"></td>

                
                <td >
                    <input type="button" id="btnViewStateListRoad" value="View" class="jqueryButton" title="View" tabindex="7" />
                </td>
            </tr>
        </table>
    </form>
  
</div>

<div id="dvloadSLRReport" class="divLoadReport"></div>


