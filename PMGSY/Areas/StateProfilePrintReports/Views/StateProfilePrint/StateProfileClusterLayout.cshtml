<div id="dvECBriefParameter" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmECBriefLayout">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.StateName)
        @*@Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.StateCode)
        @Html.HiddenFor(model => model.DistrictCode)
        @Html.HiddenFor(model => model.CollaborationCode)
        @Html.HiddenFor(model => model.AgencyCode)
