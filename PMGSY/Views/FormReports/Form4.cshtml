@model PMGSY.Models.FormReports.FormReportsViewModel
<script src="~/Scripts/FormReports/Form4.js"></script>
<script src="~/Scripts/custom/Generic.js"></script>
<form id="frmForm4Report">
     @Html.Hidden("hdnLevelId", PMGSY.Extensions.PMGSYSession.Current.LevelId.ToString())
       <div style="width: 99%">
    <table class="ui-state-default ui-corner-all" style="width: 100%;">
        <tr>
                 <td style="width: 6%;"></td>
              <td style="text-align: left; width: 5%;">
                    @Html.LabelFor(model => model.IMS_BATCH)
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.IMS_BATCH, new SelectList(Model.BATCHS, "Value", "Text"),new { @id = "ddlIMS_BATCHSearchForm4",@title="Batch",@tabindex = 1 })
                </td>
                <td style="text-align: left; width: 5%;">
                    @Html.LabelFor(model => model.MAST_YEAR)
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.MAST_YEAR, new SelectList(Model.YEARS, "Value", "Text"),new { @id = "ddlMAST_YEARSearchForm4",@title="Year",@tabindex = 2 })
                </td>
                <td style="text-align: left; width: 9%;">
                    @Html.LabelFor(model => model.IMS_COLLABORATION)
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.IMS_COLLABORATION, new SelectList(Model.COLLABORATIONS, "Value", "Text"),new { @id = "ddlIMS_COLLABORATIONSearchForm4",@title="Funding Agency",@tabindex = 3 })
                </td>
                <td style="text-align: left; width: 9%;">
                    @Html.LabelFor(model => model.MAST_PROPOSAL_TYPE)
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.MAST_PROPOSAL_TYPE, new SelectList(Model.PROPOSAL_TYPES, "Value", "Text"),new { @id = "ddlMAST_PROPOSAL_TYPESearchForm4",@title="Proposal Type" ,@tabindex = 4})
                </td>
                <td style="width: 15%;"> 
                    <input type="button" class="jqueryButton" title="View Details"  value="View" id="btnViewForm4Details"  name="btnViewForm4Details" tabindex="5"/> 
                </td>
            </tr>
        </table> 
       
    </div>
    <br />


