<style type="text/css">

    #ticker_02 {
	height: 250px;
}
.ticker {
	width: 100%;
	height: 80px;
	overflow: hidden;
    background:#fff;
	/*border: 1px solid #DDD;*/
	margin-left: 10px;
	padding: 0;
	list-style: none;
	/*border-radius: 5px;
	box-shadow: 0px 0px 5px #DDD;*/
}

.ticker li {
	height: 50px;
	border-bottom: 1px dotted #DDD;
	padding: 5px;
	margin: 0px 5px;
}
</style>

<div>
    <div id="" class="ui-corner-top ui-widget-header panelheader" style="text-align: center; height: 20px;">
        <span class="ui-jqgrid-title" style="float: none">Request Notifications</span>
        <span id="btnCloseRequest" class="ui-icon ui-icon-triangle-1-s" style="float:right"></span>
    </div>
    <div id="" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8; border-top: none; height: 100%;background:#fff;">
        <div id="divPFAuth3" style="width: 98%; padding: 10px 10px 0px 0px;">
            <ul id="ticker_02" class="ticker">

                @if (ViewBag.ListRequests != null && (ViewBag.ListRequests as List<string>).Count() > 0)
                {
                    List<string> notificationList = ViewBag.ListRequests as List<string>;
                    int count = 1;
                    foreach (string notification in notificationList)
                    {
                                    
                    <li>
                        @count
                        <label>.</label>
                        @notification.Trim()
                    </li>
                        count++;
                    }
                }
                else
                {
                    <li>No any alert to display.</li>
                }

            </ul>
        </div>
    </div>
</div>
