@{
    ViewBag.Title = "CarriageDetails";
}
<div style="width: 100%">

    <table class="ui-state-default ui-corner-all" style="width: 100%;">
        <tr>
            <td style="width: 6%;"></td>
            <td style="text-align: left; width: 10%;">
                @Html.Label("Carriage Status")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("MAST_Carriage_Status", ViewData["CarriageStatus"] as IEnumerable<SelectListItem>, new { @title = "Carriage Status", @tabindex = 1 })
            </td>
            <td style="text-align: center; width: 20%; margin-left: 5px;">
                <input type="button" id="CarriageStatusDetailsButton" value="View" class="jqueryButton" tabindex="2" title="View Details"  />
            </td>
            <td style="width: 40%;"></td>
        </tr>

    </table>
</div>
<br />
<div id="CarriageDetails">
    <table id="CarriageDetailsTable"></table>
</div>
<div id="CarriageDetailsPager"></div>

<script src="~/Scripts/MasterReports/CarriageDetails.js" type="text/javascript"></script>
<script src="~/Scripts/custom/Generic.js"></script>