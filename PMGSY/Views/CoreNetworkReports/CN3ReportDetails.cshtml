@{
    ViewBag.Title = "CN3ReportDetails";
}

<br />
@model PMGSY.Models.CoreNetworkReports.CoreNetworkReportViewModel
<script type="text/javascript" src="~/Scripts/CoreNetworkReports/CN3ReportDetails.js"></script>
<script src="~/Scripts/custom/Generic.js"></script>
<form id="frmCN1StateLevelReport">
    @Html.Hidden("hdnLevelId", PMGSY.Extensions.PMGSYSession.Current.LevelId.ToString())

    @if (PMGSY.Extensions.PMGSYSession.Current.StateCode != 0)
    {           
        @Html.Hidden("STATE_NAME", PMGSY.Extensions.PMGSYSession.Current.StateName.ToString())
    }

    @if (PMGSY.Extensions.PMGSYSession.Current.DistrictCode != 0)
    {
        @Html.Hidden("DISTRICT_NAME", PMGSY.Extensions.PMGSYSession.Current.DistrictName.ToString())   
    }

    @Html.HiddenFor(model => model.BLOCK_NAME)
        <div style="width: 100%">
        <table class="ui-state-default ui-corner-all" style="width: 100%;">
            <tr>
                   <td style="width: 2%;"></td>
                <td style="text-align: left; width: 3%;">
                    @Html.Label("Road Type") &nbsp;
                </td>
                <td style="width: 2%;">
                        @Html.DropDownList("RoadCategory_CN3Details", ViewData["RoadCategory"] as IEnumerable<SelectListItem>, new { @title = "Road Type", @tabindex = 1 })            
                </td>
                 <td style="text-align: left; width: 2%;">
                    @Html.Label("Route") &nbsp;
                </td>
                <td style="width: 2%;">
                        @Html.DropDownList("Route_CN3Details", ViewData["Route"] as IEnumerable<SelectListItem>,new { @title = "Route", @tabindex = 2 })            
                </td>
                <td style="width: 20%;">
                    <input type="button" value="View" class="jqueryButton" id="btCN3Details" title="View Details" tabindex="3"/>
                </td>
            </tr>
        </table>
    </div>
    <br />
   
    @if (PMGSY.Extensions.PMGSYSession.Current.LevelId == 6)     //Mord
    {
        <div id="CN3StateReport">
            <table id="CN3StateReportTable"></table>
        </div>
        <div id="CN3StateReportPager"></div>
        <br />

        <div id="CN3DistrictReport">
            <table id="CN3DistrictReportTable"></table>
        </div>
        <div id="CN3DistrictReportPager"></div>

        <br />
        <div id="CN3BlockReport">
            <table id="CN3BlockReportTable"></table>
        </div>
        <div id="CN3BlockReportPager"></div>

        <br />
        <div id="CN3FinalReport">
            <table id="CN3FinalReportTable"></table>
        </div>
        <div id="CN3FinalReportPager"></div>
        
    }

    else if (PMGSY.Extensions.PMGSYSession.Current.LevelId == 4)     //State
    {
        @Html.HiddenFor(model => model.MAST_STATE_CODE)
        <div id="CN3DistrictReport">
            <table id="CN3DistrictReportTable"></table>
        </div>
        <div id="CN3DistrictReportPager"></div>

        <br />
        <div id="CN3BlockReport">
            <table id="CN3BlockReportTable"></table>
        </div>
        <div id="CN3BlockReportPager"></div>

        <br />
        <div id="CN3FinalReport">
            <table id="CN3FinalReportTable"></table>
        </div>
        <div id="CN3FinalReportPager"></div>
    }
    else if (PMGSY.Extensions.PMGSYSession.Current.LevelId == 5)     //District
    {
        @Html.HiddenFor(model => model.MAST_STATE_CODE)
        @Html.HiddenFor(model => model.MAST_DISTRICT_CODE)
        <div id="CN3BlockReport">
            <table id="CN3BlockReportTable"></table>
        </div>
        <div id="CN3BlockReportPager"></div>

        <br />
        <div id="CN3FinalReport">
            <table id="CN3FinalReportTable"></table>
        </div>
        <div id="CN3FinalReportPager"></div>
    }
</form>



