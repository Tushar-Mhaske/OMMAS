@model PMGSY.Models.NewsDetails.DetailsNews
@{
    ViewBag.Title = "ViewNewsDetails";
}


<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/NewsDetails/DetailsNews.js"></script>

<div style="width: 99%; height: 20px; border: none; margin-top: 5px; margin-bottom: -15px;" class="ui-state-default">
    <span style="float: right; margin-right: 2Px; margin-top: 2px" id="idFilterDiv" class="ui-icon ui-icon-circle-triangle-n"></span>
</div>
<div style="width: 99%; border: none; margin-top: -15px; margin-bottom: 10px;" class="ui-state-default">
    <div id="dvViewNewsMain">
        <form id="frmDetailsNews">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <table style="margin-top: 10px; margin-bottom: 5px;">
                <tr>
                    @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 25)
                    { 
                        <td style="width: 1%;"></td>
                    }
                    else
                    {
                        <td style="width: 7%;"></td>
                    }
                    <td style="width: 5%; text-align: center;">
                        @Html.HiddenFor(m => m.hdnRole)
                        @Html.LabelFor(m => m.MONTHs, new { @id = "lblMonths" })
                    </td>
                    <td style="width: 10%;">
                        @Html.DropDownListFor(m => m.MONTHs, new SelectList(Model.Months_List, "Value", "Text"), new { @id = "ddlMonths", @style = "width:120px;" })
                    </td>
                    @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 22)
                    {
                        <td style="width: 05%"></td>
                    }
                    <td style="width: 5%; text-align: center;">
                        @Html.LabelFor(m => m.YEARs, new { @id = "lblYears" })
                    </td>
                    <td style="width: 10%;">
                        @Html.DropDownListFor(m => m.YEARs, new SelectList(Model.Years_List, "Value", "Text"), new { @id = "ddlYears", @style = "width:120px;" })
                    </td>
                    @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 22)
                    {
                        <td style="width: 05%"></td>
                    }
                    <td style="width: 7%; text-align: center;">
                        @Html.LabelFor(m => m.Approved, new { @id = "lblApproved" })
                    </td>
                    <td style="width: 10%;">@Html.DropDownListFor(m => m.Approved, new List<SelectListItem>
                     {
                         new SelectListItem{ Text="All", Value = "0" },
                        new SelectListItem{ Text="Yes", Value = "Y" }, 
                        new SelectListItem{ Text="No", Value = "N" }
                     }, new { @id = "ddlApproved", @style = "width:120px;" })
                    </td>
                    @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 22)
                    {
                        <td style="width: 05%"></td>
                    }
                    <td style="width: 5%; text-align: center;">
                        @Html.LabelFor(m => m.Status, new { @id = "lblStatus" })
                    </td>
                    <td style="width: 10%;">@*@Html.DropDownListFor(m => m.Status, new List<SelectListItem>
                     {
                         new SelectListItem{Text="All", Value = "0"},
                        new SelectListItem{ Text="New", Value = "N" }, 
                        new SelectListItem{ Text="Published", Value = "P" },
                        new SelectListItem{ Text="Archived", Value = "A" }
                     }, new { @id = "ddlStatus", @style = "width:100px;" })
                    </td>*@
                    @Html.DropDownListFor(m => m.Status, new SelectList(Model.Status_List, "Value", "Text"), new { @id = "ddlStatus", @title = "State", @tabindex = 1, @style = "width:120px;" })
                    @*<td></td>
                    <td></td>
                </tr>
                <tr>*@
                    @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 22)
                    {
                        <td style="width: 05%"></td>
                    }
                    else
                    {
                        <td style="width: 1%"></td>
                    }
                    <td style="width: 11%;">
                        @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 25 && PMGSY.Extensions.PMGSYSession.Current.RoleCode != 22)
                        {
                            @Html.RadioButtonFor(m => m.rdbNS, "N", new { @id = "rdbtnNRRDA" })
                            @Html.Label("NRRDA")
                        }
                        @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode != 22)
                        {
                            @Html.RadioButtonFor(m => m.rdbNS, "S", new { @id = "rdbtnSRRDA" })
                            @Html.Label("SRRDA")
                        }
                        @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 2 && PMGSY.Extensions.PMGSYSession.Current.RoleCode != 22)
                        {
                            @Html.RadioButtonFor(m => m.rdbNS, "D", new { @id = "rdbtnDPIU" })
                            @Html.Label("DPIU")
                        }
                    </td>
                    @* </tr>
                <tr>*@
                    <td>
                        @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 25 && PMGSY.Extensions.PMGSYSession.Current.RoleCode != 22)
                        {
                            @Html.DropDownListFor(m => m.NRRDA, new SelectList(Model.Nrrda_List, "Value", "Text"), new { @id = "ddlNRRDA", @style = "display:none;" })
                        }
                        @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode != 22)
                        {
                       
                            @Html.DropDownListFor(m => m.State, new SelectList(Model.State_List, "Value", "Text"), new { @id = "ddlState", @style = "display:none; margin-left:0px; width:120px;" })
                        }
                        @Html.DropDownListFor(m => m.SRRDA, new SelectList(Model.Srrda_List, "Value", "Text"), new { @id = "ddlSRRDA", @style = "display:none; width:120px;" })

                        @*@if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 2 && PMGSY.Extensions.PMGSYSession.Current.RoleCode == 22)
                        {
                            
                        }*@
                        @Html.DropDownListFor(m => m.DPIU, new SelectList(Model.Dpiu_List, "Value", "Text"), new { @id = "ddlDPIU", @style = "display:none;  width:120px;" })
                    </td>
                </tr>
                <tr>
                    @*@if(PMGSY.Extensions.PMGSYSession.Current.RoleCode==8)
                    {
                        *@<td style="width: 1%"></td>
                    <td style="width: 5%"></td>
                    <td colspan="11">
                        @Html.ValidationMessageFor(m => m.MONTHs)
                    </td>
                    @*}
                    else
                    {
                        <td>
                        </td>
                        <td colspan="12">
                         @Html.ValidationMessageFor(m=>m.MONTHs)
                        </td>
                    }*@


                </tr>
            </table>
            <table style="width: 98%;">
                <tr>
                    <td style="text-align: center;">
                        <input type="button" id="btnSubmitNews" class="jqueryButton" value="Search" title="Search" />
                        <input type="reset" id="btnResetNews" class="jqueryButton" value="Reset" title="Reset" style="display: none;" />
                        @* @Html.HiddenFor(m => m.feedId, new { @id="hdfFdId"})*@
                    </td>
                    <td></td>
                </tr>
            </table>
        </form>
    </div>
</div>
<div id="divNewsDetails" style="width: 99%; padding: 10px 0px 5px 0px;">
    <table id="tbNewsDetailsJqGrid"></table>
    <div id="divNewsDetailsReportPager"></div>
</div>
<table>
    <tr>
        <td colspan="2">
            <input type="button" id="btnAddNews" value="Add" title="Add" class="jqueryButton" />
        </td>
    </tr>
</table>
