@model PMGSY.Areas.QMSSRSReports.Models.QualityReportsViewModel

@*<script src="~/Scripts/QualityMonitoring/QMGradingAndATRDetails.js"></script>*@

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}
<script src="~/Scripts/jquery.ui.datepicker.js"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.ui.dialog.js")"> </script>
<script src="~/Areas/QMSSRSReports/Scripts/RegradeATRLayout.js"></script>
<script src="~/Scripts/custom/Generic.js"></script>

<div id="dvhdRegradeATRLayout" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Regrade Action Taken Report</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvRegradeATRLayout" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">

    <form id="frmRegradeATRLayout">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.Hidden("hdnRole", PMGSY.Extensions.PMGSYSession.Current.RoleCode.ToString())
        @Html.HiddenFor(m => m.StateName)
        <table class="rowstyle" style="margin-top: 0px; width:100%;">
            <tr>
                <td style="width: 10%; font-weight: bold;">
                    @*@Html.LabelFor(model => model.FROM_MONTH)*@
                    @Html.Label("Regrade From Date")
                </td>
                <td style="width: 15%">
                    @*@Html.DropDownListFor(model => model.FROM_MONTH, new SelectList(Model.FROM_MONTH_LIST, "value", "text"), new { @id = "ddlFromMonthGradingAndATR" })*@
                    @Html.EditorFor(m => m.FROM_DATE, String.Format("{0:dd/MM/yyyy}", Model.FROM_DATE))
                    <br />
                    @Html.ValidationMessageFor(m => m.FROM_DATE)
                </td>
                <td style="width: 10%; font-weight: bold;">
                    @*@Html.LabelFor(model => model.TO_MONTH)*@
                    @Html.Label("Regrade To Date")
                </td>
                <td style="width: 15%">
                    @*@Html.DropDownListFor(model => model.FROM_MONTH, new SelectList(Model.FROM_MONTH_LIST, "value", "text"), new { @id = "ddlFromMonthGradingAndATR" })*@
                    @Html.EditorFor(m => m.TO_DATE, String.Format("{0:dd/MM/yyyy}", Model.TO_DATE))
                    <br />
                    @Html.ValidationMessageFor(m => m.TO_DATE)
                </td>
                <td style="width: 10%; font-weight: bold;">
                    @*@Html.LabelFor(model => model.TO_MONTH)*@
                    @Html.Label("Graded as")
                </td>
                <td style="width: 15%">
                    
                    @Html.DropDownListFor(model => model.RegradeATRGrade, new SelectList(Model.RegradeATRGradeList, "Value", "Text"), new { @id = "ddlRegradeATRGrade", @title = "Grade", @tabindex = 3 })
                    <br />
                    @Html.ValidationMessageFor(m => m.RegradeATRGrade)
                </td>
                <td ></td>
                <td ></td>
            </tr>
            <tr>
                <td style="width: 10%; font-weight: bold;">
                    @Html.Label("State")
                </td>
                <td style="width: 15%">
                    @Html.DropDownListFor(model => model.State, new SelectList(Model.StateList, "Value", "Text"), new { @id = "ddlRegradeATRState", @title = "State", @tabindex = 4 })
                    <br />
                    @Html.ValidationMessageFor(m => m.State)
                </td>
                <td style="width: 10%; font-weight: bold;">
                    @Html.Label("Regraded as")
                </td>
                <td style="width: 15%">
                    @Html.DropDownListFor(model => model.Regrade, new SelectList(Model.RegradeList, "Value", "Text"), new { @id = "ddlRegradeATRRegrade", @title = "Regrade", @tabindex = 5 })
                    <br />
                    @Html.ValidationMessageFor(m => m.Regrade)
                </td>
                <td style="width: 10%; font-weight: bold;">
                    @Html.Label("Road Status")
                </td>
                <td style="width: 15%">
                    @Html.DropDownListFor(model => model.RoadStatus, new SelectList(Model.RoadStatusList, "Value", "Text"), new { @id = "ddlRegradeATRRoadStatus", @title = "Road Status", @tabindex = 6 })
                    <br />
                    @Html.ValidationMessageFor(m => m.RoadStatus)
                </td>
                <td style="text-align: left;">
                    <input type="button" id="btnViewRegradeATR" value="View Details" class="jquerybutton" style="margin-left: 20px;" />
                </td>
            </tr>
        </table>
    </form>
</div>
<div id="dvLoadRegradeATRReport"></div>
