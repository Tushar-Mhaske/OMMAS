@{
    ViewBag.Title = "ListReceipt";
}

<script src="~/Scripts/jquery.ui.datepicker.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.ui.progressbar.js" type="text/javascript"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/custom/Generic.js")"> </script>
<script type="text/javascript" src="@Url.Content("~/Scripts/Receipt/ListReceipt.js")"> </script>

<br/>

<div class="ui-widget-header innerDivHeader">
    Receipt
</div>

@* Added By Abhishek Kamlbe 3-jan-2014 *@
        <table style="margin-left: 10px; margin-right: 15px;width:99%">
            <tr> 
                <td style="width:20%">
                    <div id="AccountStatusDiv" style="float:left">
                        <table>
                            <tbody>
                                <tr id="TrMonthlyClosing" style="display:none">
                                    <td style="text-align:center">
                                        <div style="text-align: right; width: 100%;" id="1">
                                            <label style="color:red" ><b>
                                          Last Month Closed
                                        -
                         
                                        <label id="lblMonth">
                                
                                        </label>
                           
                                        <label id="lblYear">
                          
                                             </label>
                                    </b></label>
                                        </div>
                                    </td>
                                </tr>
                                 <tr id="AccountNotClosedTr">
                                       <td style="text-align:center">
                                        <div style="text-align: right; width: 100%;" id="2">
                                            <label style="color:red" > <b>  Last Month Closed - -  </b>   </label>  
                                         
                                        </div>
                                            </td>
                                </tr>
                            </tbody>
                        </table>
                     </div>
                </td>
            </tr>
        </table>
 <div id="divReceiptList" style="margin-left:10px; width:98%">
<center>
    <div style="text-align:left">
    <div id="AddReceipt" style="margin-left:10px;" class="ui-state-default ui-corner-all jqueryButton">
    <span style="float:left" class="ui-icon ui-icon-circle-plus"></span>
    <span style="float:left; margin-right:5px">Add New Receipt</span>
    </div>
    
    <div id="searchReceipt" style="margin-left:5px;" class="ui-state-default ui-corner-all jqueryButton">
    <span style="float:left" class="ui-icon ui-icon-circle-zoomin"></span>
    <span style="float:left; margin-right:5px">Search Receipt</span>
    </div>
    </div>

    <table class="ui-state-default ui-corner-all" style="border:0.1em solid gray; width:98%" id="tblViewDetails">
        <tr>
            <td style="width:25%"></td>
            <td style="text-align:right; font-weight:bold; width:5%">Month:<label style="color:red;"> *</label></td>
            <td style="width:15%">@Html.DropDownList("ddlMonth", null, new {@title="Month" })</td>
            <td style="text-align:right; font-weight:bold; width:5%">Year:<label style="color:red;"> *</label></td>
            <td style="width:15%">@Html.DropDownList("ddlYear", null,  new {@title="Year" })</td>
            <td style="width:35%"><input type="button" id="btnView" value="View Details" class="jqueryButton" title="View Details"></td>        
        </tr>
    </table>

   
    <table class="ui-state-default ui-corner-all" style="border:0.1em solid gray; width:98%; display:none;" id="tblSearch">
        <tr>
            <td class="ui-widget ui-corner-bottom"  style="text-align:left; border-bottom:0.1em solid gray" colspan="2">
                    <span class="ui-icon ui-icon-info" style="float: left;"></span>
                    <span style="float: left; font-weight:bold">Search Criteria</span>
                    <span class="ui-icon ui-icon-circle-close" style="float: right;" id="iconClose"></span>
            </td>
        </tr>
        <tr>
            <td style="text-align:right; font-weight:bold; width:45%">From Date:</td>
            <td style="width:55%">@Html.TextBox("txtFromDate", null, new { @style="width:130px",@title="From Date"})</td>
        </tr>
        <tr>
            <td style="text-align:right; font-weight:bold">To Date:</td>
            <td>@Html.TextBox("txtToDate", null, new { @style="width:130px",@title="To Date"})</td> 
        </tr>
        <tr>
            <td style="text-align:right; font-weight:bold">Transaction Type:</td>
            <td>@Html.DropDownList("ddlMasterTrans",null,new {@title="Transaction Type"})</td>
        </tr>
        <tr>
            <td></td>     
            <td><input type="button" id="btnSearch" value="Search" class="jqueryButton" title="Click here to search details">&nbsp;
            <input type="button" id="btnSearchCancel" value="Cancel" class="jqueryButton" title="Click here to cancel"></td>
        </tr>
    </table>
    <br />


    <div style="width:98%">
    <table id="tblReceiptList"></table>
    <div id="divReceiptListPager"></div>
    </div>    

    </div>
</center>  


