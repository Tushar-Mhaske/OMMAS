@model PMGSY.Areas.QMSSRSReports.Models.InProgressWorkViewModel


@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.ui.dialog.js")"> </script>
<script src="~/Areas/QMSSRSReports/Scripts/QMInProgressWorkReport.js"></script>
<script src="~/Scripts/custom/Generic.js"></script>

<div id="dvhdQMMonthwiseInspectionsLayout" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;In-Progress Work of Contractor Not Inspected</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvQMMonthwiseInspectionsLayout" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">


    <form id="InProgressWorkViewModel">

        @Html.ValidationSummary(true)
    
       
        <table class="rowstyle" style="margin-top: 0px; text-align: center; width: 100%;">
            <tr>
                <td style="width: 15%; font-weight: bold;">
                    @Html.LabelFor(model => model.State)
                </td>
                <td style="width: 10%">
                    @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 8)
                    {                          
@*@Html.DropDownListFor(model => model.STATE, new SelectList(Model.STATE_LIST, "value", "text"), new { @id = "ddlStateMonthwiseComparision", @disabled = "disabled" })*@
                        @Html.DropDownListFor(model => model.State, new SelectList(Model.StateList, "Value", "Text"), new { @id = "ddlStateMonthwiseComparision", @title = "State", @tabindex = 1, @disabled = "disabled" })
                        <br />
                        @Html.ValidationMessageFor(m => m.State)
                    }
                    else
                    {
@*@Html.DropDownListFor(model => model.STATE, new SelectList(Model.STATE_LIST, "value", "text"), new { @id = "ddlStateMonthwiseComparision" })*@
                        @Html.DropDownListFor(model => model.State, new SelectList(Model.StateList, "Value", "Text"), new { @id = "ddlStateMonthwiseComparision", @title = "State", @tabindex = 1, })
                        <br />
                        @Html.ValidationMessageFor(m => m.State)
                    }
                </td>
                <td style="width: 15%; font-weight: bold;">
                    @Html.LabelFor(model => model.Year)
                </td>
                <td style="width: 10%">
                    @*@Html.DropDownListFor(model => model.YEAR, new SelectList(Model.YEAR_LIST, "value", "text"), new { @id = "ddlYearMonthwiseComparision" })*@
                    @Html.DropDownList("Year", ViewBag.Year as List<SelectListItem>)
                    <br />
                    @Html.ValidationMessageFor(m => m.Year)
                </td>
                 <td style="width: 15%; font-weight: bold;">
                    @Html.Label("Scheme")
                </td>
                 <td style="width: 10%">
                    @*@Html.DropDownListFor(model => model.YEAR, new SelectList(Model.YEAR_LIST, "value", "text"), new { @id = "ddlYearMonthwiseComparision" })*@
                    @Html.DropDownListFor(model => model.schemeType, new SelectList(Model.schemeTypeList, "Value", "Text"), new { @id = "ddlQMType", @title = "Scheme", @tabindex = 3, })
                    <br />
                    @Html.ValidationMessageFor(m => m.schemeType)
                </td>
                <td rowspan="2" style="text-align: left;">
                    <input type="button" id="btnInProgressWorkView" value="View Details" class="jquerybutton" style="margin-left: 20px;" />
                </td>
            </tr>
        </table>
    </form>

</div>
<div id="dvLoadQMMonthwiseInspectionsReport"></div>
