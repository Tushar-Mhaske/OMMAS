@model PMGSY.Models.Execution.RSAlayout

@{
    ViewBag.Title = "RoadSafetyLayout";
}

<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/jquery.ui.datepicker.js"></script>

<script src="~/Scripts/Execution/RSALayout.js"></script>
<form id="frmRoadSafetyLayout">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model=>model.prRoadCode)

    <div style="height: auto; width: 99%; text-align: left; padding-top: 0.6em;">
        <table class="rowstyle ui-corner-all" style="width: 100%; border: solid black 1px;">
            <tr>
                <td style="width: 5%"></td>
                <td style="width: 12%; font-weight: bold">
                    <b>Block</b>
                </td>
                <td style="width: 15%">
                    @Model.BlockName
                </td>
                <td style="width: 12%; font-weight: bold">
                    <b>Package No.</b>
                </td>
                <td style="width: 15%">
                    @Model.Package
                </td>
            </tr>
            <tr>
                <td></td>
                <td style="font-weight: bold">
                    <b>Road Name:</b>
                </td>
                <td>
                    @Model.RoadName
                </td>
                <td style="font-weight: bold">Agreement Date:
                </td>
                <td id="Agreementdate">
                    @Model.AgreementDate
                </td>
            </tr>
            <tr>
                <td></td>
                <td style="font-weight: bold">
                    <b>Sanction Cost(Rs. in Lakh):</b>
                </td>
                <td>
                    @Model.Sanction_Cost
                </td>
                <td style="font-weight: bold">
                    <b>Sanction Length(in Km)</b>
                </td>
                <td>
                    @Model.Sanction_length
                </td>
            </tr>
            <tr>
                <td></td>
                <td style="font-weight: bold">
                    <b>Agreement Cost(Rs. in Lakh):</b>
                </td>
                <td>
                    @Model.AgreementCost
                </td>
                <td style="font-weight: bold">
                    <b>Year</b>
                </td>
                <td>
                    @Model.SanctionYear
                </td>
            </tr>
            @if (Model.changedLength > 0)
            {
                <tr>
                    <td></td>
                    <td style="font-weight: bold">
                        <b>Additional Sanctioned Length(in Km):</b>
                    </td>
                    <td>
                        @Model.changedLength
                    </td>
                    <td style="font-weight: bold"></td>
                    <td></td>
                </tr>
            }
              @if (Model.Operation.Equals("Update"))
            {
             <tr>
                <td></td>
                <td style="font-weight: bold">
                    <b>Road Status:</b>
                </td>
                <td>
                    @Model.RoadStatus
                </td>
                <td style="font-weight: bold">
                    <b>Inspection Date</b>
                </td>
                <td>
                    @Model.InspectionDate
                </td>
            </tr>
              }

        </table>




    </div>
    <br />

  

    <div id="divHabitationDetails" style="width: 99%">
        <table style="width: 99%">
            <tr>
                <td style="width: 10%; vertical-align: top; text-align: center;"></td>
                <td style="width: 5%; vertical-align: top; text-align: center;">
                    @Html.Label("Road Status")<label style="color:red">*</label>
                </td>
                <td style="width: 10%; vertical-align: top;">
                     @if (Model.Operation.Equals("Update"))
                    { @Model.RoadStatus
                    }else{
                    @Html.DropDownListFor(model => model.stageCode, new SelectList(Model.stageList, "Value", "Text"), new { @id = "ddlStage", tabindex = 1, @title = "Stage", })
                    <br />
                    @Html.ValidationMessageFor(x => x.stageCode)
                     }
                </td>

                <td style="width: 5%; vertical-align: top;display:none;">
                    @Html.Label("Road Safety")<label style="color:red">*</label>
                </td>
                <td style="width: 10%; vertical-align: top;display:none ">
     
                    <span style="display:none" id="errspn"></span>
                    <br />
                  
                </td>
                <td style="width: 5%; vertical-align: top">
                    @Html.Label("Inspection Date")<label style="color:red">*</label>
                </td>
                <td style="width: 10%; vertical-align: top">
                    @if (Model.Operation.Equals("Update"))
                    {
                          @Model.InspectionDate
                    }else
                    {
                    @Html.TextBoxFor(model => model.auditDate, new { @title = "Inspection Date",@readonly="readonly", @maxlength = 10, @tabindex = 5, @placeholder = "Enter Date...", @id = "txtAuditDate" })
                    <br />
                    @Html.ValidationMessageFor(x => x.auditDate)
                    }
                </td>
                <td style="width: 10%; vertical-align: top; text-align: center;"></td>
            </tr>



            <tr>
                <td colspan="4"></td>
                <td>   @if (Model.Operation.Equals("Update"))
                {
                }
                else
                {
                 <input type="button" name="btnSave" id="btnSave" value="Save" title="Save Details" class="jqueryButton" />
                }
                </td>
                <td colspan="2"></td>
            </tr>
        </table>
    </div>

   





</form>
