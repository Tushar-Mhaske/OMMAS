@model PMGSY.Models.Master.AdminAlertsViewModel
<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/jquery.ui.datepicker.js" type="text/javascript"></script>
<script src="~/Scripts/Master/AddEditAlertDetails.js"></script>
<div id="dvheaderAlertDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Alert Details</span>
    <span id="iconClose" class="ui-icon ui-icon-circle-close" style="float: right"></span>
</div>
<div id="dvAddAlertDetails" style="display: block; border: 1px solid #B5B8C8;">
    <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px; text-align: left;">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="message"></span>
    </div>
<form id="frmAlertDetails">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.EncryptedAlertId)      
    @Html.Hidden("SystemDate",System.DateTime.Now.ToString("dd/MM/yyyy"))      

<center>@Html.ValidationSummary(true)</center>
<table style="width: 100%; margin-top: 10px;" class="rowstyle">  
    <tr>
        <td style="width:10%"></td>
        <td style="width:05%">@Html.LabelFor(model=>model.ALERT_HEADING)</td>
        <td style="width:15%">
            @Html.TextBoxFor(model => model.ALERT_HEADING, new {@placeholder="Enter Heading...",@tabindex=1,@title="Enter Heading",@maxlength=50 })
            @Html.ValidationMessageFor(model=>model.ALERT_HEADING)
        </td>        
     
        <td style="width:05%">@Html.LabelFor(model=>model.ALERT_TEXT) <span style="color:red"> *</span></td>
        <td style="width:20%">              
            @Html.TextAreaFor(model => model.ALERT_TEXT, new {@placeholder="Enter Subject...",@tabindex=2,@title="Enter Subject",@maxlength=4000 ,@Value=String.Empty })              
            @Html.ValidationMessageFor(model=>model.ALERT_TEXT)
        </td>
    </tr> 
    <tr>
        <td></td>
        <td>@Html.LabelFor(model=>model.DISPLAY_START_DATE) <span style="color:red"> *</span></td>
        <td>
            @Html.TextBoxFor(model => model.DISPLAY_START_DATE, new {@placeholder="Enter Start Date...",@tabindex=3,@title="Enter Start Date",@maxlength=10 })
            @Html.ValidationMessageFor(model=>model.DISPLAY_START_DATE)
        </td>        
     
        <td>@Html.LabelFor(model=>model.DISPLAY_END_DATE)</td>
        <td>
            @Html.TextBoxFor(model => model.DISPLAY_END_DATE, new {@placeholder="Enter End Date...",@tabindex=4,@title="Enter End Date",@maxlength=10 })
            @Html.ValidationMessageFor(model=>model.DISPLAY_END_DATE)
        </td>
    </tr>
    <tr>
        <td colspan="5">
            @if(Model.EncryptedAlertId==null)
            {
            <center>
                    <input type="button" value="Save" name="btnSaveAlertDetails" id="btnSaveAlertDetails" class="jqueryButton" tabindex="5" title="Save Details"/>
                    <input type="reset" value="Reset" name="btnResetAlertDetails" id="btnResetAlertDetails" class="jqueryButton" tabindex="6" title="Reset"/>
            </center>
            }
            else
            {
            <center>
                <input type="button" value="Update" name="btnUpdateAlertDetails" id="btnUpdateAlertDetails" class="jqueryButton" tabindex="5" title="Update Details"/>
                <input type="button" value="Cancel" name="btnCancelAlertDetails" id="btnCancelAlertDetails" class="jqueryButton" tabindex="6" title="Cancel"/>
            </center>
            }
        </td>
    </tr>
      <tr>
            <td colspan="5">
                   <label style="border:none">[ Note: Fields marked with<label style="color: red;"> * </label>are mandatory.]</label>
            </td>
       </tr>
</table>
</form>
</div>
