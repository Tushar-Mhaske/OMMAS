<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>

    <form id="frmQualityMonitor">
        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="text-align: right; width: 30%;">
                     <span>State:</span>
               
                </td>
                
                <td style="text-align: left; width: 30%;">
                     @Html.DropDownList("ddlState", @ViewBag.StateList as IEnumerable<SelectListItem>, new { @id = "ddlState", title = "State", tabindex = 1 })
                </td>
                <td style="text-align: left; width: 40%;">
                    <input type="button" id="btnView" value="View" class="jqueryButton" title="View Quality Monitor " tabindex="3" />

                </td>
            </tr>
        </table>

    </form>
<div id="dvPendingATRReport" style="height:400px;"/>

<script type="text/javascript">
    $(document).ready(function () {
        $("#btnView").click(function () {
            var state = $("#ddlState").val();
            $("#dvPendingATRReport").load("/QMSSRSReports/QMSSRSReports/QmATRPendingReport", { state: state}, function (response) {

                    //  alert("Loaded");
            });
            
            
        });
    });

</script>