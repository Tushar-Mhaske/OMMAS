@model PMGSY.Models.QualityMonitoring.QMScheduleViewModel

<!DOCTYPE html>

<html>
<head>

<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/QualityMonitoring/QMSQCLetter.js"></script>
</head>

<body>
<form id="frmSQCLetter">
    @Html.Hidden("hdnRoleCode", PMGSY.Extensions.PMGSYSession.Current.RoleCode.ToString())
    <div id="divError" class="ui-state-error ui-corner-all" style="text-align: left; display: none; width: 100%">
        <span class="ui-icon ui-icon-alert" style="float: left;"></span>
        <span></span>
    </div>
    <table  id="tblSQCLetter" style="margin-top:10px; text-align:left;  width:100%; ">
            <tr>
                <td style="width:100%; border:ridge 0.1em #ccc;padding:5px 5px 5px 5px;" >
                    <table class="rowstyle">
                            <tr>
                                <td style="width:13%;">
                                        @Html.LabelFor(model => model.ADMIN_IM_MONTH)
                                </td>
                                <td style="width:12%;">
                                    @Html.DropDownListFor(model => model.ADMIN_IM_MONTH, new SelectList(Model.MONTHS_LIST, "Value", "Text"), new { @id = "ddlInspMonthSQCLetter"})
                                    @Html.HiddenFor(model => model.ADMIN_IM_MONTH, new { @id = "hdnInspMonthSQCLetter"})
                                </td> 
                                <td style="width:13%;">
                                        @Html.LabelFor(model => model.ADMIN_IM_YEAR)
                                </td>
                                <td>
                                    @Html.DropDownListFor(model => model.ADMIN_IM_YEAR, new SelectList(Model.YEARS_LIST, "Value", "Text"), new { @id = "ddlInspYearSQCLetter"})
                                    @Html.HiddenFor(model => model.ADMIN_IM_YEAR, new { @id = "hdnInspYearSQCLetter"})
                                </td>
                                <td>
                                    <input type="button" id="btnViewSqcList" value="View" />
                                </td>
                            </tr>
                    </table>
                </td>
            </tr>
    </table> 
    
    <div id="divSQCLetterList" style="width:100%">
        <table id="tbSQCLetterList"></table>
        <div id="dvSQCLetterListPager"></div>
    </div>  
</form>
</body>
</html>