@model PMGSY.Models.Payment.ExecPaymentValidationViewModel

<script src="~/Scripts/custom/Generic.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/jquery.ui.datepicker.js"></script>

<script src="~/Scripts/Payment/ExecPaymentValidationLayout.js"></script>

<div id="dvhdExecPaymentValidationLayout" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:0px;margin-right:0px;margin-top:0px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Add Execution Payment Validation Configuration Details</span>

    @*<span id="spCollapseIconAddDropOrder" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>*@
</div>

<div id="dvExecPaymentValidationLayout" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmExecPaymentValidationLayout">
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()

        <table style="margin-top: 0px; margin-bottom: 0px; width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 5%">
                    @Html.RadioButtonFor(model => model.srrda_Dpiu, "S", new { @id = "rdoSRRDA", @tabindex = 1 })<span>SRRDA</span>
                </td>
                <td style="width: 10%">
                    @Html.DropDownListFor(model => model.SRRDA, Model.lstSRRDA, new { @id = "ddlSRRDA", @title = "SRRDA", @style = "width:150px;" })
                    <br />
                    @Html.ValidationMessageFor(m => m.srrda_Dpiu)
                    @Html.ValidationMessageFor(m => m.SRRDA)
                </td>
                <td style="width: 5%">
                    @Html.RadioButtonFor(model => model.srrda_Dpiu, "D", new { @id = "rdoDPIU", @tabindex = 2 })<span>DPIU</span>
                </td>
                <td style="width: 10%">
                    @Html.DropDownListFor(model => model.DPIU, Model.lstDPIU, new { @id = "ddlDPIU", @title = "DPIU", @style = "width:150px;" })
                    <br />
                    @Html.ValidationMessageFor(m => m.DPIU, "", new { @id = "erDPIU" })
                </td>
                <td style="width: 10%; display:none;">
                    @Html.RadioButtonFor(model => model.roadSelection, "0", new { @id = "rdoAllRd", @tabindex = 3 })<span>All Roads</span>
                    @Html.RadioButtonFor(model => model.roadSelection, "1", new { @id = "rdoSelectRd", @tabindex = 4 })<span>Select Road</span>
                    <br />
                    @Html.ValidationMessageFor(m => m.roadSelection)
                </td>
                <td style="width: 5%; display:none;">@Html.Label("Sanction Year", new { @class = "SelRoad" })</td>
                <td style="width: 10%">
                    @Html.DropDownListFor(m => m.Year, new SelectList(Model.lstYear, "Value", "Text"), new { @style = "width:150px;", @tabindex = "5", @id = "ddlYear", @title = "Year", @class = "SelRoad" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Year, "", new { @id = "erYear", @class = "SelRoad" })
                </td>
                <td style="width: 5%">@Html.Label("Road", new { @class = "SelRoad" })</td>
                <td style="width: 10%">
                    @Html.DropDownListFor(m => m.roadCode, new SelectList(Model.lstRoadCode, "Value", "Text"), new { @style = "width:150px;", @tabindex = "6", @id = "ddlRoad", @title = "Road", @class = "SelRoad" })
                    <br />
                    @Html.ValidationMessageFor(m => m.roadCode, "", new { @id = "erRoad", @class = "SelRoad" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("From Date")<label style="color: red">*</label>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.fromDate, new { @id = "txtFromDt", @title = "Enter From Date", @maxlength = 10, @tabindex = 4, @placeholder = "Enter From Date...", @readonly = "readonly" })
                    <br />
                    @Html.ValidationMessageFor(model => model.fromDate)
                </td>
                <td>
                    @Html.Label("To Date")<label style="color: red">*</label>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.toDate, new { @id = "txtToDt", @title = "Enter To Date", @maxlength = 10, @tabindex = 4, @placeholder = "Enter To Date...", @readonly = "readonly" })
                    <br />
                    @Html.ValidationMessageFor(model => model.toDate)
                </td>
                <td>
                    <input type="button" id="btnSubmit" value="Save" class="jqueryButton" title="Save" />
                    <input type="reset" id="btnReset" value="Reset" class="jqueryButton" title="Reset">
                </td>
                <td></td>
                <td></td>
            </tr>
        </table>
    </form>
</div>
