@model PMGSY.Models.QualityMonitoring.QMMissingImagesViewModel

<script src="~/Scripts/custom/Generic.js" type="text/javascript"></script>
<script src="~/Scripts/QualityMonitoring/UploadMissingImageLayout.js"></script>

<div id="dvhdUpoadMissingImages" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Upoad Missing Images</span>
    @*<span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>*@
    <img class="ui-icon ui-icon-closethick" onclick="closeDiv();" style="border: none; border-width: 0; float: right">
</div>

<div id="dvUpoadMissingImages" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8; text-align: left">
    <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; margin: 5px 5px 5px 5px; display: none">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="message"></span>
    </div>

    <form id="frmUpoadMissingImages">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @Html.HiddenFor(m=>m.qmFileName)
        @Html.HiddenFor(m=>m.PrRoadCode)
        @Html.HiddenFor(m=>m.QMObsId)
        @Html.HiddenFor(m=>m.QMSchCode)

        <table style="width: 100%; margin-top: 10px;" class="rowstyle">
            <tr>
                <td style="width: 5%;"></td>
                <td style="width: 20%;">
                    <input type="file" name="file" id="MissingImageFile" tabindex="25" />
                    <label id="lblMissingImage"></label>
                    <img id="imgMissingImage" style="display: none; margin-left: 5px; cursor: pointer;" title="Click here to clear file" src="~/Content/images/close-icon.png" />
                </td>
                <td style="width: 20%;">
                    <input type="button" id="btnUpload" name="btnUpload" value="Upload" class="jqueryButton" title="Upload Image" tabindex="2" />
                </td>
                <td style="width: 5%;"></td>
            </tr>
        </table>
    </form>
</div>
