                    @Html.DropDownListFor(m => m.Designation,  ViewData["Designation"] as IEnumerable<SelectListItem>, new {@id="ddlDesignation", @title="Name",@tabindex=1 })
                    @Html.ValidationMessageFor(m=>m.Designation)
                }
               
