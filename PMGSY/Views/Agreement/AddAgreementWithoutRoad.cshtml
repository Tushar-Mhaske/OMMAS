            </td>

            <td>

                @Html.TextBoxFor(model => model.TEND_DATE_OF_AGREEMENT, new { @title = "Agreement Date", @tabindex = 101, @placeholder = "dd/mm/yyyy..." })
                @Html.ValidationMessageFor(model => model.TEND_DATE_OF_AGREEMENT)


            </td>
        </tr>


        <tr>
            <td>
                @Html.LabelFor(model => model.TEND_AGREEMENT_START_DATE)
