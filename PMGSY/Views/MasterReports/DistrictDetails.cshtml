@{
    ViewBag.Title = "DistrictDetails";
}
@model PMGSY.Models.MasterReports.MasterReportsModel

@Html.Hidden("hdnLevelId", PMGSY.Extensions.PMGSYSession.Current.LevelId.ToString())

@if (PMGSY.Extensions.PMGSYSession.Current.StateCode != 0)
{           
    @Html.Hidden("STATE_NAME", PMGSY.Extensions.PMGSYSession.Current.StateName.ToString())
}

@if (PMGSY.Extensions.PMGSYSession.Current.DistrictCode != 0)
{
    @Html.Hidden("DISTRICT_NAME", PMGSY.Extensions.PMGSYSession.Current.DistrictName.ToString())   
}
  
@Html.HiddenFor(model => model.BLOCK_NAME)
@Html.HiddenFor(model => model.MAST_STATE_CODE)
@Html.HiddenFor(model => model.MAST_DISTRICT_CODE)
<div style="width: 98%">
    <table class="ui-state-default ui-corner-all" style="width: 100%;">
        <tr>
            <td style="width: 6%;"></td>
            <td style="text-align: left; width: 5%;">
                @Html.Label("State")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("StateList_DistrictDetails", ViewData["STATE"] as IEnumerable<SelectListItem>, new { @title = "State", @tabindex = 1 })
            </td>
            <td style="text-align: left; width: 10%;">
                @Html.Label("PMGSY Included")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("PMGSY_INCLUDED_DistrictDetails", ViewData["PMGSY_INCLUDED"] as IEnumerable<SelectListItem>, new { @title = "PMGSY Included", @tabindex = 2 })
            </td>
            <td style="text-align: left; width: 7%;">
                @Html.Label("IAP District")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("IAP_DISTRICT_DistrictDetails", ViewData["IAP_DISTRICT"] as IEnumerable<SelectListItem>, new { @title = "IAP District", @tabindex = 3 })
            </td>
              <td style="text-align: left; width: 5%;">
                @Html.Label("Active")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("ActiveType_DistrictDetails", ViewData["Active_TYPE"] as IEnumerable<SelectListItem>, new { @title = "Active", @tabindex = 4 })
            </td>
            <td style="text-align: center; width: 15%; margin-left: 5px;">
                <input type="button" id="DistrictDetailsButton" value="View" class="jqueryButton" title="View Details" tabindex="5" />
            </td>
            <td style="width: 5%"></td>
        </tr>
    </table>
</div>
<br />

<div id="DistrictDetails">
    <table id="DistrictDetailsTable"></table>
</div>
<div id="DistrictDetailsPager"></div>

<script src="~/Scripts/MasterReports/DistrictDetails.js" type="text/javascript"></script>
<script src="~/Scripts/custom/Generic.js"></script>