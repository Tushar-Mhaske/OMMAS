@{
    ViewBag.Title = "QMItemsDetails";
}
<div style="width: 100%">
    <table class="ui-state-default ui-corner-all" style="width: 100%;">
        <tr>
            <td style="width: 6%;"></td>
            <td style="text-align: left; width: 15%;">
                @Html.Label("Quality Montior Type")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("MAST_QMItems_QMType", ViewData["QMType"] as IEnumerable<SelectListItem>, new { @title = "Quality Montior Type", @tabindex = 1 })
            </td>
            <td style="text-align: left; width: 10%;">
                @Html.Label("Item Active")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("MAST_QMItems_QMItemActive", ViewData["QMItemActive"] as IEnumerable<SelectListItem>, new { @title = "Item Active", @tabindex = 2 })
            </td>
            <td style="text-align: center; width: 20%; margin-left: 5px;">
                <input type="button" id="QMItemsDetailsButton" value="View" class="jqueryButton" tabindex="3" title="View Details" />
            </td>
            <td style="width: 20%;"></td>
        </tr>
    </table>
</div>
<br />
<div id="QMItemsDetails">
    <table id="QMItemsDetailsTable"></table>
</div>
<div id="QMItemsDetailsPager"></div>

<script src="~/Scripts/MasterReports/QMItemsDetails.js" type="text/javascript"></script>
<script src="~/Scripts/custom/Generic.js"></script>