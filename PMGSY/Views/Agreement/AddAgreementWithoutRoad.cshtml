            </td>

            <td>

                @Html.TextBoxFor(model => model.TEND_DATE_OF_AWARD_WORK, new { @title = "Award Work Date", @tabindex = 101, @placeholder = "dd/mm/yyyy..." })
                @Html.ValidationMessageFor(model => model.TEND_DATE_OF_AWARD_WORK)
            </td>

            <td>
                @Html.LabelFor(model => model.TEND_DATE_OF_WORK_ORDER)@* <label style="color:red;"> *</label>*@
            </td>

            <td>

