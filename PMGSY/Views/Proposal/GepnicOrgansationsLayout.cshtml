@model PMGSY.Models.Proposal.GepnicOrganisationsViewModel

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Scripts/Proposal/GepnicOrgansationsLayout.js"></script>

<div id="dvhdGepnicProposal" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:0px;margin-right:0px;margin-top:0px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Gepnic Proposal</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvGepnicProposal" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmGepnicProposalLayout">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.proposalsIds)

        @Html.ValidationSummary(true)

        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 5%;"></td>
                <td style="width: 10%;">
                    @*@Html.LabelFor(model => model.StateCode)*@
                    @Html.Label("Organisation")
                </td>
                <td style="width: 25%;">
                    @Html.DropDownListFor(model => model.organisationCode, new SelectList(Model.lstOrganisation, "Value", "Text"), new { @id = "ddlOrganisation", style = "width:170px;", title = "Organisation" })
                    <br />
                    @Html.ValidationMessageFor(m => m.organisationCode)
                </td>
                <td style="width: 10%;">
                    <input type="button" class="jqueryButton" value="Submit" id="btnSubmit" name="btnSubmit" />
                </td>
            </tr>
        </table>
    </form>
</div>
