@{
    ViewBag.Title = "AwardedInProgressRoadworksLayout";
}

@model PMGSY.Areas.ProgressReport.Models.AwardedInProgressRoadworksViewModel


<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Areas/ProgressReport/Scripts/AwardedInProgressRoadWorks.js"></script>

<div id="dvhdAwardedInProgressRoadworks" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Awarded and InProgress Roadworks</span>
</div>
<div id="loadFilters" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmAwardedInProgressRoadworks">
        @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Level)
        <table style="width: 100%;" class="rowstyle">
             <tr>
            <td style="width: 5%; vertical-align: top"></td>
                <td style="text-align: left; width: 5%; vertical-align: top"></td>
           
                 <td style="width: 5%; vertical-align: top;text-align:center;">
                    @Html.Label("State : ")
                </td>
                <td style="width: 5%; vertical-align: top">
                  @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.StateList, "Value", "Text"), new { @title = "State", @id = "ddlState", @style = "width:150px" })
                    <br />
                    @Html.ValidationMessageFor(m => m.StateCode)
                </td>
                  <td style="text-align: left; width: 5%;">
                    @Html.Label("Scheme : ")
                </td>

                <td style="width: 15%;">
                     @Html.DropDownListFor(model => model.SchemeCode, new SelectList(Model.SchemeList, "Value", "Text"), new { @title = "Scheme ", @id = "SchemeList", @tabindex = 3, @style = "width:150px" })
                        @Html.ValidationMessageFor(m => m.SchemeCode)
                  
                </td>
                  <td style="text-align: left; width: 5%;">
                    @Html.Label("Phase : ")
                </td>

                <td style="width: 15%;">
                     @Html.DropDownListFor(model => model.PhaseCode, new SelectList(Model.PhaseList, "Value", "Text"), new { @title = "Phase ", @id = "PhaseList", @tabindex = 3, @style = "width:150px" })
                     @Html.ValidationMessageFor(m => m.PhaseCode)
                  
                </td>
              <td style="width: 5%; vertical-align: top; text-align:left">
                    <input type="button" class="jqueryButton"  value="View" id="btnViewReport" title="View" />
                </td>
                <td style="width: 5%; vertical-align: top"></td>
            </tr>
        </table>
    </form>
</div>
<div id="loadReport" class="divLoadReport"></div>




