@model PMGSY.Models.FortyPointCheckList.TenderEquipmentViewModel

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>

<script src="~/Scripts/FortyPointChecklist/AddEditTenderEquipmentDetails.js"></script>

 <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px; text-align: left">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="message"></span>
 </div>

<div id="dvhdAddEdit" class="ui-corner-top ui-widget-header panelheader" style="text-align: left;height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;@ViewBag.ScreenName</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-close" style="float: right" title="Click here to close"></span>
</div>

<div id="dvSearchParameter" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">

    <form id="frmTenderEquipmentDetails">

        <center>@Html.ValidationSummary(true) </center>
        @Html.HiddenFor(m=>m.EncryptedEquipmentCode)
        <table style="width: 100%;">
            <tr>
                <td style="width: 02%"></td>
                
                <td style="width: 07%; font-weight:bold">                    
                    @Html.LabelFor(m=>m.TEND_EQUIPMENT_FLAG)<span style="color:red"> *</span>
                </td>
                <td style="text-align: left; width: 10%;">                       
                        @Html.DropDownListFor(m=>m.TEND_EQUIPMENT_FLAG,Model.Equipments,new {id="ddlEquipments" ,@tabindex="1"})
                </td>

                <td style="width: 07%; font-weight:bold">                    
                    @Html.LabelFor(m=>m.TEND_EQUIPMENT_TYPE)<span style="color:red"> *</span>
                </td>
                <td style="text-align: left; width: 10%;">                       
                        @Html.TextBoxFor(model=>model.TEND_EQUIPMENT_TYPE,new {@title="Type Of Equipment",@tabindex="2"})                    
                </td>

                <td style="width: 10%;font-weight:bold">
                     @Html.LabelFor(m=>m.TEND_EQUIPMENT_NUMBERS)<span style="color:red"> *</span>
                </td>
                <td style="text-align:left;width:10%">                           
                    @if(Model.EncryptedEquipmentCode==null)
                    {                    
                        @Html.TextBoxFor(model=>model.TEND_EQUIPMENT_NUMBERS,new {@title="Number Of Equipment",@tabindex="3",@Value=""}) 
                    }
                    else
                    {
                        @Html.TextBoxFor(model=>model.TEND_EQUIPMENT_NUMBERS,new {@title="Number Of Equipment",@tabindex="3"}) 
                    }                  
                </td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td>@Html.ValidationMessageFor(model => model.TEND_EQUIPMENT_FLAG)</td>
                <td></td>
                <td>@Html.ValidationMessageFor(model => model.TEND_EQUIPMENT_TYPE)</td>
                <td></td>
                <td>@Html.ValidationMessageFor(model=>model.TEND_EQUIPMENT_NUMBERS)</td>
            </tr>
            <tr>
                <td style="text-align: center;" colspan="7">
                    @if(Model.EncryptedEquipmentCode==null)
                    {                    
                        <input type="button" id="btnAddTenderEquipmentDetails" name="btnAddTenderEquipmentDetails" value="Save" class="jqueryButton" title="Click here to save details" tabindex="3" />
                        <input type="reset" id="btnResetTenderEquipmentDetails" name="btnResetTenderEquipmentDetails" value="Reset" class="jqueryButton" title="Click here to reset details" tabindex="4"/>
                    }
                    else
                    {
                        <input type="button" id="btnUpdateTenderEquipmentDetails" name="btnUpdateTenderEquipmentDetails" value="Update" class="jqueryButton" title="Click here to update details" tabindex="3"/>
                        <input type="reset" id="btnCancelTenderEquipmentDetails" name="btnCancelTenderEquipmentDetails" value="Cancel" class="jqueryButton" title="Click here to cancel details" tabindex="4"/>
                    }
                </td>
            </tr>
        </table>
    </form>
</div>
