@model PMGSY.Models.Master.MasterTerrainTypeViewModel

<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/Master/Master_CreateTerrainType.js"></script>
<div id="dvhdCreateNewDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Terrain Details</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-close" style="float: right"></span>
</div>

<div id="dvCreateNewDetails" style="display: block; border: 1px solid #B5B8C8;">

    <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px; text-align: left">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="message"></span>
    </div>

    <form id="frm">
        @Html.AntiForgeryToken()
        <center>@Html.ValidationSummary(true)</center>

        <table style="width: 100%; margin-top: 10px;" class="rowstyle">

            <tr style="display: none">
                <td colspan="5">
                    @Html.HiddenFor(model => model.EncryptedTerrainCode)
                </td>
            </tr>

            <tr>
                <td style="width: 8%;"></td>
                <td style="text-align: left; width: 15%;">
                    @Html.LabelFor(model => model.MAST_TERRAIN_TYPE_NAME)
                    <label style="color: red;">*</label>
                </td>

                <td style="width: 30%;">
                    @Html.TextBoxFor(model => model.MAST_TERRAIN_TYPE_NAME, new { maxlength = 50, @title = "Terrain Name", @tabindex = 1, placeholder = "Enter Terrain Name..." })
                    @Html.ValidationMessageFor(model => model.MAST_TERRAIN_TYPE_NAME)
                </td>

                <td style="width: 15%;">
                    @Html.LabelFor(model => model.MAST_TERRAIN_ROADWAY_WIDTH)
                    <label style="color: red;">*</label>
                </td>
                <td>
                    @if (Model.EncryptedTerrainCode == null)
                    {
                        @Html.TextBoxFor(model => model.MAST_TERRAIN_ROADWAY_WIDTH, new { maxlength = 5, @title = "Roadway Width", @tabindex = 2, @Value = "", placeholder = "Enter Roadway Width..." })
                    }
                    else
                    {
                        @Html.TextBoxFor(model => model.MAST_TERRAIN_ROADWAY_WIDTH, new { maxlength = 5, @title = "Roadway Width", @tabindex = 2 })
                    }
                    @Html.ValidationMessageFor(model => model.MAST_TERRAIN_ROADWAY_WIDTH)
                </td>
            </tr>

            <tr>
                <td></td>

                <td>
                    @Html.LabelFor(model => model.MAST_TERRAIN_SLOP_FROM)
                </td>

                <td>
                    @Html.TextBoxFor(model => model.MAST_TERRAIN_SLOP_FROM, new { @title = "Slope From", @tabindex = 3, placeholder = "Enter Slope From..." })
                    @Html.ValidationMessageFor(model => model.MAST_TERRAIN_SLOP_FROM)
                </td>

                <td>
                    @Html.LabelFor(model => model.MAST_TERRAIN_SLOP_TO)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.MAST_TERRAIN_SLOP_TO, new { @title = "Slope To", @tabindex = 4, placeholder = "Enter Slope To..." })
                    @Html.ValidationMessageFor(model => model.MAST_TERRAIN_SLOP_TO)
                </td>
            </tr>

            <tr>
                <td colspan="5" style="text-align: center">
                    @if (Model.EncryptedTerrainCode == null)
                    {
                        <input type="button" id="btnSave" name="btnSave" value="Save" class="jqueryButton" title="Save Terrain Details" tabindex="5" /> 
                        <input type="reset" id="btnReset" name="btnReset" value="Reset" class="jqueryButton" title="Reset" tabindex="6" />
                    }
                    else
                    {
                        <input type="button" id="btnUpdate" name="btnUpdate" value="Update" class="jqueryButton" title="Update Terrain Details" tabindex="5" /> 
                        <input type="button" id="btnCancel" name="btnCancel" value="Cancel" class="jqueryButton" title="Cancel" tabindex="6" />
                    }
                </td>

            </tr>
            <tr>
                <td colspan="5">
                    <label tyle="border:none">[ Note: Fields marked with<label style="color: red;"> * </label>are mandatory.]</label>
                </td>
            </tr>

        </table>

    </form>


</div>
