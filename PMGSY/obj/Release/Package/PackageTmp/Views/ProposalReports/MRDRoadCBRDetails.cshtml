@*<div id="dialogCost" >*@
<table id="tblRoadCBRDetails" class="ui-state-default" style="width: 98%;">
    <thead>
        <tr>
            <th>Segment Number</th>
            <th>Start Chainage</th>
            <th>End Chainage</th>
            <th>Length of Segment</th>
            <th>CBR Value</th>
        </tr>
    </thead>
    @if (Model.RoadCBRDetails.Count > 0)
    { 
        <tbody>
            @foreach (var itm in Model.RoadCBRDetails)
            {
                <tr>
                    <td style="text-align: right; border: 0.1em solid white;">@itm.IMS_SEGMENT_NO</td>
                    <td style="text-align: right; border: 0.1em solid white;">@objCommonFunction._IndianFormatAmount(itm.IMS_STR_CHAIN)</td>
                    <td style="text-align: right; border: 0.1em solid white;">@objCommonFunction._IndianFormatAmount(itm.IMS_END_CHAIN)</td>
                    <td style="text-align: right; border: 0.1em solid white;">@objCommonFunction._IndianFormatAmount(itm.SEGMENT_LENGTH)</td>
                    <td style="text-align: right; border: 0.1em solid white;">@objCommonFunction._IndianFormatAmount(itm.IMS_CBR_VALUE)</td>
                </tr>
            }
        </tbody>
    }
    else
    {
        <tbody>
            <tr>
                <td style="text-align: right; border: 0.1em solid white;">-</td>
                <td style="text-align: right; border: 0.1em solid white;">0.00</td>
                <td style="text-align: right; border: 0.1em solid white;">0.00</td>
                <td style="text-align: right; border: 0.1em solid white;">0.00</td>
                <td style="text-align: right; border: 0.1em solid white;">0.00</td>
            </tr>
        </tbody>
    }
</table>
