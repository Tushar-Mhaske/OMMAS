@model PMGSY.Areas.LocationSSRSReports.Models.LocationMasterReports

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}

<script src="~/Areas/LocationSSRSReports/Scripts/RegionDistrictLayout.js"></script>
<script src="~/Scripts/custom/Generic.js"></script>

<div id="dvhdRegionDistrictLayout" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">Region District</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvRegionDistrictLayout" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmRegionDistrictLayout">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.StateName)
        @Html.HiddenFor(model => model.RegionName)
        @Html.HiddenFor(model => model.Mast_State_Code)
        @Html.HiddenFor(model => model.Mast_District_Code)
        <table class="rowstyle" style="width: 100%;">
            <tr>
                <td style="width: 2%;"></td>
                <td style="text-align: left; width: 5%;">
                    @Html.Label("State")
                </td>
                <td style="width: 15%;">
                    @*@Html.DropDownList("StateList_RegionDistrictDetails", ViewData["STATE"] as IEnumerable<SelectListItem>, new { @title = "State", @tabindex = 1 })*@
                    @Html.DropDownListFor(model => model.State, new SelectList(Model.StateList, "Value", "Text"), new { @id = "StateList_RegionDistrictDetails", @title = "State", @tabindex = 1 })
                    <br />
                    @Html.ValidationMessageFor(m => m.State)
                </td>
                <td style="text-align: left; width: 5%;">
                    @Html.Label("Region")
                </td>
                <td style="width: 15%;">
                    @*@Html.DropDownList("RegionList_RegionDistrictDetails", ViewData["REGION"] as IEnumerable<SelectListItem>, new { @title = "Region", @tabindex = 2 })*@
                    @Html.DropDownListFor(model => model.Region, new SelectList(Model.RegionList, "Value", "Text"), new { @id = "RegionList_RegionDistrictDetails", @title = "Region", @tabindex = 2 })
                    <br />
                    @Html.ValidationMessageFor(m => m.Region)
                </td>
                <td style="text-align: left; width: 5%;">
                    @Html.Label("Active")
                </td>
                <td style="width: 15%;">
                    @*@Html.DropDownList("ActiveType_RegionDistrictDetails", ViewData["Active_TYPE"] as IEnumerable<SelectListItem>, new { @title = "Active", @tabindex = 3 })*@
                    @Html.DropDownListFor(model => model.ActiveFlag, new SelectList(Model.ActiveFlagList, "Value", "Text"), new { @id = "ActiveType_RegionDistrictDetails", @title = "Active", @tabindex = 3 })
                    <br />
                    @Html.ValidationMessageFor(m => m.ActiveFlag)
                </td>
                <td style="text-align: center; width: 5%; margin-left: 5px;">
                    <input type="button" id="RegionDistrictDetailsButton" value="View" class="jqueryButton" title="View Details" tabindex="4" />
                </td>
                <td style="width: 20%;"></td>
            </tr>

        </table>
    </form>
</div>

<div id="dvLoadRegionDistrictReport">
</div>


