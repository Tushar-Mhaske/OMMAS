@{
    ViewBag.Title = "_QualityMonitorDetails";
}
@model PMGSY.Models.MasterReports.MasterReportsModel

@Html.Hidden("hdnLevelId", PMGSY.Extensions.PMGSYSession.Current.LevelId.ToString())

@if (PMGSY.Extensions.PMGSYSession.Current.StateCode != 0)
{           
    @Html.Hidden("STATE_NAME", PMGSY.Extensions.PMGSYSession.Current.StateName.ToString())
}

@if (PMGSY.Extensions.PMGSYSession.Current.DistrictCode != 0)
{
    @Html.Hidden("DISTRICT_NAME", PMGSY.Extensions.PMGSYSession.Current.DistrictName.ToString())   
}


@Html.HiddenFor(model => model.BLOCK_NAME)
@Html.HiddenFor(model => model.MAST_STATE_CODE)
@Html.HiddenFor(model => model.MAST_DISTRICT_CODE)

<div style="width: 100%">
    <table class="ui-state-default ui-corner-all" style="width: 100%;">
        <tr>
            <td style="width: 2%;"></td>
            <td style="text-align: left; width: 4%;">
                @Html.Label("State")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("StateList_QualityMonitorDetails", ViewData["STATE"] as IEnumerable<SelectListItem>, new { @title = "State", @tabindex = 1 })
            </td>
            <td style="text-align: left; width: 7%;">
                @Html.Label("Monitor Type")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("QMTypeList_QualityMonitorDetails", ViewData["QMTYPE"] as IEnumerable<SelectListItem>, new { @title = "Monitor Type", @tabindex = 2 })
            </td>
            <td style="text-align: left; width: 5%;">
                @Html.Label("Empanelled")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("ActiveList_QualityMonitorDetails", ViewData["ACTIVE"] as IEnumerable<SelectListItem>, new { @title = "Empanelled", @tabindex = 3 })
            </td>
            <td style="text-align: center; width: 10%; margin-left: 5px;">
                <input type="button" id="QualityMonitorDetailsButton" value="View" class="jqueryButton" title="View Details" tabindex="4" />
            </td>
            <td style="width: 5%;"></td>
        </tr>

    </table>
</div>
