@model PMGSY.Areas.MPR.Models.MPR1Model

@*<script src="~/Areas/MPR/Scripts/MPR1NewReport.js"></script>*@
<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Areas/Feedback/Scripts/MPR1NewReport.js"></script>

<div id="dvhdMPRNewReportDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;MPR 1 New Report</span>

    @*<span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>*@
</div>
<div id="loadFilters" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmMPR1">
        @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.Mast_State_Code)

        @Html.HiddenFor(model => model.StateName)


        @Html.HiddenFor(model => model.localizedValue)

        @Html.HiddenFor(model => model.MonthName)
        @Html.HiddenFor(model => model.YearName)
        @Html.HiddenFor(model => model.CollaborationName)
         @Html.HiddenFor(model => model.AgencyName)
        @*@{
        System.Globalization.CultureInfo CultureInfo = null;
        CultureInfo = new System.Globalization.CultureInfo(Request.Cookies["language"] == null ? "en" : Request.Cookies["language"].Value.ToString());
        }*@
        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 5%; vertical-align: top"></td>
                @*<td style="width: 5%;">
                @Html.LabelFor(model => model.RoadCat) : 
            </td>
            <td style="width: 3%;">
                @Html.DropDownListFor(model => model.RoadCat, new SelectList(Model.RoadCatList, "Value", "Text"), new { @id = "ddlRoadCatCNRW" })
            </td>*@
                <td style="text-align: left; width: 5%; vertical-align: top">
                    @Html.LabelFor(model => model.StateCode)
                </td>

                <td style="width: 15%; vertical-align: top">
                    @if (Model.Mast_State_Code == 0)
                    {
 @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.StateList, "Value", "Text"), new { @title = "State", @tabindex = 1, @id = "StateList_CompletedRoadDetails", @style = "width:150px" })
                        <br />
                        @Html.ValidationMessageFor(m => m.StateCode)
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.StateName) 
                        @Html.Hidden("StateCode", Model.Mast_State_Code)                            
                    }
                </td>



                <td style="text-align: left; width: 5%; vertical-align: top">
                    @Html.HiddenFor(m => m.localizedValue)
                    @Html.LabelFor(model => model.Year)



                </td>
                <td style="width: 15%; vertical-align: top">
                    @Html.DropDownListFor(model => model.Year, new SelectList(Model.YearList, "Value", "Text"), new { @title = "Year", @id = "ddlYearMPR1", @style = "width:150px" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Year)
                </td>






                <td style="text-align: left; width: 5%; vertical-align: top">
                    @Html.LabelFor(model => model.Month)
                </td>

                <td style="width: 15%; vertical-align: top">
                    @Html.DropDownListFor(model => model.Month, new SelectList(Model.MonthList, "Value", "Text"), new { @title = "Month", @id = "ddlMonthMPR1", @style = "width:150px" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Month)
                </td>
                <td style="width: 5%; vertical-align: top"></td>
            </tr>
            <tr>
                <td style="width: 5%; vertical-align: top"></td>
                <td style="width: 5%; vertical-align: top">
                    @Html.LabelFor(model => model.Collab)
                </td>
                <td style="width: 15%; vertical-align: top">
                    @Html.DropDownListFor(model => model.Collab, new SelectList(Model.CollabList, "Value", "Text"), new { @title = "Collaboration", @id = "ddlCollabMPR1", @style = "width:150px" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Collab)
                </td>

                <td style="width: 5%; vertical-align: top">       
                    @Html.LabelFor(model => model.Agency)
                       </td>
                <td style="width: 15%; vertical-align: top"> @Html.DropDownListFor(model => model.Agency, new SelectList(Model.AgencyList, "Value", "Text"), new { @title = "Agency", @id = "ddlAgency", @style = "width:150px" })</td>

                <td style="width: 5%; vertical-align: top">@Html.LabelFor(model => model.Scheme)</td>
                <td style="width: 15%; vertical-align: top">@Html.DropDownListFor(model => model.Scheme, new SelectList(Model.SchemeList, "Value", "Text"), new { @title = "PMGSY Scheme", @id = "ddlScheme", @style = "width:150px" })</td>

                <td style="width: 5%; text-align: center; vertical-align: top">
                    <input type="button" class="button" value="View" id="btnViewMPR1Report" title="View" />
                </td>
                <td style="width: 5%; vertical-align: top"></td>
            </tr>
        </table>
    </form>
    @*<div id="divCompRoads" class="modal" style="margin-top: 12px; float: right; margin-left: 870px">
        <span id="spnCompRoads" class="close">X</span>
        <span>@HttpContext.GetLocalResourceObject(@"~\Views\Shared\CommonFilters", "lblNoteDrillDown", CultureInfo)</span>
    </div>*@
</div>
