        @Html.HiddenFor(model => model.BatchName)
        @Html.HiddenFor(model => model.YearName)*@
        <table class="rowstyle">
            <tr>
                <td style="width: 2%;"></td>
                <td style="width: 5%;">
                    @Html.LabelFor(model => model.StateCode)
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.StateList, "Value", "Text"), new { @id = "ddlECState", style = "width:170px;", title = "State" })
                    <br />
                    @Html.ValidationMessageFor(m => m.StateCode)
                </td>
                <td style="width: 7%;">
                    @Html.LabelFor(model => model.AgencyCode)
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.AgencyCode, new SelectList(Model.AgencyList, "Value", "Text"), new { @id = "ddlECAgency", style = "width:170px;" })
                    <br />
                    @Html.ValidationMessageFor(m => m.AgencyCode)
                </td>
                <td style="width: 7%;">
                    @Html.LabelFor(model => model.Year)
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.Year, new SelectList(Model.YearList, "Value", "Text"), new { @id = "ddlECYear", style = "width:170px;" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Year)
                </td>
                <td style="width: 7%;">
                    @Html.LabelFor(model => model.BatchCode)
                </td>
                <td style="width: 15%;">
                    @Html.DropDownListFor(model => model.BatchCode, new SelectList(Model.BatchList, "Value", "Text"), new { @id = "ddlECBatch", style = "width:170px;" })
                    <br />
                    @Html.ValidationMessageFor(m => m.BatchCode)
                </td>
                <td style="text-align: left;">
                    <input type="button" id="btnViewEC" value="View" class="button" />
                </td>
                <td style="width: 15%;"></td>
            </tr>
            @*<tr>
                <td style="width: 2%;"></td>
