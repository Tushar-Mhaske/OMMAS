@model PMGSY.Models.Proposal.CoreNetworkMappingViewModel


<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/Proposal/MapCoreNetworkToProposal.js"></script>

<center>
<form id="frmUpdateDetails" style="width:98%">
    <div style="margin-left: 100px">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model=>model.ProposalCode)
        @Html.HiddenFor(model=>model.ProposalType)
        @Html.HiddenFor(model=>model.UpgradeConnect)
    </div>
    <div id="divError" class="ui-state-error ui-corner-all" style="text-align: left; display: none; width: 100%">
        <span class="ui-icon ui-icon-alert" style="float: left;"></span>
        <span></span>
    </div>
    <div style="height: 20px; width: 100%; text-align: left; padding-top: 0.6em;" class="ui-state-default ui-corner-all">
        &nbsp; <strong>Note :</strong>  Fields marked with * are mandatory.
    </div>
    <table id="tb" cellpadding="3px" class="rowstyle" style="margin-top: 10px; text-align: left; border: ridge 0.1em #ccc; width: 100%; padding-top: 5px 5px 5px 5px;">
        <tr></tr>
        <tr>
            <td style="width:10%">
            </td>
            <td style="width: 10%;">
                @Html.LabelFor(model=>model.Block)<label style="color:red">*</label>
            </td>
            <td style="width: 30%;">
                @Html.DropDownListFor(model=>model.Block,Model.lstBlocks,new{@id="ddlBlocks",@title= "Select Block",@tabindex = 1,@disabled = "disabled"})
                @Html.ValidationMessageFor(model=>model.Block)
            </td>
            <td style="width: 10%;">
                @Html.LabelFor(model=>model.CnCode)<label style="color:red">*</label>
            </td>
            <td style="width: 30%;">
                @Html.DropDownListFor(model=>model.CnCode,Model.lstCoreNetworks,new{@id="ddlCoreNetworks",@title= "Select Core Networks",@tabindex = 2,@style="width:200px"})
                @Html.ValidationMessageFor(model=>model.CnCode)
            </td>
        </tr>
        <tr>
            <td colspan="5">
                <center>
                <input type="button" id="btnUpdate" name="btnUpdate" value="Update" class= "jqueryButton" title="Update Details" tabindex="3"  />  
                <input type="reset" id="btnReset" name="btnReset" value="Reset" class= "jqueryButton" title="Reset" tabindex="4"  />
                </center>
            </td>
        </tr>
    </table>
</form>
</center>