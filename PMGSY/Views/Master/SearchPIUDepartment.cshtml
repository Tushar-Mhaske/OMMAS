@{
    ViewBag.Title = "SearchPIUDepartment";
}

<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/Master/SearchPIUDepartment.js"></script>
<form id="frmSearchPIU">
    <div id="PIUList" style="width: 100%">
        <div id="dvhdSearch" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
            @*margin-left:10px;margin-right:10px;margin-top:10px;*@
            <span class="ui-jqgrid-title" style="float: left">&nbsp;Search</span>
            <span id="spCollapseIconS" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
        </div>
        <div id="dvSearchParameter" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
            @*margin-left: 10px; margin-right: 10px;*@
            @Html.Hidden("hdStatCode", PMGSY.Extensions.PMGSYSession.Current.StateCode)
            <table style="width: 100%" class="rowstyle">
                <tr>
                    <td style="width: 2%;"></td>
                    <td style="text-align: left; width: 8%;">@Html.Label("State")</td>                    
                    <td style="text-align: left; width: 20%">@Html.DropDownList("State", null, new { @title = "State" })</td>
                    <td style="text-align: left; width: 8%;">@Html.Label("SSRDA")</td>
                   @* <td style="text-align: left; width: 20%">@Html.DropDownList("Agency", null, new { @title = "Agency" })</td>*@
                     <td style="text-align: left; width: 20%">@Html.DropDownList("ddlSSRDA", null, new { @title = "SSRDA" })</td>
                       <td style="text-align: left; width: 8%;">@Html.Label("Active Status")</td>                    
                    <td style="text-align: left; width: 20%">@Html.DropDownList("ddlActive", null, new { @title = "Active Status" })</td>
                    <td style="text-align: left">
                        <input type="button" id="btnPIUSearch" name="btnPIUSearch" value="Search" class="jqueryButton" title="Search DPIU" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>

