                    @Html.LabelFor(model => model.StateCode)
                </td>
                <td style="width: 15%;">
                    @if (Model.Mast_State_Code == 0)
                    {
                        @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.StateList, "Value", "Text"), new { @title = "State", @tabindex = 1, @id = "StateList_DistRatingDetail", @style = "width:150px" })
