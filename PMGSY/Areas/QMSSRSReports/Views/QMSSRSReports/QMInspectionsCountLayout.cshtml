@model PMGSY.Areas.QMSSRSReports.Models.QualityReportsViewModel

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.ui.dialog.js")"> </script>
<script src="~/Areas/QMSSRSReports/Scripts/QMInspectionsCountLayout.js"></script>
<script src="~/Scripts/custom/Generic.js"></script>

<div id="dvhdQMInspectionsCountLayout" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Inspections Count Report</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvQMInspectionsCountLayout" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">


    <form id="frmQMInspectionsCountLayout">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.Hidden("hdnRole", PMGSY.Extensions.PMGSYSession.Current.RoleCode.ToString())
        @Html.HiddenFor(m => m.StateName)
        <table class="rowstyle" style="margin-top: 0px; text-align: center; width: 100%;">
            <tr>
                <td style="width: 15%; font-weight: bold;">
                    @Html.LabelFor(model => model.qmType)
                </td>
                <td style="width: 10%">

                    @*@Html.DropDownListFor(model => model.STATE, new SelectList(Model.STATE_LIST, "value", "text"), new { @id = "ddlStateMonthwiseComparision" })*@
                    @Html.DropDownListFor(model => model.qmType, new SelectList(Model.qmTypeList, "Value", "Text"), new { @id = "ddlQMInspCountQmType", @title = "Quality Monitor Type", @tabindex = 1, })
                    <br />
                    @Html.ValidationMessageFor(m => m.qmType)

                </td>
                <td style="width: 15%; font-weight: bold;">
                    @*@Html.LabelFor(model => model.Year)*@
                    @Html.Label("Sanction Year")
                </td>
                <td style="width: 10%">
                    @*@Html.DropDownListFor(model => model.YEAR, new SelectList(Model.YEAR_LIST, "value", "text"), new { @id = "ddlYearMonthwiseComparision" })*@
                    @Html.DropDownListFor(model => model.Year, new SelectList(Model.YearList, "Value", "Text"), new { @id = "ddlQMInspCountYear", @title = "Year", @tabindex = 1, })
                    <br />
                    @Html.ValidationMessageFor(m => m.Year)
                </td>
                <td rowspan="2" style="text-align: left;">
                    <input type="button" id="btnViewQMInspCount" value="View Details" class="jquerybutton" style="margin-left: 20px;" />
                </td>
            </tr>
        </table>
    </form>

</div>
<div id="dvLoadQMInspectionsCountReport"></div>
