@model PMGSY.Models.RecoverPwdrQuestionModel
@{Layout = null;}
@using CaptchaLib
<!DOCTYPE html>
<html lang="en">
     <head>
         <META Http-Equiv="Cache-Control" Content="no-cache"/>
         <META Http-Equiv="Pragma" Content="no-cache"/>
         <META Http-Equiv="Expires" Content="0"/>
         <title>PMGSY</title>
         <link href="~/Content/themes/Humanity/jquery-ui-1.9.2.custom.css" rel="stylesheet" />
          @Styles.Render("~/Content/css")
          @Scripts.Render("~/bundles/jquery")
         <script src="~/Content/themes/Humanity/js/jquery-ui-1.9.2.custom.js"></script>
         <script src="~/Scripts/jquery.validate.min.js"></script>
         <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
         <script src="~/Scripts/custom/Generic.js"></script>
          <script src="~/Scripts/Login/aes.js"></script>
