@model PMGSY.Models.QualityMonitoring.QMObsSchListModel

<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/QualityMonitoring/QualityMonitorsObsDetails.js"></script>

<form id="tblFillObsDetails">
    @Html.Hidden("hdnRoleCodeMonitors", PMGSY.Extensions.PMGSYSession.Current.RoleCode.ToString())

    <div id="divError" class="ui-state-error ui-corner-all" style="text-align: left; display: none; width: 100%">
        <span class="ui-icon ui-icon-alert" style="float: left;"></span>
        <span></span>
    </div>
    <div>
        <span style="color: red;"><strong>Note: Work scheduled as  ATR  verification  will be inspected  as Completed or In-Progress</strong></span>
    </div>
    <table class="rowstyle" id="tblFillObsDetailsFilters" style="margin-top: 0px; text-align: left; border: ridge 0.1em #ccc; width: 100%; padding: 5px 5px 5px 5px;">
        <tr>
            <td style="width: 8%">@Html.LabelFor(model => model.ADMIN_IM_MONTH)</td>
            <td style="width: 20%">
                @Html.DropDownListFor(model => model.ADMIN_IM_MONTH, new SelectList(Model.MONTHS_LIST, "Value", "Text"))
            </td>
            <td style="width: 8%">@Html.LabelFor(model => model.ADMIN_IM_YEAR)</td>
            <td style="width: 20%">
                @Html.DropDownListFor(model => model.ADMIN_IM_YEAR, new SelectList(Model.YEARS_LIST, "Value", "Text"))
            </td>

            @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 7)
            {
                <td style="width: 8%; text-align:left;">
                    <input type="button" id="btnViewScheduledRoads" name="btnViewScheduledRoads" value="View" class="jqueryButton" />
                </td>
                <td style="width: 36%; text-align:left;color:#f00;">
                    <b style="color:#268133;">Note :</b> You can fill Chainage wise Grading for the same road <u style="color:#f00;">more than once</u> using this screen.
                    For Uploading Photos please use option in <u style="color:#f00;">Inspection Details</u> screen.
                </td>

            }
            else
            {
                <td style="width: 44%; text-align:left;">
                    <input type="button" id="btnViewScheduledRoads" name="btnViewScheduledRoads" value="View" class="jqueryButton" />
                </td>
            }
        </tr>
    </table>

    <table id="tbMonitorsObsList"></table>
    <div id="dvMonitorsObsListPager"></div>

</form>
