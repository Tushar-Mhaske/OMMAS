                   @Html.TextBoxFor(model => model.TEND_AGREEMENT_AMOUNT, new { @title = "Agreement Amount", @tabindex = 101 ,@placeholder="Enter Agreement Amount..."})
                    
                     }
                    else
                    {
                           @Html.TextBoxFor(model => model.TEND_AGREEMENT_AMOUNT, new { @title = "Agreement Amount", @tabindex = 101 ,@placeholder="Enter Agreement Amount...", @readonly="readonly"})
                     }*@
                @Html.TextBoxFor(model => model.TEND_AGREEMENT_AMOUNT, new { @title = "Agreement Amount", @tabindex = 101, @placeholder = "Enter Agreement Amount..." })
                @Html.ValidationMessageFor(model => model.TEND_AGREEMENT_AMOUNT)
            </td>

