@model PMGSY.Areas.ProposalSSRSReports.Models.SanctionedRoadListViewModel

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Areas/ProposalSSRSReports/Scripts/SanctionedRoadListLayout.js"></script>

<div id="dvhdSanctionedRoadList" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:0px;margin-right:0px;margin-top:0px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Download Sanctioned Road List</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvSearchParameter" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmSanctionedRoadList">
        @Html.ValidationSummary(true)
        @Html.ValidationSummary(true)

        @*@Html.HiddenFor(model => model.RoadWise)*@
        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 5%;"></td>
                <td style="text-align: left; width: 10%;">
                    @Html.Label("State")
                </td>

                <td style="width: 28%;">
                    @Html.DropDownListFor(model => model.stateCode, new SelectList(Model.lstState, "Value", "Text"), new { @title = "State", @tabindex = 1, @id = "ddlState", @style = "width:150px" })
                    @Html.ValidationMessageFor(m => m.stateCode)
                </td>
                <td style="text-align: left; width: 10%;">
                    @Html.Label("Pmgsy Scheme")
                </td>
                <td style="width: 28%;">
                    @Html.DropDownListFor(model => model.pmgsyScheme, new SelectList(Model.lstPmgsyScheme, "Value", "Text"), new { @title = "State", @tabindex = 2, @id = "ddlPMGSYScheme", @style = "width:150px" })
                    @Html.ValidationMessageFor(m => m.pmgsyScheme)
                </td>
                <td>
                    <input type="button" id="btnView" value="View" class="jqueryButton" title="View" tabindex="3" />
                </td>
                <td></td>
            </tr>
        </table>
    </form>
</div>

<div id="loadReport" class="divLoadReport"></div>