@model PMGSY.Models.ExistingRoads.FinalizeDRRPPMGSY3ViewModel
@using PMGSY.Extensions

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>


<script src="~/Scripts/ExistingRoads/DelDRRP.js"></script>
<div id="dvhdFinalizeDRRPDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:0px;margin-right:0px;margin-top:0px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Delete DRRP in PMGSY III</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvFinalizeDRRP" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmFinalizeDRRPLayout">
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        @*@Html.HiddenFor(model => model.AdminName)*@
        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 5%;">

                </td>
                <td style="width: 10%;">
                    @Html.Label("District")
                </td>
                <td style="width: 25%;">
                    @Html.DropDownListFor(model => model.districtCode, new SelectList(Model.lstDistricts, "Value", "Text"), new { @id = "ddlDistrict", style = "width:170px;", title = "District", @tabindex = 1 })
                    <br />
                    @Html.ValidationMessageFor(m => m.districtCode)
                </td>
                <td style="width: 10%;">
                  @Html.Label("Block")
                </td>
                <td style="width: 25%;">
                      @Html.DropDownList("ddlBlocks", ViewData["blockList"] as IEnumerable<SelectListItem>, new { @id = "ddlBlocks", @title = "Block", @tabindex = 2 })                                                                     
                </td>
                
                
                
         


                 <td style="width: 10%;">
                   @Html.Label("Category")
                </td>
                <td style="width: 25%;">
                      @Html.DropDownList("ddlRoadCategory", ViewData["roadCategoryList"] as IEnumerable<SelectListItem>, new { @id = "ddlRoadCategory", @title = "Road Category", @tabindex = 3 })                                                                     
                </td>





                <td style="text-align: left;" style="width: 5%;">
                    <input type="button" id="btnView" value="View" class="jqueryButton" />
                </td>
                <td style="width: 5%;"></td>
            </tr>
        </table>
    </form>
</div>

 <div id="BlockDetails" style="text-align: left; width: 100%">
            <table id="tbExistingRoadsList" style="width: 95%"></table>
            <div id="dvExistingRoadsListPager"></div>
        </div>
