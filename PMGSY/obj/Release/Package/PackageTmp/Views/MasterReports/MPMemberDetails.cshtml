@{
    ViewBag.Title = "_MPMemberDetails";
}
@model PMGSY.Models.MasterReports.MasterReportsModel

@Html.Hidden("hdnLevelId", PMGSY.Extensions.PMGSYSession.Current.LevelId.ToString())

@if (PMGSY.Extensions.PMGSYSession.Current.StateCode != 0)
{           
    @Html.Hidden("STATE_NAME", PMGSY.Extensions.PMGSYSession.Current.StateName.ToString())
}

@if (PMGSY.Extensions.PMGSYSession.Current.DistrictCode != 0)
{
    @Html.Hidden("DISTRICT_NAME", PMGSY.Extensions.PMGSYSession.Current.DistrictName.ToString())   
}


@Html.HiddenFor(model => model.BLOCK_NAME)
@Html.HiddenFor(model => model.MAST_STATE_CODE)
@Html.HiddenFor(model => model.MAST_DISTRICT_CODE)
<div style="width: 100%">
    <table class="ui-state-default ui-corner-all" style="width: 100%;">
        <tr>
            <td style="width: 2%;"></td>
            <td style="text-align: left; width: 5%;">
                @Html.Label("State")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("StateList_MPMemberDetails", ViewData["STATE"] as IEnumerable<SelectListItem>, new { @title = "State", @tabindex = 1 })
            </td>
            <td style="text-align: left; width: 5%;">
                @Html.Label("Constituency")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("ConstituencyList_MPMemberDetails", ViewData["MP_CONSTITUENCY"] as IEnumerable<SelectListItem>, new { @title = "Constituency", @tabindex = 2 })
            </td>
            <td style="text-align: left; width: 5%;">
                @Html.Label("Term")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("TermList_MPMemberDetails", ViewData["TERM"] as IEnumerable<SelectListItem>, new { @title = "Term", @tabindex = 3 })
            </td>
            <td style="text-align: left; width: 5%;">
                @Html.Label("Active")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("ActiveType_MPMemberDetails", ViewData["Active_TYPE"] as IEnumerable<SelectListItem>, new { @title = "Active", @tabindex = 4 })
            </td>
            <td style="text-align: center; width: 10%; margin-left: 5px;">
                <input type="button" id="MPMemberDetailsButton" value="View" class="jqueryButton" title="View Details" tabindex="5" />
            </td>

        </tr>
    </table>
</div>
<br />

<div id="MPMemberDetails">
    <table id="MPMemberDetailsTable"></table>
</div>
<div id="MPMemberDetailsPager"></div>

<script src="~/Scripts/MasterReports/MPMemberDetails.js" type="text/javascript"></script>
<script src="~/Scripts/custom/Generic.js"></script>
