@model PMGSY.Areas.LocationSSRSReports.Models.HabitationFaclityViewModel

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Areas/LocationSSRSReports/Scripts/HabitationFaclityLayout.js"></script>
@*<script src="~/Areas/PFMSReports/Scripts/HabitationFaclityLayout.js"></script>*@


<div id="dvhdBeneficiaryDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:0px;margin-right:0px;margin-top:0px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Habitation Facility Details</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvBeneficiary" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmHabitationFaclityLayout">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.StateName)
        @Html.HiddenFor(model => model.DistrictName)

        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 2%;"></td>
                <td style="width: 10%;">
                    @Html.Label("State")
                </td>
                <td style="width: 20%;">
                    @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.StateList, "Value", "Text"), new { @id = "ddlState", style = "width:170px;", title = "State" })
                    <br />
                    @Html.ValidationMessageFor(m => m.StateCode)
                </td>

                <td style="width: 10%;">
                    @*@Html.LabelFor(model => model.StateCode)*@
                    @Html.Label("District")
                </td>
                <td style="width: 20%;">
                    @Html.DropDownListFor(model => model.DistrictCode, new SelectList(Model.DistrictList, "Value", "Text"), new { @id = "ddlDistrict", style = "width:170px;", title = "Agency" })
                    <br />
                    @Html.ValidationMessageFor(m => m.DistrictCode)
                </td>

                <td style="width: 10%;">
                    @*@Html.LabelFor(model => model.DistrictCode)*@
                    @Html.Label("Block")
                </td>
                <td style="width: 20%;">
                    @Html.DropDownListFor(model => model.BlockCode, new SelectList(Model.BlockList, "Value", "Text"), new { @id = "ddlBlock", style = "width:170px;" })
                    <br />
                    @Html.ValidationMessageFor(m => m.BlockCode)
                </td>


                <td style="width: 10%;">
                    @Html.Label("Census Year")
                </td>
                <td style="width: 20%;">
                    @Html.DropDownListFor(model => model.Year, new SelectList(Model.YearList, "Value", "Text"), new { @id = "ddlYear", style = "width:170px;" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Year)
                </td>


                <td style="text-align: left;" style="width: 5%;">
                    <input type="button" id="btnView" value="View" class="jqueryButton" />
                </td>
                <td style="width: 5%;"></td>
            </tr>


        </table>
    </form>
</div>

<div id="divLoadBeneficiaryReport"></div>
