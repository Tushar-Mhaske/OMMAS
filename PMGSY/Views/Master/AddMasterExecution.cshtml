@model PMGSY.Models.Master.MasterExecutionItemViewModel

<script src="~/Scripts/custom/Generic.js" type="text/javascript"></script>
<script src="~/Scripts/Master/AddExecutionItem.js" type="text/javascript"></script>

<div id="dvhdCreateNewDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Execution Item Details</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>

<div id="dvCreateNewDetails" style="display: block; border: 1px solid #B5B8C8;">

    <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px; text-align: left">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="message"></span>
    </div>

    <form id="frmExecution">
        @Html.AntiForgeryToken()
        <center>@Html.ValidationSummary(true)</center>

        <table style="width: 100%; margin-top: 10px;" class="rowstyle">

            <tr style="display: none">
                <td colspan="3">
                    @Html.HiddenFor(model => model.EncryptedHeadCode)
                </td>
            </tr>
            <tr>
                <td style="width: 30%;"></td>
                <td style="text-align: left; width: 15%;">
                    @Html.LabelFor(model => model.MAST_HEAD_TYPE)<label style="color: red;"> *</label>
                </td>
                <td>
                    @if (Model.EncryptedHeadCode == null)
                    {
                        @Html.RadioButtonFor(model => model.MAST_HEAD_TYPE, "R", new { value = "R", @checked = "checked", @tabindex = 1, @title = "Road " })

                        @Html.Label("Road")
                        @Html.RadioButtonFor(model => model.MAST_HEAD_TYPE, "L", new { value = "L", @tabindex = 2, @style = "margin-left:50px", @title = "LSB" })
                        @Html.Label("LSB")
                    }
                    else
                    {
                        switch (Model.MAST_HEAD_TYPE)
                        {
                            case "R":
                        @Html.Label("Road", new { id = "lblRoad" })
                        @Html.HiddenFor(model => model.MAST_HEAD_TYPE)
                                break;
                            case "L": 
                        @Html.Label("LSB", new { id = "lblLSB" })
                        @Html.HiddenFor(model => model.MAST_HEAD_TYPE)
                                break;
                        }

                    }

                    @Html.ValidationMessageFor(model => model.MAST_HEAD_TYPE)
                </td>

            </tr>
            <tr>
                <td></td>
                <td style="text-align: left;">
                    @Html.LabelFor(model => model.MAST_HEAD_DESC)
                    <label style="color: red;">*</label>
                </td>
                <td>
                    @Html.TextAreaFor(model => model.MAST_HEAD_DESC, new { @tabindex = 3, @style = "width:50%", maxlength = 255, @title = "Item Description" })
                    @Html.ValidationMessageFor(model => model.MAST_HEAD_DESC)
                </td>

            </tr>
            <tr>
                <td></td>
                <td style="text-align: left;">
                    @Html.LabelFor(model => model.MAST_HEAD_SH_DESC)<label style="color: red">*</label>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.MAST_HEAD_SH_DESC, new { maxlength = 50, @tabindex = 4, @title = "Item Short Description" })
                    @Html.ValidationMessageFor(model => model.MAST_HEAD_SH_DESC)
                </td>

            </tr>

            <tr>

                <td colspan="3">
                    <center>
                    @if (Model.EncryptedHeadCode == null)
                    {
                  
                        <input type="button" id="btnSave" name="btnSave" value="Save" class="jqueryButton" title="Save Execution Item Details" tabindex="5" /> 
                        <input type="reset" id="btnReset" name="btnReset" value="Reset" class="jqueryButton" title="Reset" tabindex="6" />
                    }
                    else
                    {
                        <input type="button" id="btnUpdate" name="btnUpdate" value="Update" class="jqueryButton" title="Update Execution Item Details" tabindex="5" /> 
                        <input type="button" id="btnCancel" name="btnCancel" value="Cancel" class="jqueryButton" title="Cancel" tabindex="6" />
                    }
                   </center>
                </td>

            </tr>
            <tr>
                <td colspan="3">
                    <label @*class="ui-state-default"*@ style="border:none">[ Note: Fields marked with<label style="color: red;"> * </label>
                        are mandatory.]</label>
                </td>
            </tr>
        </table>

    </form>


</div>

