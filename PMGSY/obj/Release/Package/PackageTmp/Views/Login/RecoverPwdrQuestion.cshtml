<form action="/Login/RecoverPwdrQuestion" method="post" id="frmChangePwd">
    <center>   
    <table class="ui-corner-all" style="margin-top:3px; text-align:left; height:90%; padding:5px 5px 5px 5px;">
    <tr>
        <td style="text-align:center;vertical-align:central;height:90%;"> 
            
                 @Html.AntiForgeryToken()
                 @Html.ValidationSummary(true)
            <br/>
            <br/>
            <div id="tableMain" class="jqueryTable">
            <div id="tableTitle">
                    <span id="tableTitleName">Change Password</span>
            </div>
            <div id="tableHeader" style="display:none;">
                        <table id="tableHeaderName">
                            <tr>
                                <th></th>
                                <th colspan="3"></th>
                            </tr>
                        </table>
            </div>
              <div id="tableContent">
                        <table id="tableContentName" class="dataentry">
                                <tr><td>@Html.LabelFor(m => m.UserName, new { @id = "lblUName"}) : <span style="color:red">*</span></td>
                                    <td>@Html.TextBoxFor(m => m.UserName, new { @class="jqueryTextbox", @id = "txtUName", style = "width: 260px;", autocomplete="off" }) 
                                        @Html.ValidationMessageFor(m => m.UserName)</td> 
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(m => m.PwdrQuestionId, new { @id = "lblPwdrQues" }) : <span style="color:red">*</span></td>
                                    <td>@Html.DropDownList("PwdrQuestionId", new SelectList(ViewBag.QuestionList, "Value", "Text"), "Select Question", new { style = "width: 260px;" }) @Html.ValidationMessageFor(m => m.PwdrQuestionId)</td> 
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(m => m.PwdrAnswer, new { @id = "lblPwdrAnswer"}) : <span style="color:red">*</span></td>
                                    <td>@Html.PasswordFor(m => m.PwdrAnswer, new { @class="jqueryTextbox", @id="txtPwdrAnswer", style = "width: 260px;", onCopy="return false" ,onDrag="return false", onDrop="return false", onPaste="return false", autocomplete="off"}) 
                                        @Html.ValidationMessageFor(m => m.PwdrAnswer)</td> 
                                </tr>
                                 <tr>
                                     <td></td>
                                     <td>
                                    @Html.CaptchaFor(x => x.Captcha, "GetCaptchaImages", "Login", null, "Try Another Image? Click Here", new { @id = "CaptchaImg", @class = "captcha-registration", @tabindex = "21"})                
                                    @Html.ValidationMessageFor(x => x.Captcha)
                                    </td>
                                </tr>
                          </table>
                        <center>
                          <div>
                                <table>
                                    <tr><td style="text-align:right">
                                         <input type="submit" id="btnSubmit1" title="Click to submit details" value="Next" class="jqueryButton"/>
                                        </td><td style="text-align:left">
                                          <input type="button" id="btnCancelChangePwdr" value="Cancel" class="jqueryButton"/>
                                        </td></tr> 
                                </table>
                        </div> 
                      </center>     
                   </div>
                 </div>
         </td></tr></table>
         </center>  
<!--}-->
    </form>
 <br />
    <strong>
        <hr class="ui-corner-all" style="background-color:#feddba;border:none;height:3px;width:100%;" />
    </strong>    
