@model PMGSY.Models.LockUnlock.ProposalFilterLockUnlockViewModel
<style>
    #fileupload {
        margin-top: 30px;
    }

    .preview img {
        max-width: 450px;
    }

    .img {
        border-width: 0;
    }
</style>

<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/LockUnlock/LockUnlock.js"></script>
<script src="~/Scripts/jquery.ui.accordion.js"></script>
<script src="~/Scripts/jquery.ui.tabs.js"></script>
<script src="~/Scripts/Bootstrap/bootstrap.min.js"></script>

<center>    
        <div style="width:98%; height:20px;border:none; margin-top:5px; margin-bottom:-15px; " class="ui-state-default">
            <span style="float:right;margin-right:2Px; margin-top:2px" id="idFilterDiv" class="ui-icon ui-icon-circle-triangle-n"></span>     
        </div>
        <div style="width: 98%; border:none; margin-top:-15px; margin-bottom:10px;" class="ui-state-default">      
        <div id="divFilterForm">
            <center>
            <form id="FilterForm"> 

                  @Html.HiddenFor(model=>model.IMS_PR_ROAD_CODES)
                  @Html.HiddenFor(model=>model.FreezeStatus)
                  @Html.HiddenFor(model=>model.StateCode)
                  @Html.HiddenFor(model=>model.BatchCode)
                  @Html.HiddenFor(model=>model.YearCode)

                        <table style="margin-top:10px; margin-bottom:5px">
                            <tr>
                                 <td style="text-align:left;width:3%">
                                </td>
                                <td style="text-align:left;width:2%">
                                    @Html.LabelFor(model=>model.IMS_YEAR)
                                </td>
                                <td style="text-align:left;width:6%">
                                    @Html.DropDownListFor(model => model.IMS_YEAR,new SelectList(Model.Years, "Value", "Text",Model.IMS_YEAR), new { @id="ddlImsYear"})
                                </td>

                                <td style="text-align:left;width:5%">
                                    @Html.LabelFor(model=>model.MAST_STATE_CODE)
                                </td>
                                <td style="text-align:left;width:10%">
                                    @Html.DropDownListFor(model => model.MAST_STATE_CODE, new SelectList(Model.STATES, "Value", "Text"),new { @id="ddlImsState"})
                                </td>
                                <td style="text-align:left;width:6%; display:none;">
                                    @Html.LabelFor(model=>model.PMGSYScheme)
                                </td>
                                <td  style="text-align:left;width:10%; display:none;">
                                    @Html.DropDownListFor(model => model.PMGSYScheme, new SelectList(Model.lstScheme, "Value", "Text"), new { @id="ddlScheme"})
                                </td>
                                <td style="text-align:left;width:2%">
                                    @Html.LabelFor(model=>model.IMS_BATCH)
                                </td>
                                <td  style="text-align:left;width:10%">
                                    @Html.DropDownListFor(model => model.IMS_BATCH, new SelectList(Model.BATCHS, "Value", "Text"), new { @id="ddlImsBatch"})
                                </td>
                                
                                <td  style="text-align:left;width:2%">
                                    <input type="button" class="jqueryButton" value="List Proposals" id="btnListProposal" name ="btnListProposal"/>
                                </td>

                                 <td style="text-align:left;width:2%">
                                </td>
                            </tr> 
                            <tr>
                                 <td>&nbsp;
                                </td>
                                <td>                                    
                                </td>
                                 <td>
                                     @Html.ValidationMessageFor(model => model.IMS_YEAR)
                                </td>
                                 <td >
                                     
                                </td>

                                <td>
                                    @Html.ValidationMessageFor(model => model.MAST_STATE_CODE)
                                </td>
                                <td ></td>
                                <td>@Html.ValidationMessageFor(model => model.PMGSYScheme)</td>
                                <td></td>
                                
                                <td>@Html.ValidationMessageFor(model => model.IMS_BATCH)</td>
                                
                            </tr>                      
                        </table>
            </form>  
            </center>
        </div>
    </div>
        <div id="dvProposal" style="margin-top:20px; width:98%;">
            <table id="tbLockUnlockList"></table>
            <div id="dvLockUnlockListPager"></div>
        </div>
</center>
