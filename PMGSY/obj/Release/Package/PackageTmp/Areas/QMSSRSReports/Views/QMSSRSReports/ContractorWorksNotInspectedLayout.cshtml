@model PMGSY.Areas.QMSSRSReports.Models.ContractorWorksNotInspectedViewModel
@using PMGSY.Extensions

@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Areas/QMSSRSReports/Scripts/ContractorWorksNotInspectedLayout.js"></script>

<div id="dvhdContractorWorksNotInspected" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:0px;margin-right:0px;margin-top:0px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Contractor Works Not Inspected Report</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvContractorWorksNotInspected" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmContractorWorksNotInspectedLayout">
        @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.StateName)
        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 5%;"></td>

                <td style="width: 10%;">
                    @Html.Label("State")
                </td>
                <td style="width: 25%;">
                    @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.lstState, "Value", "Text"), new { @id = "ddlState", style = "width:170px;", title = "State" })
                    <br />
                    @Html.ValidationMessageFor(m => m.StateCode)
                </td>
                <td style="width: 10%;">
                    @Html.Label("From Year")
                </td>
                <td style="width: 25%;">
                    @Html.DropDownListFor(model => model.fromYear, new SelectList(Model.lstFromYear, "Value", "Text"), new { @id = "ddlFromYear", style = "width:170px;", title = "From Year" })
                    <br />
                    @Html.ValidationMessageFor(m => m.fromYear)
                </td>
                <td style="width: 10%;">
                    @Html.Label("To Year")
                </td>
                <td style="width: 25%;">
                    @Html.DropDownListFor(model => model.toYear, new SelectList(Model.lstToYear, "Value", "Text"), new { @id = "ddlToYear", style = "width:170px;", title = "To Year" })
                    <br />
                    @Html.ValidationMessageFor(m => m.toYear)
                </td>
                <td style="text-align: left;" style="width: 5%;">
                    <input type="button" id="btnView" value="View" class="jqueryButton" />
                </td>
                <td style="width: 5%;"></td>
            </tr>
        </table>
    </form>
</div>

<div id="dvLoadReport"></div>
