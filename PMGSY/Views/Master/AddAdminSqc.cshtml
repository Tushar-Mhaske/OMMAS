@model PMGSY.Models.Master.AdminSqcViewModel
<script src="~/Scripts/jquery.ui.datepicker.js" type="text/javascript"></script>
<script src="~/Scripts/custom/Generic.js" type="text/javascript"></script>
<script src="~/Scripts/Master/AddAdminSqc.js" type="text/javascript"></script>

<div id="dvhdCreateNewDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Quality Controller Details</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>

<div id="dvCreateNewDetails" style="display: block; border: 1px solid #B5B8C8;">
    <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px; text-align: left">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="message"></span>
    </div>

    <form id="frmSQC">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <table style="width: 100%; margin-top: 10px;" class="rowstyle">
            <tr style="display: none">
                <td colspan="5">
                    @Html.HiddenFor(model => model.EncryptedSqcCode)
                    @Html.HiddenFor(model => model.ADMIN_ACTIVE_STATUS)
                </td>
            </tr>

            <tr>
                <td style="width: 8%"></td>

                <td style="width: 15%">
                    @Html.LabelFor(model => model.MAST_STATE_CODE)<label style="color: red">*</label>
                </td>
                <td style="width: 30%">
                    @if (Model.EncryptedSqcCode == null)
                    {
                        @Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.States, new {@id="sqcStateCode", @tabindex = "1", @title = "State" })
                        @Html.ValidationMessageFor(model => model.MAST_STATE_CODE)
                    }
                    else
                    {
                        @Html.DropDownListFor(model => model.MAST_STATE_CODE, Model.States, new {@id="sqcStateCode",  @tabindex = "1", disabled = "disabled", @title = "State" })
                    }
                </td>

                  <td style="width: 17%">
                    @Html.LabelFor(model => model.ADMIN_ND_CODE)
                    <label style="color: red">*</label>
                </td>
                <td>
               
                        @Html.DropDownListFor(m => m.ADMIN_ND_CODE, Model.depatmentList,new {@title="Department" , @id="departmentDD", @selected="Select Department"})  
                        @*//(model => model.ADMIN_QC_NAME, new { maxlength = 255, @tabindex = "2", @title = "Quality Controller Name", @placeholder = "Enter Quality Controller Name..." })*@
                        @Html.ValidationMessageFor(model => model.ADMIN_ND_CODE)
                   
                </td>
                
                
               </tr> 
             <tr>
                <td style="width: 17%">
                   
                </td>
                    
                <td  style="width: 17%">
                    @Html.LabelFor(model => model.ADMIN_QC_NAME)
                    <label style="color: red">*</label>
                </td>
       
                <td> @Html.TextBoxFor(model => model.ADMIN_QC_NAME, new { maxlength = 255, @tabindex = "2", @title = "Quality Controller Name", @placeholder = "Enter Quality Controller Name..." })
                    @Html.ValidationMessageFor(model => model.ADMIN_QC_NAME)</td>
                <td>
                    @Html.LabelFor(model => model.ADMIN_QC_DESG)<label style="color: red">*</label>
                </td>
                <td>
                    @Html.DropDownListFor(model => model.ADMIN_QC_DESG, Model.Designation, new { @tabindex = "3", @title = "Designation" })
                    @Html.ValidationMessageFor(model => model.ADMIN_QC_DESG)
                </td>
                
            </tr>

            <tr>
                <td></td>

                <td>
                    @Html.LabelFor(model => model.ADMIN_QC_ADDRESS1)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.ADMIN_QC_ADDRESS1, new { maxlength = 256, @tabindex = "4", @title = "Address1", @placeholder = "Enter Address1..." })
                    @Html.ValidationMessageFor(model => model.ADMIN_QC_ADDRESS1)
                </td>

                <td>
                    @Html.LabelFor(model => model.MAST_DISTRICT_CODE)
                </td>
                <td>
                    @Html.DropDownListFor(model => model.MAST_DISTRICT_CODE, Model.Districts, new { @tabindex = "6", @title = "District" })
                    @Html.ValidationMessageFor(model => model.MAST_DISTRICT_CODE)
                </td>

                <td></td>
               
            </tr>

            <tr>
                <td></td>
                 <td>
                  

                </td>

                <td>  
                    @Html.TextBoxFor(model => model.ADMIN_QC_ADDRESS2, new { maxlength = 255, @tabindex = "5", @title = "Address2", @placeholder = "Enter Address2...", })
                    @Html.ValidationMessageFor(model => model.ADMIN_QC_ADDRESS2)

                </td>

                <td>
                    @Html.LabelFor(model => model.ADMIN_QC_PIN)
                </td>
                   
                <td>
                     @Html.TextBoxFor(model => model.ADMIN_QC_PIN, new { maxlength = 6, @tabindex = "7", @title = "PIN Code", @placeholder = "Enter PIN Code..." })
                    @Html.ValidationMessageFor(model => model.ADMIN_QC_PIN)
                </td>

                
            </tr>
            <tr>
                <td></td>

                <td>
                    @Html.LabelFor(model => model.ADMIN_QC_MOBILE)<label style="color: red">*</label>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.ADMIN_QC_MOBILE, new { maxlength = 10, @tabindex = "8", @title = "Mobile Number", @placeholder = "Enter Mobile Number..." })
                    @Html.ValidationMessageFor(model => model.ADMIN_QC_MOBILE)
                </td>
                <td>
                    @Html.LabelFor(model => model.ADMIN_QC_STD1)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.ADMIN_QC_STD1, new { maxlength = 5, @style = "width:50px", @tabindex = "9", @title = "STD Code", @placeholder = "STD Code..." })-
                    @Html.TextBoxFor(model => model.ADMIN_QC_PHONE1, new { maxlength = 30, @style = "width:88px", @tabindex = "10", @title = "Phone1", @placeholder = "Phone1..." })
                    @Html.ValidationMessageFor(model => model.ADMIN_QC_STD1)
                    @Html.ValidationMessageFor(model => model.ADMIN_QC_PHONE1)
                </td>
               
            </tr>
            <tr>
                <td></td>

                 <td>
                    @Html.LabelFor(model => model.ADMIN_QC_STD2)
                </td>
                <td>
                    @Html.TextBoxFor(model => model.ADMIN_QC_STD2, new { maxlength = 5, @style = "width:50px", @tabindex = "11", @title = "STD Code", @placeholder = "STD Code..." })-
                    @Html.TextBoxFor(model => model.ADMIN_QC_PHONE2, new { maxlength = 30, @style = "width:88px", @tabindex = "12", @title = "Phone2", @placeholder = "Phone2..." })
                    @Html.ValidationMessageFor(model => model.ADMIN_QC_STD2)
                    @Html.ValidationMessageFor(model => model.ADMIN_QC_PHONE2)
                </td>

                <td>

                    @Html.LabelFor(model => model.ADMIN_QC_FAX)

                </td>
                <td>
                    @Html.TextBoxFor(model => model.ADMIN_QC_STD_FAX, new { maxlength = 5, @style = "width:50px", @tabindex = "13", @title = "STD Code", @placeholder = "STD Code..." })-
                    @Html.TextBoxFor(model => model.ADMIN_QC_FAX, new { maxlength = 8, @style = "width:88px", @tabindex = "14", @title = "Fax Number", @placeholder = "Fax Number..." })
                    @Html.ValidationMessageFor(model => model.ADMIN_QC_STD_FAX)
                    @Html.ValidationMessageFor(model => model.ADMIN_QC_FAX)

                </td>

               
            </tr>

            <tr>
                <td></td>

                 <td>
                    @Html.LabelFor(model => model.ADMIN_QC_EMAIL)<label style="color: red">*</label>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.ADMIN_QC_EMAIL, new { maxlength = 50, @tabindex = "15", @title = "Email", @placeholder = "Enter Email..." })
                    @Html.ValidationMessageFor(model => model.ADMIN_QC_EMAIL)
                </td>

                <td>
                    @Html.LabelFor(model => model.ADMIN_QC_REMARKS)
                </td>
                <td >
                    @Html.TextAreaFor(model => model.ADMIN_QC_REMARKS, new { maxlength = 255, @tabindex = "17", @title = "Remark", @placeholder = "Enter Remark..." })
                    @Html.ValidationMessageFor(model => model.ADMIN_QC_REMARKS)

                </td>
              

            </tr>

            <tr>
                 <td></td>
               <td>
                 @Html.LabelFor(model => model.ADMIN__QC_AADHAR_NO)
              </td>
               
               <td>
                    @Html.TextBoxFor(model => model.ADMIN__QC_AADHAR_NO, new { maxlength = 12, @tabindex = "18", @title = "Aadhar Card No.", @placeholder = "Enter Aadhar Card No..." })
                    @Html.ValidationMessageFor(model => model.ADMIN__QC_AADHAR_NO)

               </td>

            </tr>
            @if (Model.EncryptedSqcCode != null)
            {
                <tr id="trIsActive">
                    <td></td>
                    <td>
                        @Html.LabelFor(model => model.IsActive)<label style="color: red;"> *</label>
                    </td>

                    <td id="tdIsActive" colspan="3">

                        @Html.RadioButtonFor(model => model.IsActive, true, new { id = "rdoIsActiveYes", @tabindex = 4,@title="Yes" }) Yes &nbsp;&nbsp;
                    
                        @Html.RadioButtonFor(model => model.IsActive, false, new { id = "rdoIsActiveNo", @tabindex = 5,@title="No" }) No

                    </td>
                    <td id="tdlblEndDate">
                        @Html.LabelFor(model => model.ADMIN_ACTIVE_ENDDATE)
                        <label style="color: red;">*</label>

                    </td>
                    <td id="tdtxtEndDate">
                        @Html.TextBoxFor(model => model.ADMIN_ACTIVE_ENDDATE, new { maxlength = 10, @tabindex = "16", @title = "Valid Upto", @placeholder = "dd/mm/yyyy..." })
                        @Html.ValidationMessageFor(model => model.ADMIN_ACTIVE_ENDDATE)
                    </td>


                </tr>
            }
            <tr>
                <td colspan="5" style="text-align: center">
                    @if (Model.EncryptedSqcCode == null)
                    {
                        <input type="button" id="btnSave" name="btnSave" value="Save" class="jqueryButton" title="Save SQC Details" tabindex="18" /> 
                        <input type="reset" id="btnReset" name="btnReset" value="Reset" class="jqueryButton" title="Reset" tabindex="19" />
                    }
                    else
                    {
                        <input type="button" id="btnUpdate" name="btnUpdate" value="Update" class="jqueryButton" title="Update SQC Details" tabindex="18" /> 
                        <input type="button" id="btnCancel" name="btnCancel" value="Cancel" class="jqueryButton" title="Cancel" tabindex="19" />
                    }
                </td>
            </tr>
            <tr>
                <td colspan="5">
                    <label style="border:none">[ Note: Fields marked with<label style="color: red;"> * </label>are mandatory.]</label>
                </td>
            </tr>
        </table>

    </form>
</div>


