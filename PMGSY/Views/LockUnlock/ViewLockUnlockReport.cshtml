@model PMGSY.Models.LockUnlock.LockUnlockReportModel

<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/LockUnlock/ViewLockUnlockReport.js"></script>

<center>
    <div id="dvhdLockUnlockReportDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:0px;margin-right:0px;margin-top:0px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Lock Unlock Report</span>

    @*<span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>*@
</div>
<div id="dvFilter" style="margin-top: 0px">
    <div style="width: 99.9%; border: 1px solid #B5B8C8; margin-top: 0px; margin-bottom: 0px;" class="ui-corner-bottom">
        <form id="frmFilterDetails">
            
            <table style="margin-bottom: 5px" class="rowstyle">
                <tr>
                    <td style="width: 5%;"></td>
                    <td style="width:5%;text-align:center">State
                    </td>
                    <td style="width:15%">
                        @if (PMGSY.Extensions.PMGSYSession.Current.RoleCode == 36 || PMGSY.Extensions.PMGSYSession.Current.RoleCode == 47 || PMGSY.Extensions.PMGSYSession.Current.RoleCode == 56)
                        {
                            @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.lstStates, "Value", "Text"), new { @title = "Please select State", @Placeholder = 1, @id = "ddlStates", @style = "width:100%", disabled = "disabled" })
                        }
                        else
                        {
                            @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.lstStates, "Value", "Text"), new { @title = "Please select State", @Placeholder = 1, @id = "ddlStates", @style = "width:100%" })
                        }
                        @Html.ValidationMessageFor(model => model.StateCode)
                    </td>
                    <td style="width:5%;text-align:center">District
                    </td>
                    <td style="width:15%">
                        @Html.DropDownListFor(model => model.DistrictCode, new SelectList(Model.lstDistricts, "Value", "Text"), new { @title = "Please select District", @Placeholder = 2, @id = "ddlDistricts" })
                        @Html.ValidationMessageFor(model => model.DistrictCode)
                    </td>
                    <td style="width:5%;text-align:center">Block
                    </td>
                    <td style="width:15%">
                        @Html.DropDownListFor(model => model.BlockCode, new SelectList(Model.lstBlocks, "Value", "Text"), new { @title = "Please select Block", @Placeholder = 3, @id = "ddlBlocks" })
                        @Html.ValidationMessageFor(model => model.BlockCode)
                    </td>
                    <td style="width:5%;text-align:center">Module
                    </td>
                    <td style="width:15%">
                        @Html.DropDownListFor(model => model.ModuleCode, new SelectList(Model.lstModules, "Value", "Text"), new { @title = "Please select Module", @Placeholder = 4, @id = "ddlModule" })
                        @Html.ValidationMessageFor(model => model.ModuleCode)
                    </td>
                    <td style="width:5%;text-align:center">Scheme
                    </td>
                    <td style="width:15%">
                        @Html.DropDownListFor(model => model.PMGSYScheme, new SelectList(Model.lstSchemes, "Value", "Text"), new { @title = "Please select Scheme", @Placeholder = 5, @id = "ddlSchemes" })
                        @Html.ValidationMessageFor(model => model.PMGSYScheme)
                    </td>
                    <td style="width: 5%;"></td>
                </tr>
                <tr>
                    <td colspan="12">
                        <center>
                        <input type="button" name="btnView" value="View Details" id="btnViewDetails" class="jqueryButton" />
                        </center>
                    </td>
                </tr>
            </table>
            
        </form>
    </div>
    <div id="dvReportDetails" style="margin-top: 20px; width: 98%;">
        <table id="tbrptDetails"></table>
        <div id="dvpgrptDetails"></div>
    </div>
</div>
</center>
