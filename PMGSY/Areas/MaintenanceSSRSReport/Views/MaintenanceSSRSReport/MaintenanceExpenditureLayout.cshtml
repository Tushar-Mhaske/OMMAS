@model PMGSY.Areas.MaintenanceSSRSReport.Models.MaintenanceExpenditureModel
<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script src="~/Areas/MaintenanceSSRSReport/Scripts/MainExp.js"></script>


<div id="dvhdCreateNewReportDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:0px;margin-right:0px;margin-top:0px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Maintenance Expenditure Details</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvSearchParameter" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmPackageWiseReport">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Mast_State_Code)
        @Html.HiddenFor(model => model.Mast_District_Code)
        @Html.HiddenFor(model => model.Mast_Block_Code)
        @Html.HiddenFor(model => model.StateName)
        @Html.HiddenFor(model => model.DistName)
        @Html.HiddenFor(model => model.BlockName)
        @Html.HiddenFor(model => model.RoadWise)

        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 2%;"></td>
                <td style="text-align: left; width: 4%;">
                    @Html.LabelFor(model => model.StateCode)
                </td>

                <td style="width: 25%;">
                    @if (Model.Mast_State_Code == 0)
                    {
                        @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.StateList, "Value", "Text"), new { @title = "State", @tabindex = 1, @id = "StateList_PackageWiseDetails", @style = "width:150px" })
                        @Html.ValidationMessageFor(m => m.StateCode)
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.StateName) 
                        @Html.Hidden("StateCode", Model.Mast_State_Code)                            
                    }
                </td>
                <td style="text-align: left; width: 4%;">
                    @Html.LabelFor(model => model.PhaseYear)
                </td>
                <td style="width: 25%;">
                  @Html.DropDownListFor(model => model.PhaseYear, new SelectList(Model.PhaseYearList, "Value", "Text"), new { @title = "Year", @id = "Year_PackageWiseDetails", @tabindex = 4, @style = "width:150px" })
                @Html.ValidationMessageFor(m => m.PhaseYear)

                </td>
                <td style="text-align: left; width: 4%;">
                     @Html.LabelFor(model => model.schemeCode)
                </td>

                <td style="width: 25%; ">
                     @Html.DropDownListFor(model => model.schemeCode, new SelectList(Model.lstscheme, "Value", "Text"), new { @title = "Scheme", @id = "Scheme_PackageWiseDetails", @tabindex = 2, @style = "width:150px" })
                        @Html.ValidationMessageFor(m => m.schemeCode)
                </td>
            </tr>




            <tr>
                <td style="width: 2%;"></td>
                <td style="text-align: left; width: 4%;">
                     <input type="button" id="btnViewPackageWiseDetails" value="View" class="jqueryButton" title="View Details" tabindex="5" />
                </td>

                <td style="width: 25%;display:none;">
                   

                       @if (Model.Mast_District_Code == 0)
                    {
                        @Html.DropDownListFor(model => model.DistrictCode, new SelectList(Model.DistrictList, "Value", "Text"), new { @title = "District", @id = "DistrictList_PackageWiseDetails", @tabindex = 2, @style = "width:150px" })
                        @Html.ValidationMessageFor(m => m.DistrictCode)

                    }
                    else
                    {
                        @Html.DisplayFor(model => model.DistName)
                        @Html.Hidden("DistrictCode", Model.Mast_District_Code)     
                              
                    }
                </td>



                  <td style="text-align: left; width: 4%;">
                 
                </td>
                <td style="width: 25%; display:none;">
                      @if (Model.Mast_Block_Code == 0)
                    {
                        @Html.DropDownListFor(model => model.BlockCode, new SelectList(Model.BlockList, "Value", "Text"), new { @title = "Block", @id = "BlockList_PackageWiseDetails", @tabindex = 3, @style = "width:150px" })
                        @Html.ValidationMessageFor(m => m.BlockCode)
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.BlockName)
                        @Html.Hidden("BlockCode", Model.Mast_Block_Code)  
                    }
                     
 
                </td>

                <td>
                

                </td>
                
                <td></td>

            </tr>

        </table>
    </form>

</div>

<div id="loadPackageWiseReport" class="divLoadReport"></div>


