@model PMGSY.Models.ExistingRoads.MapDRRPUnderPMGSY3
<script src="~/Scripts/custom/Generic.js"></script>

<script src="~/Scripts/ExistingRoads/MapDRRPToProposalUnderPMGSY3.js"></script>
<center>
<form id="frmUpdateDetails" style="width:98%">
    <div style="margin-left: 100px">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ProposalCode)
        @Html.HiddenFor(model => model.ProposalType)
        @Html.HiddenFor(model => model.UpgradeConnect)
    </div>
    <div id="divError" class="ui-state-error ui-corner-all" style="text-align: left; display: none; width: 100%">
        <span class="ui-icon ui-icon-alert" style="float: left;"></span>
        <span></span>
    </div>
    <div style="height: 20px; width: 100%; text-align: left; padding-top: 0.6em;" class="ui-state-default ui-corner-all">
        &nbsp; <strong>Note :</strong>  Fields marked with * are mandatory.
    </div>

    @Html.Hidden("upgradeConnect" , Model.UpgradeConnect)
    @Html.Hidden("Proposaltype" , Model.ProposalType)
    



    <table id="tb" cellpadding="3px" class="rowstyle" style="margin-top: 10px; text-align: left; border: ridge 0.1em #ccc; width: 100%; padding-top: 5px 5px 5px 5px;">
        <tr></tr>
          <tr>
            <td style="width:10%">
            </td>
            <td style="width: 10%;">
                @Html.Label("Work Name : ")
            </td>
            <td style="width: 30%;">
              @Html.DisplayFor(m => m.WorkName)
            </td>
            <td style="width: 10%;">
               @Html.Label("Package ID : ")
            </td>
            <td style="width: 30%;">
                @Html.DisplayFor(m => m.PackageName)
            </td>
        </tr>
            <tr>
                <td style="width:10%">
                </td>
                <td style="width: 10%;">
                    @Html.LabelFor(model => model.District)<label style="color:red">*</label>
                </td>
                <td style="width: 30%;">
                    @Html.DropDownListFor(model => model.District, Model.lstDistrict, new { @id = "ddlDistrictS", @title = "Select District", @tabindex = 1})
                    @Html.ValidationMessageFor(model => model.District)
                </td>
                <td style="width: 10%;"></td>
                <td style="width: 30%;"></td>
            </tr>
        <tr>
            <td style="width:10%">
            </td>
            <td style="width: 10%;">
                @Html.LabelFor(model => model.Block)<label style="color:red">*</label>
            </td>
            <td style="width: 30%;">
                @Html.DropDownListFor(model => model.Block, Model.lstBlocks, new { @id = "ddlBlocks", @title = "Select Block", @tabindex = 1 })
                @Html.ValidationMessageFor(model => model.Block)
            </td>
            <td style="width: 10%;">
               @Html.LabelFor(model => model.CnCode)<label style="color:red">*</label>
            </td>
            <td style="width: 30%;">
               @Html.DropDownListFor(model => model.CnCode, Model.lstCoreNetworks, new { @id = "ddlCoreNetworks", @title = "Select DRRP ", @tabindex = 2, @style = "width:200px" })
                @Html.ValidationMessageFor(model => model.CnCode)
            </td>
        </tr>
        <tr>
            <td colspan="5">
                @if (Model.CnCode == 0)
                {
                <center>
                <input type="button" id="btnUpdate" name="btnUpdate" value="Save" class= "jqueryButton" title="Save Details" tabindex="3"  />  
                <input type="reset" id="btnReset" name="btnReset" value="Reset" class= "jqueryButton" title="Reset" tabindex="4"  />
                </center>
                }
                else
                {
                
                 <center>
                <input type="button" id="btnUpdate" name="btnUpdate" value="Update" class= "jqueryButton" title="Update Details" tabindex="3"  />  
                <input type="reset" id="btnCancel" name="btnCancel" value="Cancel" class= "jqueryButton" title="Cancel Details" tabindex="4"  />
                </center>
                }


            </td>
        </tr>
    </table>
</form>
</center>
