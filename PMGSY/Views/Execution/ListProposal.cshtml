@model PMGSY.Models.Execution.ProposalFilterViewModel
<style>
    #fileupload {
        margin-top: 30px;
    }

    .preview img {
        max-width: 450px;
    }

    .img {
        border-width: 0;
    }
</style>


<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/Execution/ListProposal.js"></script>
<script src="~/Scripts/jquery.ui.accordion.js"></script>
<script src="~/Scripts/jquery.ui.tabs.js"></script>
<center>    
        <div style="width:98%; height:20px;border:none; margin-top:5px; margin-bottom:-15px; " class="ui-state-default">
            <span style="float:right;margin-right:2Px; margin-top:2px" id="idFilterDiv" class="ui-icon ui-icon-circle-triangle-n"></span>     
        </div>
        <div style="width: 98%; border:none; margin-top:-15px; margin-bottom:10px;" class="ui-state-default">      
        <div id="divFilterForm">
            <center>
            <form id="FilterForm">     
                        <table style="margin-top:10px; margin-bottom:5px">
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.MAST_BLOCK_CODE)
                                </td>
                                <td>
                                    @Html.DropDownListFor(model => model.MAST_BLOCK_CODE, new SelectList(Model.BLOCKS, "Value", "Text"), new { @id = "ddlMastBlockCode" })
                                </td>
                                <td>
                                    @Html.LabelFor(model => model.IMS_YEAR)
                                </td>                                
                                <td>                            
                                    @Html.DropDownListFor(model => model.IMS_YEAR, new SelectList(Model.Years, "Value", "Text"), new { @id = "ddlImsYear" })
                                </td>
                                 <td>
                                    @Html.LabelFor(model => model.Batch)
                                </td>
                                <td>                            
                                    @Html.DropDownListFor(model => model.Batch, new SelectList(Model.lstBatchs, "Value", "Text"), new { @id = "ddlBatchs" })
                                </td>
                                <td>
                                    @Html.LabelFor(model=>model.IMS_PACKAGE)
                                </td>
                                <td>
                                    @Html.DropDownListFor(model => model.PACKAGES, new SelectList(Model.PACKAGES, "Value", "Text"), new { @id = "ddlImsPackages" })
                                </td>
                            </tr>
                            <tr>
                                 <td>
                                    @Html.LabelFor(model => model.Collaboration)
                                </td>
                                <td>
                                    @Html.DropDownListFor(model => model.Collaboration, new SelectList(Model.lstCollaborations, "Value", "Text"), new { @id = "ddlCollaborations" })
                                </td>
                                <td>
                                    @Html.LabelFor(model => model.IMS_PROPOSAL_TYPE)
                                </td>
                                <td>
                                    @Html.DropDownListFor(model => model.IMS_PROPOSAL_TYPE, new SelectList(Model.PROPOSAL_TYPES, "Value", "Text"), new { @id = "ddlImsProposalTypes" })
                                </td>
                                <td>
                                    @Html.LabelFor(model => model.UpgradeConnect)
                                </td>
                                <td>
                                    @Html.DropDownListFor(model => model.UpgradeConnect, new SelectList(Model.lstUpgradations, "Value", "Text"), new { @id = "ddlUpgradations" })
                                </td>
                                <td></td>
                                <td>
                                    <input type="button" class="jqueryButton" value="List Execution Details" id="btnListProposal" name ="btnListProposal"/>
                                </td>
                            </tr>                            
                        </table> 
            </form>  
            </center>
        </div>
    </div>

        <div id="dvProposal" style="margin-top:20px; width:98%; " >
            <table id="tbProposalList"></table>
            <div id="dvProposalListPager"></div>            
        </div>
    
    <div id="accordion" style="display:none;width:98%;margin-top:20px;">            
            <h3 style="text-align:left"><a id="" href="#" style=" font-size:.9em;" ></a>
                <a href="#"  style="float: right;">
                    <img style="border:none" src="" class="ui-icon ui-icon-closethick" onclick="CloseProposalDetails();" /></a>
            </h3>
            <div id="divProposalForm" style="display:none;">
            </div>
     </div>
</center>
