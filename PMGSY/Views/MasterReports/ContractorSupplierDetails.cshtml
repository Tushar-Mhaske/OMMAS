@{
    ViewBag.Title = "ContractorSupplierDetails";
}
<div style="width: 100%">
    <table class="ui-state-default ui-corner-all" style="width: 100%;">
        <tr>
            <td style="width: 6%;"></td>
            <td style="text-align: left; width: 6%;">
                @Html.Label("State")
            </td>
              <td style="width: 15%;">
                @Html.DropDownList("STATE", ViewData["STATE"] as IEnumerable<SelectListItem>, new { @title = "State", @tabindex = 1,@id="ContractorSupState" })
            </td>
            <td style="text-align: left; width: 10%;">
                @Html.Label("Contractor/Supplier")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("MAST_CON_SUP_FLAG", ViewData["MAST_CON_SUP_FLAG"] as IEnumerable<SelectListItem>, new { @title = "Contractor/Supplier", @tabindex = 2 })
            </td>
              <td style="text-align: left; width: 10%;">
                @Html.Label("Contract Status")
            </td>
            <td style="width: 15%;">
                @Html.DropDownList("MAST_CON_STATUS", ViewData["MAST_CON_STATUS"] as IEnumerable<SelectListItem>, new { @title = "Contract Status", @tabindex = 3 })
            </td>
              
            <td style="text-align: center; width: 10%; margin-left: 5px;">
                <input type="button" id="ContractorSupplierDetailsButton" value="View" class="jqueryButton" title="View Details" tabindex="4" />
            </td>
            <td style="width: 25%"></td>
        </tr>
    </table>
</div>
<br />

<div id="ContractorSupplierDetails">
    <table id="ContractorSupplierDetailsTable"></table>
</div> 
<div id="ContractorSupplierDetailsPager"></div>

<script src="~/Scripts/MasterReports/ContractorSupplierDetails.js" type="text/javascript"></script>
<script src="~/Scripts/custom/Generic.js"></script>