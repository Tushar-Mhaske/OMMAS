@model PMGSY.Models.QualityMonitoring.QMReportsViewModel


<script src="~/Scripts/QualityMonitoring/QMATRDetailsReport.js"></script>

<form id="frmGradingAndATRReport">
     @Html.AntiForgeryToken()
    <div id="divGradingAndATRReport" class="ui-state-default ui-corner-all" style="text-align: center; width: 100%">
            <table id="tblGradingAndATRReport" style="margin-top:0px; text-align:center; border:ridge 0.1em #ccc; width:100%; padding:5px 5px 5px 5px;">
                    <tr>
                       <td style="width:15%;font-weight:bold;" >
                            @Html.LabelFor(model => model.FROM_MONTH)
                        </td>
                        <td style="width:10%" >                            
                            @Html.DropDownListFor(model => model.FROM_MONTH, new SelectList(Model.FROM_MONTH_LIST, "value", "text"), new { @id = "ddlFromMonthATRDetails"})
                        </td>
                        <td style="width:15%;font-weight:bold;">
                            @Html.LabelFor(model => model.FROM_YEAR)
                        </td>
                        <td style="width:10%" >                            
                            @Html.DropDownListFor(model => model.FROM_YEAR, new SelectList(Model.FROM_YEAR_LIST, "value", "text"), new { @id = "ddlFromYearATRDetails"})
                        </td>
                        <td rowspan="2" style="text-align:left;">
                             <input type="button" id="btnViewATRDetails" value="View Details" class="jquerybutton"  style="margin-left:20px;"/>
                        </td>
                    </tr>
                    <tr>
                         <td style="width:15%;font-weight:bold;">
                            @Html.LabelFor(model => model.TO_MONTH)
                        </td>
                        <td style="width:10%">                            
                            @Html.DropDownListFor(model => model.TO_MONTH, new SelectList(Model.TO_MONTH_LIST, "value", "text"), new { @id = "ddlToMonthATRDetails"})
                        </td>
                        <td style="width:15%;font-weight:bold;">
                            @Html.LabelFor(model => model.TO_YEAR)
                        </td>
                        <td style="width:10%">
                            @Html.DropDownListFor(model => model.TO_YEAR, new SelectList(Model.TO_YEAR_LIST, "value", "text"), new { @id = "ddlToYearATRDetails"})
                        </td>
                    </tr>
                    
            </table>
    </div>
    <br />

    <table id="tbQMATRReport"></table>
    <div id="dvQMATRReportPager"></div>
  
 </form>




