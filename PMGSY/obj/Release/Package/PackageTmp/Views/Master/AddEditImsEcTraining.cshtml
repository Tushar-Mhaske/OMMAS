@model PMGSY.Models.Master.IMSEcTrainingViewModel

@{
    ViewBag.Title = "AddEditImsEcTraining";
}

<script src="~/Scripts/custom/Generic.js" type="text/javascript"></script>
<script src="~/Scripts/Master/AddEditImsEcTraining.js" type="text/javascript"></script>

<div id="dvhdAddNewImsEcTrainingDetails" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp; Training List Details</span>

    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>

<div id="dvAddNewImsEcTrainingDetails" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8; text-align: left">
    <div id="dvErrorMessage" class="ui-widget ui-state-error ui-corner-all" style="padding: 0.7em .7em; display: none; margin: 5px 5px 5px 5px;">
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
        <strong>Alert:</strong> <span id="message"></span>
    </div>
    <form id="frmAddImsEcTraining">
        @Html.AntiForgeryToken()
        <center>@Html.ValidationSummary(true)</center>
        <table style="width: 100%; margin-top: 10px;" class="rowstyle">

            <tr>
                <td colspan="5" style="display: none">

                    @Html.HiddenFor(model => model.EncryptedMastTrainingId)
                    @Html.Hidden("hdStateCode", PMGSY.Extensions.PMGSYSession.Current.StateCode)
                </td>
            </tr>


            <tr>
                <td style="width: 5%;"></td>
                <td style="text-align: left; width: 15%;">
                    @Html.LabelFor(model => model.StateCode)<label style="color: red;"> *</label>
                </td>
                <td style="width: 30%;">
                    @if (Model.EncryptedMastTrainingId == null)
                    {
                        if (Model.StateCode == null || Model.StateCode == 0)
                        {
                        @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.StateList, "Value", "Text"), new { @title = "Select State", @id = "ddlState", @tabindex = 1 })
                        }
                        else
                        {
                        @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.StateList, "Value", "Text"), new { @title = "Select State", @id = "ddlState", @tabindex = 1, @disabled = "disabled" })
                        }
                    }
                    else
                    {
                        @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.StateList, "Value", "Text"), new { @title = "State", @id = "ddlState", @tabindex = 1, @disabled = "disabled" })
                    }
                    @Html.ValidationMessageFor(model => model.StateCode)
                </td>
                <td style="width: 18%">
                    @Html.LabelFor(model => model.PhaseYear)
                    <label style="color: red;">*</label>
                </td>
                <td>
                    @if (Model.EncryptedMastTrainingId == null)
                    {
                        @Html.DropDownListFor(model => model.PhaseYear, new SelectList(Model.PhaseYearList, "Value", "Text"), new { @id = "ddlPhaseYear", @title = "Select Year", @tabindex = 2 })
                    
                    }
                    else
                    {
                        @Html.DropDownListFor(model => model.PhaseYear, new SelectList(Model.PhaseYearList, "Value", "Text"), new { @id = "ddlPhaseYear", @title = "Select Year", @tabindex = 2, @disabled = "disabled" })
                         
                    }
                    @Html.ValidationMessageFor(model => model.PhaseYear)

                </td>
            </tr>
            <tr>
                <td style="width: 5%;"></td>
                <td style="text-align: left; width: 15%;">
                    @Html.LabelFor(model => model.Mast_Designation)<label style="color: red;"> *</label>
                </td>
                <td style="width: 30%;">
                    @if (Model.EncryptedMastTrainingId == null)
                    {
                        @Html.DropDownListFor(model => model.Mast_Designation, new SelectList(Model.Mast_DesignationList, "Value", "Text"), new { @title = "Select Designation", @id = "ddlDesignation", @tabindex = 3 })
                   
                    }
                    else
                    {
                        @Html.DropDownListFor(model => model.Mast_Designation, new SelectList(Model.Mast_DesignationList, "Value", "Text"), new { @title = "Select Designation", @id = "ddlDesignation", @tabindex = 3, @disabled = "disabled" })
                          
                    }
                    @Html.ValidationMessageFor(model => model.Mast_Designation)
                </td>
                <td style="width: 18%">
                    @Html.LabelFor(model => model.IMS_TOTAL_PERSON)
                    <label style="color: red;">*</label>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.IMS_TOTAL_PERSON, new { maxlength = 6, @title = "Total Person", @tabindex = 4, @placeholder = "Enter Total Person..." })
           
                    @Html.ValidationMessageFor(model => model.IMS_TOTAL_PERSON)

                </td>
            </tr>
         
            <tr>
                <td></td>
                <td></td>

                @if (Model.EncryptedMastTrainingId == null)
                {   
                    <td style="text-align: right;">
                        <input type="button" id="btnSave" name="btnSave" value="Save" class="jqueryButton" title="Save Training  Details" tabindex="25" />
                    </td> 
                    <td colspan="2">
                        <input type="reset" id="btnReset" name="btnReset" value="Reset" class="jqueryButton" title="Reset" tabindex="26" /></td> 
                }
                else
                {
                    <td style="text-align: right;">
                        <input type="button" id="btnUpdate" name="btnUpdate" value="Update" class="jqueryButton" title="Update Training  Details" tabindex="27" />
                    </td> 
                    <td colspan="2">
                    <input type="button" id="btnCancel" name="btnCancel" value="Cancel" class="jqueryButton" title="Cancel" tabindex="28" /></td> 
                }
            </tr>



            <tr>
                <td colspan="5">
                    <label style="border: none">
                        [ Note: Fields marked with<label style="color: red;"> * </label>
                        are mandatory.]</label>
                </td>
            </tr>
        </table>

    </form>
</div>



