@{
    ViewBag.Title = "CNR4ReportDetails";
}


@model PMGSY.Models.CoreNetworkReports.CoreNetworkReportViewModel
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.ui.dialog.js")"> </script>
<script type="text/javascript" src="~/Scripts/CoreNetworkReports/CNR4ReportDetails.js"></script>
<script src="~/Scripts/custom/Generic.js"></script>
<form id="frmCNR4StateLevelReport">
    @Html.Hidden("hdnLevelId", PMGSY.Extensions.PMGSYSession.Current.LevelId.ToString())
    @Html.Hidden("hdnLevelId", PMGSY.Extensions.PMGSYSession.Current.LevelId.ToString())

    @if (PMGSY.Extensions.PMGSYSession.Current.StateCode != 0)
    {           
        @Html.Hidden("STATE_NAME", PMGSY.Extensions.PMGSYSession.Current.StateName.ToString())
    }

    @if (PMGSY.Extensions.PMGSYSession.Current.DistrictCode != 0)
    {
        @Html.Hidden("DISTRICT_NAME", PMGSY.Extensions.PMGSYSession.Current.DistrictName.ToString())   
    }
    @Html.HiddenFor(model => model.BLOCK_NAME)
    <div style="width: 100%">
        <table class="ui-state-default ui-corner-all" style="width: 100%;">
            <tr>
                <td style="width: 2%;"></td>
                 <td style="text-align: left; width: 3%;">
                    @Html.Label("Road Type") &nbsp;
                </td>
                <td style="width: 2%;">
                    @Html.DropDownList("RoadCategory_CNR4Details", ViewData["RoadCategory"] as IEnumerable<SelectListItem>,new { @title = "Road Type" ,@tabindex = 1 })
                </td>
                
                <td style="text-align: left; width: 1%;">
                    @Html.Label("Route") &nbsp;
                </td>
                <td style="width: 2%;">
                    @Html.DropDownList("Route_CNR4Details", ViewData["Route"] as IEnumerable<SelectListItem>,new { @title = "Route" ,@tabindex = 2 })
                </td>
                <td style="width: 20%;">
                    <input type="button" value="View" class="jqueryButton" id="btCNR4Details" title="View Details" tabindex="3" />
                </td>
            </tr>
        </table>
    </div>
    <br />

    @if (PMGSY.Extensions.PMGSYSession.Current.LevelId == 6)     //Mord
    {
        <div id="CNR4StateReport">
            <table id="CNR4StateReportTable"></table>
        </div>
        <div id="CNR4StateReportPager"></div>

        <br />
        <div id="CNR4DistrictReport">
            <table id="CNR4DistrictReportTable"></table>
        </div>
        <div id="CNR4DistrictReportPager"></div>

        <br />
        <div id="CNR4BlockReport">
            <table id="CNR4BlockReportTable"></table>
        </div>
        <div id="CNR4BlockReportPager"></div>

        <br />
        <div id="CNR4FinalReport">
            <table id="CNR4FinalReportTable"></table>
        </div>
        <div id="CNR4FinalReportPager"></div>
        
    }

    else if (PMGSY.Extensions.PMGSYSession.Current.LevelId == 4)     //State
    {
        @Html.HiddenFor(model => model.MAST_STATE_CODE)
        <div id="CNR4DistrictReport">
            <table id="CNR4DistrictReportTable"></table>
        </div>
        <div id="CNR4DistrictReportPager"></div>

        <br />
        <div id="CNR4BlockReport">
            <table id="CNR4BlockReportTable"></table>
        </div>
        <div id="CNR4BlockReportPager"></div>

        <br />
        <div id="CNR4FinalReport">
            <table id="CNR4FinalReportTable"></table>
        </div>
        <div id="CNR4FinalReportPager"></div>
    }
    else if (PMGSY.Extensions.PMGSYSession.Current.LevelId == 5)     //District
    {
        @Html.HiddenFor(model => model.MAST_STATE_CODE)
        @Html.HiddenFor(model => model.MAST_DISTRICT_CODE)
        <div id="CNR4BlockReport">
            <table id="CNR4BlockReportTable"></table>
        </div>
        <div id="CNR4BlockReportPager"></div>

        <br />
        <div id="CNR4FinalReport">
            <table id="CNR4FinalReportTable"></table>
        </div>
        <div id="CNR4FinalReportPager"></div>
    }
</form>
