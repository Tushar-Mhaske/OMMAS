@{
    ViewBag.Title = "Stream Details";
}

<div style="width: 100%">
    <table class="ui-state-default ui-corner-all" style="width: 100%;">
        <tr>
            <td style="width: 6%;"></td>
            <td style="text-align: left; width: 10%;">
                @Html.Label("Stream Type")
            </td>
             <td style="width: 15%;">
                @Html.DropDownList("MAST_STREAM_TYPE", ViewData["MAST_STREAM_TYPE"] as IEnumerable<SelectListItem>, new { @title = "Stream Type", @tabindex = 1 })
            </td>
           <td style="text-align: center; width: 5%; margin-left: 5px;">
                <input type="button" id="StreamDetailsButton" value="View" class="jqueryButton" title="View Details" tabindex="2" />
            </td>
            <td style="width: 60%;"></td>
        </tr>
        
    </table>
</div>
<br />

<div id="StreamDetails">
    <table id="StreamDetailsTable"></table>
</div> 
<div id="StreamDetailsPager"></div>

<script src="~/Scripts/MasterReports/StreamDetails.js" type="text/javascript"></script>
<script src="~/Scripts/custom/Generic.js"></script>