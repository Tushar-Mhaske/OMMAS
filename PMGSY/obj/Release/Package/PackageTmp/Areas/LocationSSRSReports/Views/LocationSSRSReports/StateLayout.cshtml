@model PMGSY.Areas.LocationSSRSReports.Models.LocationMasterReports

@*@if (ViewBag.ReportType != null)*@
@if (Layout == null)
{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/AccountReports/Views/Account/_Layout.cshtml";
}

<script src="~/Areas/LocationSSRSReports/Scripts/StateLayout.js"></script>
<script src="~/Scripts/custom/Generic.js"></script>

<div id="dvhdStateLayout" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
    <span class="ui-jqgrid-title" style="float: left">&nbsp;State</span>
    <span id="spCollapseIconCN" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>
<div id="dvStateLayout" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmStateLayout">
        <table class="rowstyle" style="width: 100%;">
            <tr>
                <td style="width: 6%;"></td>
                <td style="text-align: left; width: 5%;">
                    @Html.Label("State/Union")
                </td>
                <td style="width: 15%;">
                    @*@Html.DropDownList("StateList_StateDetails", ViewData["STATE_UNION"] as IEnumerable<SelectListItem>, new { @title = "State/Union", @tabindex = 1 })*@
                    @Html.DropDownListFor(model => model.Territory, new SelectList(Model.TerritoryTypeList, "Value", "Text"), new { @id = "StateList_StateDetails", @title = "State/Union", @tabindex = 1 })
                    <br />
                    @Html.ValidationMessageFor(m => m.Territory)
                </td>
                <td style="text-align: left; width: 5%;">
                    @Html.Label("State Type")
                </td>
                <td style="width: 15%;">
                    @*@Html.DropDownList("StateType_StateDetails", ViewData["STATE_TYPE"] as IEnumerable<SelectListItem>, new { @title = "State Type", @tabindex = 2 })*@
                    @Html.DropDownListFor(model => model.StateType, new SelectList(Model.StateTypeList, "Value", "Text"), new { @id = "StateType_StateDetails", @title = "State Type", @tabindex = 2 })
                    <br />
                    @Html.ValidationMessageFor(m => m.StateType)
                </td>
                <td style="text-align: left; width: 4%;">
                    @Html.Label("Active")
                </td>
                <td style="width: 15%;">
                    @*@Html.DropDownList("ActiveType_StateDetails", ViewData["Active_TYPE"] as IEnumerable<SelectListItem>, new { @title = "Active", @tabindex = 3 })*@
                    @Html.DropDownListFor(model => model.ActiveFlag, new SelectList(Model.ActiveFlagList, "Value", "Text"), new { @id = "ActiveType_StateDetails", @title = "Active", @tabindex = 3 })
                    <br />
                    @Html.ValidationMessageFor(m => m.ActiveFlag)
                </td>
                <td style="text-align: center; width: 10%; margin-left: 5px;">
                    <input type="button" id="StateDetailsButton" value="View" class="jqueryButton" title="View Details" tabindex="4" />
                </td>
                <td style="width: 5%"></td>
            </tr>
        </table>
    </form>
</div>

<div id="dvLoadStateReport"></div>
