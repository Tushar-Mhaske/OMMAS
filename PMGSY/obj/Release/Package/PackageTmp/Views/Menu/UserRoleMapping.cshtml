   </script>*@
</head>
<body>
    
 <center>
     
  <form id="frmUserRoleMapping">
    @Html.HiddenFor(m => m.RoleID, new { @id="hidRoleId"})
    @Html.HiddenFor(m => m.UserID, new { @id="hidUserId"})
    @Html.HiddenFor(m => m.RoleStr, new { @id="hidRoleStr"})
    @Html.ValidationSummary(true)
<br />
<div id="divuserRoleMappingError" class="ui-state-error ui-corner-all" style="text-align: left; display: none; width: 99%">
    <span class="ui-icon ui-icon-alert" style="float: left;"></span>
    <span></span>
</div>
<table id="Table1"  cellspacing="0" cellpadding="2" class="rowstyle" style="margin-top:10px; text-align:left; border:ridge 0.1em #ccc; width:100%; padding-top:5px; padding-left:5px; padding-right:5px; padding-bottom:5px;">
        <tr>
            <td style="width:100%">
                <table>
                    <tr>
                            <td style="font-weight:bold;width:25%">@Html.LabelFor(model => model.RoleID)<span style="color:red">*</span></td>
                            <td> @Html.ListBox("RoleList") &nbsp;<input type="button" class="jqueryButton" value="Map Roles" id="btnAddRole"/></td>
                    </tr>
                    <tr>
                        <td colspan="2"><span id="showRoleError"> @Html.ValidationMessage("showRoleError")</span></td>
                    </tr>
                </table>  
          </td>
      </tr>
 </table>
   </form>
</center>
</body>
</html>
