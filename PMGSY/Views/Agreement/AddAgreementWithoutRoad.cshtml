            <td>

                @Html.TextBoxFor(model => model.TEND_DATE_OF_COMMENCEMENT, new { @title = "Commencement Date", @tabindex = 101, @placeholder = "dd/mm/yyyy..." })
                @Html.ValidationMessageFor(model => model.TEND_DATE_OF_COMMENCEMENT)
            </td>

