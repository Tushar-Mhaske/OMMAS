 @model PMGSY.Models.PFMS.PFMSDownloadPaymentXMLViewModel

 
<script src="~/Scripts/custom/Generic.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/PFMS/DownloadPaymentXMLLayout.js"></script>

<div id="dvhdPFMSDownloadXMLLayout" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@*margin-left:0px;margin-right:0px;margin-top:0px; *@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Download Payment XML for PFMS</span>

    @*<span id="spCollapseIconAddDropOrder" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>*@
</div>
<div id="dvPFMSPaymentLayout" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    <form id="frmPaymentLayout">
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        
        <table style="margin-top: 0px; margin-bottom: 0px; width:100%;" class="rowstyle">
            <tr>
                <td>
                    @Html.Label("File Type")<span style="color:red">*</span>
                </td>
                <td>
                    @Html.RadioButtonFor(model=>model.FileType,"N", new {  @tabindex = 1 })<span>New </span>
                    @Html.RadioButtonFor(model=>model.FileType,"R", new {  @tabindex = 2 })<span>Rejected </span>
                    <br />
                    @Html.ValidationMessageFor(model => model.FileType)
                </td>
                <td>
                    @Html.Label("State")<span style="color:red">*</span>
                </td>
                <td>
                    @Html.DropDownListFor(model => model.stateCode, new SelectList(Model.lstState, "Value", "Text"), new { @id = "ddlState", @tabindex = 3 })
                    <br />
                    @Html.ValidationMessageFor(model => model.stateCode)
                </td>
                <td>
                    @Html.Label("Agency")<span style="color:red">*</span>
                </td>
                <td>
                    @Html.DropDownListFor(model => model.agencyCode, new SelectList(Model.lstAgency, "Value", "Text"), new { @id = "ddlAgency", @tabindex = 4 })
                    <br />
                    @Html.ValidationMessageFor(x => x.agencyCode)
                </td>
                <td>
                    @Html.Label("Date")<span style="color:red">*</span>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.generationDate, new {  @id = "generationdate", @tabindex=5 ,@readonly="readonly"  })
                    <br />
                    @Html.ValidationMessageFor(x => x.generationDate)
                </td>
                <td>
                    <input type="button" class="jqueryButton" value="Download XML" title="Download XML" id="btnDownloadXML" name ="btnDownloadXML" tabindex="6"/>
                </td>
            </tr>
        </table>
    </form>
</div>
