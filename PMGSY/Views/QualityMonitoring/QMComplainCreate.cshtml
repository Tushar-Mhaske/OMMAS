@model PMGSY.Models.QualityMonitoring.QMComplainViewModel

<script type="text/javascript">
    //$(document).ready(function () {

    //$.getScript("~/Scripts/jquery.ui.datepicker.js", function () {
    //    alert("Script loaded but not necessarily executed.");
    //});

    //});
</script>

<script src="~/Scripts/jquery.ui.datepicker.js"></script>
<script src="~/Scripts/QualityMonitoring/QMComplainCreate.js"></script>
<script src="~/Scripts/custom/Generic.js" type="text/javascript"></script>
<div>
    <div id="divQMComplainList" style="width: 100%; border: none;" class="ui-state-default">
        <div id="dvhdQMComplain" class="ui-corner-top ui-widget-header panelheader" style="text-align: center; height: 20px;">
            <span class="ui-jqgrid-title" style="float: left">&nbsp;Complaint Details </span>
            <span class="ui-icon ui-icon-closethick" style="float: right" onclick="CloseQMComplainCreate();"></span>
        </div>

        <form id="frmQMComplainCreateForm">
            <table class="rowstyle" style="margin-bottom: 5px; width: 100%">
                <tr>
                    <td colspan="4" style="text-align: center; padding-left: 25px; font-weight: bold;">Complaint Details
                    </td>
                </tr>
                <tr>
                    <td style="width: 20%; font-weight: bold;">
                        @Html.LabelFor(model => model.StateCode)
                    </td>
                    <td style="width: 30%; padding-left: 25px;">
                        <span style="color: red">*</span>
                        @Html.DropDownListFor(model => model.StateCode, new SelectList(Model.StateList, "Value", "Text"), new { @id = "ddlState", tabindex = 1 })
                        <br />
                        @Html.ValidationMessageFor(x => x.StateCode)
                    </td>

                    <td style="width: 20%; font-weight: bold;">
                        @Html.LabelFor(model => model.ComplainantCode)
                    </td>
                    <td style="width: 30%; padding-left: 25px;">
                        <span style="color: red">*</span>
                        @Html.DropDownListFor(model => model.ComplainantCode, new SelectList(Model.ComplainantList, "Value", "Text"), new { @id = "ddlComplainant", tabindex = 2 })
                        <br />
                        @Html.ValidationMessageFor(x => x.ComplainantCode)
                    </td>
                </tr>
                <tr>
                    <td style="font-weight: bold;">
                        @Html.LabelFor(model => model.RecievedThroughCode)
                    </td>
                    <td style="padding-left: 25px;">
                        <span style="color: red">*</span>
                        @Html.DropDownListFor(model => model.RecievedThroughCode, new SelectList(Model.RecievedThroughList, "Value", "Text"), new { @id = "ddlRecievedThrough", tabindex = 3 })
                        <br />
                        @Html.ValidationMessageFor(x => x.RecievedThroughCode)
                    </td>
                    <td style="font-weight: bold;">
                        @Html.LabelFor(model => model.ForwardedToCode)
                    </td>
                    <td style="width: 15%; padding-left: 25px;">
                        <span style="color: red">*</span>
                        @Html.DropDownListFor(model => model.ForwardedToCode, new SelectList(Model.ForwardedToList, "Value", "Text"), new { @id = "ddlForwardedToCode", tabindex = 4 })
                        <br />
                        @Html.ValidationMessageFor(x => x.ForwardedToCode)
                    </td>
                </tr>
                <tr>
                    <td style="font-weight: bold;">
                        @Html.LabelFor(model => model.NatureComplaintCode)
                    </td>
                    <td style="padding-left: 25px;">
                        <span style="color: red">*</span>
                        @Html.DropDownListFor(model => model.NatureComplaintCode, new SelectList(Model.NatureComplaintList, "Value", "Text"), new { @id = "ddlNatureComplaint", tabindex = 5 })
                        <br />
                        @Html.ValidationMessageFor(x => x.NatureComplaintCode)
                    </td>
                    <td style="font-weight: bold;">
                        @Html.Label("Complaint Received at NRRDA")
                    </td>
                    <td style="padding-left: 25px;">
                        <span style="color: red">*</span>
                        @Html.TextBoxFor(model => model.ComplainRecievedDate, new { @id = "txtComplainRecievedDate", @maxlength = "10", placeholder = "dd/MM/yyyy", tabindex = 6 })

                        @Html.ValidationMessageFor(x => x.ComplainRecievedDate)
                    </td>
                </tr>
                <tr>
                    <td colspan="4" style="text-align: center; padding-right: 25px;">
                        <input type="button" class="jqueryButton" value="Submit" id="btnSubmit" tabindex="7" name="btnSubmit" />
                    </td>

                </tr>
            </table>
        </form>

    </div>

</div>
