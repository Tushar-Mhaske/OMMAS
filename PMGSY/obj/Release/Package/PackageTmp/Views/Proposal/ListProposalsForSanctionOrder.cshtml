        </div>
        <table id="tb" cellpadding="3px" style="margin-top: 0px; text-align: left; border: ridge 0.1em #ccc; width: 100%; padding-top: 5px 5px 5px 5px;">
            <tr>
                <td>
                    @Html.LabelFor(model => model.State)
                </td>
                <td>
                    @Html.DropDownListFor(model => model.State, Model.StateList, new { @id = "ddlStates", @title = "Please select state", @tabindex = 1 })
                    <br />
                    @Html.ValidationMessageFor(model => model.State)
                </td>
                 <td>
                    @Html.LabelFor(model => model.Agency)
                </td>
                <td>
                    @Html.DropDownListFor(model => model.Agency, Model.AgencyList, new { @id = "ddlAgency", @title = "Please select Agency", @tabindex = 1 })
                    <br />
                    @Html.ValidationMessageFor(model => model.Agency)
                </td>
                <td>
                    @Html.LabelFor(model => model.Year)
                </td>
                <td>
                    @Html.DropDownListFor(model => model.Year, Model.YearList, new { @id = "ddlYears", @title = "Please select year", @tabindex = 2 })
                    <br />
                    @Html.ValidationMessageFor(model => model.Year)
                </td>
                <td>
                    @Html.LabelFor(model => model.Stream)
                </td>
                <td>
                    @Html.DropDownListFor(model => model.Stream, Model.StreamList, new { @id = "ddlStreams", @title = "Please select Stream", @tabindex = 3, @style = "width:100px" })
                    <br />
                    @Html.ValidationMessageFor(model => model.Stream)
                </td>
                <td>
                    @Html.LabelFor(model => model.Batch)
                </td>
                <td>
                    @Html.DropDownListFor(model => model.Batch, Model.BatchList, new { @id = "ddlBatch", @title = "Please select Batch", @tabindex = 4, @style = "width:100px" })
                    <br />
                    @Html.ValidationMessageFor(model => model.Batch)
                </td>
                <td>
                    @Html.LabelFor(model => model.PMGSYScheme)
                </td>
                <td>
                    @Html.DropDownListFor(model => model.PMGSYScheme, Model.SchemeList, new { @id = "ddlSchemes", @title = "Please select Scheme", @tabindex = 5 })
                    <br />
                    @Html.ValidationMessageFor(model => model.PMGSYScheme)
                </td>
                <td>
                    @Html.LabelFor(model => model.ProposalType)
                </td>
                <td>
                    @Html.DropDownListFor(model => model.ProposalType, Model.TypeList, new { @id = "ddlProposalType", @title = "Please select Type", @tabindex = 5, @style = "width:100px" })
                    <br />
                    @Html.ValidationMessageFor(model => model.ProposalType)
                </td>
            </tr>
