@model PMGSY.Models.MaintenanceAgreement.RenewalMaintenanceViewModel

<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.ui.dialog.js")"> </script>
<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/MaintenanceAgreement/AddRenewalAgreementAgainstRoad.js")"> </script>

<style>
    /*div {
        font-size:1em;
    }*/
    #accordion .ui-accordion-content {
        font-size: 1em;
    }
</style>

<div id="dvRoadDetails" class="ui-state-default ui-corner-all" style="width: 100%; border: 1px solid #EEEEEE">
    <table width="100%" class="rowstyle">
        <tr>
            <td style="width: 5%; text-align: left">
                @Html.Label("Year")
            </td>
            <td style="width: 8%; text-align: left">
                @if (!(string.IsNullOrEmpty(ViewBag.SanctionedYear)))
                {
                    @Html.Label("SanctionedYear", ViewBag.SanctionedYear as String)   
                }
                else
                {
                    @Html.Label("SanctionedYear", "NA")   
                }
            </td>

            <td style="width: 5%; text-align: left">
                @Html.Label("Package")
            </td>

            <td style="width: 8%; text-align: left">
                @if (!(string.IsNullOrEmpty(ViewBag.Package)))
                {
                    @Html.Label("Package", ViewBag.Package as String)   
                }
                else
                {
                    @Html.Label("Package", "NA")  
                }
            </td>
            <td style="width: 5%; text-align: left">
                @Html.Label("Road Name")

            </td>

            <td style="width: 12%; text-align: left">
                @if (!(string.IsNullOrEmpty(ViewBag.RoadName)))
                {
                    @Html.Label("RoadName", ViewBag.RoadName as String)   
                }
                else
                {
                    @Html.Label("RoadName", "NA")  
                }

            </td>

            <td style="width: 8%; text-align: left">
                @Html.Label("Road Length (In Kms)")

            </td>

            <td style="width: 10%; text-align: left">
                @if (!(string.IsNullOrEmpty(ViewBag.RoadLength)))
                {
                    @Html.Label("RoadLength", ViewBag.RoadLength as String)  
                }
                else
                {
                    @Html.Label("RoadLength", "NA")   
                }
            </td>
        </tr>
    </table>

</div>

<div id="dvAgreementDetails" style="display: none">
    @Html.Partial("RenewalAgreementDetails", Model)
</div>

<div id="dvAgreementList" style="margin-top: 20px; margin-bottom: 15px;">
    <table id="tbAgreementList">
    </table>
    <div id="dvAgreementListPager"></div>
    <table style="width: 100%; padding-top: 1em;">
        <tr></tr>
        <tr>
            <td style="text-align: right; width: 55%">
                <input type="button" id="btnCreateNew_AgreementDetails" name="btnCreateNew_AgreementDetails" value="Add Renewal Maintenance Agreement Details" class="jqueryButton" title="Add Renewal Maintenance Agreement Details" />
            </td>
            <td style="text-align: left">
                <input type="button" id="btnAgreementDetailsCancel" name="btnAgreementDetailsCancel" value="Cancel" class="jqueryButton" title="Cancel" tabindex="4" />
            </td>
        </tr>
    </table>
</div>

<div id="dvIncompleteReason">
</div>

<div id="dvViewAgreementMaster">
</div>
