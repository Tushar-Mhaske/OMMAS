@model PMGSY.Models.ARRR.LMMRateViewModel

<script src="~/Scripts/custom/Generic.js"></script>
<script src="~/Scripts/jquery.ui.datepicker.js" type="text/javascript"></script>
<script src="~/Scripts/ARRR/MaterialRateLayout.js"></script>

<div id="dvMaterialRate">
    <div id="dvhdMaterialRate" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">
        Material Rates Master<span style="float: right; margin-right: 2Px; margin-top: 2px" id="idFilterDivMtr" class="ui-icon ui-icon-circle-triangle-n"></span>
    </div>
    <form id="frmMaterialRate">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m => m.User_Action)
        @Html.HiddenFor(m => m.rateCode)
        @Html.HiddenFor(m => m.stateCode)
        @Html.HiddenFor(m => m.rateType)
        @Html.HiddenFor(m => m.status)
        @Html.HiddenFor(m => m.flag)
        @Html.HiddenFor(m => m.hdnItem)
        <table class="rowstyle" style="width: 100%; margin-bottom: 5px; border: 1px solid #B5B8C8;">
             @if (Model.User_Action == "E")
             {
            <tr>
                <td style="width: 2%;"></td>
                <td style="text-align: left; width: 15%;">
                    @Html.Label("Category")
                </td>

                    <td style="width: 20%;">
                        @Html.DropDownListFor(model => model.Category, new SelectList(Model.CategoryList, "Value", "Text"), new { @title = "Category", @id = "ddlCategory", @style = "width:300px;", @tabindex = 1, @disabled = "true" })
                        <br />
                        @Html.ValidationMessageFor(model => model.Category)
                        @Html.HiddenFor(m => m.Category)
                    </td>

                @*else
                {
                    <td style="width: 20%;">
                        @Html.DropDownListFor(model => model.Category, new SelectList(Model.CategoryList, "Value", "Text"), new { @title = "Category", @id = "ddlCategory", @style = "width:300px;", @tabindex = 1 })
                        <br />
                        @Html.ValidationMessageFor(model => model.Category)
                    </td>
                }*@

                <td style="width: 5%"></td>
            </tr>
            <tr>
                <td style="width: 2%;"></td>
                <td style="width: 5%;">
                    <label>Material</label><label style="color: red;"> *</label></td>

                    <td style="width: 10%;">
                        @Html.DropDownListFor(model => model.Item, new SelectList(Model.ItemList, "Value", "Text"), new { @title = "Item", @id = "ddlItem", @style = "width:300px;", @tabindex = 3, @disabled = "true" })
                        <br />
                        @Html.ValidationMessageFor(m => m.Item)
                    </td>

                @*else
                {
                    <td style="width: 10%;">
                        @Html.DropDownListFor(model => model.Item, new SelectList(Model.ItemList, "Value", "Text"), new { @title = "Item", @id = "ddlItem", @style = "width:300px;", @tabindex = 3 })
                        <br />
                        @Html.ValidationMessageFor(m => m.Item)
                    </td>
                }*@
                <td style="width: 5%"></td>
            </tr>
            <tr>
                <td style="width: 2%;"></td>
                <td style="width: 5%;">
                    <label>Output Rate</label><label style="color: red;"> *</label></td>
                <td style="width: 10%;">
                    @Html.TextBoxFor(m => m.Rate, new { @id = "txtRate", @maxlength = "13", placeholder = "Please enter Rate", @tabindex = 5 })
                    <br />
                    @Html.ValidationMessageFor(m => m.Rate)
                </td>
                <td style="width: 5%"></td>
            </tr>
             }
             <tr>
                <td style="width: 2%;"></td>
                <td style="text-align: left; width: 15%;">
                    @Html.Label("Year")
                </td>
                <td style="width: 20%;">
                    @Html.DropDownListFor(model => model.Year, new SelectList(Model.yearList, "Value", "Text"), new { @title = "Year", @id = "ddlYear", @style = "width:300px;", @tabindex = 6 })
                    <br />
                    @Html.ValidationMessageFor(model => model.Year)
                </td>
                <td style="width: 5%"></td>
            </tr>
             </table>
         <center>
            @if (Model.User_Action != "E")
            {
             <div id="dvLoadMaterialFormList" style="margin-top: 10px;flex-align: center;">
                 <table id="tblLoadMaterialFormList">
                </table>
                <div id="dvLoadMaterialFormListpager">
                </div>            
           </div>
            }
            </br>
            <table>
            <tr style="text-align: center;">
                <td colspan="5">
                    @if (Model.User_Action == null)
                    {
                        <input type="button" id="btnSave" name="Save" value="Save" class="jqueryButton" title="Save" tabindex="8" />
                    }
                    else
                    {
                        <input type="button" id="btnUpdate" name="Update" value="Update" class="jqueryButton" title="Save" tabindex="8" />
                    }
                    <input type="reset" id="btnReset" name="Reset" value="Reset" class="jqueryButton" title="Reset" tabindex="9" />
                    <input type="button" id="btnCancel" name="Cancel" value="Cancel" class="jqueryButton" title="Cancel" tabindex="10" />

                </td>
            </tr>
        </table>
              </center>
    </form>
    </form>
</div>
