@model PMGSY.Models.Master.AdminSqcViewModel
<script src="@Url.Content("~/Scripts/custom/Generic.js")" type="text/javascript" ></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/Master/Master_SearchSQC.js")"> </script>
@*<script src="~/Scripts/Master/Master_SearchSQC.js" type="text/javascript"></script>*@
<div id="dvhdSearch" class="ui-corner-top ui-widget-header panelheader" style="text-align: left; height: 20px;">@* margin-left:10px;margin-right:10px;margin-top:10px;*@
    <span class="ui-jqgrid-title" style="float: left">&nbsp;Search</span>

    <span id="spCollapseIconS" class="ui-icon ui-icon-circle-triangle-n" style="float: right"></span>
</div>

<div id="dvSearchParameter" class="ui-corner-bottom" style="display: block; border: 1px solid #B5B8C8;">
    @*margin-left: 10px; margin-right: 10px;*@

    <form id="frmSearchSQC">

        <table style="width: 100%;" class="rowstyle">
            <tr>
                <td style="width: 20%;"></td>
                <td style="text-align: left; width: 8%;">
                    @Html.Label("State")
                </td>
                <td style="width: 15%;">
                    @Html.DropDownList("ddlSearchStates", ViewData["StateList"] as IEnumerable<SelectListItem>, new { @id = "ddlSearchStatesSQ", @title = "State", @tabindex = 1 })
                </td>

                <td style="width: 10%">
                    @Html.LabelFor(model => model.ADMIN_ND_CODE)
                    @*<label style="color: red">*</label>*@
                </td>
                <td>
                        @Html.DropDownListFor(m => m.ADMIN_ND_CODE, Model.depatmentList,new {@title="Department" , @id="departmentDD1"})  
                        @*(model => model.ADMIN_QC_NAME, new { maxlength = 255, @tabindex = "2", @title = "Quality Controller Name", @placeholder = "Enter Quality Controller Name..." })*@
                       @*<span id="errormsg"> @Html.ValidationMessageFor(model => model.ADMIN_ND_CODE)</span>*@

                </td>


                <td style="text-align: left; width: 8%;">
                    @Html.Label("Status")
                </td>
                <td style="width: 20%;">
                    @Html.DropDownList("ddlSearchStatus", ViewData["StatusList"] as IEnumerable<SelectListItem>, new { @id = "ddlSearchStatusSQ", @title = "Status", @tabindex = 2 })

                </td>
                <td style="text-align: left">
                    <input type="button" id="btnSearchSQ" name="btnSearch" value="Search" class="jqueryButton" title="Search SQC " tabindex="3" />

                </td>
            </tr>

        </table>

    </form>
</div>


